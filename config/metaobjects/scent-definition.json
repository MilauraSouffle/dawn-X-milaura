{
  "metaobject": {
    "type": "scent",
    "name": "Senteur",
    "description": "Référentiel des senteurs utilisées dans les bougies Milaura",
    "fields": [
      {
        "key": "handle",
        "name": "Handle",
        "description": "Identifiant unique (slug lowercase, ex: neroli)",
        "type": "single_line_text_field",
        "required": true,
        "validations": {
          "format": "slug"
        }
      },
      {
        "key": "name",
        "name": "Nom",
        "description": "Nom d'affichage (ex: Néroli)",
        "type": "single_line_text_field",
        "required": true
      },
      {
        "key": "description_short",
        "name": "Description courte",
        "description": "40-70 mots, ton cohérent",
        "type": "multi_line_text_field",
        "required": true,
        "validations": {
          "min_length": 100,
          "max_length": 500
        }
      },
      {
        "key": "notes_top",
        "name": "Notes de tête",
        "description": "Pyramide olfactive - notes de tête (optionnel)",
        "type": "single_line_text_field",
        "required": false
      },
      {
        "key": "notes_heart",
        "name": "Notes de cœur",
        "description": "Pyramide olfactive - notes de cœur (optionnel)",
        "type": "single_line_text_field",
        "required": false
      },
      {
        "key": "notes_base",
        "name": "Notes de fond",
        "description": "Pyramide olfactive - notes de fond (optionnel)",
        "type": "single_line_text_field",
        "required": false
      },
      {
        "key": "mood",
        "name": "Ambiance",
        "description": "1 phrase décrivant l'ambiance de la senteur",
        "type": "single_line_text_field",
        "required": true
      }
    ]
  }
}
