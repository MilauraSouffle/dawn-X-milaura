    font-size: 1rem;
    color: var(--milaura-text, #000);
    margin: 0 0 var(--milaura-spacing-sm, 12px) 0;
  }

  .dashboard-mood-bars {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .dashboard-mood-bar {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .mood-bar-label {
    width: 100px;
    font-size: 0.8rem;
    color: var(--milaura-text-light, #666);
    display: flex;
    align-items: center;
    gap: 6px;
  }

  .mood-bar-track {
    flex: 1;
    height: 6px;
    background: rgba(192, 160, 98, 0.1);
    border-radius: 6px;
    overflow: hidden;
  }

  .mood-bar-fill {
    height: 100%;
    background: linear-gradient(90deg, var(--milaura-gold, #C0A062) 0%, var(--milaura-gold-light, #E6C88B) 100%);
    border-radius: 6px;
    transition: width 0.8s ease;
  }

  .mood-bar-fill.is-secondary {
    background: linear-gradient(90deg, rgba(192, 160, 98, 0.4) 0%, rgba(192, 160, 98, 0.2) 100%);
  }

  .mood-bar-percent {
    width: 35px;
    font-size: 0.75rem;
    color: var(--milaura-text-light, #666);
    text-align: right;
  }

  /* Actions */
  .dashboard-actions {
    display: flex;
    justify-content: center;
    padding-top: var(--milaura-spacing-md, 24px);
    border-top: 1px solid rgba(192, 160, 98, 0.15);
  }

  .dashboard-btn-restart {
    display: inline-flex;
    align-items: center;
    gap: 8px;
