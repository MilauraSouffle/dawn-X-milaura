  .dashboard-profile-duo {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--milaura-spacing-md, 24px);
    margin-bottom: var(--milaura-spacing-md, 24px);
  }

  .dashboard-duo-item {
