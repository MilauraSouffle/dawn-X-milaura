  "name": "Milaura Produits Carousel",
  "settings": [
    {
      "type": "header",
      "content": "Contenu"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Titre",
      "default": "Nos Nouveautés"
    },
    {
      "type": "text",
