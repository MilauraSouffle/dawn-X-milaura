{% style %}
  /* Le conteneur principal */
  #MilauraHero-{{ section.id }} {
    position: relative;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
    background-color: #FDFBF7; /* Couleur de fond de secours */
    padding: 0;
    margin: 0;
  }

  /* L'image elle-même */
  #MilauraHero-{{ section.id }} .hero-full-image {
    width: 100%;
    height: auto; /* L'image garde ses proportions naturelles */
    display: block;
    object-fit: cover;
  }

  /* Ajustement pour mobile si besoin, pour éviter que l'image soit trop petite */
  @media screen and (max-width: 768px) {
    #MilauraHero-{{ section.id }} .hero-full-image {
      min-height: 400px; /* Force une hauteur minimale sur mobile */
      object-fit: cover; /* Recadre l'image pour remplir la zone */
      object-position: center;
    }
  }
{% endstyle %}

<div id="MilauraHero-{{ section.id }}">
  {%- if section.settings.image != blank -%}
    {{ section.settings.image | image_url: width: 2000 | image_tag: class: 'hero-full-image', loading: 'eager', alt: section.settings.image.alt | escape }}
  {%- else -%}
    {{ 'lifestyle-2' | placeholder_svg_tag: 'hero-full-image' }}
  {%- endif -%}
</div>

{% schema %}
{
  "name": "Milaura Hero Image",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image de bannière complète"
    }
  ],
  "presets": [
    {
      "name": "Milaura Hero Image"
    }
  ]
}
{% endschema %}