{% style %}
  /* --- CONTENEUR --- */
  #MilauraHero-{{ section.id }} {
    position: relative;
    width: 100%;
    height: auto;
    display: block;
    overflow: hidden; /* Coupe ce qui dépasse */
    margin-top: -120px; /* Astuce pour remonter le Hero SOUS le menu transparent */
    padding-top: 120px; /* Compenstion pour ne pas couper l'image */
  }

  /* --- IMAGE AVEC FADE --- */
  #MilauraHero-{{ section.id }} .hero-full-image {
    width: 100%;
    height: auto;
    min-height: 600px; /* Hauteur min pour mobile */
    object-fit: cover;
    display: block;
    /* Le masque dégradé vers le bas */
    -webkit-mask-image: linear-gradient(to bottom, black 60%, transparent 100%);
    mask-image: linear-gradient(to bottom, black 60%, transparent 100%);
  }

  /* --- CONTENU (BOUTON) --- */
  #MilauraHero-{{ section.id }} .hero-overlay-content {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 10; /* Z-index faible pour rester SOUS le menu */
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    pointer-events: none;
  }

  #MilauraHero-{{ section.id }} .hero-btn-wrapper {
    pointer-events: auto;
    margin-top: 15%; /* On le descend un peu visuellement */
  }

  /* --- STYLE BOUTON (Lingot) --- */
  #MilauraHero-{{ section.id }} .hero-btn {
    display: inline-block;
    background: rgba(255, 255, 255, 0.9);
    color: #1A1A1A;
    font-family: 'Playfair Display', serif;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 2px;
    font-size: 0.9rem;
    padding: 18px 50px;
    border-radius: 50px;
    text-decoration: none;
    border: 1px solid rgba(192, 160, 98, 0.5);
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    backdrop-filter: blur(5px);
    transition: all 0.3s ease;
  }

  #MilauraHero-{{ section.id }} .hero-btn:hover {
    background: #FFFFFF;
    color: #C0A062;
    transform: scale(1.05);
    box-shadow: 0 15px 40px rgba(192, 160, 98, 0.3);
  }

  /* MOBILE */
  @media screen and (max-width: 768px) {
    #MilauraHero-{{ section.id }} { margin-top: -100px; padding-top: 100px; }
    #MilauraHero-{{ section.id }} .hero-full-image { min-height: 500px; }
    #MilauraHero-{{ section.id }} .hero-btn { padding: 15px 30px; font-size: 0.8rem; }
  }
{% endstyle %}

<div id="MilauraHero-{{ section.id }}">
  {%- if section.settings.image != blank -%}
    {{ section.settings.image | image_url: width: 2500 | image_tag: class: 'hero-full-image', loading: 'eager' }}
  {%- else -%}
    {{ 'lifestyle-2' | placeholder_svg_tag: 'hero-full-image' }}
  {%- endif -%}

  <div class="hero-overlay-content">
    <div class="hero-btn-wrapper">
      <a href="{{ section.settings.button_link | default: '#' }}" class="hero-btn milaura-btn">
        {{ section.settings.button_label }}
      </a>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Milaura Hero Fade",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image Hero"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Texte Bouton",
      "default": "DÉCOUVRIR MA PIERRE"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Lien Bouton"
    }
  ],
  "presets": [
    {
      "name": "Milaura Hero Fade"
    }
  ]
}
{% endschema %}
