{% style %}
  @import url('https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400;500;600;700&display=swap');

  #MilauraHero-{{ section.id }} {
    position: relative;
    min-height: 90vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  #MilauraHero-{{ section.id }} .hero-background {
    position: absolute;
    inset: 0;
    background-size: cover;
    background-position: center;
    {% if section.settings.image != blank %}
      background-image: url('{{ section.settings.image | image_url: width: 2000 }}');
    {% endif %}
  }

  #MilauraHero-{{ section.id }} .hero-background::after {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      rgba(var(--color-foreground), 0.2),
      rgba(var(--color-foreground), 0.1),
      rgb(var(--color-background))
    );
  }

  #MilauraHero-{{ section.id }} .hero-content {
    position: relative;
    z-index: 10;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
    text-align: center;
  }

  #MilauraHero-{{ section.id }} .hero-card {
    max-width: 42rem;
    margin: 0 auto;
    background: rgba(212, 175, 55, 0.8);
    backdrop-filter: blur(4px);
    -webkit-backdrop-filter: blur(4px);
    border-radius: 1.5rem;
    padding: 2rem;
    animation: fadeIn 0.8s ease-in;
  }

  @media screen and (min-width: 750px) {
    #MilauraHero-{{ section.id }} .hero-card {
      padding: 3rem;
    }
  }

  #MilauraHero-{{ section.id }} .hero-title {
    font-family: 'Dancing Script', cursive, serif;
    font-size: 2.25rem;
    font-weight: 600;
    color: rgb(var(--color-background));
    margin-bottom: 1.5rem;
    animation: fadeIn 0.8s ease-in 0.2s both;
  }

  @media screen and (min-width: 750px) {
    #MilauraHero-{{ section.id }} .hero-title {
      font-size: 3.75rem;
    }
  }

  #MilauraHero-{{ section.id }} .hero-subtitle {
    color: rgba(var(--color-background), 0.9);
    font-size: 1.125rem;
    font-weight: 300;
    line-height: 1.75;
    margin-bottom: 2rem;
    animation: fadeIn 0.8s ease-in 0.4s both;
  }

  @media screen and (min-width: 750px) {
    #MilauraHero-{{ section.id }} .hero-subtitle {
      font-size: 1.25rem;
    }
  }

  #MilauraHero-{{ section.id }} .hero-button {
    background-color: rgb(var(--color-background));
    color: rgb(var(--color-foreground));
    padding: 1rem 2rem;
    border-radius: 9999px;
    font-weight: 600;
    font-size: 1.125rem;
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    display: inline-block;
    animation: fadeIn 0.8s ease-in 0.6s both;
  }

  #MilauraHero-{{ section.id }} .hero-button:hover {
    box-shadow: 0 10px 25px rgba(212, 175, 55, 0.4);
    transform: translateY(-4px);
  }

  #MilauraHero-{{ section.id }} .hero-trust-badge {
    margin-top: 2rem;
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    background: rgba(var(--color-background), 0.9);
    backdrop-filter: blur(4px);
    -webkit-backdrop-filter: blur(4px);
    padding: 0.75rem 1.5rem;
    border-radius: 9999px;
    animation: fadeIn 0.8s ease-in 0.8s both;
  }

  #MilauraHero-{{ section.id }} .hero-trust-badge-flag {
    font-size: 1.5rem;
  }

  #MilauraHero-{{ section.id }} .hero-trust-badge-text {
    color: rgba(var(--color-foreground), 0.8);
    font-size: 0.875rem;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
{% endstyle %}

