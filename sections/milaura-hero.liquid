{% style %}
  /* --- BASE --- */
  #MilauraHero-{{ section.id }} {
    position: relative;
    width: 100%;
    /* Hauteur minimale ajustable selon l'écran pour bien voir l'image */
    min-height: 60vh; 
    display: flex;
    justify-content: center;
    /* On aligne verticalement selon le choix de l'utilisateur (voir schema) */
    align-items: center; 
    overflow: hidden;
    background-color: #FDFBF7;
  }

  /* --- IMAGE --- */
  #MilauraHero-{{ section.id }} .hero-full-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
  }

  /* --- CONTENEUR DU BOUTON --- */
  #MilauraHero-{{ section.id }} .hero-overlay-content {
    position: relative;
    z-index: 10;
    width: 100%;
    display: flex;
    justify-content: center;
    /* Le fameux réglage vertical */
    margin-top: {{ section.settings.vertical_offset }}%; 
  }

  /* --- ANIMATION DU SOUFFLE --- */
  @keyframes goldenShine {
    0% { left: -150%; }
    20% { left: 150%; }
    100% { left: 150%; }
  }

  @keyframes floatButton {
    0% { transform: translateY(0px); }
    50% { transform: translateY(-5px); }
    100% { transform: translateY(0px); }
  }

  /* --- LE BOUTON MAGIQUE --- */
  #MilauraHero-{{ section.id }} .hero-btn {
    position: relative;
    overflow: hidden;
    display: inline-block;
    
    /* STYLE VISION OS / LUXE */
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    
    /* TEXTE */
    color: #1A1A1A;
    font-family: 'Playfair Display', serif; /* Typo Luxe */
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 2px;
    font-size: 1rem;
    
    /* FORME */
    padding: 18px 50px;
    border-radius: 50px;
    text-decoration: none;
    border: 1px solid rgba(212, 175, 55, 0.3); /* Bordure dorée fine */
    
    /* OMBRE ET ANIMATION DE FLOTTEMENT */
    box-shadow: 0 10px 30px rgba(0,0,0,0.15);
    animation: floatButton 4s ease-in-out infinite;
    transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
  }

  /* HOVER EFFECT (Grossissement + Ombre dorée) */
  #MilauraHero-{{ section.id }} .hero-btn:hover {
    transform: scale(1.05) translateY(-5px);
    background: #FFFFFF;
    color: #D4AF37; /* Le texte devient doré */
    box-shadow: 0 15px 40px rgba(212, 175, 55, 0.4);
    border-color: #D4AF37;
  }

  /* LE SOUFFLE DORÉ (L'éclair qui passe) */
  #MilauraHero-{{ section.id }} .hero-btn::after {
    content: '';
    position: absolute;
    top: 0;
    left: -150%;
    width: 60%;
    height: 100%;
    background: linear-gradient(
      90deg, 
      transparent, 
      rgba(212, 175, 55, 0.6), 
      transparent
    );
    transform: skewX(-20deg);
    animation: goldenShine 5s infinite;
    pointer-events: none;
  }

  /* Mobile Responsive : Ajuster la hauteur de l'image si besoin */
  @media screen and (max-width: 768px) {
    #MilauraHero-{{ section.id }} {
      min-height: 500px;
    }
  }
{% endstyle %}

<div id="MilauraHero-{{ section.id }}">
  
  {%- if section.settings.image != blank -%}
    {{ section.settings.image | image_url: width: 2500 | image_tag: class: 'hero-full-image', loading: 'eager', alt: section.settings.image.alt | escape }}
  {%- else -%}
    {{ 'lifestyle-2' | placeholder_svg_tag: 'hero-full-image' }}
  {%- endif -%}

  <div class="hero-overlay-content">
    {% if section.settings.button_link != blank %}
      <a href="{{ section.settings.button_link }}" class="hero-btn">
        {{ section.settings.button_label }}
      </a>
    {% endif %}
  </div>

</div>

{% schema %}
{
  "name": "Milaura Hero + CTA",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image de bannière complète"
    },
    {
      "type": "header",
      "content": "Configuration du Bouton"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Texte du bouton",
      "default": "DÉCOUVRIR MA PIERRE"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Lien du bouton"
    },
    {
      "type": "range",
      "id": "vertical_offset",
      "min": -50,
      "max": 50,
      "step": 2,
      "unit": "%",
      "label": "Position Verticale du bouton",
      "default": 10,
      "info": "Utilisez ce curseur pour placer le bouton pile sous votre texte."
    }
  ],
  "presets": [
    {
      "name": "Milaura Hero + CTA"
    }
  ]
}
{% endschema %}