{% style %}
  /* Import des polices */
  @import url('https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400;500;600;700&family=Playfair+Display:ital,wght@0,400;0,600;1,400&display=swap');

  /* Variables CSS pour coh√©rence */
  #MilauraHero-{{ section.id }} {
    --header-offset: 80px; /* Ajustez selon votre header */
  }

  /* Section principale */
  #MilauraHero-{{ section.id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    display: flex;
    align-items: stretch;
    min-height: calc(100vh - var(--header-offset));
  }

  /* Container principal */
  #MilauraHero-{{ section.id }} .hero-container {
    position: relative;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding-top: 2rem;
    padding-bottom: 2rem;
  }

  @media screen and (min-width: 768px) {
    #MilauraHero-{{ section.id }} .hero-container {
      padding-top: 2.5rem;
      padding-bottom: 2.5rem;
    }
  }

  /* Espace sup√©rieur dynamique */
  #MilauraHero-{{ section.id }} .hero-top-spacer {
    height: 0.75rem;
  }

  @media screen and (min-width: 768px) {
    #MilauraHero-{{ section.id }} .hero-top-spacer {
      height: 12vh;
    }
  }

  @media screen and (min-width: 1024px) {
    #MilauraHero-{{ section.id }} .hero-top-spacer {
      height: 14vh;
    }
  }

  /* Panneau "or liquide" + shimmer */
  #MilauraHero-{{ section.id }} .hero-panel {
    position: relative;
    width: 92%;
    margin: 0 auto;
    border-radius: 26px;
    padding: 1.25rem 1.25rem;
    box-shadow: 0 20px 60px -20px rgba(0, 0, 0, 0.35);
    backdrop-filter: blur(6px);
    -webkit-backdrop-filter: blur(6px);
    border: 1px solid rgba(0, 0, 0, 0.1);
    animation: heroPanelFadeIn 0.7s cubic-bezier(0.25, 1, 0.5, 1);
  }

  @media screen and (min-width: 640px) {
    #MilauraHero-{{ section.id }} .hero-panel {
      width: 86%;
      padding: 1.5rem 1.75rem;
    }
  }

  @media screen and (min-width: 768px) {
    #MilauraHero-{{ section.id }} .hero-panel {
      width: 78%;
      padding: 1.5rem 2.25rem;
      border-radius: 30px;
    }
  }

  @media screen and (min-width: 1024px) {
    #MilauraHero-{{ section.id }} .hero-panel {
      width: 68%;
      padding: 1.75rem 2.25rem;
    }
  }

  /* Fond or - 50% mobile */
  #MilauraHero-{{ section.id }} .hero-panel-bg-mobile {
    position: absolute;
    inset: 0;
    border-radius: inherit;
    background: linear-gradient(135deg, rgba(233, 204, 138, 0.50) 0%, rgba(195, 164, 109, 0.50) 100%);
  }

  @media screen and (min-width: 768px) {
    #MilauraHero-{{ section.id }} .hero-panel-bg-mobile {
      display: none;
    }
  }

  /* Fond or - 78% desktop */
  #MilauraHero-{{ section.id }} .hero-panel-bg-desktop {
    position: absolute;
    inset: 0;
    border-radius: inherit;
    background: linear-gradient(135deg, rgba(233, 204, 138, 0.78) 0%, rgba(195, 164, 109, 0.78) 100%);
    display: none;
  }

  @media screen and (min-width: 768px) {
    #MilauraHero-{{ section.id }} .hero-panel-bg-desktop {
      display: block;
    }
  }

  /* Shimmer argent√© */
  #MilauraHero-{{ section.id }} .hero-shimmer-wrapper {
    position: absolute;
    inset: 0;
    overflow: hidden;
    border-radius: inherit;
    pointer-events: none;
  }

  #MilauraHero-{{ section.id }} .hero-shimmer {
    position: absolute;
    top: 0;
    bottom: 0;
    left: -33.333%;
    width: 33.333%;
    background: linear-gradient(
      90deg,
      rgba(255, 255, 255, 0) 0%,
      rgba(255, 255, 255, 0.65) 50%,
      rgba(255, 255, 255, 0) 100%
    );
    filter: blur(8px);
    animation: milauraShimmer 3.6s linear infinite;
    mix-blend-mode: screen;
  }

  @media screen and (max-width: 768px) {
    #MilauraHero-{{ section.id }} .hero-shimmer {
      filter: blur(6px);
    }
  }

  /* Contenu du panneau */
  #MilauraHero-{{ section.id }} .hero-panel-content {
    position: relative;
    z-index: 1;
  }

  /* Titre */
  #MilauraHero-{{ section.id }} .hero-title {
    font-family: 'Dancing Script', cursive;
    font-size: clamp(2.2rem, 6.2vw, 4.2rem);
    line-height: 1.2;
    margin-bottom: 0.75rem;
    color: #0f0f0f;
    -webkit-text-stroke: 0.5px rgba(255, 255, 255, 0.25);
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.15);
  }

  @media screen and (min-width: 768px) {
    #MilauraHero-{{ section.id }} .hero-title {
      margin-bottom: 1rem;
    }
  }

  /* Sous-titre */
  #MilauraHero-{{ section.id }} .hero-subtitle {
    font-size: clamp(1rem, 2.2vw, 1.2rem);
    line-height: 1.75;
    color: rgba(34, 34, 34, 0.9);
  }

  /* Section CTA en bas */
  #MilauraHero-{{ section.id }} .hero-cta-section {
    margin-bottom: 1.5rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
    animation: heroCtaFadeIn 0.6s ease-out 0.05s both;
  }

  @media screen and (min-width: 768px) {
    #MilauraHero-{{ section.id }} .hero-cta-section {
      margin-bottom: 2rem;
    }
  }

  /* Bouton CTA */
  #MilauraHero-{{ section.id }} .hero-cta-button {
    display: inline-block;
    padding: 1.5rem 2rem;
    font-size: clamp(1rem, 1.8vw, 1.1rem);
    font-weight: 600;
    text-decoration: none;
    border-radius: 20px;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.35);
    background: linear-gradient(135deg, #C0A062 0%, #E6C88B 50%, #C0A062 100%);
    background-size: 200% 100%;
    color: #FFFFFF;
    text-align: center;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  @media screen and (min-width: 768px) {
    #MilauraHero-{{ section.id }} .hero-cta-button {
      padding: 1.5rem 2.5rem;
    }
  }

  #MilauraHero-{{ section.id }} .hero-cta-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.4);
    background-position: 100% 0;
  }

  /* Ruban garanties */
  #MilauraHero-{{ section.id }} .hero-trust-badge {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: rgba(55, 65, 81, 0.9);
    background: rgba(255, 255, 255, 0.6);
    backdrop-filter: blur(4px);
    -webkit-backdrop-filter: blur(4px);
    border-radius: 9999px;
    padding: 0.375rem 0.75rem;
    border: 1px solid rgba(0, 0, 0, 0.05);
  }

  @media screen and (min-width: 768px) {
    #MilauraHero-{{ section.id }} .hero-trust-badge {
      font-size: 1rem;
      background: rgba(255, 255, 255, 0.5);
    }
  }

  #MilauraHero-{{ section.id }} .hero-trust-badge-flag {
    font-size: 1.2rem;
    line-height: 1;
  }

  /* Animations */
  @keyframes milauraShimmer {
    0% {
      transform: translateX(-120%);
    }
    100% {
      transform: translateX(320%);
    }
  }

  @keyframes heroPanelFadeIn {
    from {
      opacity: 0;
      transform: translateY(18px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes heroCtaFadeIn {
    from {
      opacity: 0;
      transform: translateY(14px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
{% endstyle %}

