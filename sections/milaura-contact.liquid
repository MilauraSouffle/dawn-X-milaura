{% comment %}
  MILAURA CONTACT PAGE — V2
  Immersive contact experience: hero, founder story, values, form, FAQ, reassurance
{% endcomment %}

<section id="MilauraContact-{{ section.id }}" class="mc">

  {%- comment -%} ═══ HERO ═══ {%- endcomment -%}
  <div class="mc-hero">
    {% if section.settings.hero_image != blank %}
      <img
        src="{{ section.settings.hero_image | image_url: width: 1920 }}"
        alt="{{ section.settings.hero_title | default: 'Contact Milaura' }}"
        class="mc-hero-img"
        loading="eager"
        fetchpriority="high"
        width="1920"
        height="600"
      >
    {% else %}
      <div class="mc-hero-img mc-hero-placeholder"></div>
    {% endif %}
    <div class="mc-hero-overlay"></div>
    <div class="mc-hero-content">
      <span class="mc-kicker mc-kicker--light">{{ section.settings.hero_kicker | default: "A ton ecoute" }}</span>
      <h1 class="mc-hero-title">{{ section.settings.hero_title | default: "Parlons de toi, de nous, de tes rituels" }}</h1>
      <p class="mc-hero-subtitle">{{ section.settings.hero_subtitle | default: "Un doute sur une pierre ? Une question sur ta commande ? Nous sommes la pour t'accompagner." }}</p>
    </div>
  </div>

  {%- comment -%} ═══ FONDATRICE ═══ {%- endcomment -%}
  {% if section.settings.show_founder %}
  <div class="mc-founder">
    <div class="mc-founder-inner page-width">
      <div class="mc-founder-grid">
        <div class="mc-founder-photo-wrap">
          {% if section.settings.founder_image != blank %}
            <img
              src="{{ section.settings.founder_image | image_url: width: 400 }}"
              alt="{{ section.settings.founder_name | default: 'Fondatrice Milaura' }}"
              class="mc-founder-photo"
              loading="lazy"
              width="200"
              height="200"
            >
          {% else %}
            <div class="mc-founder-photo mc-founder-photo--placeholder">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" width="48" height="48"><path d="M12 2a10 10 0 1 0 0 20 10 10 0 0 0 0-20Zm0 5a3 3 0 1 1 0 6 3 3 0 0 1 0-6Zm0 12.5a7.5 7.5 0 0 1-6-3c.03-2 4-3.1 6-3.1s5.97 1.1 6 3.1a7.5 7.5 0 0 1-6 3Z"/></svg>
            </div>
          {% endif %}
        </div>
        <div class="mc-founder-text">
          <span class="mc-label-caps">{{ section.settings.founder_kicker | default: "Le mot de la fondatrice" }}</span>
          <h2 class="mc-founder-name">{{ section.settings.founder_name | default: "Fondatrice Milaura" }}</h2>
          <span class="mc-label-caps mc-label-caps--gold">{{ section.settings.founder_role | default: "Fondatrice & Artisane" }}</span>
          <p class="mc-founder-story">{{ section.settings.founder_text | default: "Milaura est nee de ma passion pour la lithotherapie et le pouvoir des senteurs. Chaque bougie et chaque bijou que nous creons dans notre atelier francais est pense comme un veritable outil de bien-etre emotionnel. Ta satisfaction et ton equilibre sont au coeur de ma demarche. N'hesite jamais a me solliciter personnellement." }}</p>
          {% if section.settings.founder_quote != blank %}
            <span class="mc-founder-quote">"{{ section.settings.founder_quote }}"</span>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
  {% endif %}

  {%- comment -%} ═══ VALEURS / ENGAGEMENTS ═══ {%- endcomment -%}
  {% assign value_blocks = section.blocks | where: 'type', 'value_card' %}
  {% if value_blocks.size > 0 %}
  <div class="mc-values page-width">
    <div class="mc-section-header">
      <span class="mc-kicker">{{ section.settings.values_kicker | default: "Nos engagements" }}</span>
      <h2 class="mc-section-title">{{ section.settings.values_title | default: "L'excellence Milaura" }}</h2>
    </div>
    <div class="mc-values-grid">
      {% for block in value_blocks %}
        <div class="mc-value-card" {{ block.shopify_attributes }}>
          <div class="mc-value-icon">
            {% case block.settings.icon %}
              {% when 'craft' %}
                <svg viewBox="0 0 24 24" fill="#fff"><path d="M21,11C21,16.55 17.16,21.74 12,23C6.84,21.74 3,16.55 3,11V5L12,1L21,5V11M12,21C15.75,20 19,15.54 19,11V6.3L12,3.19L5,6.3V11C5,15.54 8.25,20 12,21M10,17L6,13L7.41,11.59L10,14.17L16.59,7.58L18,9L10,17Z"/></svg>
              {% when 'gem' %}
                <svg viewBox="0 0 24 24" fill="#fff"><path d="M6 2L2 8l10 14L22 8l-4-6H6zm1.5 1h9l3 5-7.5 10.5L4.5 8l3-5z"/><path d="M4.5 8h15l-7.5 10.5L4.5 8z"/></svg>
              {% when 'truck' %}
                <svg viewBox="0 0 24 24" fill="#fff"><path d="M20,8H17V4H3C1.89,4 1,4.89 1,6V17H3A3,3 0 0,0 6,20A3,3 0 0,0 9,17H15A3,3 0 0,0 18,20A3,3 0 0,0 21,17H23V12L20,8M6,18.5A1.5,1.5 0 0,1 4.5,17A1.5,1.5 0 0,1 6,15.5A1.5,1.5 0 0,1 7.5,17A1.5,1.5 0 0,1 6,18.5M17,12V9.5H19.5L21.47,12H17M18,18.5A1.5,1.5 0 0,1 16.5,17A1.5,1.5 0 0,1 18,15.5A1.5,1.5 0 0,1 19.5,17A1.5,1.5 0 0,1 18,18.5Z"/></svg>
              {% when 'shield' %}
                <svg viewBox="0 0 24 24" fill="#fff"><path d="M12,1L3,5V11C3,16.55 6.84,21.74 12,23C17.16,21.74 21,16.55 21,11V5L12,1M10,17L6,13L7.41,11.59L10,14.17L16.59,7.58L18,9L10,17Z"/></svg>
              {% when 'heart' %}
                <svg viewBox="0 0 24 24" fill="#fff"><path d="M12,21.35L10.55,20.03C5.4,15.36 2,12.27 2,8.5C2,5.41 4.42,3 7.5,3C9.24,3 10.91,3.81 12,5.08C13.09,3.81 14.76,3 16.5,3C19.58,3 22,5.41 22,8.5C22,12.27 18.6,15.36 13.45,20.03L12,21.35Z"/></svg>
              {% when 'star' %}
                <svg viewBox="0 0 24 24" fill="#fff"><path d="M12,17.27L18.18,21L16.54,13.97L22,9.24L14.81,8.62L12,2L9.19,8.62L2,9.24L7.45,13.97L5.82,21L12,17.27Z"/></svg>
              {% else %}
                <svg viewBox="0 0 24 24" fill="#fff"><path d="M12,17.27L18.18,21L16.54,13.97L22,9.24L14.81,8.62L12,2L9.19,8.62L2,9.24L7.45,13.97L5.82,21L12,17.27Z"/></svg>
            {% endcase %}
          </div>
          <h3 class="mc-value-title">{{ block.settings.title }}</h3>
          <p class="mc-value-desc">{{ block.settings.description }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
  {% endif %}

  {%- comment -%} ═══ CONTACT FORM + SIDEBAR ═══ {%- endcomment -%}
  <div class="mc-contact page-width">
    <div class="mc-contact-grid">

      {%- comment -%} GAUCHE : Formulaire {%- endcomment -%}
      <div class="mc-form-card milaura-section-card">
        <span class="mc-kicker">{{ section.settings.form_kicker | default: "Ecris-nous" }}</span>
        <h2 class="mc-form-title">{{ section.settings.form_title | default: "Formulaire de contact" }}</h2>

        {% form 'contact' %}
          {% if form.posted_successfully? %}
            <div class="mc-form-success">
              <div class="mc-form-success-icon">&#x2728;</div>
              <h3>{{ section.settings.success_title | default: "Message envoye !" }}</h3>
              <p>{{ section.settings.success_text | default: "Nous te repondons sous 24h. A bientot !" }}</p>
            </div>
          {% else %}
            {% if form.errors %}
              <div class="mc-form-errors">
                {{ form.errors | default_errors }}
              </div>
            {% endif %}

            <div class="mc-form-fields">
              <div class="mc-form-row">
                <div class="mc-form-group">
                  <label for="mc-firstname-{{ section.id }}">{{ section.settings.label_firstname | default: "Prenom" }}</label>
                  <input type="text" id="mc-firstname-{{ section.id }}" name="contact[{{ section.settings.label_firstname | default: 'Prenom' }}]" class="mc-input" placeholder="{{ section.settings.ph_firstname | default: 'Ton prenom' }}" required>
                </div>
                <div class="mc-form-group">
                  <label for="mc-email-{{ section.id }}">Email</label>
                  <input type="email" id="mc-email-{{ section.id }}" name="contact[email]" class="mc-input" placeholder="{{ section.settings.ph_email | default: 'ton@email.com' }}" required autocomplete="email">
                </div>
              </div>

              <div class="mc-form-group">
                <label for="mc-subject-{{ section.id }}">{{ section.settings.label_subject | default: "Sujet" }}</label>
                <select id="mc-subject-{{ section.id }}" name="contact[{{ section.settings.label_subject | default: 'Sujet' }}]" class="mc-input mc-select" required>
                  <option value="" disabled selected>{{ section.settings.ph_subject | default: "Choisis une option" }}</option>
                  <option value="commande">{{ section.settings.subject_1 | default: "Ma commande en cours" }}</option>
                  <option value="conseil">{{ section.settings.subject_2 | default: "Conseil pierre / rituel" }}</option>
                  <option value="retour">{{ section.settings.subject_3 | default: "Retour ou echange" }}</option>
                  <option value="partenariat">{{ section.settings.subject_4 | default: "Demande de partenariat" }}</option>
                  <option value="autre">{{ section.settings.subject_5 | default: "Autre demande" }}</option>
                </select>
              </div>

              <div class="mc-form-group">
                <label for="mc-message-{{ section.id }}">Message</label>
                <textarea id="mc-message-{{ section.id }}" name="contact[body]" class="mc-input mc-textarea" placeholder="{{ section.settings.ph_message | default: "Comment pouvons-nous t'aider ?" }}" rows="5" required></textarea>
              </div>

              <button type="submit" class="mc-submit milaura-btn-gold">
                {{ section.settings.submit_label | default: "Envoyer mon message" }}
              </button>
            </div>
          {% endif %}
        {% endform %}
      </div>

      {%- comment -%} DROITE : Sidebar {%- endcomment -%}
      <div class="mc-sidebar">
        {% if section.settings.phone != blank %}
        <div class="mc-info-card">
          <h4 class="mc-info-title">
            <svg viewBox="0 0 24 24" fill="currentColor" width="18" height="18"><path d="M6.62,10.79C8.06,13.62 10.38,15.94 13.21,17.38L15.41,15.18C15.69,14.9 16.08,14.82 16.43,14.93C17.55,15.3 18.75,15.5 20,15.5A1,1 0 0,1 21,16.5V20A1,1 0 0,1 20,21A17,17 0 0,1 3,4A1,1 0 0,1 4,3H7.5A1,1 0 0,1 8.5,4C8.5,5.25 8.7,6.45 9.07,7.57C9.18,7.92 9.1,8.31 8.82,8.59L6.62,10.79Z"/></svg>
            Par telephone
          </h4>
          <a href="tel:{{ section.settings.phone | replace: ' ', '' }}" class="mc-info-link">{{ section.settings.phone }}</a>
          <span class="mc-info-detail">{{ section.settings.phone_hours | default: "Lun-Ven 9h-18h" }}</span>
        </div>
        {% endif %}

        <div class="mc-info-card">
          <h4 class="mc-info-title">
            <svg viewBox="0 0 24 24" fill="currentColor" width="18" height="18"><path d="M20,8L12,13L4,8V6L12,11L20,6M20,4H4C2.89,4 2,4.89 2,6V18A2,2 0 0,0 4,20H20A2,2 0 0,0 22,18V6C22,4.89 21.1,4 20,4Z"/></svg>
            Par email
          </h4>
          <a href="mailto:{{ section.settings.email | default: 'hello@milaura.fr' }}" class="mc-info-link">{{ section.settings.email | default: "hello@milaura.fr" }}</a>
          <div class="mc-badge-promise">
            <svg viewBox="0 0 24 24" fill="currentColor" width="14" height="14"><path d="M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M12.5,7V12.25L17,14.92L16.25,16.15L11,13V7H12.5Z"/></svg>
            {{ section.settings.response_time | default: "Reponse sous 24h" }}
          </div>
        </div>

        {% if section.settings.instagram_url != blank or section.settings.tiktok_url != blank %}
        <div class="mc-info-card">
          <h4 class="mc-info-title">Suis nos rituels</h4>
          <div class="mc-social-row">
            {% if section.settings.instagram_url != blank %}
            <a href="{{ section.settings.instagram_url }}" target="_blank" rel="noopener" class="mc-social-link" aria-label="Instagram">
              <svg viewBox="0 0 24 24" fill="currentColor" width="18" height="18"><path d="M7.8,2H16.2C19.4,2 22,4.6 22,7.8V16.2C22,19.4 19.4,22 16.2,22H7.8C4.6,22 2,19.4 2,16.2V7.8C2,4.6 4.6,2 7.8,2M12,7C9.2,7 7,9.2 7,12C7,14.8 9.2,17 12,17C14.8,17 17,14.8 17,12C17,9.2 14.8,7 12,7M12,9C13.7,9 15,10.3 15,12C15,13.7 13.7,15 12,15C10.3,15 9,13.7 9,12C9,10.3 10.3,9 12,9M18,6C18,6.6 17.6,7 17,7C16.4,7 16,6.6 16,6C16,5.4 16.4,5 17,5C17.6,5 18,5.4 18,6Z"/></svg>
            </a>
            {% endif %}
            {% if section.settings.tiktok_url != blank %}
            <a href="{{ section.settings.tiktok_url }}" target="_blank" rel="noopener" class="mc-social-link" aria-label="TikTok">
              <svg viewBox="0 0 24 24" fill="currentColor" width="18" height="18"><path d="M16.6,5.82C15.56,5.82 14.63,5.07 14.33,4H12.5V15.57C12.5,16.75 11.55,17.71 10.38,17.71C9.2,17.71 8.25,16.75 8.25,15.57C8.25,14.4 9.2,13.44 10.38,13.44C10.58,13.44 10.77,13.47 10.95,13.52V11.67C10.76,11.64 10.57,11.62 10.38,11.62C8.2,11.62 6.43,13.39 6.43,15.57C6.43,17.75 8.2,19.53 10.38,19.53C12.56,19.53 14.33,17.75 14.33,15.57V9.57C15.17,10.16 16.17,10.5 17.25,10.5V8.68C16.97,8.68 16.6,5.82 16.6,5.82Z"/></svg>
            </a>
            {% endif %}
          </div>
        </div>
        {% endif %}

        {%- comment -%} Mini CTA Quiz {%- endcomment -%}
        {% if section.settings.show_quiz_cta %}
        <a href="{{ section.settings.quiz_url | default: '/pages/quiz' }}" class="mc-quiz-cta">
          <span class="mc-quiz-cta-icon">&#x2728;</span>
          <div>
            <strong>{{ section.settings.quiz_cta_title | default: "Pas sure de ton choix ?" }}</strong>
            <span>{{ section.settings.quiz_cta_text | default: "Fais notre quiz pour decouvrir ta pierre" }}</span>
          </div>
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="20" height="20"><path d="M9 18l6-6-6-6"/></svg>
        </a>
        {% endif %}
      </div>

    </div>
  </div>

  {%- comment -%} ═══ FAQ ═══ {%- endcomment -%}
  {% assign faq_blocks = section.blocks | where: 'type', 'faq_item' %}
  {% if faq_blocks.size > 0 %}
  <div class="mc-faq page-width">
    <div class="mc-section-header">
      <span class="mc-kicker">{{ section.settings.faq_kicker | default: "FAQ" }}</span>
      <h2 class="mc-section-title">{{ section.settings.faq_title | default: "Tes questions, nos reponses" }}</h2>
    </div>
    <div class="mc-faq-list">
      {% for block in faq_blocks %}
        <details class="mc-faq-item" {{ block.shopify_attributes }}>
          <summary class="mc-faq-question">
            <span>{{ block.settings.question }}</span>
            <span class="mc-faq-icon">+</span>
          </summary>
          <div class="mc-faq-answer">{{ block.settings.answer }}</div>
        </details>
      {% endfor %}
    </div>
  </div>
  {% endif %}

  {%- comment -%} ═══ REASSURANCE BANNER ═══ {%- endcomment -%}
  {% assign trust_blocks = section.blocks | where: 'type', 'trust_badge' %}
  {% if trust_blocks.size > 0 %}
  <div class="mc-reassurance">
    <div class="mc-reassurance-inner page-width">
      {% for block in trust_blocks %}
        <div class="mc-reassurance-item" {{ block.shopify_attributes }}>
          {% case block.settings.icon %}
            {% when 'star' %}
              <svg viewBox="0 0 24 24" fill="currentColor" width="20" height="20"><path d="M12,17.27L18.18,21L16.54,13.97L22,9.24L14.81,8.62L12,2L9.19,8.62L2,9.24L7.45,13.97L5.82,21L12,17.27Z"/></svg>
            {% when 'truck' %}
              <svg viewBox="0 0 24 24" fill="currentColor" width="20" height="20"><path d="M20,8H17V4H3C1.89,4 1,4.89 1,6V17H3A3,3 0 0,0 6,20A3,3 0 0,0 9,17H15A3,3 0 0,0 18,20A3,3 0 0,0 21,17H23V12L20,8M6,18.5A1.5,1.5 0 0,1 4.5,17A1.5,1.5 0 0,1 6,15.5A1.5,1.5 0 0,1 7.5,17A1.5,1.5 0 0,1 6,18.5M17,12V9.5H19.5L21.47,12H17M18,18.5A1.5,1.5 0 0,1 16.5,17A1.5,1.5 0 0,1 18,15.5A1.5,1.5 0 0,1 19.5,17A1.5,1.5 0 0,1 18,18.5Z"/></svg>
            {% when 'shield' %}
              <svg viewBox="0 0 24 24" fill="currentColor" width="20" height="20"><path d="M12,1L3,5V11C3,16.55 6.84,21.74 12,23C17.16,21.74 21,16.55 21,11V5L12,1M10,17L6,13L7.41,11.59L10,14.17L16.59,7.58L18,9L10,17Z"/></svg>
            {% when 'heart' %}
              <svg viewBox="0 0 24 24" fill="currentColor" width="20" height="20"><path d="M12,21.35L10.55,20.03C5.4,15.36 2,12.27 2,8.5C2,5.41 4.42,3 7.5,3C9.24,3 10.91,3.81 12,5.08C13.09,3.81 14.76,3 16.5,3C19.58,3 22,5.41 22,8.5C22,12.27 18.6,15.36 13.45,20.03L12,21.35Z"/></svg>
            {% else %}
              <svg viewBox="0 0 24 24" fill="currentColor" width="20" height="20"><path d="M12,17.27L18.18,21L16.54,13.97L22,9.24L14.81,8.62L12,2L9.19,8.62L2,9.24L7.45,13.97L5.82,21L12,17.27Z"/></svg>
          {% endcase %}
          <span>{{ block.settings.text }}</span>
        </div>
      {% endfor %}
    </div>
  </div>
  {% endif %}

</section>

<style>
  /* ═══════════════════════════════════════
     MILAURA CONTACT V2
     ═══════════════════════════════════════ */

  .mc {
    padding: 0;
  }

  .mc .page-width {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px;
  }

  /* --- Shared --- */
  .mc-kicker {
    font-family: 'Dancing Script', cursive;
    color: var(--milaura-gold, #C0A062);
    font-size: 1.25rem;
    display: block;
    margin-bottom: 8px;
  }

  .mc-kicker--light {
    color: rgba(255, 255, 255, 0.9);
  }

  .mc-label-caps {
    display: block;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    font-size: 0.75rem;
    font-weight: 700;
    font-family: 'Lato', sans-serif;
    color: var(--milaura-gold-dark, #8F723A);
  }

  .mc-label-caps--gold {
    color: var(--milaura-gold, #C0A062);
    margin-top: 4px;
  }

  .mc-section-header {
    text-align: center;
    margin-bottom: 48px;
  }

  .mc-section-title {
    font-family: 'Playfair Display', serif;
    font-size: 2rem;
    font-weight: 600;
    color: #000;
    margin: 0;
    line-height: 1.2;
  }

  /* ═══ HERO ═══ */
  .mc-hero {
    position: relative;
    height: 480px;
    width: 100%;
    display: flex;
    align-items: flex-end;
    overflow: hidden;
    margin-bottom: 0;
  }

  .mc-hero-img {
    position: absolute;
    top: 0; left: 0;
    width: 100%; height: 100%;
    object-fit: cover;
    z-index: 0;
  }

  .mc-hero-placeholder {
    background: linear-gradient(135deg, #E6D8C0 0%, #F2E8D5 50%, #FDFBF7 100%);
  }

  .mc-hero-overlay {
    position: absolute;
    top: 0; left: 0;
    width: 100%; height: 100%;
    background: linear-gradient(to bottom, rgba(0,0,0,0.05) 0%, rgba(0,0,0,0.55) 100%);
    z-index: 1;
  }

  .mc-hero-content {
    position: relative;
    z-index: 2;
    padding: 36px 40px;
    color: #fff;
    max-width: 750px;
    background: rgba(0, 0, 0, 0.45);
    backdrop-filter: blur(12px) saturate(120%);
    -webkit-backdrop-filter: blur(12px) saturate(120%);
    border-radius: 24px;
    border: 1px solid rgba(255, 255, 255, 0.12);
    margin: 0 0 48px 48px;
  }

  .mc-hero-title {
    font-family: 'Playfair Display', serif;
    font-size: clamp(1.8rem, 4.5vw, 3.2rem);
    font-weight: 600;
    line-height: 1.15;
    margin: 0 0 12px 0;
    color: #fff;
  }

  .mc-hero-subtitle {
    font-family: 'Lato', sans-serif;
    font-size: 1.05rem;
    opacity: 0.95;
    font-weight: 300;
    line-height: 1.6;
    margin: 0;
  }

  /* ═══ FONDATRICE ═══ */
  .mc-founder {
    padding: 72px 0;
    background: rgba(242, 232, 213, 0.35);
  }

  .mc-founder-grid {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: 48px;
    align-items: center;
  }

  .mc-founder-photo-wrap {
    display: flex;
    justify-content: center;
  }

  .mc-founder-photo {
    width: 200px;
    height: 200px;
    border-radius: 50%;
