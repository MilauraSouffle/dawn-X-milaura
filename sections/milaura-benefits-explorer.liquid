{% style %}
  /* ============================================
     MILAURA BENEFITS EXPLORER - V3 (MOBILE PERFECT)
     ============================================ */

  #MilauraBenefits-{{ section.id }} {
    width: 100%;
    padding: var(--milaura-spacing-lg) var(--milaura-spacing-sm);
    background: transparent;
    /* Espacement vertical harmonis√© */
    margin-top: var(--milaura-spacing-lg);
    margin-bottom: var(--milaura-spacing-lg);
    transition: background-image 0.5s ease-in-out;
    background-size: cover;
    background-position: center;
    position: relative;
  }

  /* --- CONTENEUR GLOBAL --- */
  #MilauraBenefits-{{ section.id }} .benefits-dashboard {
    overflow: hidden;
    position: relative;
    z-index: 2;
  }

  #MilauraBenefits-{{ section.id }} .benefits-header {
    text-align: center;
    margin-bottom: 40px;
  }

  /* --- LAYOUT GRID DESKTOP --- */
  #MilauraBenefits-{{ section.id }} .benefits-layout {
    display: grid;
    grid-template-columns: 350px 1fr;
    gap: 40px;
    align-items: start;
  }

  /* --- NAVIGATION GAUCHE (DESKTOP) --- */
  #MilauraBenefits-{{ section.id }} .benefits-nav {
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  #MilauraBenefits-{{ section.id }} .benefit-btn {
    background: rgba(255, 255, 255, 0.5);
    border: 1px solid transparent;
    border-radius: 20px;
    padding: 20px;
    text-align: left;
    cursor: pointer;
    transition: all 0.3s ease;
    width: 100%;
    position: relative;
  }

  #MilauraBenefits-{{ section.id }} .benefit-btn:hover {
    background: rgba(255, 255, 255, 0.9);
    transform: translateX(5px);
  }

  #MilauraBenefits-{{ section.id }} .benefit-btn.is-active {
    background: #ffffff;
    border-color: var(--milaura-gold);
    box-shadow: 0 10px 25px rgba(192, 160, 98, 0.15);
    transform: scale(1.02);
  }

  #MilauraBenefits-{{ section.id }} .benefit-btn-content {
    display: flex;
    align-items: center;
    gap: 15px;
  }

  #MilauraBenefits-{{ section.id }} .benefit-btn-icon {
    font-size: 1.8rem;
  }

  #MilauraBenefits-{{ section.id }} .benefit-btn-name {
    font-family: var(--milaura-font-heading);
    font-weight: 700;
    color: var(--milaura-text);
    font-size: 1.5rem;
    display: block;
  }

  #MilauraBenefits-{{ section.id }} .benefit-btn-tagline {
    font-family: var(--milaura-font-body);
    font-size: 1.1rem;
    color: var(--milaura-text-light);
    display: block;
    margin-top: 6px;
  }

  /* --- ZONE DROITE (DESKTOP) --- */
  #MilauraBenefits-{{ section.id }} .benefits-content {
    display: grid;
    grid-template-areas: "stack";
    border-radius: 25px;
    overflow: hidden;
    position: relative;
    min-height: 500px;
    box-shadow: inset 0 0 0 1px rgba(255,255,255,0.3);
  }

  #MilauraBenefits-{{ section.id }} .benefit-card {
    grid-area: stack;
    opacity: 0;
    z-index: 0;
    pointer-events: none;
    transition: opacity 0.5s ease-in-out, transform 0.5s ease;
    transform: scale(0.98);
    background-size: cover;
    background-position: center;
    display: flex;
    align-items: center;
    padding: var(--milaura-spacing-md);
  }

  #MilauraBenefits-{{ section.id }} .benefit-card.is-active {
    opacity: 1;
    z-index: 1;
    pointer-events: auto;
    transform: scale(1);
  }

  /* Overlay desktop */
  #MilauraBenefits-{{ section.id }} .benefit-card::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(to right, rgba(255,255,255,0.5) 0%, rgba(255,255,255,0.2) 60%, rgba(255,255,255,0) 100%);
    z-index: 1;
  }

  /* --- BOITE TEXTE --- */
  #MilauraBenefits-{{ section.id }} .benefit-info-box {
    position: relative;
    z-index: 2;
    max-width: 480px;
    background: rgba(255, 255, 255, 0.65);
    backdrop-filter: blur(15px);
    -webkit-backdrop-filter: blur(15px);
    padding: var(--milaura-spacing-md);
    border-radius: 20px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    border: 1px solid rgba(255, 255, 255, 0.3);
  }

  #MilauraBenefits-{{ section.id }} .benefit-info-title {
    font-family: var(--milaura-font-heading);
    font-size: 2.2rem;
    color: var(--milaura-text);
    margin-bottom: 10px;
    line-height: 1.2;
  }

  #MilauraBenefits-{{ section.id }} .benefit-info-subtitle {
    text-transform: uppercase;
    letter-spacing: 2px;
    font-size: 1.1rem;
    color: var(--milaura-gold);
    font-weight: 700;
    margin-bottom: 20px;
  }

  #MilauraBenefits-{{ section.id }} .benefit-info-desc {
    font-family: var(--milaura-font-body);
    color: var(--milaura-text);
    font-size: 1.1rem;
    line-height: 1.7;
  }

  /* --- PRODUIT MINI --- */
  #MilauraBenefits-{{ section.id }} .benefit-product-mini {
    display: flex;
    align-items: center;
    gap: 15px;
    margin-top: 25px;
    padding-top: 20px;
    border-top: 1px solid rgba(0,0,0,0.1);
    flex-wrap: wrap;
  }

  #MilauraBenefits-{{ section.id }} .benefit-product-info {
    flex: 1;
    min-width: 0;
  }

  #MilauraBenefits-{{ section.id }} .benefit-product-title {
    font-weight: 700;
    margin-bottom: 5px;
    color: var(--milaura-text);
    font-size: 1.3rem;
  }

  #MilauraBenefits-{{ section.id }} .benefit-product-price {
    color: var(--milaura-gold);
    font-weight: 700;
    font-size: 1.4rem;
  }

  #MilauraBenefits-{{ section.id }} .benefit-product-cta {
    flex-shrink: 0;
    white-space: nowrap;
    padding: 14px 28px;
    font-size: 1rem;
    margin-left: auto;
    box-shadow: 0 4px 15px rgba(192, 160, 98, 0.3);
  }

  #MilauraBenefits-{{ section.id }} .benefit-product-thumb {
    width: 70px; height: 70px;
    border-radius: 12px;
    object-fit: cover;
    flex-shrink: 0;
  }

  #MilauraBenefits-{{ section.id }} .benefits-dots {
    display: none; /* Masqu√© sur desktop */
  }

  /* ============================================
     MOBILE / TABLETTE (‚â§ 990px)
     ============================================ */
  @media screen and (max-width: 990px) {
    #MilauraBenefits-{{ section.id }} {
      /* Padding ajust√© pour laisser la place au background */
      padding: var(--milaura-spacing-lg) 0;
    }

    /* Overlay mobile global */
    #MilauraBenefits-{{ section.id }}::before {
      content: '';
      position: absolute;
      inset: 0;
      background: rgba(255, 255, 255, 0.4);
      z-index: 1;
      pointer-events: none;
    }

    #MilauraBenefits-{{ section.id }} .benefits-dashboard {
      background: transparent !important; /* On enl√®ve le fond de la carte */
      box-shadow: none !important;
      border: none !important;
      padding: 0;
    }

    #MilauraBenefits-{{ section.id }} .benefits-layout {
      display: flex;
      flex-direction: column;
      gap: 20px;
    }

    #MilauraBenefits-{{ section.id }} .benefits-header {
      padding: 0 20px; /* Marges lat√©rales pour le titre */
      margin-bottom: 20px;
    }

    /* --- CARROUSEL NAVIGATION --- */
    #MilauraBenefits-{{ section.id }} .benefits-nav {
      flex-direction: row;
      overflow-x: auto;
      scroll-snap-type: x mandatory;
      padding: 10px 20px 20px 20px; /* Espace pour l'ombre */
      gap: 15px;

      /* Masquer scrollbar */
      scrollbar-width: none;
      -ms-overflow-style: none;
    }

    #MilauraBenefits-{{ section.id }} .benefits-nav::-webkit-scrollbar {
      display: none;
    }

    #MilauraBenefits-{{ section.id }} .benefit-btn {
      min-width: 80vw;
      width: 80vw;
      flex-shrink: 0;
      scroll-snap-align: center;
      background: rgba(255, 255, 255, 0.85);
      border: 1px solid rgba(192, 160, 98, 0.3);
      box-shadow: 0 5px 15px rgba(0,0,0,0.05);
    }

    #MilauraBenefits-{{ section.id }} .benefit-btn.is-active {
      background: #ffffff;
      border-color: var(--milaura-gold);
      border-width: 2px;
      transform: scale(1); /* Pas de scale sur mobile pour √©viter flou */
      box-shadow: 0 8px 25px rgba(192, 160, 98, 0.2);
    }

    /* --- DOTS --- */
    #MilauraBenefits-{{ section.id }} .benefits-dots {
      display: flex;
      justify-content: center;
      gap: 8px;
      margin-bottom: 20px;
    }

    #MilauraBenefits-{{ section.id }} .benefit-dot {
      width: 8px;
      height: 8px;
      border-radius: 50%;
      background: rgba(192, 160, 98, 0.3);
      border: none;
      padding: 0;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    #MilauraBenefits-{{ section.id }} .benefit-dot.is-active {
      background: var(--milaura-gold);
      width: 20px;
      border-radius: 10px;
    }

    /* --- CONTENU --- */
    #MilauraBenefits-{{ section.id }} .benefits-content {
      display: block;
      min-height: auto;
      padding: 0 20px;
      background: transparent;
      box-shadow: none;
      overflow: visible;
    }

    /* Sur mobile, on cache toutes les cartes sauf l'active */
    #MilauraBenefits-{{ section.id }} .benefit-card {
      display: none;
      padding: 0;
      background: none !important; /* Pas de fond sur la carte elle-m√™me */
    }

    #MilauraBenefits-{{ section.id }} .benefit-card.is-active {
      display: block;
      opacity: 1;
      transform: none;
    }

    /* On cache l'overlay desktop */
    #MilauraBenefits-{{ section.id }} .benefit-card::before {
      display: none;
    }

    #MilauraBenefits-{{ section.id }} .benefit-info-box {
      width: 100%;
      background: rgba(255, 255, 255, 0.85);
      backdrop-filter: blur(20px);
      border: 1px solid rgba(192, 160, 98, 0.2);
      box-shadow: 0 10px 30px rgba(192, 160, 98, 0.1);
    }

    #MilauraBenefits-{{ section.id }} .benefit-product-cta {
      width: 100%;
      text-align: center;
      margin-top: 15px;
    }
  }
{% endstyle %}

<div id="MilauraBenefits-{{ section.id }}">
  <div class="benefits-dashboard">
    {% if section.settings.title != blank %}
      <div class="benefits-header">
        <h2 class="milaura-heading">{{ section.settings.title }}</h2>
        {% if section.settings.subtitle != blank %}
          <div class="benefits-subtitle milaura-text">{{ section.settings.subtitle }}</div>
        {% endif %}
      </div>
    {% endif %}

    <div class="benefits-layout">
      <nav class="benefits-nav" role="tablist" id="benefits-nav-{{ section.id }}">
        {%- for block in section.blocks -%}
          <button
            type="button"
            id="benefit-btn-{{ block.id }}"
            class="benefit-btn {% if forloop.first %}is-active{% endif %}"
            data-target="benefit-{{ block.id }}"
            data-index="{{ forloop.index0 }}"
            data-bg="{{ block.settings.stone_image | image_url: width: 1200 }}"
            role="tab"
            aria-selected="{% if forloop.first %}true{% else %}false{% endif %}"
            aria-controls="benefit-{{ block.id }}"
            {{ block.shopify_attributes }}
          >
            <div class="benefit-btn-content">
              <span class="benefit-btn-icon">{{ block.settings.icon }}</span>
              <div>
                <span class="benefit-btn-name">{{ block.settings.emotion }}</span>
                <span class="benefit-btn-tagline">{{ block.settings.tagline }}</span>
              </div>
            </div>
          </button>
        {%- endfor -%}
      </nav>

      <div class="benefits-dots" id="benefits-dots-{{ section.id }}">
        {%- for block in section.blocks -%}
          <button
            type="button"
            class="benefit-dot {% if forloop.first %}is-active{% endif %}"
            data-index="{{ forloop.index0 }}"
            aria-label="Voir le besoin {{ forloop.index }}"
          ></button>
        {%- endfor -%}
      </div>

      <div class="benefits-content">
        {%- for block in section.blocks -%}
          <div
            id="benefit-{{ block.id }}"
            class="benefit-card {% if forloop.first %}is-active{% endif %}"
            role="tabpanel"
            aria-labelledby="benefit-btn-{{ block.id }}"
            style="background-image: url('{{ block.settings.stone_image | image_url: width: 1400 }}');"
          >
            <div class="benefit-info-box">
              <div class="benefit-info-subtitle">{{ block.settings.stone_subtitle }}</div>
              <h3 class="benefit-info-title">{{ block.settings.stone_name }}</h3>
              <div class="benefit-info-desc milaura-text">{{ block.settings.description }}</div>

              {%- if block.settings.product != blank -%}
                {% assign prod = block.settings.product %}
                <div class="benefit-product-mini">
                  {% if prod.featured_image %}
                    {{ prod.featured_image | image_url: width: 140 | image_tag: class: 'benefit-product-thumb' }}
                  {% endif %}
                  <div class="benefit-product-info">
                    <div class="benefit-product-title">{{ prod.title }}</div>
                    <div class="benefit-product-price">{{ prod.price | money }}</div>
                  </div>
                  <a href="{{ prod.url }}" class="milaura-btn milaura-btn-primary benefit-product-cta">
                    {{ block.settings.product_cta_label | default: 'Je veux cette pierre' }}
                  </a>
                </div>
              {%- endif -%}
            </div>
          </div>
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const sectionId = '{{ section.id }}';
    const container = document.querySelector('#MilauraBenefits-' + sectionId);
    const nav = document.querySelector('#benefits-nav-' + sectionId);
    const btns = nav ? nav.querySelectorAll('.benefit-btn') : [];
    const dots = container.querySelectorAll('.benefit-dot');
    const cards = container.querySelectorAll('.benefit-card');

    if (!container || btns.length === 0) return;

    // --- FONCTIONS ---

    // Met √† jour le background de la section (Mobile)
    function updateBackground(url) {
      if (window.innerWidth <= 990 && url) {
        container.style.backgroundImage = `url('${url}')`;
      } else {
        container.style.backgroundImage = 'none';
      }
    }

    // Active un onglet (Bouton + Dot + Carte + Background)
    function activateTab(index) {
      // 1. D√©sactiver tout
      btns.forEach((b) => {
        b.classList.remove('is-active');
        b.setAttribute('aria-selected', 'false');
      });
      dots.forEach((d) => d.classList.remove('is-active'));
      cards.forEach((c) => c.classList.remove('is-active'));

      // 2. Activer la cible
      if (btns[index]) {
        btns[index].classList.add('is-active');
        btns[index].setAttribute('aria-selected', 'true');
        updateBackground(btns[index].dataset.bg);
      }
      if (dots[index]) dots[index].classList.add('is-active');
      if (cards[index]) cards[index].classList.add('is-active');
    }

    // Scroll la nav horizontale vers l'√©l√©ment actif (Mobile)
    function scrollNavToIndex(index) {
      if (window.innerWidth > 990) return;

      const btn = btns[index];
      if (!btn) return;

      // Calcul pour centrer l'√©l√©ment
      const navWidth = nav.offsetWidth;
      const btnWidth = btn.offsetWidth;
      const btnLeft = btn.offsetLeft;

      // Position id√©ale : milieu du bouton au milieu de l'√©cran
      const scrollPos = btnLeft - navWidth / 2 + btnWidth / 2;

      nav.scrollTo({
        left: scrollPos,
        behavior: 'smooth',
      });
    }

    // --- EVENTS ---

    // 1. Clic sur Bouton Nav
    btns.forEach((btn, i) => {
      btn.addEventListener('click', () => {
        activateTab(i);
        scrollNavToIndex(i); // Important pour centrer si clic partiel
      });
    });

    // 2. Clic sur Dot
    dots.forEach((dot, i) => {
      dot.addEventListener('click', () => {
        activateTab(i);
        scrollNavToIndex(i);
      });
    });

    // 3. D√©tection du Scroll Horizontal (Swipe) pour mettre √† jour les dots
    // On utilise un Debounce pour ne pas surcharger
    let isScrolling;
    nav.addEventListener('scroll', () => {
      window.clearTimeout(isScrolling);
      isScrolling = setTimeout(() => {
        // Trouver l'√©l√©ment le plus proche du centre
        const center = nav.scrollLeft + nav.offsetWidth / 2;
        let closestIndex = 0;
        let minDiff = Infinity;

        btns.forEach((btn, i) => {
          const btnCenter = btn.offsetLeft + btn.offsetWidth / 2;
          const diff = Math.abs(center - btnCenter);
          if (diff < minDiff) {
            minDiff = diff;
            closestIndex = i;
          }
        });

        // Si l'index d√©tect√© est diff√©rent de l'actuel, on met √† jour (sans rescroller)
        if (!btns[closestIndex].classList.contains('is-active')) {
          activateTab(closestIndex);
        }
      }, 100); // D√©lai de 100ms apr√®s fin de scroll
    });

    // 4. Initialisation
    // Activer le premier ou celui d√©j√† actif
    const activeBtn = nav.querySelector('.benefit-btn.is-active');
    if (activeBtn) {
      const index = parseInt(activeBtn.dataset.index);
      updateBackground(activeBtn.dataset.bg);
    } else {
      activateTab(0);
    }

    // 5. Gestion Resize (Reset background si on repasse en desktop)
    window.addEventListener('resize', () => {
      const active = nav.querySelector('.benefit-btn.is-active');
      if (active) updateBackground(active.dataset.bg);
    });
  });
</script>

