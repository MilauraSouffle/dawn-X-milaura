{% style %}
  /* ============================================
     MILAURA BENEFITS EXPLORER - V2 (GRID STACK)
     ============================================ */

  #MilauraBenefits-{{ section.id }} {
    width: 100%;
    padding: var(--milaura-spacing-xl) var(--milaura-spacing-sm);
    background: transparent;
  }

  /* --- CONTENEUR GLOBAL --- */
  #MilauraBenefits-{{ section.id }} .benefits-dashboard {
    max-width: 1400px;
    margin: 0 auto;
    background: rgba(255, 255, 255, 0.6);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.8);
    border-radius: 30px;
    box-shadow: 0 20px 50px rgba(192, 160, 98, 0.15);
    padding: 40px;
    overflow: hidden;
  }

  #MilauraBenefits-{{ section.id }} .benefits-header {
    text-align: center;
    margin-bottom: 40px;
  }

  /* --- LAYOUT GRID --- */
  #MilauraBenefits-{{ section.id }} .benefits-layout {
    display: grid;
    grid-template-columns: 350px 1fr;
    gap: 40px;
    align-items: start;
  }

  /* --- NAVIGATION GAUCHE --- */
  #MilauraBenefits-{{ section.id }} .benefits-nav {
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  #MilauraBenefits-{{ section.id }} .benefit-btn {
    background: rgba(255, 255, 255, 0.5);
    border: 1px solid transparent;
    border-radius: 20px;
    padding: 20px;
    text-align: left;
    cursor: pointer;
    transition: all 0.3s ease;
    width: 100%; /* Important */
  }

  #MilauraBenefits-{{ section.id }} .benefit-btn:hover {
    background: rgba(255, 255, 255, 0.9);
    transform: translateX(5px);
  }

  #MilauraBenefits-{{ section.id }} .benefit-btn.is-active {
    background: #ffffff;
    border-color: var(--milaura-gold);
    box-shadow: 0 10px 25px rgba(192, 160, 98, 0.15);
    transform: scale(1.02);
  }

  #MilauraBenefits-{{ section.id }} .benefit-btn-content {
    display: flex;
    align-items: center;
    gap: 15px;
  }

  #MilauraBenefits-{{ section.id }} .benefit-btn-icon {
    font-size: 1.8rem;
  }

  #MilauraBenefits-{{ section.id }} .benefit-btn-name {
    font-family: var(--milaura-font-heading);
    font-weight: 700;
    color: var(--milaura-text);
    font-size: 1.1rem;
    display: block;
  }

  #MilauraBenefits-{{ section.id }} .benefit-btn-tagline {
    font-family: var(--milaura-font-body);
    font-size: 0.85rem;
    color: var(--milaura-text-light);
    display: block;
    margin-top: 4px;
  }

  /* --- ZONE DROITE (GRID STACKING) --- */
  /* C'est ici que la magie op√®re pour la hauteur auto */
  #MilauraBenefits-{{ section.id }} .benefits-content {
    display: grid;
    grid-template-areas: "stack"; /* Zone unique */
    border-radius: 25px;
    overflow: hidden;
    position: relative;
    min-height: 500px;
    box-shadow: inset 0 0 0 1px rgba(255,255,255,0.3);
  }

  #MilauraBenefits-{{ section.id }} .benefit-card {
    grid-area: stack; /* Tous les blocs s'empilent ici */

    /* Animation et Visibilit√© */
    opacity: 0;
    z-index: 0;
    pointer-events: none;
    transition: opacity 0.5s ease-in-out, transform 0.5s ease;
    transform: scale(0.98);

    /* Style de la carte */
    background-size: cover;
    background-position: center;
    display: flex;
    align-items: center;
    padding: 60px;
  }

  #MilauraBenefits-{{ section.id }} .benefit-card.is-active {
    opacity: 1;
    z-index: 1;
    pointer-events: auto;
    transform: scale(1);
  }

  /* Overlay image */
  #MilauraBenefits-{{ section.id }} .benefit-card::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(to right, rgba(255,255,255,0.9) 0%, rgba(255,255,255,0.4) 60%, rgba(255,255,255,0) 100%);
    z-index: 1;
  }

  /* --- BOITE TEXTE FLOTTANTE --- */
  #MilauraBenefits-{{ section.id }} .benefit-info-box {
    position: relative;
    z-index: 2; /* Au-dessus de l'overlay */
    max-width: 480px;
    background: rgba(255, 255, 255, 0.85);
    backdrop-filter: blur(10px);
    padding: 30px;
    border-radius: 20px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.05);
  }

  #MilauraBenefits-{{ section.id }} .benefit-info-title {
    font-family: var(--milaura-font-heading);
    font-size: 2.2rem;
    color: var(--milaura-text);
    margin-bottom: 10px;
    line-height: 1.2;
  }

  #MilauraBenefits-{{ section.id }} .benefit-info-subtitle {
    text-transform: uppercase;
    letter-spacing: 2px;
    font-size: 0.8rem;
    color: var(--milaura-gold);
    font-weight: 700;
    margin-bottom: 20px;
  }

  /* Produit Mini */
  #MilauraBenefits-{{ section.id }} .benefit-product-mini {
    display: flex;
    align-items: center;
    gap: 15px;
    margin-top: 25px;
    padding-top: 20px;
    border-top: 1px solid rgba(0,0,0,0.1);
  }

  #MilauraBenefits-{{ section.id }} .benefit-product-thumb {
    width: 70px; height: 70px;
    border-radius: 12px;
    object-fit: cover;
  }

  /* --- MOBILE --- */
  @media screen and (max-width: 990px) {
    #MilauraBenefits-{{ section.id }} .benefits-layout {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    #MilauraBenefits-{{ section.id }} .benefit-card {
        padding: 30px 20px;
        align-items: flex-end; /* Texte en bas */
        min-height: 500px;
    }

    /* Overlay plus sombre sur mobile pour lire le texte en bas */
    #MilauraBenefits-{{ section.id }} .benefit-card::before {
        background: linear-gradient(to top, rgba(255,255,255,0.95) 0%, rgba(255,255,255,0.7) 50%, rgba(0,0,0,0) 100%);
    }

    #MilauraBenefits-{{ section.id }} .benefit-info-box {
        width: 100%;
        padding: 20px;
    }
  }
{% endstyle %}

<div id="MilauraBenefits-{{ section.id }}">
  <div class="benefits-dashboard">
    {% if section.settings.title != blank %}
      <div class="benefits-header">
        <h2 class="milaura-heading">{{ section.settings.title }}</h2>
        {% if section.settings.subtitle != blank %}
          <div class="benefits-subtitle milaura-text">{{ section.settings.subtitle }}</div>
        {% endif %}
      </div>
    {% endif %}

    <div class="benefits-layout">
      <nav class="benefits-nav" role="tablist">
        {%- for block in section.blocks -%}
          <button
            type="button"
            id="benefit-btn-{{ block.id }}"
            class="benefit-btn {% if forloop.first %}is-active{% endif %}"
            data-target="benefit-{{ block.id }}"
            role="tab"
            aria-selected="{% if forloop.first %}true{% else %}false{% endif %}"
            aria-controls="benefit-{{ block.id }}"
            {{ block.shopify_attributes }}
          >
            <div class="benefit-btn-content">
              <span class="benefit-btn-icon">{{ block.settings.icon }}</span>
              <div>
                <span class="benefit-btn-name">{{ block.settings.emotion }}</span>
                <span class="benefit-btn-tagline">{{ block.settings.tagline }}</span>
              </div>
            </div>
          </button>
        {%- endfor -%}
      </nav>

      <div class="benefits-content">
        {%- for block in section.blocks -%}
          <div
            id="benefit-{{ block.id }}"
            class="benefit-card {% if forloop.first %}is-active{% endif %}"
            role="tabpanel"
            aria-labelledby="benefit-btn-{{ block.id }}"
            style="background-image: url('{{ block.settings.stone_image | image_url: width: 1400 }}');"
          >
            <div class="benefit-info-box">
              <div class="benefit-info-subtitle">{{ block.settings.stone_subtitle }}</div>
              <h3 class="benefit-info-title">{{ block.settings.stone_name }}</h3>
              <div class="benefit-info-desc milaura-text">{{ block.settings.description }}</div>

              {%- if block.settings.product != blank -%}
                {% assign prod = block.settings.product %}
                <div class="benefit-product-mini">
                  {% if prod.featured_image %}
                    {{ prod.featured_image | image_url: width: 140 | image_tag: class: 'benefit-product-thumb' }}
                  {% endif %}
                  <div>
                    <div style="font-weight:700; margin-bottom:5px;">{{ prod.title }}</div>
                    <div style="color:var(--milaura-gold); font-weight:700;">{{ prod.price | money }}</div>
                  </div>
                  <a
                    href="{{ prod.url }}"
                    class="milaura-btn milaura-btn-primary"
                    style="padding: 12px 20px; font-size: 0.85rem; margin-left: auto;"
                  >
                    {{ block.settings.product_cta_label | default: 'Voir' }}
                  </a>
                </div>
              {%- endif -%}
            </div>
          </div>
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const container = document.querySelector('#MilauraBenefits-{{ section.id }}');
    if (!container) return;

    const btns = container.querySelectorAll('.benefit-btn');
    const cards = container.querySelectorAll('.benefit-card');

    btns.forEach((btn) => {
      btn.addEventListener('click', function () {
        // 1. Reset
        btns.forEach((b) => {
          b.classList.remove('is-active');
          b.setAttribute('aria-selected', 'false');
        });
        cards.forEach((c) => c.classList.remove('is-active'));

        // 2. Activate
        this.classList.add('is-active');
        this.setAttribute('aria-selected', 'true');

        const targetId = this.dataset.target;
        const targetCard = container.querySelector('#' + targetId);
        if (targetCard) {
          targetCard.classList.add('is-active');
        }
      });
    });
  });
</script>

