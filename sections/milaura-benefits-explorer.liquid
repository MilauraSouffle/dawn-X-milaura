<script>
  (function () {
    'use strict';

    var sectionId = '{{ section.id }}';
    var container = document.getElementById('MilauraBenefits-' + sectionId);
    if (!container) return;

    var btns = Array.prototype.slice.call(container.querySelectorAll('.benefit-btn'));
    var cards = Array.prototype.slice.call(container.querySelectorAll('.benefit-card'));
    var accordionContents = Array.prototype.slice.call(container.querySelectorAll('.benefit-accordion-content'));
    var accordionItems = Array.prototype.slice.call(container.querySelectorAll('.benefit-accordion-item'));

    if (btns.length === 0) return;

    var currentIndex = -1; // -1 = aucun ouvert sur mobile

    function isMobile() {
      return window.innerWidth <= 990;
    }

    function closeAllMobile() {
      btns.forEach(function (btn) {
        btn.classList.remove('is-active');
        btn.setAttribute('aria-expanded', 'false');
      });
      accordionContents.forEach(function (content) {
        content.classList.remove('is-open');
      });
      accordionItems.forEach(function (item) {
        item.classList.remove('is-expanded');
      });
      currentIndex = -1;
    }

    function activateTab(index) {
      if (index < 0 || index >= btns.length) return;

      currentIndex = index;

      // Mise √† jour des boutons
      btns.forEach(function (btn, i) {
        var isActive = i === index;
        btn.classList.toggle('is-active', isActive);
        btn.setAttribute('aria-selected', isActive ? 'true' : 'false');
        btn.setAttribute('aria-expanded', isActive ? 'true' : 'false');
      });

      // Desktop: mise √† jour des cartes + fond section
      cards.forEach(function (card, i) {
        card.classList.toggle('is-active', i === index);
      });

      if (!isMobile()) {
        var bgUrl = cards[index] && cards[index].getAttribute('data-bg-image');
        if (bgUrl) {
          container.style.backgroundImage = "url('" + bgUrl + "')";
        }
      }

      // Mobile: accord√©on + cadre dor√©
      if (isMobile()) {
        accordionContents.forEach(function (content, i) {
          content.classList.toggle('is-open', i === index);
        });
        accordionItems.forEach(function (item, i) {
          item.classList.toggle('is-expanded', i === index);
        });
      }
    }

    // √âv√©nements clic
    btns.forEach(function (btn, i) {
      btn.addEventListener('click', function (e) {
        e.preventDefault();

        // Sur mobile, si on clique sur l'actif, on le ferme
        if (isMobile() && i === currentIndex && accordionContents[i].classList.contains('is-open')) {
          closeAllMobile();
          return;
        }

        activateTab(i);
      });
    });

    // Navigation clavier
    container.addEventListener('keydown', function (e) {
      if (!e.target.classList.contains('benefit-btn')) return;

      var newIndex = currentIndex;

      switch (e.key) {
        case 'ArrowDown':
        case 'ArrowRight':
          e.preventDefault();
          newIndex = (currentIndex + 1) % btns.length;
          break;
        case 'ArrowUp':
        case 'ArrowLeft':
          e.preventDefault();
          newIndex = (currentIndex - 1 + btns.length) % btns.length;
          break;
        case 'Home':
          e.preventDefault();
          newIndex = 0;
          break;
        case 'End':
          e.preventDefault();
          newIndex = btns.length - 1;
          break;
        default:
          return;
      }

      if (newIndex !== currentIndex) {
        activateTab(newIndex);
        btns[newIndex].focus();
      }
    });

    // Initialisation: Desktop ouvre le premier, Mobile tout ferm√©
    function initializeState() {
      if (!isMobile()) {
        activateTab(0);
      } else {
        closeAllMobile();
        container.style.backgroundImage = '';
      }
    }

    initializeState();

    // R√©initialiser au changement de taille
    var resizeTimeout;
    window.addEventListener('resize', function () {
      clearTimeout(resizeTimeout);
      resizeTimeout = setTimeout(initializeState, 150);
    });
  })();
</script>

