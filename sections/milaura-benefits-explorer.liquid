      height: 8px;
      border-radius: 50%;
      background: rgba(192, 160, 98, 0.3);
      transition: all 0.3s ease;
    }

    #MilauraBenefits-{{ section.id }} .benefit-dot[aria-selected="true"]::before,
    #MilauraBenefits-{{ section.id }} .benefit-dot.is-active::before {
      background: var(--milaura-gold);
      width: 24px;
      border-radius: 10px;
    }

    #MilauraBenefits-{{ section.id }} .benefit-dot:focus-visible {
      outline: 2px solid var(--milaura-gold);
      outline-offset: 2px;
    }

    /* --- CONTENU --- */
    #MilauraBenefits-{{ section.id }} .benefits-content {
      display: block;
      min-height: auto;
      padding: 0 20px;
      background: transparent;
      box-shadow: none;
      overflow: visible;
      scroll-margin-top: 20px;
    }

    #MilauraBenefits-{{ section.id }} .benefit-card {
      display: none;
      padding: 0;
      background: none !important;
    }

    #MilauraBenefits-{{ section.id }} .benefit-card.is-active {
      display: block;
      opacity: 1;
      transform: none;
    }

    #MilauraBenefits-{{ section.id }} .benefit-card::before {
      display: none;
    }

    #MilauraBenefits-{{ section.id }} .benefit-info-box {
      width: 100%;
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(20px);
      -webkit-backdrop-filter: blur(20px);
      border: 2px solid rgba(192, 160, 98, 0.2);
      box-shadow: 0 10px 30px rgba(192, 160, 98, 0.1);
      transition: box-shadow 0.2s ease, border-color 0.2s ease, transform 0.2s ease;
      will-change: box-shadow, border-color, transform;
    }

    /* Highlight mobile - Plus visible */
    #MilauraBenefits-{{ section.id }} .benefit-info-box.is-highlighted {
      box-shadow: 0 12px 35px rgba(192, 160, 98, 0.45), 0 0 0 3px var(--milaura-gold);
      border-color: var(--milaura-gold);
      transform: scale(1.015);
    }

    /* Application compl√®te du design system sur mobile avec sp√©cificit√© maximale */
    #MilauraBenefits-{{ section.id }} a.benefit-product-cta.milaura-cta.milaura-cta--small {
      width: 100%;
      text-align: center;
      margin-top: 15px;
      margin-left: 0;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      min-height: 48px;
