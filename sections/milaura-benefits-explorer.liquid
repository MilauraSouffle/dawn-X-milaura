{% style %}
  /* ============================================
     MILAURA BENEFITS EXPLORER - V10 (HYBRID)
     Desktop: Navigation classique + Cartes
     Mobile: Accord√©on optimis√© conversion
     ============================================ */

  #MilauraBenefits-{{ section.id }} {
    width: 100%;
    padding: 1px 0 var(--milaura-spacing-md) 0;
    background: transparent;
    margin-top: 4px;
    margin-bottom: var(--milaura-spacing-sm);
    transition: background-image 0.5s ease-in-out;
    background-size: cover;
    background-position: center;
    position: relative;
  }

  /* Voile blanc sur le fond produit (desktop) */
  #MilauraBenefits-{{ section.id }}::after {
    content: '';
    position: absolute;
    inset: 0;
    background: rgba(255, 255, 255, 0.7);
    z-index: 1;
    pointer-events: none;
  }

  /* --- CONTENEUR GLOBAL (LA CARTE) --- */
  #MilauraBenefits-{{ section.id }} .benefits-dashboard {
    overflow: hidden;
    position: relative;
    z-index: 2;
    border: 1px solid rgba(192, 160, 98, 0.4);
    box-shadow: 0 10px 40px rgba(192, 160, 98, 0.15);
    border-radius: 30px;
    background: rgba(255, 255, 255, 0.85);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    margin: 0 auto;
    max-width: 1400px;
    width: 92%;
    padding: var(--milaura-spacing-md);
  }

  #MilauraBenefits-{{ section.id }} .benefits-header {
    text-align: center;
    margin-bottom: 40px;
  }

  #MilauraBenefits-{{ section.id }} .benefits-header .milaura-heading {
    font-family: 'Dancing Script', cursive;
    text-transform: none;
    margin-bottom: 10px;
  }

  #MilauraBenefits-{{ section.id }} .benefits-subtitle {
    color: {{ section.settings.subtitle_color | default: '#666666' }};
    font-size: {{ section.settings.subtitle_size | default: 1.1 }}rem;
  }

  /* ============================================
     DESKTOP LAYOUT (> 990px) - STYLE CLASSIQUE
     ============================================ */
  #MilauraBenefits-{{ section.id }} .benefits-layout {
    display: grid;
    grid-template-columns: 350px 1fr;
    gap: 40px;
    align-items: start;
  }

  /* --- NAVIGATION GAUCHE (DESKTOP) --- */
  #MilauraBenefits-{{ section.id }} .benefits-nav {
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  /* Cacher le contenu accord√©on sur desktop */
  #MilauraBenefits-{{ section.id }} .benefit-accordion-content {
    display: none;
  }

  #MilauraBenefits-{{ section.id }} .benefit-btn {
    border-radius: 20px;
    padding: 20px;
    text-align: left;
    cursor: pointer;
    transition: all 0.35s cubic-bezier(0.4, 0, 0.2, 1);
    width: 100%;
    position: relative;
    min-height: 48px;
    -webkit-tap-highlight-color: transparent;
    overflow: hidden;

    /* Style cadre bijou */
    border: 2px solid transparent;
    background:
      linear-gradient(rgba(255, 255, 255, 0.95), rgba(255, 255, 255, 0.95)) padding-box,
      linear-gradient(135deg,
        rgba(255, 240, 200, 0.92) 0%,
        rgba(214, 176, 96, 0.92) 18%,
        rgba(255, 232, 172, 0.92) 42%,
        rgba(176, 130, 48, 0.92) 70%,
        rgba(255, 240, 200, 0.92) 100%) border-box;
    box-shadow:
      0 10px 28px rgba(0,0,0,0.06),
      0 0 0 1px rgba(255,255,255,0.65) inset;
  }

  /* Effet shimmer au hover */
  #MilauraBenefits-{{ section.id }} .benefit-btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent 0%,
      rgba(255, 240, 200, 0.4) 50%,
      transparent 100%
    );
    transition: left 0.6s ease;
    pointer-events: none;
  }

  #MilauraBenefits-{{ section.id }} .benefit-btn:hover::before {
    left: 100%;
  }

  #MilauraBenefits-{{ section.id }} .benefit-btn:hover {
    transform: translateY(-3px);
    box-shadow:
      0 14px 40px rgba(0,0,0,0.10),
      0 0 0 1px rgba(255,255,255,0.75) inset,
      0 0 24px rgba(214, 176, 96, 0.28);
  }

  #MilauraBenefits-{{ section.id }} .benefit-btn:focus-visible {
    outline: 2px solid var(--milaura-gold);
    outline-offset: 2px;
  }

  #MilauraBenefits-{{ section.id }} .benefit-btn.is-active {
    background:
      linear-gradient(rgba(255, 248, 225, 0.95), rgba(255, 248, 225, 0.95)) padding-box,
      linear-gradient(135deg,
        rgba(255, 240, 200, 1) 0%,
        rgba(214, 176, 96, 1) 18%,
        rgba(255, 232, 172, 1) 42%,
        rgba(176, 130, 48, 1) 70%,
        rgba(255, 240, 200, 1) 100%) border-box;
    box-shadow:
      0 16px 46px rgba(0,0,0,0.12),
      0 0 0 1px rgba(255,255,255,0.55) inset,
      0 0 34px rgba(214, 176, 96, 0.28);
    transform: translateY(-2px);
  }

  #MilauraBenefits-{{ section.id }} .benefit-btn.is-active::before {
    display: none;
  }

  #MilauraBenefits-{{ section.id }} .benefit-btn-content {
    display: flex;
    align-items: center;
    gap: 15px;
  }

  #MilauraBenefits-{{ section.id }} .benefit-btn-icon {
    font-size: 1.8rem;
    flex-shrink: 0;
  }

  #MilauraBenefits-{{ section.id }} .benefit-btn-text {
    flex: 1;
    min-width: 0;
  }

  #MilauraBenefits-{{ section.id }} .benefit-btn-name {
    font-family: var(--milaura-font-heading);
    font-weight: 700;
    color: {{ section.settings.btn_name_color }};
    font-size: 1.5rem;
    display: block;
  }

  #MilauraBenefits-{{ section.id }} .benefit-btn-tagline {
    font-family: var(--milaura-font-body);
    font-size: 1.1rem;
    color: var(--milaura-text-light);
    display: block;
    margin-top: 6px;
  }

  /* Prix cach√© sur desktop */
  #MilauraBenefits-{{ section.id }} .benefit-btn-price {
    display: none;
  }

  /* Chevron cach√© sur desktop */
  #MilauraBenefits-{{ section.id }} .benefit-btn-chevron {
    display: none;
  }

  /* --- ZONE DROITE (DESKTOP) --- */
  #MilauraBenefits-{{ section.id }} .benefits-content {
    display: grid;
    grid-template-areas: "stack";
    position: relative;
  }

  #MilauraBenefits-{{ section.id }} .benefit-card {
    grid-area: stack;
    opacity: 0;
    z-index: 0;
    pointer-events: none;
    transition: opacity 0.4s ease-in-out;
    display: flex;
    align-items: center;
    padding: var(--milaura-spacing-md);
  }

  #MilauraBenefits-{{ section.id }} .benefit-card.is-active {
    opacity: 1;
    z-index: 1;
    pointer-events: auto;
  }

  /* --- BOITE TEXTE DESKTOP --- */
  #MilauraBenefits-{{ section.id }} .benefit-info-box {
    position: relative;
    z-index: 2;
    max-width: 480px;
    background: rgba(255, 255, 255, 0.65);
    backdrop-filter: blur(15px);
    -webkit-backdrop-filter: blur(15px);
    padding: var(--milaura-spacing-md);
    border-radius: 20px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    border: 2px solid transparent;
    transition: box-shadow 0.2s ease, border-color 0.2s ease, transform 0.2s ease;
  }

  /* Badge best-seller */
  #MilauraBenefits-{{ section.id }} .benefit-badge {
    display: inline-block;
    background: linear-gradient(135deg, var(--milaura-gold) 0%, #D4B678 100%);
    color: #fff;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    padding: 5px 12px;
    border-radius: 20px;
    margin-bottom: 12px;
  }

  #MilauraBenefits-{{ section.id }} .benefit-info-subtitle {
    text-transform: uppercase;
    letter-spacing: 2px;
    font-size: 1.1rem;
    color: {{ section.settings.info_subtitle_color }};
    font-weight: 700;
    margin-bottom: 10px;
  }

  #MilauraBenefits-{{ section.id }} .benefit-info-title {
    font-family: var(--milaura-font-heading);
    font-size: 2.2rem;
    color: {{ section.settings.info_title_color }};
    margin-bottom: 15px;
    line-height: 1.2;
  }

  #MilauraBenefits-{{ section.id }} .benefit-info-desc {
    font-family: var(--milaura-font-body);
    color: var(--milaura-text);
    font-size: 1.1rem;
    line-height: 1.7;
  }

  /* --- PRODUIT MINI DESKTOP --- */
  #MilauraBenefits-{{ section.id }} .benefit-product-mini {
    display: flex;
    align-items: center;
    gap: 15px;
    margin-top: 25px;
    padding-top: 20px;
    border-top: 1px solid rgba(0,0,0,0.1);
    flex-wrap: wrap;
  }

  #MilauraBenefits-{{ section.id }} .benefit-product-thumb {
    width: 70px;
    height: 70px;
    border-radius: 12px;
    object-fit: cover;
    flex-shrink: 0;
  }

  #MilauraBenefits-{{ section.id }} .benefit-product-info {
    flex: 1;
    min-width: 0;
  }

  #MilauraBenefits-{{ section.id }} .benefit-product-title {
    font-weight: 700;
    margin-bottom: 5px;
    color: var(--milaura-text);
    font-size: 1.3rem;
  }

  #MilauraBenefits-{{ section.id }} .benefit-product-price {
    color: var(--milaura-gold);
    font-weight: 700;
    font-size: 1.4rem;
  }

  /* CTA Desktop */
  #MilauraBenefits-{{ section.id }} .benefit-product-cta {
    flex-shrink: 0;
    white-space: nowrap;
    margin-left: auto;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-height: 48px;
    min-width: 160px;
    padding: 11px 24px;
    font-size: 1.05rem;
    border-radius: 999px;
    border: 1px solid rgba(214, 176, 96, 0.55);
    background: linear-gradient(
      135deg,
      rgba(255, 240, 200, 0.92) 0%,
      rgba(214, 176, 96, 0.92) 18%,
      rgba(255, 232, 172, 0.92) 42%,
      rgba(176, 130, 48, 0.92) 70%,
      rgba(255, 240, 200, 0.92) 100%
    );
    color: #000;
    text-decoration: none;
    font-weight: 700;
    letter-spacing: 0.3px;
    box-shadow:
      0 12px 32px rgba(130, 90, 30, 0.15),
      0 0 0 1px rgba(255, 255, 255, 0.25) inset;
    transition: transform 180ms ease, box-shadow 220ms ease;
    cursor: pointer;
  }

  #MilauraBenefits-{{ section.id }} .benefit-product-cta:hover {
    transform: translateY(-2px);
    box-shadow:
      0 16px 40px rgba(130, 90, 30, 0.20),
      0 0 0 1px rgba(255, 255, 255, 0.30) inset,
      0 0 24px rgba(214, 176, 96, 0.28);
  }

  /* Image mobile cach√©e sur desktop */
  #MilauraBenefits-{{ section.id }} .benefit-mobile-image {
    display: none;
  }

  /* Produit mobile cach√© sur desktop */
  #MilauraBenefits-{{ section.id }} .benefit-product-mobile {
    display: none;
  }

  /* ============================================
     MOBILE / TABLETTE (‚â§ 990px) - ACCORD√âON
     ============================================ */
  @media screen and (max-width: 990px) {
    #MilauraBenefits-{{ section.id }} {
      padding: var(--milaura-spacing-sm) 0 var(--milaura-spacing-xs) 0;
      margin-top: var(--milaura-spacing-sm);
      margin-bottom: var(--milaura-spacing-xs);
      background-image: none !important;
    }

    #MilauraBenefits-{{ section.id }}::after {
      display: none;
    }

    #MilauraBenefits-{{ section.id }} .benefits-dashboard {
      width: 94%;
      padding: 16px;
      border-radius: 24px;
    }

    #MilauraBenefits-{{ section.id }} .benefits-header {
      margin-bottom: 20px;
      padding: 0 4px;
    }

    #MilauraBenefits-{{ section.id }} .benefits-layout {
      display: flex;
      flex-direction: column;
      gap: 0;
    }

    /* Cacher la zone desktop */
    #MilauraBenefits-{{ section.id }} .benefits-content {
      display: none !important;
    }

    /* Navigation devient accord√©on */
    #MilauraBenefits-{{ section.id }} .benefits-nav {
      display: flex;
      flex-direction: column;
      gap: 0;
    }

    /* Wrapper accord√©on - Cadre dor√© */
    #MilauraBenefits-{{ section.id }} .benefit-accordion-item {
      margin-bottom: 12px;
      border-radius: 16px;
      border: 2px solid rgba(192, 160, 98, 0.35);
      background: rgba(255, 255, 255, 0.7);
      overflow: hidden;
      transition: all 0.3s ease;
      box-shadow: 0 4px 15px rgba(192, 160, 98, 0.1);
    }

    #MilauraBenefits-{{ section.id }} .benefit-accordion-item:last-child {
      margin-bottom: 0;
    }

    #MilauraBenefits-{{ section.id }} .benefit-accordion-item:hover {
      border-color: rgba(192, 160, 98, 0.55);
      box-shadow: 0 6px 20px rgba(192, 160, 98, 0.18);
    }

    #MilauraBenefits-{{ section.id }} .benefit-accordion-item.is-expanded {
      border-color: var(--milaura-gold);
      box-shadow: 0 8px 30px rgba(192, 160, 98, 0.25);
    }

    #MilauraBenefits-{{ section.id }} .benefit-btn {
      background: transparent;
      border: none;
      border-radius: 0;
      padding: 16px 14px;
      margin: 0;
      transform: none !important;
      box-shadow: none;
    }

    #MilauraBenefits-{{ section.id }} .benefit-btn::before {
      display: none;
    }

    #MilauraBenefits-{{ section.id }} .benefit-btn:hover {
      background: rgba(192, 160, 98, 0.05);
      transform: none !important;
      box-shadow: none;
      border: none;
    }

    #MilauraBenefits-{{ section.id }} .benefit-btn.is-active {
      background: rgba(192, 160, 98, 0.08);
      border: none;
      box-shadow: none;
      transform: none !important;
    }

    #MilauraBenefits-{{ section.id }} .benefit-btn-icon {
      font-size: 1.6rem;
      width: 44px;
      height: 44px;
      display: flex;
      align-items: center;
      justify-content: center;
      background: linear-gradient(135deg, rgba(192, 160, 98, 0.1) 0%, rgba(192, 160, 98, 0.05) 100%);
      border-radius: 12px;
    }

    #MilauraBenefits-{{ section.id }} .benefit-btn-name {
      font-size: 1.3rem;
    }

    #MilauraBenefits-{{ section.id }} .benefit-btn-tagline {
      font-size: 0.95rem;
      margin-top: 4px;
    }

    /* Prix visible sur mobile */
    #MilauraBenefits-{{ section.id }} .benefit-btn-price {
      display: block;
      font-family: var(--milaura-font-body);
      font-size: 0.85rem;
      color: var(--milaura-gold);
      font-weight: 700;
      margin-top: 4px;
    }

    /* Chevron accord√©on visible + animation */
    #MilauraBenefits-{{ section.id }} .benefit-btn-chevron {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 36px;
      height: 36px;
      background: rgba(192, 160, 98, 0.15);
      border: 2px solid rgba(192, 160, 98, 0.3);
      border-radius: 50%;
      flex-shrink: 0;
      margin-left: auto;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      animation: chevronPulse 2.5s ease-in-out infinite;
    }

    @keyframes chevronPulse {
      0%, 100% {
        transform: translateY(0);
        box-shadow: 0 2px 8px rgba(192, 160, 98, 0.2);
      }
      50% {
        transform: translateY(3px);
        box-shadow: 0 4px 12px rgba(192, 160, 98, 0.35);
      }
    }

    #MilauraBenefits-{{ section.id }} .benefit-btn-chevron svg {
      width: 18px;
      height: 18px;
      color: var(--milaura-gold);
      transition: transform 0.35s cubic-bezier(0.4, 0, 0.2, 1);
    }

    #MilauraBenefits-{{ section.id }} .benefit-btn:hover .benefit-btn-chevron {
      background: rgba(192, 160, 98, 0.25);
      border-color: rgba(192, 160, 98, 0.5);
      animation: none;
      transform: translateY(2px);
    }

    #MilauraBenefits-{{ section.id }} .benefit-btn.is-active .benefit-btn-chevron {
      background: var(--milaura-gold);
      border-color: var(--milaura-gold);
      animation: none;
      box-shadow: 0 4px 15px rgba(192, 160, 98, 0.4);
    }

    #MilauraBenefits-{{ section.id }} .benefit-btn.is-active .benefit-btn-chevron svg {
      color: #fff;
      transform: rotate(180deg);
    }

    /* Contenu accord√©on visible sur mobile */
    #MilauraBenefits-{{ section.id }} .benefit-accordion-content {
      display: block;
      max-height: 0;
      overflow: hidden;
      transition: max-height 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }

    #MilauraBenefits-{{ section.id }} .benefit-accordion-content.is-open {
      max-height: 800px;
    }

    #MilauraBenefits-{{ section.id }} .benefit-accordion-inner {
      padding: 0 8px 20px 8px;
    }

    /* Image en haut sur mobile */
    #MilauraBenefits-{{ section.id }} .benefit-mobile-image {
      display: block;
      width: 100%;
      height: 180px;
      object-fit: cover;
      border-radius: 16px;
      margin-bottom: 16px;
      border: 2px solid rgba(192, 160, 98, 0.2);
    }

    #MilauraBenefits-{{ section.id }} .benefit-info-box {
      background: rgba(255, 255, 255, 0.95);
      padding: 20px;
      border-radius: 20px;
      max-width: 100%;
      border: 1px solid rgba(192, 160, 98, 0.15);
    }

    #MilauraBenefits-{{ section.id }} .benefit-info-title {
      font-size: 2rem;
      margin-bottom: 12px;
    }

    #MilauraBenefits-{{ section.id }} .benefit-info-subtitle {
      font-size: 0.95rem;
      margin-bottom: 6px;
    }

    #MilauraBenefits-{{ section.id }} .benefit-info-desc {
      font-size: 1.1rem;
      line-height: 1.6;
      margin-bottom: 20px;
    }

    /* Produit mobile visible */
    #MilauraBenefits-{{ section.id }} .benefit-product-mobile {
      display: block;
      background: rgba(255, 255, 255, 0.6);
      border-radius: 16px;
      padding: 14px;
      border: 1px solid rgba(192, 160, 98, 0.15);
    }

    #MilauraBenefits-{{ section.id }} .benefit-product-mobile .benefit-product-row {
      display: flex;
      align-items: center;
      gap: 14px;
      margin-bottom: 14px;
    }

    #MilauraBenefits-{{ section.id }} .benefit-product-mobile .benefit-product-thumb {
      width: 70px;
      height: 70px;
      border-radius: 14px;
      border: 2px solid rgba(192, 160, 98, 0.2);
    }

    #MilauraBenefits-{{ section.id }} .benefit-product-mobile .benefit-product-title {
      font-family: var(--milaura-font-heading);
      font-size: 1.05rem;
      margin-bottom: 6px;
    }

    #MilauraBenefits-{{ section.id }} .benefit-product-mobile .benefit-product-price {
      display: inline-block;
      background: linear-gradient(135deg, rgba(192, 160, 98, 0.15) 0%, rgba(192, 160, 98, 0.08) 100%);
      color: var(--milaura-gold-dark, #8F723A);
      font-weight: 800;
      font-size: 1.15rem;
      padding: 5px 12px;
      border-radius: 12px;
      border: 1px solid rgba(192, 160, 98, 0.25);
    }

    /* CTA Mobile - Gros et visible */
    #MilauraBenefits-{{ section.id }} .benefit-cta-mobile {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 10px;
      width: 100%;
      min-height: 52px;
      padding: 14px 24px;
      font-size: 1.1rem;
      font-weight: 700;
      letter-spacing: 0.5px;
      text-decoration: none;
      color: #000;
      background: linear-gradient(
        135deg,
        rgba(255, 240, 200, 0.95) 0%,
        rgba(214, 176, 96, 0.95) 20%,
        rgba(255, 232, 172, 0.95) 45%,
        rgba(176, 130, 48, 0.95) 75%,
        rgba(255, 240, 200, 0.95) 100%
      );
      border: 2px solid rgba(214, 176, 96, 0.6);
      border-radius: 14px;
      box-shadow:
        0 8px 25px rgba(192, 160, 98, 0.3),
        inset 0 1px 0 rgba(255, 255, 255, 0.5);
      cursor: pointer;
      animation: ctaPulse 3s ease-in-out infinite;
    }

    @keyframes ctaPulse {
      0%, 100% { box-shadow: 0 8px 25px rgba(192, 160, 98, 0.3), inset 0 1px 0 rgba(255, 255, 255, 0.5); }
      50% { box-shadow: 0 8px 35px rgba(192, 160, 98, 0.5), inset 0 1px 0 rgba(255, 255, 255, 0.5), 0 0 20px rgba(192, 160, 98, 0.3); }
    }

    #MilauraBenefits-{{ section.id }} .benefit-cta-mobile:hover {
      animation: none;
    }

    #MilauraBenefits-{{ section.id }} .benefit-cta-icon {
      font-size: 1.2rem;
    }

    /* Cacher produit desktop mini sur mobile */
    #MilauraBenefits-{{ section.id }} .benefit-product-mini {
      display: none;
    }
  }

  /* Tablette : image responsive via aspect-ratio */
  @media screen and (min-width: 769px) and (max-width: 990px) {
    #MilauraBenefits-{{ section.id }} .benefit-mobile-image {
      height: auto;
      aspect-ratio: 16 / 9;
    }
  }

  /* Tr√®s petit mobile */
  @media screen and (max-width: 480px) {
    #MilauraBenefits-{{ section.id }} .benefits-dashboard {
      width: 96%;
      padding: 12px;
      border-radius: 20px;
    }

    #MilauraBenefits-{{ section.id }} .benefit-btn {
      padding: 14px 4px;
    }

    #MilauraBenefits-{{ section.id }} .benefit-btn-icon {
      width: 40px;
      height: 40px;
      font-size: 1.4rem;
    }

    #MilauraBenefits-{{ section.id }} .benefit-btn-name {
      font-size: 1.2rem;
    }

    #MilauraBenefits-{{ section.id }} .benefit-mobile-image {
      height: 150px;
    }

    #MilauraBenefits-{{ section.id }} .benefit-info-title {
      font-size: 1.8rem;
    }

    #MilauraBenefits-{{ section.id }} .benefit-product-mobile .benefit-product-row {
      flex-wrap: wrap;
    }

    #MilauraBenefits-{{ section.id }} .benefit-product-mobile .benefit-product-thumb {
      width: 60px;
      height: 60px;
    }
  }

