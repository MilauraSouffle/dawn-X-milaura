{% style %}
  /* ============================================
     MILAURA BENEFITS EXPLORER - V8 (MOBILE UX ENHANCED)
     ============================================ */

  #MilauraBenefits-{{ section.id }} {
    width: 100%;
    padding: var(--milaura-spacing-lg) 0;
    background: transparent;
    margin-top: var(--milaura-spacing-lg);
    margin-bottom: var(--milaura-spacing-lg);
    transition: background-image 0.5s ease-in-out;
    background-size: cover;
    background-position: center;
    position: relative;
  }

  /* --- CONTENEUR GLOBAL (LA CARTE) --- */
  #MilauraBenefits-{{ section.id }} .benefits-dashboard {
    overflow: hidden;
    position: relative;
    z-index: 2;
    border: 1px solid rgba(192, 160, 98, 0.4);
    box-shadow: 0 10px 40px rgba(192, 160, 98, 0.15);
    border-radius: 30px;
    background: rgba(255, 255, 255, 0.85);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    margin: 0 auto;
    max-width: 1400px;
    width: 92%;
    padding: var(--milaura-spacing-md);
  }

  #MilauraBenefits-{{ section.id }} .benefits-header {
    text-align: center;
    margin-bottom: 40px;
  }

  /* --- LAYOUT GRID DESKTOP --- */
  #MilauraBenefits-{{ section.id }} .benefits-layout {
    display: grid;
    grid-template-columns: 350px 1fr;
    gap: 40px;
    align-items: start;
  }

  /* --- NAVIGATION GAUCHE (DESKTOP) --- */
  #MilauraBenefits-{{ section.id }} .benefits-nav {
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  #MilauraBenefits-{{ section.id }} .benefit-btn {
    background: rgba(255, 255, 255, 0.5);
    border: 2px solid transparent;
    border-radius: 20px;
    padding: 20px;
    text-align: left;
    cursor: pointer;
    transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
    width: 100%;
    position: relative;
    min-height: 48px;
    -webkit-tap-highlight-color: transparent;
  }

  #MilauraBenefits-{{ section.id }} .benefit-btn:hover {
    background: rgba(255, 255, 255, 0.9);
    transform: translateX(5px);
  }

  #MilauraBenefits-{{ section.id }} .benefit-btn:focus-visible {
    outline: 2px solid var(--milaura-gold);
    outline-offset: 2px;
  }

  #MilauraBenefits-{{ section.id }} .benefit-btn[aria-pressed="true"],
  #MilauraBenefits-{{ section.id }} .benefit-btn.is-active {
    background: #ffffff;
    border-color: var(--milaura-gold);
    box-shadow: 0 10px 25px rgba(192, 160, 98, 0.2);
    transform: scale(1.02);
  }

  #MilauraBenefits-{{ section.id }} .benefit-btn-content {
    display: flex;
    align-items: center;
    gap: 15px;
  }

  #MilauraBenefits-{{ section.id }} .benefit-btn-icon {
    font-size: 1.8rem;
    flex-shrink: 0;
  }

  #MilauraBenefits-{{ section.id }} .benefit-btn-name {
    font-family: var(--milaura-font-heading);
    font-weight: 700;
    color: {{ section.settings.btn_name_color }};
    font-size: 1.5rem;
    display: block;
  }

  #MilauraBenefits-{{ section.id }} .benefit-btn-tagline {
    font-family: var(--milaura-font-body);
    font-size: 1.1rem;
    color: var(--milaura-text-light);
    display: block;
    margin-top: 6px;
  }

  /* --- ZONE DROITE (DESKTOP) --- */
  #MilauraBenefits-{{ section.id }} .benefits-content {
    display: grid;
    grid-template-areas: "stack";
    border-radius: 25px;
    overflow: hidden;
    position: relative;
    min-height: 500px;
    box-shadow: inset 0 0 0 1px rgba(255,255,255,0.3);
  }

  #MilauraBenefits-{{ section.id }} .benefit-card {
    grid-area: stack;
    opacity: 0;
    z-index: 0;
    pointer-events: none;
    transition: opacity 0.5s ease-in-out, transform 0.5s ease;
    transform: scale(0.98);
    background-size: cover;
    background-position: center;
    display: flex;
    align-items: center;
    padding: var(--milaura-spacing-md);
  }

  #MilauraBenefits-{{ section.id }} .benefit-card.is-active {
    opacity: 1;
    z-index: 1;
    pointer-events: auto;
    transform: scale(1);
  }

  /* Overlay desktop */
  #MilauraBenefits-{{ section.id }} .benefit-card::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(to right, rgba(255,255,255,0.5) 0%, rgba(255,255,255,0.2) 60%, rgba(255,255,255,0) 100%);
    z-index: 1;
  }

  /* --- BOITE TEXTE --- */
  #MilauraBenefits-{{ section.id }} .benefit-info-box {
    position: relative;
    z-index: 2;
    max-width: 480px;
    background: rgba(255, 255, 255, 0.65);
    backdrop-filter: blur(15px);
    -webkit-backdrop-filter: blur(15px);
    padding: var(--milaura-spacing-md);
    border-radius: 20px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    border: 2px solid transparent;
    transition: box-shadow 0.2s ease, border-color 0.2s ease, transform 0.2s ease;
    will-change: box-shadow, border-color;
  }

  /* Highlight animation */
  #MilauraBenefits-{{ section.id }} .benefit-info-box.is-highlighted {
    box-shadow: 0 10px 30px rgba(192, 160, 98, 0.4), 0 0 0 3px var(--milaura-gold);
    border-color: var(--milaura-gold);
    transform: scale(1.01);
  }

  #MilauraBenefits-{{ section.id }} .benefit-info-title {
    font-family: var(--milaura-font-heading);
    font-size: 2.2rem;
    color: {{ section.settings.info_title_color }};
    margin-bottom: 10px;
    line-height: 1.2;
  }

  #MilauraBenefits-{{ section.id }} .benefit-info-subtitle {
    text-transform: uppercase;
    letter-spacing: 2px;
    font-size: 1.1rem;
    color: {{ section.settings.info_subtitle_color }};
    font-weight: 700;
    margin-bottom: 20px;
  }

  #MilauraBenefits-{{ section.id }} .benefit-info-desc {
    font-family: var(--milaura-font-body);
    color: var(--milaura-text);
    font-size: 1.1rem;
    line-height: 1.7;
  }

  /* --- PRODUIT MINI --- */
  #MilauraBenefits-{{ section.id }} .benefit-product-mini {
    display: flex;
    align-items: center;
    gap: 15px;
    margin-top: 25px;
    padding-top: 20px;
    border-top: 1px solid rgba(0,0,0,0.1);
    flex-wrap: wrap;
  }

  #MilauraBenefits-{{ section.id }} .benefit-product-info {
    flex: 1;
    min-width: 0;
  }

  #MilauraBenefits-{{ section.id }} .benefit-product-title {
    font-weight: 700;
    margin-bottom: 5px;
    color: var(--milaura-text);
    font-size: 1.3rem;
  }

  #MilauraBenefits-{{ section.id }} .benefit-product-price {
    color: var(--milaura-gold);
    font-weight: 700;
    font-size: 1.4rem;
  }

  /* NEUTRALISATION des styles globaux qui pourraient √©craser */
  #MilauraBenefits-{{ section.id }} a.benefit-product-cta.milaura-cta.milaura-cta--small {
    text-decoration: none !important;
    text-underline-offset: 0 !important;
    text-decoration-thickness: 0 !important;
    background-color: transparent !important;
    border: none !important;
    box-shadow: none !important;
    color: inherit !important;
    display: inline-flex !important;
  }

  /* Application compl√®te du design system avec sp√©cificit√© maximale */
