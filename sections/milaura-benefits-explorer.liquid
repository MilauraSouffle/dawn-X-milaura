{% style %}
  /* ============================================
     MILAURA BENEFITS EXPLORER - STYLES
     ============================================ */
  
  #MilauraBenefits-{{ section.id }} {
    width: 100%;
    padding: var(--milaura-spacing-xl) var(--milaura-spacing-sm);
    background: transparent;
  }

  /* --- CONTENEUR DASHBOARD --- */
  #MilauraBenefits-{{ section.id }} .benefits-dashboard {
    max-width: 1400px;
    margin: 0 auto;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(25px) saturate(180%);
    -webkit-backdrop-filter: blur(25px) saturate(180%);
    border: 1px solid rgba(192, 160, 98, 0.2);
    border-radius: var(--milaura-border-radius);
    box-shadow: var(--milaura-shadow-lg);
    padding: var(--milaura-spacing-lg);
    overflow: hidden;
  }

  /* --- EN-T√äTE SECTION --- */
  #MilauraBenefits-{{ section.id }} .benefits-header {
    text-align: center;
    margin-bottom: var(--milaura-spacing-lg);
  }

  #MilauraBenefits-{{ section.id }} .benefits-header h2 {
    margin-bottom: var(--milaura-spacing-xs);
  }

  #MilauraBenefits-{{ section.id }} .benefits-header .benefits-subtitle {
    margin-top: var(--milaura-spacing-xs);
  }

  /* --- LAYOUT 2 COLONNES (DESKTOP) --- */
  #MilauraBenefits-{{ section.id }} .benefits-layout {
    display: grid;
    grid-template-columns: 400px 1fr;
    gap: var(--milaura-spacing-md);
    align-items: start;
  }

  /* --- COLONNE GAUCHE : NAVIGATION --- */
  #MilauraBenefits-{{ section.id }} .benefits-nav {
    display: flex;
    flex-direction: column;
    gap: var(--milaura-spacing-xs);
  }

  #MilauraBenefits-{{ section.id }} .benefit-btn {
    background: rgba(255, 255, 255, 0.9);
    border: 2px solid transparent;
    border-radius: var(--milaura-border-radius-sm);
    padding: var(--milaura-spacing-sm);
    text-align: left;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
    box-shadow: var(--milaura-shadow-sm);
    position: relative;
    overflow: hidden;
  }

  #MilauraBenefits-{{ section.id }} .benefit-btn:hover {
    transform: translateX(5px);
    border-color: rgba(192, 160, 98, 0.3);
    box-shadow: var(--milaura-shadow-md);
  }

  #MilauraBenefits-{{ section.id }} .benefit-btn.is-active {
    background: linear-gradient(135deg, rgba(192, 160, 98, 0.15) 0%, rgba(192, 160, 98, 0.05) 100%);
    border-color: var(--milaura-gold);
    box-shadow: var(--milaura-shadow-md);
    transform: translateX(0);
  }

  #MilauraBenefits-{{ section.id }} .benefit-btn-content {
    display: flex;
    align-items: flex-start;
    gap: var(--milaura-spacing-xs);
  }

  #MilauraBenefits-{{ section.id }} .benefit-btn-icon {
    font-size: 1.8rem;
    line-height: 1;
    flex-shrink: 0;
  }

  #MilauraBenefits-{{ section.id }} .benefit-btn-text {
    flex: 1;
  }

  #MilauraBenefits-{{ section.id }} .benefit-btn-name {
    font-family: var(--milaura-font-heading);
    font-weight: 700;
    color: var(--milaura-text);
    font-size: 1.1rem;
    margin-bottom: 4px;
    display: block;
  }

  #MilauraBenefits-{{ section.id }} .benefit-btn.is-active .benefit-btn-name {
    color: var(--milaura-gold);
  }

  #MilauraBenefits-{{ section.id }} .benefit-btn-tagline {
    font-family: var(--milaura-font-body);
    font-size: 0.85rem;
    color: var(--milaura-text-light);
    line-height: 1.4;
  }

  /* --- COLONNE DROITE : CARTE DYNAMIQUE --- */
  #MilauraBenefits-{{ section.id }} .benefits-content {
    position: relative;
    min-height: 500px;
  }

  #MilauraBenefits-{{ section.id }} .benefit-card {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    opacity: 0;
    visibility: hidden;
    transform: translateY(20px);
    transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
    pointer-events: none;
  }

  #MilauraBenefits-{{ section.id }} .benefit-card.is-active {
    position: relative;
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
    pointer-events: auto;
  }

  #MilauraBenefits-{{ section.id }} .benefit-card-inner {
    background: #ffffff;
    border-radius: var(--milaura-border-radius);
    padding: var(--milaura-spacing-md);
    box-shadow: var(--milaura-shadow-md);
    border: 2px solid rgba(192, 160, 98, 0.1);
    display: grid;
    grid-template-columns: 300px 1fr;
    gap: var(--milaura-spacing-md);
    align-items: start;
  }

  #MilauraBenefits-{{ section.id }} .benefit-card-image-wrapper {
    position: relative;
    border-radius: var(--milaura-border-radius-sm);
    overflow: hidden;
    aspect-ratio: 1;
    background: var(--milaura-beige);
  }

  #MilauraBenefits-{{ section.id }} .benefit-card-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  #MilauraBenefits-{{ section.id }} .benefit-card-content {
    display: flex;
    flex-direction: column;
    gap: var(--milaura-spacing-sm);
  }

  #MilauraBenefits-{{ section.id }} .benefit-card-stone-name {
    margin-bottom: 0;
    font-size: 2rem;
  }

  #MilauraBenefits-{{ section.id }} .benefit-card-stone-subtitle {
    font-family: var(--milaura-font-body);
    color: var(--milaura-gold);
    font-size: 1rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-top: calc(var(--milaura-spacing-xs) * -1);
  }

  #MilauraBenefits-{{ section.id }} .benefit-card-description {
    color: var(--milaura-text);
    line-height: 1.7;
    margin-top: var(--milaura-spacing-xs);
  }

  #MilauraBenefits-{{ section.id }} .benefit-card-description p {
    margin-bottom: var(--milaura-spacing-xs);
  }

  #MilauraBenefits-{{ section.id }} .benefit-card-description p:last-child {
    margin-bottom: 0;
  }

  /* --- BLOC PRODUIT RECOMMAND√â --- */
  #MilauraBenefits-{{ section.id }} .benefit-product-recommended {
    margin-top: var(--milaura-spacing-md);
    padding-top: var(--milaura-spacing-md);
    border-top: 2px solid rgba(192, 160, 98, 0.2);
  }

  #MilauraBenefits-{{ section.id }} .benefit-product-title {
    font-family: var(--milaura-font-heading);
    font-size: 1.1rem;
    color: var(--milaura-text);
    margin-bottom: var(--milaura-spacing-xs);
  }

  #MilauraBenefits-{{ section.id }} .benefit-product-price {
    font-family: var(--milaura-font-heading);
    font-size: 1.5rem;
    color: var(--milaura-gold);
    font-weight: 700;
    margin-bottom: var(--milaura-spacing-sm);
  }

  /* --- RESPONSIVE : MOBILE --- */
  @media screen and (max-width: 990px) {
    #MilauraBenefits-{{ section.id }} {
      padding: var(--milaura-spacing-md) var(--milaura-spacing-xs);
    }

    #MilauraBenefits-{{ section.id }} .benefits-dashboard {
      padding: var(--milaura-spacing-sm);
    }

    #MilauraBenefits-{{ section.id }} .benefits-layout {
      grid-template-columns: 1fr;
      gap: var(--milaura-spacing-md);
    }

    #MilauraBenefits-{{ section.id }} .benefit-card-inner {
      grid-template-columns: 1fr;
    }

    #MilauraBenefits-{{ section.id }} .benefit-card-image-wrapper {
      max-width: 250px;
      margin: 0 auto;
    }

    #MilauraBenefits-{{ section.id }} .benefit-card-stone-name {
      text-align: center;
      font-size: 1.6rem;
    }

    #MilauraBenefits-{{ section.id }} .benefit-card-stone-subtitle {
      text-align: center;
    }

    #MilauraBenefits-{{ section.id }} .benefit-card-description {
      text-align: center;
    }

    #MilauraBenefits-{{ section.id }} .benefit-product-recommended {
      text-align: center;
    }
  }
{% endstyle %}

<div id="MilauraBenefits-{{ section.id }}">
  <div class="benefits-dashboard">
    {%- if section.settings.title != blank or section.settings.subtitle != blank -%}
      <div class="benefits-header">
        {%- if section.settings.title != blank -%}
          <h2 class="milaura-heading">{{ section.settings.title }}</h2>
        {%- endif -%}
        {%- if section.settings.subtitle != blank -%}
          <div class="benefits-subtitle milaura-text">
            {{ section.settings.subtitle }}
          </div>
        {%- endif -%}
      </div>
    {%- endif -%}

    <div class="benefits-layout">
      <!-- COLONNE GAUCHE : NAVIGATION -->
      <nav class="benefits-nav" role="tablist">
        {%- for block in section.blocks -%}
          {%- if block.type == 'benefit' -%}
            <button
              type="button"
              class="benefit-btn{% if forloop.first %} is-active{% endif %}"
              data-benefit-target="benefit-{{ section.id }}-{{ block.id }}"
              role="tab"
              aria-selected="{% if forloop.first %}true{% else %}false{% endif %}"
              aria-controls="benefit-{{ section.id }}-{{ block.id }}"
              {{ block.shopify_attributes }}
            >
              <div class="benefit-btn-content">
                {%- if block.settings.icon != blank -%}
                  <span class="benefit-btn-icon">{{ block.settings.icon }}</span>
                {%- endif -%}
                <div class="benefit-btn-text">
                  {%- if block.settings.emotion != blank -%}
                    <span class="benefit-btn-name">{{ block.settings.emotion }}</span>
                  {%- endif -%}
                  {%- if block.settings.tagline != blank -%}
                    <span class="benefit-btn-tagline">{{ block.settings.tagline }}</span>
                  {%- endif -%}
                </div>
              </div>
            </button>
          {%- endif -%}
        {%- endfor -%}
      </nav>

      <!-- COLONNE DROITE : CONTENU DYNAMIQUE -->
      <div class="benefits-content">
        {%- for block in section.blocks -%}
          {%- if block.type == 'benefit' -%}
            <div
              id="benefit-{{ section.id }}-{{ block.id }}"
              class="benefit-card{% if forloop.first %} is-active{% endif %}"
              role="tabpanel"
              aria-labelledby="benefit-btn-{{ section.id }}-{{ block.id }}"
              {{ block.shopify_attributes }}
            >
              <div class="benefit-card-inner milaura-card">
                {%- if block.settings.stone_image != blank -%}
                  <div class="benefit-card-image-wrapper">
                    {{
                      block.settings.stone_image
                      | image_url: width: 600
                      | image_tag: loading: 'lazy', class: 'benefit-card-image', alt: block.settings.stone_name
                    }}
                  </div>
                {%- endif -%}

                <div class="benefit-card-content">
                  {%- if block.settings.stone_name != blank -%}
                    <h3 class="benefit-card-stone-name milaura-heading">
                      {{ block.settings.stone_name }}
                    </h3>
                  {%- endif -%}

                  {%- if block.settings.stone_subtitle != blank -%}
                    <div class="benefit-card-stone-subtitle">
                      {{ block.settings.stone_subtitle }}
                    </div>
                  {%- endif -%}

                  {%- if block.settings.description != blank -%}
                    <div class="benefit-card-description milaura-text">
                      {{ block.settings.description }}
                    </div>
                  {%- endif -%}

                  {%- if block.settings.product != blank -%}
                    {%- assign recommended_product = block.settings.product -%}
                    <div class="benefit-product-recommended">
                      <div class="benefit-product-title milaura-text">
                        Produit recommand√©
                      </div>
                      <a
                        href="{{ recommended_product.url }}"
                        class="milaura-text"
                        style="text-decoration: none; display: block; margin-bottom: var(--milaura-spacing-xs);"
                      >
                        <strong>{{ recommended_product.title }}</strong>
                      </a>
                      <div class="benefit-product-price">
                        {{ recommended_product.price | money }}
                      </div>
                      {%- if block.settings.product_cta_label != blank -%}
                        <a
                          href="{{ recommended_product.url }}"
                          class="milaura-btn milaura-btn-primary"
                        >
                          {{ block.settings.product_cta_label }}
                        </a>
                      {%- else -%}
                        <a
                          href="{{ recommended_product.url }}"
                          class="milaura-btn milaura-btn-primary"
                        >
                          D√©couvrir ce rituel
                        </a>
                      {%- endif -%}
                    </div>
                  {%- endif -%}
                </div>
              </div>
            </div>
          {%- endif -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>

<script>
  (function() {
    const sectionId = '{{ section.id }}';
    const container = document.querySelector('#MilauraBenefits-' + sectionId);
    
    if (!container) return;

    const buttons = container.querySelectorAll('.benefit-btn');
    const cards = container.querySelectorAll('.benefit-card');

    function switchBenefit(targetId) {
      // Retirer is-active de tous les boutons et cartes
      buttons.forEach(btn => {
        btn.classList.remove('is-active');
        btn.setAttribute('aria-selected', 'false');
      });
      cards.forEach(card => {
        card.classList.remove('is-active');
      });

      // Activer le bouton et la carte correspondants
      const activeButton = container.querySelector('[data-benefit-target="' + targetId + '"]');
      const activeCard = container.querySelector('#' + targetId);

      if (activeButton && activeCard) {
        activeButton.classList.add('is-active');
        activeButton.setAttribute('aria-selected', 'true');
        activeCard.classList.add('is-active');
      }
    }

    // √âcouter les clics sur les boutons
    buttons.forEach(btn => {
      btn.addEventListener('click', function() {
        const targetId = this.getAttribute('data-benefit-target');
        if (targetId) {
          switchBenefit(targetId);
        }
      });
    });
  })();
</script>

