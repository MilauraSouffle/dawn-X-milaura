    transition: transform 180ms ease, box-shadow 220ms ease;
    position: relative;
    overflow: hidden;
    cursor: pointer;
    font-family: inherit;
    -webkit-appearance: none;
    appearance: none;
    -webkit-tap-highlight-color: transparent;
  }

  #MilauraBenefits-{{ section.id }} a.benefit-product-cta.milaura-cta.milaura-cta--small::after {
    content: '';
    position: absolute;
    inset: -40% -60%;
    background: linear-gradient(
      120deg,
      transparent 0%,
      rgba(255, 255, 255, 0.50) 35%,
      transparent 70%
    );
    opacity: 0;
    transform: translateX(-18%);
    transition: opacity 260ms ease, transform 520ms cubic-bezier(0.22, 1, 0.36, 1);
    pointer-events: none;
  }

  #MilauraBenefits-{{ section.id }} a.benefit-product-cta.milaura-cta.milaura-cta--small:hover {
    transform: translateY(-1px);
    box-shadow:
      0 16px 40px rgba(130, 90, 30, 0.20),
      0 0 0 1px rgba(255, 255, 255, 0.30) inset,
      0 0 24px rgba(214, 176, 96, 0.28);
  }

  #MilauraBenefits-{{ section.id }} a.benefit-product-cta.milaura-cta.milaura-cta--small:hover::after {
    opacity: 0.35;
    transform: translateX(18%);
  }

  @media screen and (min-width: 769px) {
    #MilauraBenefits-{{ section.id }} a.benefit-product-cta.milaura-cta.milaura-cta--small {
      min-width: 160px;
      padding: 11px 24px;
      font-size: 0.95rem;
    }
  }

  #MilauraBenefits-{{ section.id }} .benefit-product-thumb {
    width: 70px; height: 70px;
    border-radius: 12px;
    object-fit: cover;
    flex-shrink: 0;
  }

  #MilauraBenefits-{{ section.id }} .benefits-dots {
    display: none;
  }

