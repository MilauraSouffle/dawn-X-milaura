      align-items: stretch;
    }

    #MilauraBenefits-{{ section.id }} .benefit-product-cta {
      width: 100%;
      margin-top: 12px;
      padding: 16px 24px !important;
      font-size: 0.9rem !important;
    }
  }
{% endstyle %}

<div id="MilauraBenefits-{{ section.id }}">
  <div class="benefits-dashboard milaura-section-card">
    {% if section.settings.title != blank %}
      <div class="benefits-header">
        <h2 class="milaura-heading">{{ section.settings.title }}</h2>
        {% if section.settings.subtitle != blank %}
          <div class="benefits-subtitle milaura-text">{{ section.settings.subtitle }}</div>
        {% endif %}
      </div>
    {% endif %}

    <div class="benefits-layout">
      <nav class="benefits-nav milaura-mobile-carousel" role="tablist" id="benefits-nav-{{ section.id }}">
        {%- for block in section.blocks -%}
          <button
            type="button"
            id="benefit-btn-{{ block.id }}"
            class="benefit-btn {% if forloop.first %}is-active{% endif %}"
            data-target="benefit-{{ block.id }}"
            data-index="{{ forloop.index0 }}"
            role="tab"
            aria-selected="{% if forloop.first %}true{% else %}false{% endif %}"
            aria-controls="benefit-{{ block.id }}"
            {{ block.shopify_attributes }}
          >
            <div class="benefit-btn-content">
              <span class="benefit-btn-icon">{{ block.settings.icon }}</span>
              <div>
                <span class="benefit-btn-name">{{ block.settings.emotion }}</span>
                <span class="benefit-btn-tagline">{{ block.settings.tagline }}</span>
              </div>
            </div>
          </button>
        {%- endfor -%}
      </nav>

      <!-- Indicateurs dots (mobile uniquement) -->
      <div class="benefits-dots" id="benefits-dots-{{ section.id }}" aria-hidden="true">
        {%- for block in section.blocks -%}
          <button
            type="button"
            class="benefit-dot {% if forloop.first %}is-active{% endif %}"
            data-index="{{ forloop.index0 }}"
            aria-label="Aller au besoin {{ forloop.index }}"
          ></button>
        {%- endfor -%}
      </div>

      <div class="benefits-content">
        {%- for block in section.blocks -%}
          <div
            id="benefit-{{ block.id }}"
            class="benefit-card {% if forloop.first %}is-active{% endif %}"
            role="tabpanel"
            aria-labelledby="benefit-btn-{{ block.id }}"
            style="background-image: url('{{ block.settings.stone_image | image_url: width: 1400 }}');"
          >
            {%- if block.settings.stone_image -%}
              {{
                block.settings.stone_image
                | image_url: width: 800
                | image_tag: class: 'benefit-card-image', alt: block.settings.stone_name, loading: 'lazy'
              }}
            {%- endif -%}
            <div class="benefit-info-box">
              <div class="benefit-info-subtitle">{{ block.settings.stone_subtitle }}</div>
              <h3 class="benefit-info-title">{{ block.settings.stone_name }}</h3>
              <div class="benefit-info-desc milaura-text">{{ block.settings.description }}</div>

              {%- if block.settings.product != blank -%}
                {% assign prod = block.settings.product %}
                <div class="benefit-product-mini">
                  {% if prod.featured_image %}
                    {{
                      prod.featured_image
                      | image_url: width: 140
                      | image_tag: class: 'benefit-product-thumb', alt: prod.title
                    }}
                  {% endif %}
                  <div class="benefit-product-info">
                    <div class="benefit-product-title">{{ prod.title }}</div>
                    <div class="benefit-product-price">{{ prod.price | money }}</div>
                  </div>
                  <a
                    href="{{ prod.url }}"
                    class="milaura-btn milaura-btn-primary benefit-product-cta"
                  >
                    {{ block.settings.product_cta_label | default: 'Je veux cette pierre' }}
                  </a>
                </div>
              {%- endif -%}
            </div>
          </div>
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const container = document.querySelector('#MilauraBenefits-{{ section.id }}');
    if (!container) return;

    const btns = container.querySelectorAll('.benefit-btn');
    const cards = container.querySelectorAll('.benefit-card');
    const nav = container.querySelector('#benefits-nav-{{ section.id }}');
    const dotsContainer = container.querySelector('#benefits-dots-{{ section.id }}');
    const dots = dotsContainer ? dotsContainer.querySelectorAll('.benefit-dot') : [];

    // Fonction principale pour activer un besoin par index
    // Synchronise : nav (boutons) ‚Üî dots (indicateurs) ‚Üî carte principale
    function setActiveBenefit(index) {
      if (index < 0 || index >= btns.length) return;
      
      // Reset de tous les √©tats actifs
      btns.forEach((b) => {
        b.classList.remove('is-active');
        b.setAttribute('aria-selected', 'false');
      });
      cards.forEach((c) => c.classList.remove('is-active'));
      dots.forEach((d) => d.classList.remove('is-active'));

      // Activation de l'√©l√©ment correspondant √† l'index
      if (btns[index]) {
        btns[index].classList.add('is-active');
        btns[index].setAttribute('aria-selected', 'true');
      }
      if (cards[index]) {
        cards[index].classList.add('is-active');
      }
      if (dots[index]) {
        dots[index].classList.add('is-active');
      }
    }

    // Initialisation : s'assurer que le premier besoin est actif au chargement
    // (d√©j√† g√©r√© par Liquid avec forloop.first, mais on v√©rifie au cas o√π)
    const firstActiveBtn = container.querySelector('.benefit-btn.is-active');
    if (firstActiveBtn) {
      const initialIndex = parseInt(firstActiveBtn.dataset.index, 10);
      setActiveBenefit(initialIndex);
    } else if (btns.length > 0) {
      // Fallback : activer le premier si aucun n'est actif
      setActiveBenefit(0);
    }

    // Fonction pour scroller la nav vers un bouton sp√©cifique (mobile uniquement)
    // Utilise scrollIntoView pour centrer le bouton dans la nav
    function scrollNavToButton(index) {
      if (!nav || window.innerWidth > 768) return;
      if (!btns[index]) return;
      
      // Utiliser scrollIntoView pour centrer le bouton
