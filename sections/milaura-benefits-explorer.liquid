{% endstyle %}

<div id="MilauraBenefits-{{ section.id }}">
  <div class="benefits-dashboard">
    {% if section.settings.title != blank %}
      <div class="benefits-header">
        <h2 class="milaura-heading">{{ section.settings.title }}</h2>
        {% if section.settings.subtitle != blank %}
          <div class="benefits-subtitle milaura-text">{{ section.settings.subtitle }}</div>
        {% endif %}
      </div>
    {% endif %}

    <div class="benefits-layout">
      <nav class="benefits-nav" role="tablist" id="benefits-nav-{{ section.id }}" aria-label="S√©lecteur de besoins">
        {%- for block in section.blocks -%}
          <button
            type="button"
            id="benefit-btn-{{ block.id }}"
            class="benefit-btn {% if forloop.first %}is-active{% endif %}"
            data-target="benefit-{{ block.id }}"
            data-index="{{ forloop.index0 }}"
            data-bg="{{ block.settings.stone_image | image_url: width: 1200 }}"
            role="tab"
            aria-selected="{% if forloop.first %}true{% else %}false{% endif %}"
            aria-pressed="{% if forloop.first %}true{% else %}false{% endif %}"
            aria-controls="benefit-{{ block.id }}"
            {{ block.shopify_attributes }}
          >
            <div class="benefit-btn-content">
              <span class="benefit-btn-icon" aria-hidden="true">{{ block.settings.icon }}</span>
              <div>
                <span class="benefit-btn-name">{{ block.settings.emotion }}</span>
                <span class="benefit-btn-tagline">{{ block.settings.tagline }}</span>
              </div>
            </div>
          </button>
        {%- endfor -%}
      </nav>

      <div class="benefits-dots" id="benefits-dots-{{ section.id }}" role="tablist" aria-label="Navigation rapide">
        {%- for block in section.blocks -%}
          <button
            type="button"
            class="benefit-dot {% if forloop.first %}is-active{% endif %}"
            data-index="{{ forloop.index0 }}"
            role="tab"
            aria-label="Voir {{ block.settings.emotion }}"
            aria-selected="{% if forloop.first %}true{% else %}false{% endif %}"
          ></button>
        {%- endfor -%}
      </div>

      <div class="benefits-content" id="benefits-content-{{ section.id }}">
        {%- for block in section.blocks -%}
          <div
            id="benefit-{{ block.id }}"
            class="benefit-card {% if forloop.first %}is-active{% endif %}"
            role="tabpanel"
            aria-labelledby="benefit-btn-{{ block.id }}"
            tabindex="0"
            style="background-image: url('{{ block.settings.stone_image | image_url: width: 1400 }}');"
          >
            <div class="benefit-info-box" id="benefit-info-{{ block.id }}">
              <div class="benefit-info-subtitle">{{ block.settings.stone_subtitle }}</div>
              <h3 class="benefit-info-title">{{ block.settings.stone_name }}</h3>
              <div class="benefit-info-desc milaura-text">{{ block.settings.description }}</div>

              {%- if block.settings.product != blank -%}
                {% assign prod = block.settings.product %}
                <div class="benefit-product-mini">
                  {% if prod.featured_image %}
                    {{
                      prod.featured_image
                      | image_url: width: 140
                      | image_tag: class: 'benefit-product-thumb', alt: prod.title
                    }}
                  {% endif %}
                  <div class="benefit-product-info">
                    <div class="benefit-product-title">{{ prod.title }}</div>
                    <div class="benefit-product-price">{{ prod.price | money }}</div>
                  </div>
                  <a href="{{ prod.url }}" class="milaura-cta milaura-cta--small benefit-product-cta">
                    {{ block.settings.product_cta_label | default: 'Je veux cette pierre' }}
                  </a>
                </div>
              {%- endif -%}
            </div>
          </div>
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>

<script>
  (function () {
    'use strict';

    var sectionId = '{{ section.id }}';
    var container = document.getElementById('MilauraBenefits-' + sectionId);
    if (!container) return;

    var nav = document.getElementById('benefits-nav-' + sectionId);
    var btns = nav ? Array.prototype.slice.call(nav.querySelectorAll('.benefit-btn')) : [];
    var dots = Array.prototype.slice.call(container.querySelectorAll('.benefit-dot'));
    var cards = Array.prototype.slice.call(container.querySelectorAll('.benefit-card'));
    var contentZone = document.getElementById('benefits-content-' + sectionId);

    if (btns.length === 0) return;

    var currentIndex = 0;
    var isScrolling = false;

    // --- D√âTECTION MOBILE ---
    function isMobile() {
      return window.innerWidth <= 990;
    }

    // --- MISE √Ä JOUR BACKGROUND ---
    function updateBackground(url) {
      if (isMobile() && url) {
        container.style.backgroundImage = "url('" + url + "')";
      } else {
        container.style.backgroundImage = 'none';
      }
    }

    // --- HIGHLIGHT VISUEL DU BLOC R√âSULTAT ---
    function highlightInfoBox(index) {
      if (!cards[index]) return;
      var infoBox = cards[index].querySelector('.benefit-info-box');
      if (!infoBox) return;

      // Force reflow pour s'assurer que la transition se d√©clenche
      infoBox.offsetHeight;
      infoBox.classList.add('is-highlighted');

      setTimeout(function () {
        infoBox.classList.remove('is-highlighted');
      }, 200);
    }

    // --- SCROLL VERS LE CONTENU (MOBILE) ---
    function scrollToContent(callback) {
      if (!isMobile() || !contentZone || isScrolling) {
        if (callback) callback();
        return;
      }

      isScrolling = true;

      // Utilise requestAnimationFrame pour s'assurer que le DOM est √† jour
      requestAnimationFrame(function () {
        var rect = contentZone.getBoundingClientRect();
        var scrollTop = window.pageYOffset || document.documentElement.scrollTop;
        var targetY = rect.top + scrollTop - 15;

        // Scroll natif avec behavior smooth (compatible Safari iOS)
        window.scrollTo({
          top: targetY,
          behavior: 'smooth',
        });

        // Callback apr√®s le scroll (estimation du temps de scroll)
        setTimeout(function () {
          isScrolling = false;
          if (callback) callback();
        }, 350);
      });
    }

    // --- CENTRER LA NAV SUR L'ITEM ACTIF ---
    function centerNavOnItem(index) {
      if (!isMobile() || !nav || !btns[index]) return;

      var btn = btns[index];
      var navWidth = nav.offsetWidth;
      var btnWidth = btn.offsetWidth;
      var btnLeft = btn.offsetLeft;
      var scrollPos = btnLeft - navWidth / 2 + btnWidth / 2;

      nav.scrollTo({
        left: Math.max(0, scrollPos),
        behavior: 'smooth',
      });
    }

    // --- ACTIVATION D'UN ONGLET ---
    function activateTab(index, shouldScroll) {
      if (index < 0 || index >= btns.length || (index === currentIndex && !shouldScroll)) return;

      var previousIndex = currentIndex;
      currentIndex = index;

      // Mise √† jour des boutons
      btns.forEach(function (btn, i) {
        var isActive = i === index;
        btn.classList.toggle('is-active', isActive);
        btn.setAttribute('aria-selected', isActive ? 'true' : 'false');
        btn.setAttribute('aria-pressed', isActive ? 'true' : 'false');
        btn.setAttribute('tabindex', isActive ? '0' : '-1');
      });

      // Mise √† jour des dots
      dots.forEach(function (dot, i) {
        var isActive = i === index;
        dot.classList.toggle('is-active', isActive);
        dot.setAttribute('aria-selected', isActive ? 'true' : 'false');
      });

      // Mise √† jour des cartes
      cards.forEach(function (card, i) {
        card.classList.toggle('is-active', i === index);
      });

      // Mise √† jour du background
      if (btns[index]) {
        updateBackground(btns[index].dataset.bg);
      }

      // Mobile: scroll + highlight
      if (shouldScroll && isMobile()) {
        scrollToContent(function () {
          highlightInfoBox(index);
        });
      }
    }

    // --- √âV√âNEMENTS : CLIC SUR BOUTON ---
    btns.forEach(function (btn, i) {
      btn.addEventListener(
        'click',
        function (e) {
          e.preventDefault();
          activateTab(i, true);
          centerNavOnItem(i);
        },
        false
      );

      // Support tactile explicite pour Safari iOS
      btn.addEventListener(
        'touchend',
        function (e) {
          // Laisse le click handler g√©rer l'action
        },
        { passive: true }
      );
    });

    // --- √âV√âNEMENTS : CLIC SUR DOT ---
    dots.forEach(function (dot, i) {
      dot.addEventListener(
        'click',
        function (e) {
          e.preventDefault();
          activateTab(i, true);
          centerNavOnItem(i);
        },
        false
      );
    });

    // --- √âV√âNEMENTS : NAVIGATION CLAVIER ---
    nav.addEventListener(
      'keydown',
      function (e) {
        var newIndex = currentIndex;

        switch (e.key) {
          case 'ArrowRight':
          case 'ArrowDown':
            e.preventDefault();
            newIndex = (currentIndex + 1) % btns.length;
            break;
          case 'ArrowLeft':
          case 'ArrowUp':
            e.preventDefault();
            newIndex = (currentIndex - 1 + btns.length) % btns.length;
            break;
          case 'Home':
            e.preventDefault();
            newIndex = 0;
            break;
          case 'End':
            e.preventDefault();
            newIndex = btns.length - 1;
            break;
          default:
            return;
        }

        if (newIndex !== currentIndex) {
          activateTab(newIndex, true);
          centerNavOnItem(newIndex);
          btns[newIndex].focus();
        }
      },
      false
    );

    // --- INITIALISATION ---
    function init() {
      // Trouve l'index actif initial
      btns.forEach(function (btn, i) {
        if (btn.classList.contains('is-active')) {
          currentIndex = i;
        }
      });

      // Configure les tabindex initiaux
      btns.forEach(function (btn, i) {
        btn.setAttribute('tabindex', i === currentIndex ? '0' : '-1');
      });

      // Met √† jour le background
      if (btns[currentIndex]) {
        updateBackground(btns[currentIndex].dataset.bg);
      }
    }

    // --- RESIZE ---
    var resizeTimeout;
    window.addEventListener(
      'resize',
      function () {
        clearTimeout(resizeTimeout);
        resizeTimeout = setTimeout(function () {
          if (btns[currentIndex]) {
            updateBackground(btns[currentIndex].dataset.bg);
          }
        }, 100);
      },
      { passive: true }
    );

    // Initialisation au chargement
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', init);
    } else {
      init();
    }
  })();
</script>

