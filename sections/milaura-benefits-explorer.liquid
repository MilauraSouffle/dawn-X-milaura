{% style %}
  /* ============================================
     MILAURA BENEFITS EXPLORER - STYLES VISION OS
     ============================================ */

  #MilauraBenefits-{{ section.id }} {
    width: 100%;
    padding: var(--milaura-spacing-xl) var(--milaura-spacing-sm);
    background: transparent;
  }

  /* --- CONTENEUR GLOBAL --- */
  #MilauraBenefits-{{ section.id }} .benefits-dashboard {
    max-width: 1400px;
    margin: 0 auto;
    /* Le cadre global en verre */
    background: rgba(255, 255, 255, 0.6);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.8);
    border-radius: 30px;
    box-shadow: 0 20px 50px rgba(192, 160, 98, 0.15);
    padding: 40px;
    overflow: hidden;
  }

  /* --- EN-T√äTE --- */
  #MilauraBenefits-{{ section.id }} .benefits-header {
    text-align: center;
    margin-bottom: 40px;
  }

  /* --- LAYOUT PRINCIPAL (Nav Gauche + Visuel Droite) --- */
  #MilauraBenefits-{{ section.id }} .benefits-layout {
    display: grid;
    grid-template-columns: 350px 1fr; /* Nav fixe √† gauche, Reste √† droite */
    gap: 40px;
    align-items: stretch;
    min-height: 600px; /* Hauteur min pour l'immersion */
  }

  /* --- COLONNE GAUCHE : NAVIGATION --- */
  #MilauraBenefits-{{ section.id }} .benefits-nav {
    display: flex;
    flex-direction: column;
    gap: 15px;
    justify-content: center; /* Centr√© verticalement */
  }

  #MilauraBenefits-{{ section.id }} .benefit-btn {
    background: rgba(255, 255, 255, 0.5);
    border: 1px solid transparent;
    border-radius: 20px;
    padding: 20px;
    text-align: left;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
  }

  #MilauraBenefits-{{ section.id }} .benefit-btn:hover {
    background: rgba(255, 255, 255, 0.9);
    transform: translateX(5px);
  }

  /* √âtat Actif : Lingot d'or subtil */
  #MilauraBenefits-{{ section.id }} .benefit-btn.is-active {
    background: linear-gradient(135deg, #fff 0%, #fff 100%);
    border-color: var(--milaura-gold);
    box-shadow: 0 10px 25px rgba(192, 160, 98, 0.15);
    transform: scale(1.02);
  }

  #MilauraBenefits-{{ section.id }} .benefit-btn-content {
    display: flex;
    align-items: center;
    gap: 15px;
  }

  #MilauraBenefits-{{ section.id }} .benefit-btn-icon {
    font-size: 1.8rem;
  }

  #MilauraBenefits-{{ section.id }} .benefit-btn-name {
    font-family: var(--milaura-font-heading);
    font-weight: 700;
    color: var(--milaura-text);
    font-size: 1.1rem;
    display: block;
  }

  #MilauraBenefits-{{ section.id }} .benefit-btn-tagline {
    font-family: var(--milaura-font-body);
    font-size: 0.85rem;
    color: var(--milaura-text-light);
    display: block;
    margin-top: 4px;
  }

  /* --- COLONNE DROITE : VISUEL IMMERSIF --- */
  #MilauraBenefits-{{ section.id }} .benefits-content {
    position: relative;
    border-radius: 25px;
    overflow: hidden;
    /* Ombre interne pour effet cadre */
    box-shadow: inset 0 0 0 1px rgba(255,255,255,0.3);
  }

  #MilauraBenefits-{{ section.id }} .benefit-card {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;

    /* L'IMAGE EN FOND (BACKGROUND) */
    background-size: cover;
    background-position: center;

    opacity: 0;
    visibility: hidden;
    transition: opacity 0.5s ease-in-out;

    /* Layout Flex pour centrer la carte texte */
    display: flex;
    align-items: center;
    justify-content: flex-start; /* Texte √† gauche ou centr√© */
    padding: 60px;
  }

  #MilauraBenefits-{{ section.id }} .benefit-card.is-active {
    opacity: 1;
    visibility: visible;
    z-index: 2;
  }

  /* Overlay sombre l√©ger sur l'image pour faire ressortir le texte */
  #MilauraBenefits-{{ section.id }} .benefit-card::before {
    content: '';
    position: absolute;
    top: 0; left: 0; width: 100%; height: 100%;
    background: linear-gradient(to right, rgba(0,0,0,0.4) 0%, rgba(0,0,0,0.1) 100%);
    z-index: 1;
  }

  /* --- LA CARTE TEXTE FLOTTANTE (GLASS) --- */
  #MilauraBenefits-{{ section.id }} .benefit-info-box {
    position: relative;
    z-index: 10;
    max-width: 450px;

    background: rgba(255, 255, 255, 0.85); /* Blanc laiteux */
    backdrop-filter: blur(15px);
    -webkit-backdrop-filter: blur(15px);

    padding: 40px;
    border-radius: 20px;
    border: 1px solid rgba(255, 255, 255, 0.9);
    box-shadow: 0 15px 40px rgba(0,0,0,0.1);

    /* Animation d'entr√©e */
    transform: translateY(20px);
    opacity: 0;
    transition: all 0.5s ease 0.2s; /* D√©lai pour arriver apr√®s le fond */
  }

  #MilauraBenefits-{{ section.id }} .benefit-card.is-active .benefit-info-box {
    transform: translateY(0);
    opacity: 1;
  }

  #MilauraBenefits-{{ section.id }} .benefit-info-title {
    font-family: var(--milaura-font-heading);
    font-size: 2.5rem;
    line-height: 1.1;
    color: var(--milaura-text);
    margin-bottom: 10px;
  }

  #MilauraBenefits-{{ section.id }} .benefit-info-subtitle {
    text-transform: uppercase;
    letter-spacing: 2px;
    font-size: 0.8rem;
    color: var(--milaura-gold);
    font-weight: 700;
    margin-bottom: 20px;
  }

  #MilauraBenefits-{{ section.id }} .benefit-info-desc {
    font-size: 1rem;
    line-height: 1.6;
    margin-bottom: 30px;
    color: #444;
  }

  /* Produit int√©gr√© */
  #MilauraBenefits-{{ section.id }} .benefit-product-mini {
    display: flex;
    align-items: center;
    gap: 15px;
    padding-top: 20px;
    border-top: 1px solid rgba(0,0,0,0.1);
  }

  #MilauraBenefits-{{ section.id }} .benefit-product-thumb {
    width: 60px; height: 60px;
    border-radius: 10px;
    object-fit: cover;
  }

  /* --- MOBILE --- */
  @media screen and (max-width: 990px) {
    #MilauraBenefits-{{ section.id }} .benefits-layout {
      grid-template-columns: 1fr;
      min-height: auto;
    }

    #MilauraBenefits-{{ section.id }} .benefits-content {
        min-height: 500px;
    }

    #MilauraBenefits-{{ section.id }} .benefit-card {
        padding: 20px;
        align-items: flex-end; /* Texte en bas sur mobile */
    }

    #MilauraBenefits-{{ section.id }} .benefit-card::before {
        background: linear-gradient(to top, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0) 100%);
    }

    #MilauraBenefits-{{ section.id }} .benefit-info-box {
        width: 100%;
        padding: 20px;
    }
  }
{% endstyle %}

<div id="MilauraBenefits-{{ section.id }}">
  <div class="benefits-dashboard">
    {% if section.settings.title != blank %}
      <div class="benefits-header">
        <h2 class="milaura-heading">{{ section.settings.title }}</h2>
        {% if section.settings.subtitle != blank %}
          <div class="benefits-subtitle milaura-text">{{ section.settings.subtitle }}</div>
        {% endif %}
      </div>
    {% endif %}

    <div class="benefits-layout">
      <nav class="benefits-nav" role="tablist">
        {%- for block in section.blocks -%}
          <div
            class="benefit-btn {% if forloop.first %}is-active{% endif %}"
            data-target="benefit-{{ block.id }}"
            role="tab"
            {{ block.shopify_attributes }}
          >
            <div class="benefit-btn-content">
              <span class="benefit-btn-icon">{{ block.settings.icon }}</span>
              <div>
                <span class="benefit-btn-name">{{ block.settings.emotion }}</span>
                <span class="benefit-btn-tagline">{{ block.settings.tagline }}</span>
              </div>
            </div>
          </div>
        {%- endfor -%}
      </nav>

      <div class="benefits-content">
        {%- for block in section.blocks -%}
          <div
            id="benefit-{{ block.id }}"
            class="benefit-card {% if forloop.first %}is-active{% endif %}"
            style="background-image: url('{{ block.settings.stone_image | image_url: width: 1400 }}');"
          >
            <div class="benefit-info-box">
              <div class="benefit-info-subtitle">{{ block.settings.stone_subtitle }}</div>
              <h3 class="benefit-info-title">{{ block.settings.stone_name }}</h3>
              <div class="benefit-info-desc">{{ block.settings.description }}</div>

              {%- if block.settings.product != blank -%}
                {% assign prod = block.settings.product %}
                <div class="benefit-product-mini">
                  {% if prod.featured_image %}
                    {{ prod.featured_image | image_url: width: 100 | image_tag: class: 'benefit-product-thumb' }}
                  {% endif %}
                  <div>
                    <div style="font-weight:700; font-size:0.9rem;">{{ prod.title }}</div>
                    <div style="color:var(--milaura-gold); font-size:0.9rem;">{{ prod.price | money }}</div>
                  </div>
                  <a
                    href="{{ prod.url }}"
                    class="milaura-btn milaura-btn-primary"
                    style="padding: 10px 20px; font-size: 0.8rem; margin-left: auto;"
                  >
                    {{ block.settings.product_cta_label | default: 'Voir' }}
                  </a>
                </div>
              {%- endif -%}
            </div>
          </div>
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const container = document.querySelector('#MilauraBenefits-{{ section.id }}');
    if (!container) return;

    const btns = container.querySelectorAll('.benefit-btn');
    const cards = container.querySelectorAll('.benefit-card');

    btns.forEach((btn) => {
      btn.addEventListener('click', function () {
        // 1. Reset all
        btns.forEach((b) => b.classList.remove('is-active'));
        cards.forEach((c) => c.classList.remove('is-active'));

        // 2. Active clicked
        this.classList.add('is-active');
        const targetId = this.dataset.target;
        const targetCard = container.querySelector('#' + targetId);

        if (targetCard) {
          targetCard.classList.add('is-active');
        }
      });
    });
  });
</script>

