    /* Produit Mini - Responsive */
    #MilauraBenefits-{{ section.id }} .benefit-product-mini {
      flex-direction: row;
      align-items: center;
      gap: 12px;
      margin-top: 20px;
      padding-top: 15px;
    }

    #MilauraBenefits-{{ section.id }} .benefit-product-thumb {
      width: 60px;
      height: 60px;
      flex-shrink: 0;
    }

    #MilauraBenefits-{{ section.id }} .benefit-product-info {
      flex: 1;
      min-width: 0;
    }

    #MilauraBenefits-{{ section.id }} .benefit-product-title {
      font-size: 1.1rem; /* Augment√© de 0.9rem pour meilleure lisibilit√© */
      margin-bottom: 4px;
    }

    #MilauraBenefits-{{ section.id }} .benefit-product-price {
      font-size: 1.2rem; /* Augment√© de 0.95rem pour meilleure lisibilit√© */
    }

    /* Bouton CTA - Plus visible sur mobile */
    #MilauraBenefits-{{ section.id }} .benefit-product-cta {
      padding: 14px 24px !important;
      font-size: 1rem !important; /* Augment√© de 0.85rem pour meilleure lisibilit√© */
      margin-left: 0 !important;
      width: 100%;
      margin-top: 12px;
      order: 3; /* Mettre le bouton en dernier */
      text-align: center;
      box-shadow: 0 4px 15px rgba(192, 160, 98, 0.4) !important;
    }
  }

  /* --- MOBILE TR√àS PETIT --- */
  @media screen and (max-width: 480px) {
    #MilauraBenefits-{{ section.id }} .benefit-card {
      min-height: auto !important; /* Respecter aspect-ratio */
      padding: 0 !important; /* D√©j√† d√©fini dans le media 768px */
    }

    #MilauraBenefits-{{ section.id }} .benefit-info-box {
      padding: var(--milaura-spacing-sm) !important;
    }

    #MilauraBenefits-{{ section.id }} .benefit-info-title {
      font-size: 1.4rem;
    }

    #MilauraBenefits-{{ section.id }} .benefit-product-mini {
