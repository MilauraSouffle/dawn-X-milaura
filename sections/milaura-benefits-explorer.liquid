  @media screen and (max-width: 768px) {
    /* Header : texte centr√©, espacement propre */
    #MilauraBenefits-{{ section.id }} .benefits-header {
      text-align: center !important;
      margin-bottom: var(--milaura-spacing-lg) !important;
    }

    /* Layout vertical : titre + nav + dots + carte pierre */
    #MilauraBenefits-{{ section.id }} .benefits-layout {
      display: flex !important;
      flex-direction: column !important;
      gap: var(--milaura-spacing-md) !important;
    }

    /* Carrousel horizontal propre pour la navigation des besoins */
    #MilauraBenefits-{{ section.id }} .benefits-nav {
      display: flex !important;
      flex-direction: row !important;
      overflow-x: auto !important;
      scroll-snap-type: x mandatory !important;
      gap: var(--milaura-spacing-sm) !important;
      -webkit-overflow-scrolling: touch !important;
      /* Padding vertical pour √©viter les coupures des halos */
      padding-top: var(--milaura-spacing-sm) !important;
      padding-bottom: var(--milaura-spacing-sm) !important;
      padding-left: var(--milaura-spacing-sm) !important;
      padding-right: var(--milaura-spacing-sm) !important;
      /* Masquer la scrollbar */
      scrollbar-width: none !important; /* Firefox */
      -ms-overflow-style: none !important; /* IE et Edge */
    }
    
    #MilauraBenefits-{{ section.id }} .benefits-nav::-webkit-scrollbar {
      display: none !important; /* Chrome, Safari, Opera */
    }
    
    /* Chaque carte de besoin */
    #MilauraBenefits-{{ section.id }} .benefit-btn {
      width: 75vw !important;
      max-width: 75vw !important;
      min-width: 75vw !important;
      flex-shrink: 0 !important;
      overflow: visible !important;
      scroll-snap-align: center !important;
      /* Contour dor√© TOUJOURS visible en mobile */
      border: 1px solid rgba(192, 160, 98, 0.4) !important;
    }

    /* √âtat actif des cartes nav en mobile : contour dor√© plus marqu√© */
    #MilauraBenefits-{{ section.id }} .benefit-btn.is-active {
      background: rgba(255, 255, 255, 0.95) !important;
      border-color: var(--milaura-gold) !important;
      border-width: 1.5px !important;
      box-shadow: 0 4px 15px rgba(192, 160, 98, 0.3) !important;
    }

    /* Conteneur des indicateurs dots : centr√©s sous la nav */
    #MilauraBenefits-{{ section.id }} .benefits-dots {
      display: flex !important;
      justify-content: center !important;
      align-items: center !important;
      gap: 6px !important;
      margin-top: var(--milaura-spacing-sm) !important;
      margin-bottom: var(--milaura-spacing-md) !important;
      padding: 0 !important;
    }

    /* Style des dots inactifs : petit cercle dor√© tr√®s clair */
    #MilauraBenefits-{{ section.id }} .benefit-dot {
      width: 7px !important;
      height: 7px !important;
      border-radius: 999px !important;
      background: rgba(192, 160, 98, 0.25) !important;
      border: none !important;
      padding: 0 !important;
      cursor: pointer !important;
      transition: all 0.3s ease !important;
      flex-shrink: 0 !important;
    }

    /* Dot actif : pilule horizontale avec fond dor√© */
    #MilauraBenefits-{{ section.id }} .benefit-dot.is-active {
      width: 16px !important;
      height: 7px !important;
      border-radius: 999px !important;
      background: var(--milaura-gold) !important;
      opacity: 1 !important;
    }

    /* Zone de contenu : carte pierre en dessous des dots */
    #MilauraBenefits-{{ section.id }} .benefits-content {
      display: block !important;
      grid-template-areas: none !important;
      min-height: auto !important;
      position: relative !important;
      overflow: visible !important;
      margin-top: var(--milaura-spacing-lg) !important;
    }

    /* Grande carte pierre + texte - Une seule visible */
    #MilauraBenefits-{{ section.id }} .benefit-card {
      width: 100% !important;
      min-height: auto !important;
      border-radius: var(--milaura-border-radius) !important;
      overflow: hidden !important;
      position: relative !important;
      display: none !important;
      flex-direction: column !important;
      align-items: stretch !important;
      justify-content: flex-start !important;
      padding: 0 !important;
      margin-top: var(--milaura-spacing-lg) !important;
      margin-bottom: 0 !important;
      /* Supprimer le background-image sur mobile */
      background-image: none !important;
    }

    /* Afficher uniquement la carte active sur mobile */
    #MilauraBenefits-{{ section.id }} .benefit-card.is-active {
      display: flex !important;
    }

    /* Image de la carte : MASQU√âE en mobile (pas d'image pleine hauteur) */
    #MilauraBenefits-{{ section.id }} .benefit-card-image {
      display: none !important;
    }

    /* Supprimer l'overlay ::before en mobile */
    #MilauraBenefits-{{ section.id }} .benefit-card::before {
      display: none !important;
    }

    /* Bo√Æte texte - Positionn√©e en dessous (pas d'image pierre en mobile) */
    #MilauraBenefits-{{ section.id }} .benefit-info-box {
      position: static !important;
      width: 100% !important;
      max-width: 100% !important;
      margin-top: 0 !important;
      margin-bottom: 0 !important;
      padding: var(--milaura-spacing-md) !important;
      background: rgba(255, 255, 255, 0.75) !important;
      backdrop-filter: blur(20px) saturate(180%) !important;
      -webkit-backdrop-filter: blur(20px) saturate(180%) !important;
      border: 1px solid rgba(192, 160, 98, 0.4) !important;
      border-radius: var(--milaura-border-radius) !important;
      box-shadow: 0 10px 40px rgba(192, 160, 98, 0.15) !important;
