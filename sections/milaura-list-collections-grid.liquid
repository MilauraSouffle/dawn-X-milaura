{%- comment -%}
  MILAURA BENTO COLLECTIONS
  Layout asym√©trique style magazine luxe
  Support vid√©o/GIF/image pour chaque collection
  Optimis√© r√©seaux sociaux et engagement
  @version 2.0.0
{%- endcomment -%}

{%- style -%}
  #MilauraBento-{{ section.id }} {
    padding: var(--milaura-spacing-xs) 0 var(--milaura-spacing-sm);
  }

  /* =============================================
     SECTION HEADER
     ============================================= */
  #MilauraBento-{{ section.id }} .bento__header {
    text-align: center;
    margin-bottom: var(--milaura-spacing-sm);
  }

  #MilauraBento-{{ section.id }} .bento__section-title {
    font-family: {{ section.settings.section_title_font }};
    font-size: {{ section.settings.section_title_size }}px;
    font-weight: 600;
    color: {{ section.settings.section_title_color }};
    margin: 0 0 8px 0;
    line-height: 1.2;
  }

  #MilauraBento-{{ section.id }} .bento__section-subtitle {
    font-family: 'Lato', sans-serif;
    font-size: 16px;
    color: {{ section.settings.section_subtitle_color }};
    margin: 0;
    line-height: 1.5;
  }

  /* =============================================
     BENTO GRID - Layout asym√©trique
     ============================================= */
  #MilauraBento-{{ section.id }} .bento {
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    grid-auto-rows: minmax(180px, auto);
    gap: 16px;
  }

  /* Tailles des cartes */
  #MilauraBento-{{ section.id }} .bento__card--large {
    grid-column: span 8;
    grid-row: span 2;
  }

  #MilauraBento-{{ section.id }} .bento__card--medium {
    grid-column: span 4;
    grid-row: span 2;
  }

  #MilauraBento-{{ section.id }} .bento__card--small {
    grid-column: span 4;
    grid-row: span 1;
  }

  #MilauraBento-{{ section.id }} .bento__card--wide {
    grid-column: span 6;
    grid-row: span 1;
  }

  #MilauraBento-{{ section.id }} .bento__card--tall {
    grid-column: span 4;
    grid-row: span 2;
  }

  /* =============================================
     CARTE - Style de base
     ============================================= */
  #MilauraBento-{{ section.id }} .bento__card {
    position: relative;
    border-radius: 24px;
    overflow: hidden;
    cursor: pointer;
    transform: translateZ(0);
    backface-visibility: hidden;
  }

  #MilauraBento-{{ section.id }} .bento__card-link {
    display: block;
    width: 100%;
    height: 100%;
    text-decoration: none;
    color: inherit;
  }

  /* =============================================
     MEDIA - Image/Video/GIF container
     ============================================= */
  #MilauraBento-{{ section.id }} .bento__media {
    position: absolute;
    inset: 0;
    overflow: hidden;
  }

  #MilauraBento-{{ section.id }} .bento__media img,
  #MilauraBento-{{ section.id }} .bento__media video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.8s cubic-bezier(0.16, 1, 0.3, 1);
  }

  #MilauraBento-{{ section.id }} .bento__card:hover .bento__media img,
  #MilauraBento-{{ section.id }} .bento__card:hover .bento__media video {
    transform: scale(1.05);
  }

  /* Video controls */
  #MilauraBento-{{ section.id }} .bento__media video {
    pointer-events: none;
  }

  /* =============================================
     OVERLAY - D√©grad√© √©l√©gant
     ============================================= */
  #MilauraBento-{{ section.id }} .bento__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      180deg,
      transparent 0%,
      transparent 40%,
      rgba(0, 0, 0, 0.1) 60%,
      rgba(0, 0, 0, 0.5) 85%,
      rgba(0, 0, 0, 0.7) 100%
    );
    transition: opacity 0.4s ease;
    z-index: 1;
  }

  #MilauraBento-{{ section.id }} .bento__card:hover .bento__overlay {
    opacity: 0.9;
  }

  /* =============================================
     CONTENU - Texte et badges
     ============================================= */
  #MilauraBento-{{ section.id }} .bento__content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 24px;
    z-index: 2;
    transform: translateY(8px);
    transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  #MilauraBento-{{ section.id }} .bento__card:hover .bento__content {
    transform: translateY(0);
  }

  /* Badge cat√©gorie */
  #MilauraBento-{{ section.id }} .bento__badge {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 6px 14px;
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 50px;
    font-size: 11px;
    font-weight: 600;
    color: #ffffff;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 12px;
    opacity: 0;
    transform: translateY(10px);
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1) 0.1s;
  }

  #MilauraBento-{{ section.id }} .bento__card:hover .bento__badge {
    opacity: 1;
    transform: translateY(0);
  }

  #MilauraBento-{{ section.id }} .bento__badge-dot {
    width: 6px;
    height: 6px;
    background: var(--milaura-gold, #C0A062);
    border-radius: 50%;
    animation: bentoPulse 2s ease-in-out infinite;
  }

  @keyframes bentoPulse {
    0%, 100% { opacity: 1; transform: scale(1); }
    50% { opacity: 0.6; transform: scale(0.8); }
  }

  /* Titre */
  #MilauraBento-{{ section.id }} .bento__title {
    font-family: {{ section.settings.title_font }};
    font-size: {{ section.settings.title_size }}px;
    font-weight: 600;
    color: {{ section.settings.title_color }};
    margin: 0 0 8px 0;
    line-height: 1.15;
    text-shadow: 0 2px 20px rgba(0, 0, 0, 0.3);
  }

  #MilauraBento-{{ section.id }} .bento__card--small .bento__title,
  #MilauraBento-{{ section.id }} .bento__card--wide .bento__title {
    font-size: {{ section.settings.title_size | times: 0.75 | round: 0 }}px;
  }

  #MilauraBento-{{ section.id }} .bento__card--large .bento__title {
    font-size: {{ section.settings.title_size | times: 1.4 | round: 0 }}px;
  }

  /* Description */
  #MilauraBento-{{ section.id }} .bento__desc {
    font-family: {{ section.settings.desc_font }};
    font-size: {{ section.settings.desc_size }}px;
    color: {{ section.settings.desc_color }};
    margin: 0;
    line-height: 1.5;
    max-width: 400px;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    opacity: 0;
    transform: translateY(10px);
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1) 0.15s;
  }

  #MilauraBento-{{ section.id }} .bento__card:hover .bento__desc {
    opacity: 1;
    transform: translateY(0);
  }

  #MilauraBento-{{ section.id }} .bento__card--small .bento__desc,
  #MilauraBento-{{ section.id }} .bento__card--wide .bento__desc {
    display: none;
  }

  /* CTA */
  #MilauraBento-{{ section.id }} .bento__cta {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    margin-top: 16px;
    padding: 10px 20px;
    background: var(--milaura-gold, #C0A062);
    border-radius: 50px;
    font-family: 'Lato', sans-serif;
    font-size: 0.8rem;
    font-weight: 700;
    color: #ffffff;
    text-transform: uppercase;
    letter-spacing: 1px;
    opacity: 0;
    transform: translateY(15px);
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1) 0.2s;
  }

  #MilauraBento-{{ section.id }} .bento__card:hover .bento__cta {
    opacity: 1;
    transform: translateY(0);
  }

  #MilauraBento-{{ section.id }} .bento__cta:hover {
    background: #ffffff;
    color: var(--milaura-gold, #C0A062);
  }

  #MilauraBento-{{ section.id }} .bento__cta svg {
    width: 14px;
    height: 14px;
    transition: transform 0.3s ease;
  }

  #MilauraBento-{{ section.id }} .bento__cta:hover svg {
    transform: translateX(4px);
  }

  #MilauraBento-{{ section.id }} .bento__card--small .bento__cta,
  #MilauraBento-{{ section.id }} .bento__card--wide .bento__cta {
    padding: 8px 16px;
    font-size: 0.7rem;
    margin-top: 12px;
  }

  /* =============================================
     COIN BADGE - Nombre de produits
     ============================================= */
  #MilauraBento-{{ section.id }} .bento__count {
    position: absolute;
    top: 16px;
    right: 16px;
    z-index: 3;
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 44px;
    height: 44px;
    padding: 0 12px;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border-radius: 50px;
    font-family: 'Lato', sans-serif;
    font-size: 0.75rem;
    font-weight: 700;
    color: var(--milaura-gold, #C0A062);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  #MilauraBento-{{ section.id }} .bento__card:hover .bento__count {
    transform: scale(1.05);
    box-shadow: 0 6px 25px rgba(0, 0, 0, 0.2);
  }

  #MilauraBento-{{ section.id }} .bento__card--small .bento__count,
  #MilauraBento-{{ section.id }} .bento__card--wide .bento__count {
    min-width: 36px;
    height: 36px;
    font-size: 0.7rem;
    top: 12px;
    right: 12px;
  }

  /* =============================================
     INDICATEUR VID√âO/GIF
     ============================================= */
  #MilauraBento-{{ section.id }} .bento__play-indicator {
    position: absolute;
    top: 16px;
    left: 16px;
    z-index: 3;
    display: flex;
    align-items: center;
    gap: 6px;
    padding: 6px 12px;
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    border-radius: 50px;
    font-size: 10px;
    font-weight: 600;
    color: #ffffff;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  #MilauraBento-{{ section.id }} .bento__play-indicator svg {
    width: 10px;
    height: 10px;
  }

  /* =============================================
     SHIMMER EFFECT - Bord dor√© subtil
     ============================================= */
  #MilauraBento-{{ section.id }} .bento__card::before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: 24px;
    padding: 2px;
    background: linear-gradient(
      135deg,
      rgba(192, 160, 98, 0) 0%,
      rgba(192, 160, 98, 0.3) 50%,
      rgba(192, 160, 98, 0) 100%
    );
    -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    opacity: 0;
    transition: opacity 0.4s ease;
    z-index: 4;
    pointer-events: none;
  }

  #MilauraBento-{{ section.id }} .bento__card:hover::before {
    opacity: 1;
  }

  /* =============================================
     CARTE CTA DE REMPLISSAGE - STYLES PREMIUM
     ============================================= */
  #MilauraBento-{{ section.id }} .bento__card--cta {
    border: 1px solid rgba(192, 160, 98, 0.2);
  }

  #MilauraBento-{{ section.id }} .bento__card--cta .bento__cta-bg {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #FDFBF7 0%, #F2E8D5 50%, #E6D8C0 100%);
  }

  /* Overlay pour d√©grad√© */
  #MilauraBento-{{ section.id }} .bento__overlay--cta {
    background: transparent !important;
  }

  /* Overlay pour image de fond */
  #MilauraBento-{{ section.id }} .bento__overlay--image {
    background: linear-gradient(
      180deg,
      rgba(253, 251, 247, 0.3) 0%,
      rgba(253, 251, 247, 0.6) 50%,
      rgba(253, 251, 247, 0.85) 100%
    ) !important;
  }

  /* Badge toujours visible en haut */
  #MilauraBento-{{ section.id }} .bento__cta-badge {
    position: absolute;
    top: 16px;
    left: 16px;
    z-index: 10;
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 8px 14px;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border-radius: 50px;
    font-size: 11px;
    font-weight: 600;
    color: var(--milaura-gold, #C0A062);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
  }

  #MilauraBento-{{ section.id }} .bento__cta-badge-icon {
    width: 14px;
    height: 14px;
    stroke: var(--milaura-gold, #C0A062);
  }

  /* Contenu centr√© */
  #MilauraBento-{{ section.id }} .bento__cta-content {
    position: absolute;
    inset: 0;
    z-index: 5;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 24px;
    text-align: center;
  }

  /* Titre */
  #MilauraBento-{{ section.id }} .bento__cta-title {
    font-family: {{ section.settings.title_font }};
    font-size: {{ section.settings.title_size }}px;
    font-weight: 600;
    color: var(--milaura-gold, #C0A062);
    margin: 0 0 8px 0;
    line-height: 1.2;
  }

  /* Sous-titre */
  #MilauraBento-{{ section.id }} .bento__cta-subtitle {
    font-family: 'Lato', sans-serif;
    font-size: 14px;
    color: #666666;
    margin: 0 0 20px 0;
    line-height: 1.5;
    max-width: 280px;
  }

  /* Bouton toujours visible */
  #MilauraBento-{{ section.id }} .bento__cta-button {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 12px 24px;
    background: var(--milaura-gold, #C0A062);
    border-radius: 50px;
    font-family: 'Lato', sans-serif;
    font-size: 0.8rem;
    font-weight: 700;
    color: #ffffff;
    text-transform: uppercase;
    letter-spacing: 1px;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(192, 160, 98, 0.3);
  }

  #MilauraBento-{{ section.id }} .bento__cta-button svg {
    width: 14px;
    height: 14px;
    transition: transform 0.3s ease;
  }

  #MilauraBento-{{ section.id }} .bento__card--cta:hover .bento__cta-button {
    background: #1a1a1a;
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
  }

  #MilauraBento-{{ section.id }} .bento__card--cta:hover .bento__cta-button svg {
    transform: translateX(4px);
  }

  /* Responsive mobile */
  @media screen and (max-width: 768px) {
    #MilauraBento-{{ section.id }} .bento__cta-badge {
      top: 10px;
      left: 10px;
      padding: 6px 10px;
      font-size: 9px;
    }

    #MilauraBento-{{ section.id }} .bento__cta-title {
      font-size: {{ section.settings.title_size | times: 0.7 | round: 0 }}px;
    }

    #MilauraBento-{{ section.id }} .bento__cta-subtitle {
      font-size: 12px;
      margin-bottom: 14px;
    }

    #MilauraBento-{{ section.id }} .bento__cta-button {
      padding: 10px 18px;
      font-size: 0.7rem;
    }
  }

  /* =============================================
     ANIMATIONS D'ENTR√âE
     ============================================= */
  #MilauraBento-{{ section.id }} .bento__card {
    opacity: 0;
    transform: translateY(30px) scale(0.98);
    animation: bentoReveal 0.7s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }

  #MilauraBento-{{ section.id }} .bento__card:nth-child(1) { animation-delay: 0.05s; }
  #MilauraBento-{{ section.id }} .bento__card:nth-child(2) { animation-delay: 0.1s; }
  #MilauraBento-{{ section.id }} .bento__card:nth-child(3) { animation-delay: 0.15s; }
  #MilauraBento-{{ section.id }} .bento__card:nth-child(4) { animation-delay: 0.2s; }
  #MilauraBento-{{ section.id }} .bento__card:nth-child(5) { animation-delay: 0.25s; }
  #MilauraBento-{{ section.id }} .bento__card:nth-child(6) { animation-delay: 0.3s; }

  @keyframes bentoReveal {
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  /* =============================================
     RESPONSIVE - Tablette
     ============================================= */
  @media screen and (max-width: 1024px) {
    #MilauraBento-{{ section.id }} .bento {
      grid-template-columns: repeat(8, 1fr);
      gap: 14px;
    }

    #MilauraBento-{{ section.id }} .bento__card--large {
      grid-column: span 8;
      grid-row: span 2;
    }

    #MilauraBento-{{ section.id }} .bento__card--medium,
    #MilauraBento-{{ section.id }} .bento__card--tall {
      grid-column: span 4;
      grid-row: span 2;
    }

    #MilauraBento-{{ section.id }} .bento__card--small,
    #MilauraBento-{{ section.id }} .bento__card--wide {
      grid-column: span 4;
      grid-row: span 1;
    }

    #MilauraBento-{{ section.id }} .bento__title {
      font-size: {{ section.settings.title_size | times: 0.85 | round: 0 }}px;
    }

    #MilauraBento-{{ section.id }} .bento__card--large .bento__title {
      font-size: {{ section.settings.title_size | times: 1.15 | round: 0 }}px;
    }

    #MilauraBento-{{ section.id }} .bento__section-title {
      font-size: {{ section.settings.section_title_size | times: 0.85 | round: 0 }}px;
    }

    #MilauraBento-{{ section.id }} .bento__content {
      padding: 20px;
    }

    /* Toujours visible sur tablette */
    #MilauraBento-{{ section.id }} .bento__badge,
    #MilauraBento-{{ section.id }} .bento__desc,
    #MilauraBento-{{ section.id }} .bento__cta {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* =============================================
     RESPONSIVE - Mobile
     ============================================= */
  @media screen and (max-width: 768px) {
    #MilauraBento-{{ section.id }} {
      padding: var(--milaura-spacing-xs) 0 var(--milaura-spacing-xs);
    }

    #MilauraBento-{{ section.id }} .bento {
      grid-template-columns: repeat(4, 1fr);
      grid-auto-rows: minmax(140px, auto);
      gap: 12px;
    }

    #MilauraBento-{{ section.id }} .bento__card--large {
      grid-column: span 4;
      grid-row: span 2;
    }

    #MilauraBento-{{ section.id }} .bento__card--medium,
    #MilauraBento-{{ section.id }} .bento__card--tall,
    #MilauraBento-{{ section.id }} .bento__card--wide {
      grid-column: span 2;
      grid-row: span 1;
    }

    #MilauraBento-{{ section.id }} .bento__card--small {
      grid-column: span 2;
      grid-row: span 1;
    }

    #MilauraBento-{{ section.id }} .bento__card {
      border-radius: 18px;
    }

    #MilauraBento-{{ section.id }} .bento__card::before {
      border-radius: 18px;
    }

    #MilauraBento-{{ section.id }} .bento__content {
      padding: 14px;
    }

    #MilauraBento-{{ section.id }} .bento__title {
      font-size: {{ section.settings.title_size | times: 0.65 | round: 0 }}px;
    }

    #MilauraBento-{{ section.id }} .bento__card--large .bento__title {
      font-size: {{ section.settings.title_size | times: 0.85 | round: 0 }}px;
    }

    #MilauraBento-{{ section.id }} .bento__section-title {
      font-size: {{ section.settings.section_title_size | times: 0.7 | round: 0 }}px;
    }

    #MilauraBento-{{ section.id }} .bento__badge {
      padding: 4px 10px;
      font-size: 9px;
      margin-bottom: 8px;
    }

    #MilauraBento-{{ section.id }} .bento__cta {
      padding: 8px 14px;
      font-size: 0.65rem;
      margin-top: 10px;
    }

    #MilauraBento-{{ section.id }} .bento__count {
      min-width: 32px;
      height: 32px;
      font-size: 0.65rem;
      top: 10px;
      right: 10px;
    }

    #MilauraBento-{{ section.id }} .bento__play-indicator {
      top: 10px;
      left: 10px;
      padding: 4px 8px;
      font-size: 8px;
    }

    /* Toujours visible sur mobile */
    #MilauraBento-{{ section.id }} .bento__badge,
    #MilauraBento-{{ section.id }} .bento__desc,
    #MilauraBento-{{ section.id }} .bento__cta {
      opacity: 1;
      transform: translateY(0);
    }

    #MilauraBento-{{ section.id }} .bento__desc {
      display: none;
    }
  }

  /* =============================================
     REDUCED MOTION
     ============================================= */
  @media (prefers-reduced-motion: reduce) {
    #MilauraBento-{{ section.id }} .bento__card {
      animation: none;
      opacity: 1;
      transform: none;
    }

    #MilauraBento-{{ section.id }} .bento__media img,
    #MilauraBento-{{ section.id }} .bento__media video,
    #MilauraBento-{{ section.id }} .bento__overlay,
    #MilauraBento-{{ section.id }} .bento__content,
    #MilauraBento-{{ section.id }} .bento__badge,
    #MilauraBento-{{ section.id }} .bento__desc,
    #MilauraBento-{{ section.id }} .bento__cta,
    #MilauraBento-{{ section.id }} .bento__count,
    #MilauraBento-{{ section.id }} .bento__card::before {
      transition: none;
    }

    #MilauraBento-{{ section.id }} .bento__badge-dot {
      animation: none;
    }
  }

  /* =============================================
     HOVER NONE (tactile)
     ============================================= */
  @media (hover: none) {
    #MilauraBento-{{ section.id }} .bento__badge,
    #MilauraBento-{{ section.id }} .bento__desc,
    #MilauraBento-{{ section.id }} .bento__cta {
      opacity: 1;
      transform: translateY(0);
    }

    #MilauraBento-{{ section.id }} .bento__content {
      transform: translateY(0);
    }
  }
{%- endstyle -%}

