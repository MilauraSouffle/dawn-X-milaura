{% style %}
  /* ============================================
     MILAURA NAVBAR - VERSION CTA & CRO
     Badge Quiz visible sur TOUS les écrans
     ============================================ */

  /* --- CONTENEUR PRINCIPAL --- */
  #MilauraNav-{{ section.id }} {
    position: fixed;
    top: 38px;
    left: 0;
    width: 100%;
    z-index: 1000000;
    display: flex;
    justify-content: center;
    padding: 0 24px;
    pointer-events: none;
    transition: top 0.3s ease;
    box-sizing: border-box;
  }

  /* --- WRAPPER SNAKE (contient l'ombre) --- */
  #MilauraNav-{{ section.id }} .nav-snake-wrapper {
    position: relative;
    padding: 2px;
    border-radius: 100px;
    pointer-events: auto;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08), 0 2px 8px rgba(0, 0, 0, 0.04);
    animation: slideDown 0.8s cubic-bezier(0.2, 0.8, 0.2, 1);
    max-width: 1280px;
    width: 100%;
  }

  /* Animation de balayage subtile */
  #MilauraNav-{{ section.id }} .nav-snake-wrapper::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 50%;
    height: 100%;
    background: linear-gradient(
      to right,
      transparent 0%,
      rgba(192, 160, 98, 0.1) 50%,
      transparent 100%
    );
    animation: breathSweep 5s ease-in-out infinite;
    z-index: 0;
    pointer-events: none;
    border-radius: 100px;
  }

  /* --- INTÉRIEUR GLASSMORPHISM --- */
  #MilauraNav-{{ section.id }} .nav-inner {
    position: relative;
    z-index: 1;
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(20px) saturate(180%);
    -webkit-backdrop-filter: blur(20px) saturate(180%);
    border-radius: 100px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 6px 12px 6px 24px;
    gap: 16px;
    border: 1px solid rgba(255, 255, 255, 0.6);
  }

  /* --- LOGO --- */
  #MilauraNav-{{ section.id }} .nav-logo-link {
    display: flex;
    align-items: center;
    text-decoration: none;
    flex-shrink: 0;
  }

  #MilauraNav-{{ section.id }} .nav-logo-img {
    height: 52px;
    width: auto;
    object-fit: contain;
    display: block;
    transition: height 0.3s ease;
  }

  #MilauraNav-{{ section.id }} .nav-logo-text {
    font-family: 'Playfair Display', serif;
    font-size: 1.5rem;
    color: var(--milaura-text);
    font-weight: 600;
  }

  /* --- LIENS DU MENU (Desktop uniquement) --- */
  #MilauraNav-{{ section.id }} .nav-links {
    display: flex;
    gap: 24px;
    list-style: none;
    margin: 0;
    padding: 0;
    align-items: center;
    flex: 1;
    justify-content: center;
  }

  #MilauraNav-{{ section.id }} .nav-link {
    font-family: 'Lato', sans-serif;
    font-size: 0.85rem;
    color: var(--milaura-text);
    text-decoration: none;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    transition: color 0.3s ease;
    position: relative;
    white-space: nowrap;
  }

  #MilauraNav-{{ section.id }} .nav-link::after {
    content: '';
    position: absolute;
    width: 0;
    height: 2px;
    bottom: -4px;
    left: 50%;
    background: linear-gradient(90deg, var(--milaura-gold), var(--milaura-gold-light));
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    transform: translateX(-50%);
    border-radius: 2px;
  }

  #MilauraNav-{{ section.id }} .nav-link:hover {
    color: var(--milaura-gold-dark);
  }

  #MilauraNav-{{ section.id }} .nav-link:hover::after {
    width: 100%;
  }

  /* --- DROPDOWN DESKTOP --- */
  #MilauraNav-{{ section.id }} .nav-item {
    position: relative;
  }

  #MilauraNav-{{ section.id }} .nav-item-has-children > .nav-link {
    display: inline-flex;
    align-items: center;
    gap: 4px;
  }

  #MilauraNav-{{ section.id }} .nav-link-chevron {
    width: 12px;
    height: 12px;
    transition: transform 0.3s ease;
    flex-shrink: 0;
  }

  #MilauraNav-{{ section.id }} .nav-item-has-children:hover .nav-link-chevron {
    transform: rotate(180deg);
  }

  #MilauraNav-{{ section.id }} .nav-dropdown {
    position: absolute;
    top: calc(100% + 12px);
    left: 50%;
    transform: translateX(-50%) translateY(8px);
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border: 1px solid rgba(192, 160, 98, 0.15);
    border-radius: 16px;
    padding: 12px 8px;
    min-width: 220px;
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.1), 0 2px 8px rgba(0, 0, 0, 0.04);
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.25s ease, transform 0.25s ease, visibility 0.25s ease;
    list-style: none;
    margin: 0;
    z-index: 100;
  }

  #MilauraNav-{{ section.id }} .nav-item-has-children:hover .nav-dropdown {
    opacity: 1;
    visibility: visible;
    transform: translateX(-50%) translateY(0);
  }

  /* Zone invisible pour maintenir le hover entre le lien et le dropdown */
  #MilauraNav-{{ section.id }} .nav-item-has-children::after {
    content: '';
    position: absolute;
    top: 100%;
    left: 0;
    width: 100%;
    height: 16px;
  }

  #MilauraNav-{{ section.id }} .nav-dropdown li {
    margin: 0;
  }

  #MilauraNav-{{ section.id }} .nav-dropdown-link {
    display: block;
    padding: 10px 16px;
    font-family: 'Lato', sans-serif;
    font-size: 0.85rem;
    color: var(--milaura-text);
    text-decoration: none;
    font-weight: 500;
    letter-spacing: 0.5px;
    border-radius: 10px;
    transition: background 0.2s ease, color 0.2s ease;
    white-space: nowrap;
  }

  #MilauraNav-{{ section.id }} .nav-dropdown-link:hover {
    background: rgba(192, 160, 98, 0.1);
    color: var(--milaura-gold-dark);
  }

  /* ============================================
     SUPER CTA BADGE QUIZ - LE CŒUR DU FUNNEL
     Visible sur TOUS les écrans avec halo pulsant
     ============================================ */
  #MilauraNav-{{ section.id }} .nav-quiz-badge {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    background: linear-gradient(135deg, var(--milaura-gold) 0%, #D4B678 50%, var(--milaura-gold-light) 100%);
    background-size: 200% 200%;
    color: #fff;
    padding: 12px 24px;
    border-radius: 50px;
    text-decoration: none;
    box-shadow: 0 4px 20px rgba(192, 160, 98, 0.5);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    white-space: nowrap;
    position: relative;
    flex-shrink: 0;
    animation: badgeShimmer 3s ease-in-out infinite;
  }

  /* HALO PULSANT - via pseudo-element pour ne pas interférer avec hover */
  #MilauraNav-{{ section.id }} .nav-quiz-badge::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    border-radius: 50px;
    box-shadow: 0 0 0 0 rgba(192, 160, 98, 0.6);
    animation: haloPulse 2s ease-out infinite;
    pointer-events: none;
  }

  @keyframes haloPulse {
    0% {
      box-shadow: 0 0 0 0 rgba(192, 160, 98, 0.6);
    }
    50% {
      box-shadow: 0 0 0 12px rgba(192, 160, 98, 0);
    }
    100% {
      box-shadow: 0 0 0 0 rgba(192, 160, 98, 0);
    }
  }

  @keyframes badgeShimmer {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  #MilauraNav-{{ section.id }} .nav-quiz-badge:hover {
    transform: translateY(-3px) scale(1.02);
    box-shadow: 0 8px 30px rgba(192, 160, 98, 0.6);
  }

  #MilauraNav-{{ section.id }} .nav-quiz-badge:hover::before {
    animation: none;
  }

  #MilauraNav-{{ section.id }} .badge-icon {
    font-size: 1.4rem;
    animation: iconBounce 2s ease-in-out infinite;
    flex-shrink: 0;
  }

  @keyframes iconBounce {
    0%, 100% { transform: translateY(0) scale(1); }
    50% { transform: translateY(-2px) scale(1.1); }
  }

  #MilauraNav-{{ section.id }} .badge-content {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    line-height: 1.2;
  }

  #MilauraNav-{{ section.id }} .badge-title {
    font-family: 'Lato', sans-serif;
    font-size: 0.95rem;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
  }

  #MilauraNav-{{ section.id }} .badge-subtitle {
    font-family: 'Lato', sans-serif;
    font-size: 0.75rem;
    font-weight: 500;
    opacity: 0.95;
    font-style: italic;
  }

  /* --- ZONE DROITE (badge + icônes) --- */
  #MilauraNav-{{ section.id }} .nav-right {
    display: flex;
    align-items: center;
    gap: 16px;
    flex-shrink: 0;
  }

  /* --- ICÔNES --- */
  #MilauraNav-{{ section.id }} .nav-icons {
    display: flex;
    gap: 14px;
    align-items: center;
    flex-shrink: 0;
  }

  #MilauraNav-{{ section.id }} .nav-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--milaura-text);
    transition: transform 0.3s ease, color 0.3s ease;
    text-decoration: none;
  }

  #MilauraNav-{{ section.id }} .nav-icon:hover {
    color: var(--milaura-gold);
    transform: scale(1.1);
  }

  #MilauraNav-{{ section.id }} .nav-icon svg {
    width: 20px;
    height: 20px;
  }

  /* --- MENU BURGER --- */
  #MilauraNav-{{ section.id }} .nav-burger {
    display: none;
    flex-direction: column;
    gap: 5px;
    cursor: pointer;
    padding: 8px;
    background: transparent;
    border: none;
    z-index: 10;
  }

  #MilauraNav-{{ section.id }} .nav-burger span {
    width: 24px;
    height: 2px;
    background-color: var(--milaura-text);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    border-radius: 2px;
    display: block;
  }

  #MilauraNav-{{ section.id }} .nav-burger:hover span {
    background-color: var(--milaura-gold);
  }

  #MilauraNav-{{ section.id }} .nav-burger.active span:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
  }

  #MilauraNav-{{ section.id }} .nav-burger.active span:nth-child(2) {
    opacity: 0;
  }

  #MilauraNav-{{ section.id }} .nav-burger.active span:nth-child(3) {
    transform: rotate(-45deg) translate(5px, -5px);
  }

  /* --- MENU MOBILE --- */
  #MilauraNav-{{ section.id }} .nav-mobile-menu {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    height: 100dvh;
    background: rgba(253, 251, 247, 0.98);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    z-index: 999999;
    transform: translateX(-100%);
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    padding: 100px 24px 40px;
    overflow-y: auto;
    display: flex;
    flex-direction: column;
  }

  #MilauraNav-{{ section.id }} .nav-mobile-menu.active {
    transform: translateX(0);
  }

  #MilauraNav-{{ section.id }} .nav-mobile-links {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  #MilauraNav-{{ section.id }} .nav-mobile-link {
    font-family: 'Lato', sans-serif;
    font-size: 1.2rem;
    color: var(--milaura-text);
    text-decoration: none;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    display: block;
    padding: 20px 0;
    border-bottom: 1px solid rgba(192, 160, 98, 0.15);
    transition: color 0.3s ease, padding-left 0.3s ease;
  }

  #MilauraNav-{{ section.id }} .nav-mobile-link:hover {
    color: var(--milaura-gold);
    padding-left: 10px;
  }

  /* --- SOUS-MENU MOBILE (Accordéon) --- */
  #MilauraNav-{{ section.id }} .nav-mobile-parent {
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  #MilauraNav-{{ section.id }} .nav-mobile-parent .nav-link-chevron {
    width: 16px;
    height: 16px;
    transition: transform 0.3s ease;
    flex-shrink: 0;
    color: var(--milaura-gold);
  }

  #MilauraNav-{{ section.id }} .nav-mobile-parent.open .nav-link-chevron {
    transform: rotate(180deg);
  }

  #MilauraNav-{{ section.id }} .nav-mobile-submenu {
    list-style: none;
    margin: 0;
    padding: 0;
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.35s ease;
  }

  #MilauraNav-{{ section.id }} .nav-mobile-submenu.open {
    max-height: 400px;
  }

  #MilauraNav-{{ section.id }} .nav-mobile-sublink {
    display: block;
    font-family: 'Lato', sans-serif;
    font-size: 1rem;
    color: var(--milaura-text-light, #333);
    text-decoration: none;
    padding: 14px 0 14px 20px;
    border-bottom: 1px solid rgba(192, 160, 98, 0.08);
    transition: color 0.3s ease, padding-left 0.3s ease;
    position: relative;
  }

  #MilauraNav-{{ section.id }} .nav-mobile-sublink::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: var(--milaura-gold);
    opacity: 0.4;
  }

  #MilauraNav-{{ section.id }} .nav-mobile-sublink:hover {
    color: var(--milaura-gold);
    padding-left: 28px;
  }

  /* Badge Quiz Mobile (dans le menu hamburger) */
  #MilauraNav-{{ section.id }} .nav-mobile-quiz {
    margin-top: 32px;
  }

  #MilauraNav-{{ section.id }} .nav-mobile-quiz-badge {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 12px;
    background: linear-gradient(135deg, var(--milaura-gold) 0%, var(--milaura-gold-light) 100%);
    color: #fff;
    padding: 18px 28px;
    border-radius: 60px;
    text-decoration: none;
    box-shadow: 0 8px 25px rgba(192, 160, 98, 0.35);
    transition: all 0.3s ease;
    position: relative;
  }

  #MilauraNav-{{ section.id }} .nav-mobile-quiz-badge::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    border-radius: 60px;
    box-shadow: 0 0 0 0 rgba(192, 160, 98, 0.6);
    animation: haloPulse 2s ease-out infinite;
    pointer-events: none;
  }

  #MilauraNav-{{ section.id }} .nav-mobile-quiz-badge:hover {
    transform: scale(1.02);
  }

  #MilauraNav-{{ section.id }} .nav-mobile-quiz-badge .badge-title {
    font-size: 1.1rem;
  }

  #MilauraNav-{{ section.id }} .nav-mobile-quiz-badge .badge-subtitle {
    font-size: 0.85rem;
  }

  /* Close button mobile */
  #MilauraNav-{{ section.id }} .nav-mobile-close {
    position: absolute;
    top: 24px;
    right: 24px;
    width: 44px;
    height: 44px;
    background: rgba(255, 255, 255, 0.8);
    border: 1px solid rgba(192, 160, 98, 0.2);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  #MilauraNav-{{ section.id }} .nav-mobile-close:hover {
    background: var(--milaura-gold);
    border-color: var(--milaura-gold);
  }

  #MilauraNav-{{ section.id }} .nav-mobile-close:hover svg {
    color: #fff;
  }

  #MilauraNav-{{ section.id }} .nav-mobile-close svg {
    width: 20px;
    height: 20px;
    color: var(--milaura-text);
    transition: color 0.3s ease;
  }

  /* --- ANIMATIONS --- */
  @keyframes breathSweep {
    0% { left: -100%; opacity: 0; }
    50% { opacity: 1; }
    100% { left: 150%; opacity: 0; }
  }

  @keyframes slideDown {
    from { transform: translateY(-100%); opacity: 0; }
    to { transform: translateY(0); opacity: 1; }
  }

  /* ============================================
     RESPONSIVE - Badge TOUJOURS visible
     ============================================ */

  /* DESKTOP LARGE (> 1100px) : Tout visible */
  @media screen and (min-width: 1101px) {
    #MilauraNav-{{ section.id }} .nav-burger {
      display: none;
    }
  }

  /* TABLETTE (768px - 1100px) : Menu burger, badge visible */
  @media screen and (max-width: 1100px) {
    #MilauraNav-{{ section.id }} .nav-links {
      display: none;
    }

    #MilauraNav-{{ section.id }} .nav-burger {
      display: flex;
    }

    #MilauraNav-{{ section.id }} .nav-inner {
      padding: 6px 12px 6px 16px;
      gap: 12px;
    }

    #MilauraNav-{{ section.id }} .nav-logo-img {
      height: 46px;
    }

    /* Badge plus compact sur tablette */
    #MilauraNav-{{ section.id }} .nav-quiz-badge {
      padding: 10px 18px;
      gap: 10px;
    }

    #MilauraNav-{{ section.id }} .badge-title {
      font-size: 0.85rem;
    }

    #MilauraNav-{{ section.id }} .badge-subtitle {
      font-size: 0.7rem;
    }

    #MilauraNav-{{ section.id }} .badge-icon {
      font-size: 1.2rem;
    }
  }

  /* MOBILE LARGE (481px - 767px) : Badge simplifié */
  @media screen and (max-width: 767px) {
    #MilauraNav-{{ section.id }} {
      padding: 0 16px;
    }

    #MilauraNav-{{ section.id }} .nav-inner {
      padding: 6px 10px 6px 14px;
      gap: 10px;
    }

    #MilauraNav-{{ section.id }} .nav-logo-img {
      height: 40px;
    }

    /* Badge sans subtitle sur mobile */
    #MilauraNav-{{ section.id }} .nav-quiz-badge {
      padding: 10px 16px;
      gap: 8px;
    }

    #MilauraNav-{{ section.id }} .badge-subtitle {
      display: none;
    }

    #MilauraNav-{{ section.id }} .badge-title {
      font-size: 0.8rem;
    }

    #MilauraNav-{{ section.id }} .badge-icon {
      font-size: 1.1rem;
    }

    #MilauraNav-{{ section.id }} .nav-icons {
      gap: 10px;
    }

    #MilauraNav-{{ section.id }} .nav-icon svg {
      width: 18px;
      height: 18px;
    }
  }

  /* MOBILE PETIT (< 480px) : Badge icône uniquement */
  @media screen and (max-width: 480px) {
    #MilauraNav-{{ section.id }} {
      padding: 0 10px;
    }

    #MilauraNav-{{ section.id }} .nav-inner {
      padding: 5px 8px 5px 12px;
      gap: 8px;
    }

    #MilauraNav-{{ section.id }} .nav-logo-img {
      height: 36px;
    }

    /* Badge ultra compact - icône + texte court */
    #MilauraNav-{{ section.id }} .nav-quiz-badge {
      padding: 8px 14px;
      gap: 6px;
    }

    #MilauraNav-{{ section.id }} .badge-content {
      display: flex;
    }

    #MilauraNav-{{ section.id }} .badge-title {
      font-size: 0.7rem;
      letter-spacing: 0;
    }

    #MilauraNav-{{ section.id }} .badge-icon {
      font-size: 1rem;
    }

    #MilauraNav-{{ section.id }} .nav-icons {
      gap: 8px;
    }

    #MilauraNav-{{ section.id }} .nav-icon svg {
      width: 16px;
      height: 16px;
    }

    #MilauraNav-{{ section.id }} .nav-burger {
      padding: 6px;
    }

    #MilauraNav-{{ section.id }} .nav-burger span {
      width: 20px;
    }
  }

  /* TRÈS PETIT ÉCRAN (< 360px) : Ajustements extrêmes */
  @media screen and (max-width: 360px) {
    #MilauraNav-{{ section.id }} .nav-logo-img {
      height: 32px;
    }

    #MilauraNav-{{ section.id }} .nav-quiz-badge {
      padding: 7px 12px;
    }

    #MilauraNav-{{ section.id }} .badge-title {
      font-size: 0.65rem;
    }

    #MilauraNav-{{ section.id }} .badge-icon {
      font-size: 0.9rem;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    *, *::before, *::after {
      transition: none !important;
      animation: none !important;
    }
  }

{% endstyle %}

<div id="MilauraNav-{{ section.id }}">
  <div class="nav-snake-wrapper">
    <div class="nav-inner">

      <!-- Burger (mobile) -->
      <button class="nav-burger" aria-label="Menu" id="burger-{{ section.id }}">
        <span></span>
        <span></span>
        <span></span>
      </button>

      <!-- Logo -->
      <a href="{{ routes.root_url }}" class="nav-logo-link">
        {% if section.settings.logo != blank %}
          {{ section.settings.logo | image_url: height: 120 | image_tag: class: 'nav-logo-img', loading: 'eager' }}
        {% else %}
          <span class="nav-logo-text">Mil'Aura</span>
        {% endif %}
      </a>

      <!-- Liens Desktop (cachés sur mobile/tablette) -->
      <ul class="nav-links">
        {%- for link in linklists[section.settings.menu].links -%}
          {%- if link.links.size > 0 -%}
            <li class="nav-item nav-item-has-children">
              <a href="{{ link.url }}" class="nav-link">
                {{ link.title }}
                <svg class="nav-link-chevron" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><polyline points="6 9 12 15 18 9"/></svg>
              </a>
              <ul class="nav-dropdown">
                {%- for child in link.links -%}
                  <li><a href="{{ child.url }}" class="nav-dropdown-link">{{ child.title }}</a></li>
                {%- endfor -%}
              </ul>
            </li>
          {%- else -%}
            <li class="nav-item">
              <a href="{{ link.url }}" class="nav-link">{{ link.title }}</a>
            </li>
          {%- endif -%}
        {%- endfor -%}
      </ul>

      <!-- Zone Droite : Badge Quiz + Icônes (TOUJOURS visible) -->
      <div class="nav-right">
        <!-- Badge Quiz Super CTA - Visible sur TOUS les écrans -->
        <a href="{{ section.settings.quiz_link | default: '/pages/decouvrir-ma-bougie' }}" class="nav-quiz-badge">
          <span class="badge-icon">✨</span>
          <div class="badge-content">
            <span class="badge-title">{{ section.settings.quiz_label | default: 'Mon diagnostic' }}</span>
            <span class="badge-subtitle">{{ section.settings.quiz_subtitle | default: 'Découvrir ma pierre' }}</span>
          </div>
        </a>

        <!-- Icônes -->
        <div class="nav-icons">
        <a href="{{ routes.search_url }}" class="nav-icon" aria-label="Recherche">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="11" cy="11" r="8"/>
            <path d="m21 21-4.35-4.35"/>
          </svg>
        </a>
        <a href="{{ routes.account_url }}" class="nav-icon" aria-label="Compte">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
            <circle cx="12" cy="7" r="4"/>
          </svg>
        </a>
        <a href="{{ routes.cart_url }}" class="nav-icon" aria-label="Panier">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"/>
            <line x1="3" y1="6" x2="21" y2="6"/>
            <path d="M16 10a4 4 0 0 1-8 0"/>
          </svg>
        </a>
        </div>
      </div><!-- fin nav-right -->

    </div>
  </div>

  <!-- Menu Mobile -->
  <div class="nav-mobile-menu" id="mobile-menu-{{ section.id }}">

    <!-- Bouton fermer -->
    <button class="nav-mobile-close" id="close-menu-{{ section.id }}" aria-label="Fermer le menu">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <line x1="18" y1="6" x2="6" y2="18"/>
        <line x1="6" y1="6" x2="18" y2="18"/>
      </svg>
    </button>

    <!-- Liens -->
    <ul class="nav-mobile-links">
      {%- for link in linklists[section.settings.menu].links -%}
        {%- if link.links.size > 0 -%}
          <li>
            <div class="nav-mobile-link nav-mobile-parent" data-toggle-submenu>
              {{ link.title }}
              <svg class="nav-link-chevron" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><polyline points="6 9 12 15 18 9"/></svg>
            </div>
            <ul class="nav-mobile-submenu">
              {%- for child in link.links -%}
                <li><a href="{{ child.url }}" class="nav-mobile-sublink" data-close-menu>{{ child.title }}</a></li>
              {%- endfor -%}
            </ul>
          </li>
        {%- else -%}
          <li>
            <a href="{{ link.url }}" class="nav-mobile-link" data-close-menu>
              {{ link.title }}
            </a>
          </li>
        {%- endif -%}
      {%- endfor -%}
    </ul>

    <!-- Badge Quiz Mobile (dans le menu hamburger) -->
    <div class="nav-mobile-quiz">
      <a href="{{ section.settings.quiz_link | default: '/pages/decouvrir-ma-bougie' }}" class="nav-mobile-quiz-badge" data-close-menu>
        <span class="badge-icon">✨</span>
        <div class="badge-content">
          <span class="badge-title">{{ section.settings.quiz_label | default: 'Mon diagnostic' }}</span>
          <span class="badge-subtitle">{{ section.settings.quiz_subtitle | default: 'Découvrir ma pierre' }}</span>
        </div>
      </a>
    </div>

  </div>
</div>

<script>
  (function() {
    const sectionId = '{{ section.id }}';
    const burger = document.getElementById('burger-' + sectionId);
    const closeBtn = document.getElementById('close-menu-' + sectionId);
    const mobileMenu = document.getElementById('mobile-menu-' + sectionId);

    function openMenu() {
      burger.classList.add('active');
      mobileMenu.classList.add('active');
      document.body.style.overflow = 'hidden';
    }

    function closeMenu() {
      burger.classList.remove('active');
      mobileMenu.classList.remove('active');
      document.body.style.overflow = '';
    }

    if (burger) {
      burger.addEventListener('click', function() {
        if (mobileMenu.classList.contains('active')) {
          closeMenu();
        } else {
          openMenu();
        }
      });
    }

    if (closeBtn) {
      closeBtn.addEventListener('click', closeMenu);
    }

    // Fermer au clic sur les liens
    const closeLinks = mobileMenu.querySelectorAll('[data-close-menu]');
    closeLinks.forEach(function(link) {
      link.addEventListener('click', closeMenu);
    });

    // Fermer au clic en dehors
    mobileMenu.addEventListener('click', function(e) {
      if (e.target === mobileMenu) {
        closeMenu();
      }
    });

    // Fermer avec Escape
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape' && mobileMenu.classList.contains('active')) {
        closeMenu();
      }
    });

    // Accordéon sous-menus mobile
    var parentItems = mobileMenu.querySelectorAll('[data-toggle-submenu]');
    parentItems.forEach(function(item) {
      item.addEventListener('click', function() {
        var submenu = item.nextElementSibling;
        var isOpen = item.classList.contains('open');
        // Fermer tous les autres
        parentItems.forEach(function(other) {
          other.classList.remove('open');
          if (other.nextElementSibling) other.nextElementSibling.classList.remove('open');
        });
        // Toggle celui-ci
        if (!isOpen) {
          item.classList.add('open');
          if (submenu) submenu.classList.add('open');
        }
      });
    });

    // --- LOGO SCROLL TO TOP ---
    const logoLink = document.querySelector('.nav-logo-link');
    if (logoLink) {
      logoLink.addEventListener('click', function(e) {
        // Si on est sur la page d'accueil (racine), on scroll en haut
        const currentPath = window.location.pathname;
        const rootUrl = '{{ routes.root_url }}';
        
        // Gérer le cas où rootUrl est "/" ou "/fr" etc.
        const isHomepage = currentPath === rootUrl || (rootUrl === '/' && currentPath === '/');

        if (isHomepage) {
          e.preventDefault();
          window.scrollTo({
            top: 0,
            behavior: 'smooth'
          });
        }
      });
    }
  })();
</script>

