{% style %}
  /* --- TYPO & BASE --- */
  @import url('https://fonts.googleapis.com/css2?family=Lato:wght@300;400;500;700&family=Playfair+Display:wght@600&display=swap');

  /* Le Conteneur Flottant */
  #MilauraNav-{{ section.id }} {
    position: fixed;
    top: 50px; /* Descendu pour laisser la place à la barre d'annonce */
    left: 0;
    width: 100%;
    z-index: 9999;
    display: flex;
    justify-content: center;
    padding: 0 40px;
    pointer-events: none;
    transition: top 0.3s ease;
  }

  /* Si on scrolle, on pourrait le remonter un peu via JS, mais restons simple pour l'instant */

  /* --- LE SNAKE CONTAINER --- */
  #MilauraNav-{{ section.id }} .nav-snake-wrapper {
    position: relative;
    padding: 1.5px; /* Bordure fine et élégante */
    border-radius: 100px;
    overflow: hidden;
    pointer-events: auto;
    box-shadow: 0 15px 40px rgba(0,0,0,0.08); /* Ombre portée douce */
    animation: slideDown 1s cubic-bezier(0.2, 0.8, 0.2, 1);
  }

  /* Le Serpent Doré (Ralenti et adouci) */
  #MilauraNav-{{ section.id }} .nav-snake-wrapper::before {
    content: '';
    position: absolute;
    top: -100%;
    left: -100%;
    width: 300%;
    height: 300%;
    background: conic-gradient(
      transparent 80%, 
      rgba(212, 175, 55, 0.8) 100%
    );
    animation: snakeRotate 6s linear infinite; /* Plus lent (6s) pour l'élégance */
  }

  /* --- L'INTERIEUR DU MENU (Vision OS GLASS) --- */
  #MilauraNav-{{ section.id }} .nav-inner {
    position: relative;
    z-index: 1;
    /* C'est ICI la magie : Fond quasi transparent + Blur puissant */
    background: rgba(255, 255, 255, 0.25); 
    backdrop-filter: blur(20px) saturate(180%);
    -webkit-backdrop-filter: blur(20px) saturate(180%);
    
    border-radius: 100px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    
    /* TAILLE AUGMENTÉE */
    padding: 12px 50px; /* Plus large sur les côtés */
    gap: 60px; /* Plus d'espace entre les éléments */
    min-width: 800px; /* Force une largeur minimale luxueuse */
    
    /* Petite bordure intérieure blanche pour l'effet verre */
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.3);
  }

  /* LOGO */
  #MilauraNav-{{ section.id }} .nav-logo {
    font-family: 'Playfair Display', serif;
    font-size: 1.6rem;
    color: #1A1A1A;
    text-decoration: none;
    letter-spacing: 0.5px;
    font-weight: 600;
    white-space: nowrap;
  }

  /* LIENS DU MENU */
  #MilauraNav-{{ section.id }} .nav-links {
    display: flex;
    gap: 40px; /* Espacement aéré entre les liens */
    list-style: none;
    margin: 0;
    padding: 0;
  }

  #MilauraNav-{{ section.id }} .nav-link {
    font-family: 'Lato', sans-serif;
    font-size: 0.95rem; /* Texte un peu plus gros */
    color: #2A2A2A; /* Gris foncé lisible */
    text-decoration: none;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 1px;
    transition: all 0.3s ease;
    position: relative;
  }

  /* Petit point doré au survol sous le lien */
  #MilauraNav-{{ section.id }} .nav-link::after {
    content: '';
    position: absolute;
    width: 0;
    height: 2px;
    bottom: -4px;
    left: 50%;
    background-color: #D4AF37;
    transition: all 0.3s ease;
    transform: translateX(-50%);
  }

  #MilauraNav-{{ section.id }} .nav-link:hover::after {
    width: 100%;
  }

  #MilauraNav-{{ section.id }} .nav-link:hover {
    color: #000;
  }

  /* ICONES */
  #MilauraNav-{{ section.id }} .nav-icons {
    display: flex;
    gap: 25px;
    align-items: center;
  }

  #MilauraNav-{{ section.id }} .nav-icon {
    color: #333;
    display: flex;
    align-items: center;
    transition: transform 0.3s ease;
  }

  #MilauraNav-{{ section.id }} .nav-icon:hover {
    transform: scale(1.15);
    color: #000;
  }

  #MilauraNav-{{ section.id }} .nav-icon svg {
    width: 22px; /* Icônes un peu plus grosses */
    height: 22px;
    fill: none;
    stroke: currentColor;
    stroke-width: 1.5;
  }

  @keyframes snakeRotate {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }

  @keyframes slideDown {
    from { transform: translateY(-100%); opacity: 0; }
    to { transform: translateY(0); opacity: 1; }
  }

  /* RESPONSIVE */
  @media screen and (max-width: 1024px) {
    #MilauraNav-{{ section.id }} .nav-inner {
      min-width: auto;
      width: 95%;
      padding: 10px 20px;
      gap: 20px;
    }
    #MilauraNav-{{ section.id }} .nav-links {
      display: none; /* Mobile menu caché pour l'instant */
    }
  }
{% endstyle %}

<div id="MilauraNav-{{ section.id }}">
  <div class="nav-snake-wrapper">
    <div class="nav-inner">
      
      <a href="/" class="nav-logo">
        {% if section.settings.logo != blank %}
          {{ section.settings.logo | image_url: height: 80 | image_tag: loading: 'eager' }}
        {% else %}
          Mil'Aura
        {% endif %}
      </a>

      <ul class="nav-links">
        {%- for link in linklists[section.settings.menu].links -%}
          <li>
            <a href="{{ link.url }}" class="nav-link">{{ link.title }}</a>
          </li>
        {%- endfor -%}
      </ul>

      <div class="nav-icons">
        <a href="{{ routes.search_url }}" class="nav-icon" aria-label="Recherche">
          <svg viewBox="0 0 24 24"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg>
        </a>
        <a href="{{ routes.account_url }}" class="nav-icon" aria-label="Compte">
          <svg viewBox="0 0 24 24"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"></circle></svg>
        </a>
        <a href="{{ routes.cart_url }}" class="nav-icon" aria-label="Panier">
          <svg viewBox="0 0 24 24"><circle cx="9" cy="21" r="1"></circle><circle cx="20" cy="21" r="1"></circle><path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path></svg>
        </a>
      </div>

    </div>
  </div>
</div>

{% schema %}
{
  "name": "Milaura Nav Vision V2",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo (Optionnel)"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu à afficher",
      "default": "main-menu"
    }
  ],
  "presets": [
    {
      "name": "Milaura Nav Vision V2"
    }
  ]
}
{% endschema %}