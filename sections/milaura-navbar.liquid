<script>
  (function() {
    const sectionId = '{{ section.id }}';
    const burger = document.getElementById('burger-' + sectionId);
    const closeBtn = document.getElementById('close-menu-' + sectionId);
    const mobileMenu = document.getElementById('mobile-menu-' + sectionId);
    const overlay = document.getElementById('mobile-overlay-' + sectionId);
    const cartCount = document.getElementById('mobile-cart-count-' + sectionId);
    const desktopCartCount = document.getElementById('desktop-cart-count-' + sectionId);

    let isAnimating = false;

    // Animation d'ouverture type "écran TV qui s'allume"
    function openMenu() {
      if (isAnimating) return;
      isAnimating = true;

      burger.classList.add('active');
      overlay.classList.add('active');

      // Retirer les classes de fermeture si présentes
      mobileMenu.classList.remove('closing');

      // Ajouter la classe d'ouverture avec animation
      mobileMenu.classList.add('opening');
      mobileMenu.style.visibility = 'visible';
      mobileMenu.style.opacity = '1';

      // Après l'animation, passer à l'état actif stable
      setTimeout(function() {
        mobileMenu.classList.remove('opening');
        mobileMenu.classList.add('active');
        isAnimating = false;
      }, 500);

      document.body.style.overflow = 'hidden';
    }

    // Animation de fermeture type "écran TV qui s'éteint"
    function closeMenu() {
      if (isAnimating) return;
      isAnimating = true;

      burger.classList.remove('active');
      overlay.classList.remove('active');

      // Lancer l'animation de fermeture
      mobileMenu.classList.remove('active');
      mobileMenu.classList.remove('opening');
      mobileMenu.classList.add('closing');

      // Après l'animation, cacher le menu
      setTimeout(function() {
        mobileMenu.classList.remove('closing');
        mobileMenu.style.visibility = 'hidden';
        mobileMenu.style.opacity = '0';
        isAnimating = false;
      }, 400);

      document.body.style.overflow = '';
    }

    // Événements burger
    if (burger) {
      burger.addEventListener('click', function() {
        if (mobileMenu.classList.contains('active') || mobileMenu.classList.contains('opening')) {
          closeMenu();
        } else {
          openMenu();
        }
      });
    }

    // Bouton retour (flèche)
    if (closeBtn) {
      closeBtn.addEventListener('click', function(e) {
        e.preventDefault();
        e.stopPropagation();
        closeMenu();
      });
    }

    // Fermer au clic sur l'overlay
    if (overlay) {
      overlay.addEventListener('click', closeMenu);
    }

    // Fermer au clic sur les liens (avec délai pour permettre la navigation)
    const closeLinks = mobileMenu.querySelectorAll('[data-close-menu]');
    closeLinks.forEach(function(link) {
      link.addEventListener('click', function(e) {
        // Ne pas empêcher la navigation, mais fermer le menu avec un léger délai
        setTimeout(closeMenu, 100);
      });
    });

    // Fermer avec Escape
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape' && (mobileMenu.classList.contains('active') || mobileMenu.classList.contains('opening'))) {
        closeMenu();
      }
    });

    // Accordéon sous-menus mobile
    var parentItems = mobileMenu.querySelectorAll('[data-toggle-submenu]');
    parentItems.forEach(function(item) {
      item.addEventListener('click', function(e) {
        e.preventDefault();
        e.stopPropagation();

        var submenu = item.nextElementSibling;
        var isOpen = item.classList.contains('open');

        // Fermer tous les autres
        parentItems.forEach(function(other) {
          other.classList.remove('open');
          if (other.nextElementSibling) other.nextElementSibling.classList.remove('open');
        });

        // Toggle celui-ci
        if (!isOpen) {
          item.classList.add('open');
          if (submenu) submenu.classList.add('open');
        }
      });
    });

    // --- MISE À JOUR DU COMPTEUR PANIER ---
    function updateCartCount() {
      if (typeof fetch !== 'undefined') {
        fetch('/cart.js')
          .then(function(response) { return response.json(); })
          .then(function(cart) {
            [cartCount, desktopCartCount].forEach(function(el) {
              if (el) {
                if (cart.item_count > 0) {
                  el.textContent = cart.item_count;
                  el.style.display = 'flex';
                } else {
                  el.style.display = 'none';
                }
              }
            });
          })
          .catch(function() {});
      }
    }

    // Initialiser le compteur
    updateCartCount();

    // Écouter les changements de panier (Shopify standard)
    document.addEventListener('cart:updated', updateCartCount);

    // --- LOGO SCROLL TO TOP ---
    const logoLink = document.querySelector('#MilauraNav-' + sectionId + ' .nav-logo-link');
    if (logoLink) {
      logoLink.addEventListener('click', function(e) {
        const currentPath = window.location.pathname;
        const rootUrl = '{{ routes.root_url }}';
        const isHomepage = currentPath === rootUrl || (rootUrl === '/' && currentPath === '/');

        if (isHomepage) {
          e.preventDefault();
          window.scrollTo({
            top: 0,
            behavior: 'smooth'
          });
        }
      });
    }
  })();
</script>

