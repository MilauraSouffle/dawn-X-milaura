{% style %}
  /* --- CONTENEUR DU MENU (Positionnement) --- */
  #MilauraNav-{{ section.id }} {
    position: fixed;
    top: 20px;
    left: 50%;
    transform: translateX(-50%);
    width: 95%;
    max-width: 900px; /* Largeur idéale pour le style pilule */
    z-index: 1000000; /* Toujours au-dessus */
    padding: 0 10px;
  }

  /* --- LA PILULE VISION OS (Le verre) --- */
  .milaura-nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 12px 30px;
    
    /* FOND VERRE (Glassmorphism) */
    background: rgba(255, 255, 255, 0.65); /* Blanc laiteux */
    backdrop-filter: blur(15px);
    -webkit-backdrop-filter: blur(15px);
    
    border-radius: 100px; /* Pilule parfaite */
    border: 1px solid rgba(255, 255, 255, 0.8); /* Bordure fine */
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05); /* Ombre douce */
    
    overflow: hidden; /* Important pour que le voile ne dépasse pas */
    position: relative;
    transition: all 0.3s ease;
  }

  /* --- L'ANIMATION "VOILE NOIR" (L'Effet Chic) --- */
  .milaura-nav::after {
    content: '';
    position: absolute;
    top: 0;
    left: -150%; /* Départ hors champ */
    width: 50%; /* Largeur du rayon */
    height: 100%;
    
    /* LE VOILE : Transparent -> Noir très léger -> Transparent */
    background: linear-gradient(
      90deg, 
      transparent, 
      rgba(0, 0, 0, 0.06), /* L'ombre noire subtile (6% opacité) */
      transparent
    );
    
    transform: skewX(-25deg); /* Inclinaison élégante */
    animation: blackVeilPass 6s infinite ease-in-out; /* Passage toutes les 6s */
    pointer-events: none;
  }

  @keyframes blackVeilPass {
    0% { left: -100%; }
    15% { left: 200%; } /* Passe rapidement */
    100% { left: 200%; } /* Attend avant de recommencer */
  }

  /* --- LOGO --- */
  .nav-logo img {
    height: 40px;
    width: auto;
    display: block;
  }

  /* --- LIENS --- */
  .nav-links {
    display: flex;
    gap: 25px;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .nav-link {
    text-decoration: none;
    color: #1A1A1A; /* Noir Encre */
    font-family: 'Lato', sans-serif;
    font-weight: 600;
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    position: relative;
    transition: color 0.3s;
  }

  /* Petit point doré au survol du lien */
  .nav-link::after {
    content: '';
    position: absolute;
    bottom: -5px;
    left: 50%;
    width: 0;
    height: 2px;
    background: #C0A062; /* Or */
    transition: all 0.3s ease;
    transform: translateX(-50%);
  }
  
  .nav-link:hover::after {
    width: 100%;
  }

  .nav-link:hover {
    color: #C0A062;
  }

  /* --- ICÔNES (Droite) --- */
  .nav-icons {
    display: flex;
    gap: 15px;
    align-items: center;
  }

  .nav-icon {
    color: #1A1A1A;
    text-decoration: none;
    font-size: 1.2rem;
    transition: transform 0.2s;
  }

  .nav-icon:hover {
    color: #C0A062;
    transform: scale(1.1);
  }

  /* --- MOBILE --- */
  @media screen and (max-width: 900px) {
    #MilauraNav-{{ section.id }} {
      top: 10px; /* Plus haut sur mobile */
      width: 98%;
    }
    .nav-links { display: none; } /* On cache les liens textes sur mobile */
    .milaura-nav {
      justify-content: space-between;
      padding: 10px 20px;
    }
  }
{% endstyle %}

<div id="MilauraNav-{{ section.id }}">
  <div class="milaura-nav">
    
    <a href="/" class="nav-logo">
      {% if section.settings.logo != blank %}
        {{ section.settings.logo | image_url: width: 200 | image_tag: loading: 'eager' }}
      {% else %}
        <span style="font-family: 'Playfair Display'; font-weight:bold; font-size:1.2rem;">Mil'Aura</span>
      {% endif %}
    </a>

    <ul class="nav-links">
      {% for link in section.settings.menu.links %}
        <li><a href="{{ link.url }}" class="nav-link">{{ link.title }}</a></li>
      {% endfor %}
    </ul>

    <div class="nav-icons">
      <a href="{{ routes.search_url }}" class="nav-icon">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg>
      </a>
      <a href="{{ routes.account_url }}" class="nav-icon">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"></circle></svg>
      </a>
      <a href="{{ routes.cart_url }}" class="nav-icon">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="9" cy="21" r="1"></circle><circle cx="20" cy="21" r="1"></circle><path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path></svg>
      </a>
    </div>

  </div>
</div>

