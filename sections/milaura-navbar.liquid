{% style %}
  /* ============================================
     MILAURA NAVBAR - VERSION CTA & CRO
     Badge Quiz visible sur TOUS les écrans
     ============================================ */

  /* --- CONTENEUR PRINCIPAL --- */
  #MilauraNav-{{ section.id }} {
    position: fixed;
    top: 38px;
    left: 0;
    width: 100%;
    z-index: 1000000;
    display: flex;
    justify-content: center;
    padding: 0 24px;
    pointer-events: none;
    transition: top 0.3s ease;
    box-sizing: border-box;
  }

  /* --- WRAPPER SNAKE (contient l'ombre) --- */
  #MilauraNav-{{ section.id }} .nav-snake-wrapper {
    position: relative;
    padding: 2px;
    border-radius: 100px;
    pointer-events: auto;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08), 0 2px 8px rgba(0, 0, 0, 0.04);
    animation: slideDown 0.8s cubic-bezier(0.2, 0.8, 0.2, 1);
    max-width: 1280px;
    width: 100%;
  }

  /* Animation de balayage subtile */
  #MilauraNav-{{ section.id }} .nav-snake-wrapper::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 50%;
    height: 100%;
    background: linear-gradient(
      to right,
      transparent 0%,
      rgba(192, 160, 98, 0.1) 50%,
      transparent 100%
    );
    animation: breathSweep 5s ease-in-out infinite;
    z-index: 0;
    pointer-events: none;
    border-radius: 100px;
  }

  /* --- INTÉRIEUR GLASSMORPHISM --- */
  #MilauraNav-{{ section.id }} .nav-inner {
    position: relative;
    z-index: 1;
    background: rgba(253, 251, 247, 0.92);
    backdrop-filter: blur(20px) saturate(180%);
    -webkit-backdrop-filter: blur(20px) saturate(180%);
    border-radius: 100px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 6px 12px 6px 24px;
    gap: 16px;
    border: 1px solid rgba(192, 160, 98, 0.15);
  }

  /* --- LOGO --- */
  #MilauraNav-{{ section.id }} .nav-logo-link {
    display: flex;
    align-items: center;
    text-decoration: none;
    flex-shrink: 0;
  }

  #MilauraNav-{{ section.id }} .nav-logo-img {
    height: 52px;
    width: auto;
    object-fit: contain;
    display: block;
    transition: height 0.3s ease;
  }

  #MilauraNav-{{ section.id }} .nav-logo-text {
    font-family: 'Playfair Display', serif;
    font-size: 1.5rem;
    color: var(--milaura-text);
    font-weight: 600;
  }

  /* --- LIENS DU MENU (Desktop uniquement) --- */
  #MilauraNav-{{ section.id }} .nav-links {
    display: flex;
    gap: 24px;
    list-style: none;
    margin: 0;
    padding: 0;
    align-items: center;
    flex: 1;
    justify-content: center;
  }

  #MilauraNav-{{ section.id }} .nav-link {
    font-family: 'Lato', sans-serif;
    font-size: 0.85rem;
    color: var(--milaura-text);
    text-decoration: none;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    transition: color 0.3s ease;
    position: relative;
    white-space: nowrap;
  }

  #MilauraNav-{{ section.id }} .nav-link::after {
    content: '';
    position: absolute;
    width: 0;
    height: 2px;
    bottom: -4px;
    left: 50%;
    background: linear-gradient(90deg, var(--milaura-gold), var(--milaura-gold-light));
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    transform: translateX(-50%);
    border-radius: 2px;
  }

  #MilauraNav-{{ section.id }} .nav-link:hover {
    color: var(--milaura-gold-dark);
  }

  #MilauraNav-{{ section.id }} .nav-link:hover::after {
    width: 100%;
  }

  /* --- DROPDOWN DESKTOP --- */
  #MilauraNav-{{ section.id }} .nav-item {
    position: relative;
  }

  #MilauraNav-{{ section.id }} .nav-item-has-children > .nav-link {
    display: inline-flex;
    align-items: center;
    gap: 4px;
  }

  #MilauraNav-{{ section.id }} .nav-link-chevron {
    width: 12px;
    height: 12px;
    transition: transform 0.3s ease;
    flex-shrink: 0;
  }

  #MilauraNav-{{ section.id }} .nav-item-has-children:hover .nav-link-chevron {
    transform: rotate(180deg);
  }

  #MilauraNav-{{ section.id }} .nav-dropdown {
    position: absolute;
    top: calc(100% + 12px);
    left: 50%;
    transform: translateX(-50%) translateY(8px);
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border: 1px solid rgba(192, 160, 98, 0.15);
    border-radius: 16px;
    padding: 12px 8px;
    min-width: 220px;
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.1), 0 2px 8px rgba(0, 0, 0, 0.04);
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.25s ease, transform 0.25s ease, visibility 0.25s ease;
    list-style: none;
    margin: 0;
    z-index: 100;
  }

  #MilauraNav-{{ section.id }} .nav-item-has-children:hover .nav-dropdown {
    opacity: 1;
    visibility: visible;
    transform: translateX(-50%) translateY(0);
  }

  /* Zone invisible pour maintenir le hover entre le lien et le dropdown */
  #MilauraNav-{{ section.id }} .nav-item-has-children::after {
    content: '';
    position: absolute;
    top: 100%;
    left: 0;
    width: 100%;
    height: 16px;
  }

  #MilauraNav-{{ section.id }} .nav-dropdown li {
    margin: 0;
  }

  #MilauraNav-{{ section.id }} .nav-dropdown-link {
    display: block;
    padding: 10px 16px;
    font-family: 'Lato', sans-serif;
    font-size: 0.85rem;
    color: var(--milaura-text);
    text-decoration: none;
    font-weight: 500;
    letter-spacing: 0.5px;
    border-radius: 10px;
    transition: background 0.2s ease, color 0.2s ease;
    white-space: nowrap;
  }

  #MilauraNav-{{ section.id }} .nav-dropdown-link:hover {
    background: rgba(192, 160, 98, 0.1);
    color: var(--milaura-gold-dark);
  }

  /* ============================================
     SUPER CTA BADGE QUIZ - LE CŒUR DU FUNNEL
     Visible sur TOUS les écrans avec halo pulsant
     ============================================ */
  #MilauraNav-{{ section.id }} .nav-quiz-badge {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    background: linear-gradient(135deg, var(--milaura-gold) 0%, #D4B678 50%, var(--milaura-gold-light) 100%);
    background-size: 200% 200%;
    color: #fff;
    padding: 12px 24px;
    border-radius: 50px;
    text-decoration: none;
    box-shadow: 0 4px 20px rgba(192, 160, 98, 0.5);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    white-space: nowrap;
    position: relative;
    flex-shrink: 0;
    animation: badgeShimmer 3s ease-in-out infinite;
  }

  /* HALO PULSANT - via pseudo-element pour ne pas interférer avec hover */
  #MilauraNav-{{ section.id }} .nav-quiz-badge::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    border-radius: 50px;
    box-shadow: 0 0 0 0 rgba(192, 160, 98, 0.6);
    animation: haloPulse 2s ease-out infinite;
    pointer-events: none;
  }

  @keyframes haloPulse {
    0% {
      box-shadow: 0 0 0 0 rgba(192, 160, 98, 0.6);
    }
    50% {
      box-shadow: 0 0 0 12px rgba(192, 160, 98, 0);
    }
    100% {
      box-shadow: 0 0 0 0 rgba(192, 160, 98, 0);
    }
  }

  @keyframes badgeShimmer {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  #MilauraNav-{{ section.id }} .nav-quiz-badge:hover {
    transform: translateY(-3px) scale(1.02);
    box-shadow: 0 8px 30px rgba(192, 160, 98, 0.6);
  }

  #MilauraNav-{{ section.id }} .nav-quiz-badge:hover::before {
    animation: none;
  }

  #MilauraNav-{{ section.id }} .badge-icon {
    font-size: 1.4rem;
    animation: iconBounce 2s ease-in-out infinite;
    flex-shrink: 0;
  }

  @keyframes iconBounce {
    0%, 100% { transform: translateY(0) scale(1); }
    50% { transform: translateY(-2px) scale(1.1); }
  }

  #MilauraNav-{{ section.id }} .badge-content {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    line-height: 1.2;
  }

  #MilauraNav-{{ section.id }} .badge-title {
    font-family: 'Lato', sans-serif;
    font-size: 1.1rem;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
  }

  #MilauraNav-{{ section.id }} .badge-subtitle {
    display: none;
  }

  /* --- ZONE DROITE (badge + icônes) --- */
  #MilauraNav-{{ section.id }} .nav-right {
    display: flex;
    align-items: center;
    gap: 16px;
    flex-shrink: 0;
  }

  /* --- ICÔNES --- */
  #MilauraNav-{{ section.id }} .nav-icons {
    display: flex;
    gap: 14px;
    align-items: center;
    flex-shrink: 0;
  }

  #MilauraNav-{{ section.id }} .nav-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--milaura-text);
    transition: transform 0.3s ease, color 0.3s ease;
    text-decoration: none;
  }

  #MilauraNav-{{ section.id }} .nav-icon:hover {
    color: var(--milaura-gold);
    transform: scale(1.1);
  }

  #MilauraNav-{{ section.id }} .nav-icon svg {
    width: 20px;
    height: 20px;
  }

  /* Bouton contact (reset button styles) */
  #MilauraNav-{{ section.id }} .nav-contact-icon {
    background: none;
    border: none;
    padding: 0;
    cursor: pointer;
  }

  /* Badge compteur panier (header) */
  #MilauraNav-{{ section.id }} .nav-cart-icon {
    position: relative;
  }

  #MilauraNav-{{ section.id }} .nav-cart-count {
    position: absolute;
    top: -6px;
    right: -8px;
    min-width: 18px;
    height: 18px;
    background: linear-gradient(135deg, var(--milaura-gold) 0%, var(--milaura-gold-dark) 100%);
    color: #fff;
    font-size: 0.65rem;
    font-weight: 700;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 4px;
    pointer-events: none;
  }

  /* --- MENU TOGGLE — 2 traits dorés (luxe) --- */
  #MilauraNav-{{ section.id }} .nav-burger {
    display: none;
    flex-direction: column;
    justify-content: center;
    gap: 6px;
    cursor: pointer;
    padding: 10px;
    background: transparent;
    border: none;
    z-index: 10;
  }

  #MilauraNav-{{ section.id }} .nav-burger span {
    width: 20px;
    height: 2px;
    background: linear-gradient(90deg, var(--milaura-gold), var(--milaura-gold-light));
    border-radius: 2px;
    display: block;
    transition: all 0.35s cubic-bezier(0.4, 0, 0.2, 1);
    transform-origin: center;
  }

  /* 2e trait plus court — asymétrie luxe */
  #MilauraNav-{{ section.id }} .nav-burger span:nth-child(2) {
    width: 14px;
    margin-left: auto;
  }

  #MilauraNav-{{ section.id }} .nav-burger:hover span {
    background: linear-gradient(90deg, var(--milaura-gold-light), var(--milaura-gold));
  }

  #MilauraNav-{{ section.id }} .nav-burger:hover span:nth-child(2) {
    width: 20px;
  }

  /* Active → X */
  #MilauraNav-{{ section.id }} .nav-burger.active span:nth-child(1) {
    transform: rotate(45deg) translate(2.8px, 2.8px);
  }

  #MilauraNav-{{ section.id }} .nav-burger.active span:nth-child(2) {
    width: 20px;
    transform: rotate(-45deg) translate(2.8px, -2.8px);
  }

  /* ============================================
     MENU MOBILE - EFFET ÉCRAN TV LUXUEUX
     ============================================ */

  /* Overlay sombre derrière le menu */
  #MilauraNav-{{ section.id }} .nav-mobile-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    height: 100dvh;
    background: rgba(0, 0, 0, 0.6);
    z-index: 999998;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.4s ease, visibility 0.4s ease;
  }

  #MilauraNav-{{ section.id }} .nav-mobile-overlay.active {
    opacity: 1;
    visibility: visible;
  }

  /* Menu principal - Effet écran TV */
  #MilauraNav-{{ section.id }} .nav-mobile-menu {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    height: 100dvh;
    background: linear-gradient(
      165deg,
      rgba(35, 28, 20, 0.98) 0%,
      rgba(50, 40, 28, 0.98) 30%,
      rgba(65, 52, 35, 0.97) 60%,
      rgba(80, 62, 40, 0.96) 100%
    );
    backdrop-filter: blur(30px) saturate(150%);
    -webkit-backdrop-filter: blur(30px) saturate(150%);
    z-index: 999999;
    padding: 100px 32px 40px;
    overflow-y: auto;
    display: flex;
    flex-direction: column;

    /* Animation écran TV - départ */
    opacity: 0;
    visibility: hidden;
    transform: scale(0.95);
    transform-origin: center center;
    transition:
      opacity 0.5s cubic-bezier(0.4, 0, 0.2, 1),
      visibility 0.5s cubic-bezier(0.4, 0, 0.2, 1),
      transform 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Glow doré subtil sur les bords */
  #MilauraNav-{{ section.id }} .nav-mobile-menu::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    border: 2px solid transparent;
    background: linear-gradient(
      135deg,
      rgba(192, 160, 98, 0.4) 0%,
      rgba(192, 160, 98, 0.1) 25%,
      transparent 50%,
      rgba(192, 160, 98, 0.1) 75%,
      rgba(192, 160, 98, 0.4) 100%
    ) border-box;
    -webkit-mask: linear-gradient(#fff 0 0) padding-box, linear-gradient(#fff 0 0);
    mask: linear-gradient(#fff 0 0) padding-box, linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    pointer-events: none;
    opacity: 0;
    transition: opacity 0.6s ease 0.2s;
  }

  /* Effet scan line TV rétro subtil */
  #MilauraNav-{{ section.id }} .nav-mobile-menu::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: repeating-linear-gradient(
      0deg,
      transparent,
      transparent 2px,
      rgba(192, 160, 98, 0.02) 2px,
      rgba(192, 160, 98, 0.02) 4px
    );
    pointer-events: none;
    opacity: 0;
    transition: opacity 0.4s ease 0.3s;
  }

  /* Animation écran TV - actif */
  #MilauraNav-{{ section.id }} .nav-mobile-menu.active {
    opacity: 1;
    visibility: visible;
    transform: scale(1);
  }

  #MilauraNav-{{ section.id }} .nav-mobile-menu.active::before,
  #MilauraNav-{{ section.id }} .nav-mobile-menu.active::after {
    opacity: 1;
  }

  /* Animation de fermeture TV (extinction) */
  #MilauraNav-{{ section.id }} .nav-mobile-menu.closing {
    animation: tvTurnOff 0.4s cubic-bezier(0.4, 0, 1, 1) forwards;
  }

  @keyframes tvTurnOff {
    0% {
      opacity: 1;
      transform: scale(1);
    }
    30% {
      opacity: 1;
      transform: scale(1, 0.8);
    }
    60% {
      opacity: 0.8;
      transform: scale(0.8, 0.01);
    }
    100% {
      opacity: 0;
      transform: scale(0, 0);
    }
  }

  /* Animation d'ouverture TV (allumage) */
  #MilauraNav-{{ section.id }} .nav-mobile-menu.opening {
    animation: tvTurnOn 0.5s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
  }

  @keyframes tvTurnOn {
    0% {
      opacity: 0;
      transform: scale(0, 0);
    }
    30% {
      opacity: 0.5;
      transform: scale(0.8, 0.01);
    }
    60% {
      opacity: 0.8;
      transform: scale(1, 0.8);
    }
    100% {
      opacity: 1;
      transform: scale(1);
    }
  }

  /* Header du menu mobile avec logo et bouton retour */
  #MilauraNav-{{ section.id }} .nav-mobile-header {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 20px 24px;
    z-index: 100;
    pointer-events: auto;
  }

  /* Bouton retour (flèche) */
  #MilauraNav-{{ section.id }} .nav-mobile-back {
    display: flex;
    align-items: center;
    gap: 8px;
    background: linear-gradient(135deg, rgba(192, 160, 98, 0.2) 0%, rgba(192, 160, 98, 0.1) 100%);
    border: 1px solid rgba(192, 160, 98, 0.4);
    border-radius: 50px;
    padding: 12px 20px;
    cursor: pointer;
    transition: all 0.3s ease;
    color: var(--milaura-gold-light, #E6C88B);
    font-family: 'Lato', sans-serif;
    font-size: 0.85rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    pointer-events: auto;
    position: relative;
    z-index: 101;
  }

  #MilauraNav-{{ section.id }} .nav-mobile-back:hover,
  #MilauraNav-{{ section.id }} .nav-mobile-back:active {
    background: linear-gradient(135deg, var(--milaura-gold) 0%, var(--milaura-gold-light) 100%);
    border-color: var(--milaura-gold);
    color: #fff;
    transform: translateX(-3px);
  }

  #MilauraNav-{{ section.id }} .nav-mobile-back svg {
    width: 18px;
    height: 18px;
    transition: transform 0.3s ease;
  }

  #MilauraNav-{{ section.id }} .nav-mobile-back:hover svg {
    transform: translateX(-3px);
  }

  /* Icônes essentielles dans le header mobile */
  #MilauraNav-{{ section.id }} .nav-mobile-icons {
    display: flex;
    gap: 16px;
    align-items: center;
    pointer-events: auto;
    position: relative;
    z-index: 101;
  }

  #MilauraNav-{{ section.id }} .nav-mobile-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    background: rgba(192, 160, 98, 0.15);
    border: 1px solid rgba(192, 160, 98, 0.3);
    border-radius: 50%;
    color: var(--milaura-gold-light, #E6C88B);
    text-decoration: none;
    transition: all 0.3s ease;
    position: relative;
    z-index: 101;
    pointer-events: auto;
    cursor: pointer;
  }

  #MilauraNav-{{ section.id }} .nav-mobile-icon:hover,
  #MilauraNav-{{ section.id }} .nav-mobile-icon:active {
    background: linear-gradient(135deg, var(--milaura-gold) 0%, var(--milaura-gold-light) 100%);
    border-color: var(--milaura-gold);
    color: #fff;
    transform: scale(1.08);
  }

  #MilauraNav-{{ section.id }} .nav-mobile-icon svg {
    width: 20px;
    height: 20px;
  }

  /* Badge panier */
  #MilauraNav-{{ section.id }} .nav-mobile-cart-count {
    position: absolute;
    top: -4px;
    right: -4px;
    min-width: 18px;
    height: 18px;
    background: linear-gradient(135deg, var(--milaura-gold) 0%, var(--milaura-gold-dark) 100%);
    color: #fff;
    font-size: 0.65rem;
    font-weight: 700;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 4px;
  }

  /* Liste des liens */
  #MilauraNav-{{ section.id }} .nav-mobile-links {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 0;
    position: relative;
    z-index: 50;
    pointer-events: auto;
  }

  #MilauraNav-{{ section.id }} .nav-mobile-link {
    font-family: 'Playfair Display', serif;
    font-size: 1.4rem;
    color: #fff;
    text-decoration: none;
    font-weight: 500;
    letter-spacing: 0.5px;
    display: flex;
    align-items: center;
    padding: 18px 0;
    border-bottom: 1px solid rgba(192, 160, 98, 0.2);
    transition: all 0.3s ease;
    position: relative;
    cursor: pointer;
    pointer-events: auto;
    z-index: 51;
  }

  /* Accent doré au survol */
  #MilauraNav-{{ section.id }} .nav-mobile-link::before {
    content: '';
    position: absolute;
    left: -32px;
    top: 0;
    bottom: 0;
    width: 3px;
    background: linear-gradient(180deg, var(--milaura-gold) 0%, var(--milaura-gold-light) 100%);
    border-radius: 0 3px 3px 0;
    opacity: 0;
    transform: scaleY(0);
    transition: all 0.3s ease;
  }

  #MilauraNav-{{ section.id }} .nav-mobile-link:hover,
  #MilauraNav-{{ section.id }} .nav-mobile-link:active {
    color: var(--milaura-gold-light, #E6C88B);
    padding-left: 16px;
  }

  #MilauraNav-{{ section.id }} .nav-mobile-link:hover::before,
  #MilauraNav-{{ section.id }} .nav-mobile-link:active::before {
    opacity: 1;
    transform: scaleY(1);
  }

  /* --- SOUS-MENU MOBILE (Accordéon) --- */
  #MilauraNav-{{ section.id }} .nav-mobile-parent {
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  #MilauraNav-{{ section.id }} .nav-mobile-parent .nav-link-chevron {
    width: 18px;
    height: 18px;
    transition: transform 0.3s ease;
    flex-shrink: 0;
    color: var(--milaura-gold);
  }

  #MilauraNav-{{ section.id }} .nav-mobile-parent.open .nav-link-chevron {
    transform: rotate(180deg);
  }

  #MilauraNav-{{ section.id }} .nav-mobile-submenu {
    list-style: none;
    margin: 0;
    padding: 0;
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    background: rgba(0, 0, 0, 0.2);
    border-radius: 12px;
    margin-top: 0;
  }

