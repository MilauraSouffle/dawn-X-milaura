{%- style -%}
  /* ===========================================
     SECTION PADDING - Mobile optimis√©
     =========================================== */
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.5 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.5 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* ===========================================
     TABS WRAPPER (Golden Frame)
     =========================================== */
  .milaura-product-tabs__wrapper {
    max-width: 900px;
  }

  /* ===========================================
     DESKTOP TABS
     =========================================== */
  .milaura-tabs-nav {
    display: none;
    border-bottom: 1px solid rgba(0,0,0,0.1);
    margin-bottom: 1.5rem;
    justify-content: center;
    gap: 2rem;
  }

  @media screen and (min-width: 750px) {
    .milaura-tabs-nav {
      display: flex;
    }
  }

  .milaura-tab-btn {
    background: none;
    border: none;
    padding: 0.75rem 0;
    font-family: var(--milaura-font-heading);
    font-size: {{ section.settings.tab_title_size }}rem;
    color: {{ section.settings.tab_inactive_color }};
    cursor: pointer;
    position: relative;
    transition: all 0.3s;
  }

  .milaura-tab-btn:hover {
    color: {{ section.settings.tab_hover_color }};
  }

  .milaura-tab-btn[aria-selected="true"] {
    color: {{ section.settings.tab_active_color }};
    font-weight: 700;
  }

  .milaura-tab-btn[aria-selected="true"]::after {
    content: '';
    position: absolute;
    bottom: -1px;
    left: 0;
    width: 100%;
    height: 2px;
    background: var(--milaura-gold);
  }

  .milaura-tab-panel {
    display: none;
    animation: fadeIn 0.3s ease;
  }

  .milaura-tab-panel[aria-hidden="false"] {
    display: block;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(5px); }
    to { opacity: 1; transform: translateY(0); }
  }

  /* ===========================================
     SPECS LIST - Compact
     =========================================== */
  .specs-list {
    display: grid;
    grid-template-columns: 1fr;
    gap: 8px;
  }

  @media screen and (min-width: 750px) {
    .specs-list {
      grid-template-columns: repeat(2, 1fr);
      gap: 12px;
    }
  }

  .spec-item {
    display: flex;
    justify-content: space-between;
    padding: 10px 12px;
    background: rgba(0,0,0,0.02);
    border-radius: 6px;
    font-size: 14px;
  }

  .spec-label {
    font-weight: 600;
    color: var(--milaura-text);
  }

  .spec-value {
    color: var(--milaura-text-light);
  }

  /* ===========================================
     MOBILE ACCORDIONS - Compact
     =========================================== */
  .milaura-accordion-group {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  @media screen and (min-width: 750px) {
    .milaura-accordion-group {
      display: none;
    }
  }

  .milaura-accordion-group .accordion {
    border: 1px solid rgba(0,0,0,0.08);
    border-radius: 10px;
    overflow: hidden;
    background: #fff;
  }

  .milaura-accordion-group .accordion summary {
    padding: 12px 14px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    cursor: pointer;
    list-style: none;
  }

  .milaura-accordion-group .accordion summary::-webkit-details-marker {
    display: none;
  }

  .milaura-accordion-group .accordion summary .summary__title {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .milaura-accordion-group .accordion .accordion__title {
    font-size: 15px;
    font-weight: 600;
    margin: 0;
    color: var(--milaura-text);
  }

  .milaura-accordion-group .accordion .icon-caret {
    transition: transform 0.2s ease;
    color: var(--milaura-gold);
  }

  .milaura-accordion-group .accordion[open] .icon-caret {
    transform: rotate(180deg);
  }

  .milaura-accordion-group .accordion__content {
    padding: 0 14px 14px;
    font-size: 14px;
    line-height: 1.5;
    color: var(--milaura-text-light);
  }

  .milaura-accordion-group .accordion__content p {
    margin: 0 0 10px;
  }

  .milaura-accordion-group .accordion__content p:last-child {
    margin-bottom: 0;
  }

  /* Hide icon-accordion on mobile if not needed */
  .milaura-accordion-group .icon-accordion {
    display: none;
  }

  @media (prefers-reduced-motion: reduce) {
    *, *::before, *::after {
      transition: none !important;
      animation: none !important;
    }
  }
{%- endstyle -%}

<div id="ProductTabs" class="page-width section-{{ section.id }}-padding">
  <div class="milaura-product-tabs__wrapper milaura-section-card">

  <!-- Desktop Tabs Navigation -->
  <div class="milaura-tabs-nav" role="tablist">
    {%- for block in section.blocks -%}
      <button 
        class="milaura-tab-btn" 
        role="tab" 
        aria-selected="{% if forloop.first %}true{% else %}false{% endif %}"
        aria-controls="panel-{{ block.id }}"
        id="tab-{{ block.id }}"
        onclick="switchTab('{{ block.id }}')"
      >
        {{ block.settings.title }}
      </button>
    {%- endfor -%}
  </div>

  <!-- Desktop Panels -->
  <div class="milaura-tabs-content hidden-mobile">
    {%- for block in section.blocks -%}
      <div 
        class="milaura-tab-panel" 
        role="tabpanel" 
        id="panel-{{ block.id }}" 
        aria-labelledby="tab-{{ block.id }}"
        aria-hidden="{% if forloop.first %}false{% else %}true{% endif %}"
        {% unless forloop.first %}style="display:none;"{% endunless %}
      >
        <div class="rte">
          {%- case block.type -%}
            {%- when 'description' -%}
              {{ product.description }}
            {%- when 'specifications' -%}
              <div class="specs-list">
                {%- for i in (1..8) -%}
                  {%- assign label_key = 'spec_label_' | append: i -%}
                  {%- assign value_key = 'spec_value_' | append: i -%}
                  {%- if block.settings[label_key] != blank -%}
                    <div class="spec-item">
                      <span class="spec-label">{{ block.settings[label_key] }}</span>
                      <span class="spec-value">{{ block.settings[value_key] }}</span>
                    </div>
                  {%- endif -%}
                {%- endfor -%}
              </div>
            {%- when 'content' -%}
              {{ block.settings.content }}
          {%- endcase -%}
        </div>
      </div>
    {%- endfor -%}
  </div>

  <!-- Mobile Accordions -->
  <div class="milaura-accordion-group">
    {%- for block in section.blocks -%}
      <div class="accordion" {{ block.shopify_attributes }}>
        <details>
          <summary>
            <div class="summary__title">
              {% render 'icon-accordion', icon: 'none' %}
              <h2 class="h4 accordion__title">{{ block.settings.title }}</h2>
            </div>
            {% render 'icon-caret' %}
          </summary>
          <div class="accordion__content rte">
            {%- case block.type -%}
              {%- when 'description' -%}
                {{ product.description }}
              {%- when 'specifications' -%}
                <div class="specs-list">
                  {%- for i in (1..8) -%}
                    {%- assign label_key = 'spec_label_' | append: i -%}
                    {%- assign value_key = 'spec_value_' | append: i -%}
                    {%- if block.settings[label_key] != blank -%}
                      <div class="spec-item">
                        <span class="spec-label">{{ block.settings[label_key] }}</span>
                        <span class="spec-value">{{ block.settings[value_key] }}</span>
                      </div>
                    {%- endif -%}
                  {%- endfor -%}
                </div>
              {%- when 'content' -%}
                {{ block.settings.content }}
            {%- endcase -%}
          </div>
        </details>
      </div>
    {%- endfor -%}
  </div>
  </div>{%- comment -%} .milaura-product-tabs__wrapper {%- endcomment -%}

</div>

<script>
  function switchTab(blockId) {
    // Hide all panels
    document.querySelectorAll('.milaura-tab-panel').forEach(panel => {
      panel.setAttribute('aria-hidden', 'true');
      panel.style.display = 'none';
    });
    
    // Deactivate all buttons
    document.querySelectorAll('.milaura-tab-btn').forEach(btn => {
      btn.setAttribute('aria-selected', 'false');
    });
    
    // Show selected panel
    const selectedPanel = document.getElementById('panel-' + blockId);
    if(selectedPanel) {
      selectedPanel.setAttribute('aria-hidden', 'false');
      selectedPanel.style.display = 'block';
    }
    
    // Activate button
    const selectedBtn = document.getElementById('tab-' + blockId);
    if(selectedBtn) {
      selectedBtn.setAttribute('aria-selected', 'true');
    }
  }
</script>

