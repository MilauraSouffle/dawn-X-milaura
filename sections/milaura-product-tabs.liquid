{{ 'component-accordion.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* Desktop Tabs */
  .milaura-tabs-nav {
    display: none;
    border-bottom: 1px solid rgba(0,0,0,0.1);
    margin-bottom: 2rem;
    justify-content: center;
    gap: 3rem;
  }

  @media screen and (min-width: 750px) {
    .milaura-tabs-nav {
      display: flex;
    }
  }

  .milaura-tab-btn {
    background: none;
    border: none;
    padding: 1rem 0;
    font-family: var(--milaura-font-heading);
    font-size: 1.8rem;
    color: var(--milaura-text-light);
    cursor: pointer;
    position: relative;
    transition: all 0.3s;
  }

  .milaura-tab-btn:hover {
    color: var(--milaura-gold);
  }

  .milaura-tab-btn[aria-selected="true"] {
    color: var(--milaura-text);
    font-weight: 700;
  }

  .milaura-tab-btn[aria-selected="true"]::after {
    content: '';
    position: absolute;
    bottom: -1px;
    left: 0;
    width: 100%;
    height: 3px;
    background: var(--milaura-gold);
  }

  .milaura-tab-panel {
    display: none;
    animation: fadeIn 0.4s ease;
  }

  .milaura-tab-panel[aria-hidden="false"] {
    display: block;
  }
  
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  /* Specs List */
  .specs-list {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
  }
  @media screen and (min-width: 750px) {
    .specs-list {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  .spec-item {
    display: flex;
    justify-content: space-between;
    padding: 1rem;
    background: rgba(0,0,0,0.02);
    border-radius: 8px;
  }
  .spec-label { font-weight: 600; }

  /* Mobile Accordions */
  .milaura-accordion-group {
    display: block;
  }
  @media screen and (min-width: 750px) {
    .milaura-accordion-group {
      display: none;
    }
  }
{%- endstyle -%}

<div class="page-width section-{{ section.id }}-padding">
  
  <!-- Desktop Tabs Navigation -->
  <div class="milaura-tabs-nav" role="tablist">
    {%- for block in section.blocks -%}
      <button 
        class="milaura-tab-btn" 
        role="tab" 
        aria-selected="{% if forloop.first %}true{% else %}false{% endif %}"
        aria-controls="panel-{{ block.id }}"
        id="tab-{{ block.id }}"
        onclick="switchTab('{{ block.id }}')"
      >
        {{ block.settings.title }}
      </button>
    {%- endfor -%}
  </div>

  <!-- Desktop Panels -->
  <div class="milaura-tabs-content hidden-mobile">
    {%- for block in section.blocks -%}
      <div 
        class="milaura-tab-panel" 
        role="tabpanel" 
        id="panel-{{ block.id }}" 
        aria-labelledby="tab-{{ block.id }}"
        aria-hidden="{% if forloop.first %}false{% else %}true{% endif %}"
        {% unless forloop.first %}style="display:none;"{% endunless %}
      >
        <div class="rte">
          {%- case block.type -%}
            {%- when 'description' -%}
              {{ product.description }}
            {%- when 'specifications' -%}
              <div class="specs-list">
                {%- for i in (1..8) -%}
                  {%- assign label_key = 'spec_label_' | append: i -%}
                  {%- assign value_key = 'spec_value_' | append: i -%}
                  {%- if block.settings[label_key] != blank -%}
                    <div class="spec-item">
                      <span class="spec-label">{{ block.settings[label_key] }}</span>
                      <span class="spec-value">{{ block.settings[value_key] }}</span>
                    </div>
                  {%- endif -%}
                {%- endfor -%}
              </div>
            {%- when 'content' -%}
              {{ block.settings.content }}
          {%- endcase -%}
        </div>
      </div>
    {%- endfor -%}
  </div>

  <!-- Mobile Accordions -->
  <div class="milaura-accordion-group">
    {%- for block in section.blocks -%}
      <div class="accordion" {{ block.shopify_attributes }}>
        <details>
          <summary>
            <div class="summary__title">
              {% render 'icon-accordion', icon: 'none' %}
              <h2 class="h4 accordion__title">{{ block.settings.title }}</h2>
            </div>
            {% render 'icon-caret' %}
          </summary>
          <div class="accordion__content rte">
            {%- case block.type -%}
              {%- when 'description' -%}
                {{ product.description }}
              {%- when 'specifications' -%}
                <div class="specs-list">
                  {%- for i in (1..8) -%}
                    {%- assign label_key = 'spec_label_' | append: i -%}
                    {%- assign value_key = 'spec_value_' | append: i -%}
                    {%- if block.settings[label_key] != blank -%}
                      <div class="spec-item">
                        <span class="spec-label">{{ block.settings[label_key] }}</span>
                        <span class="spec-value">{{ block.settings[value_key] }}</span>
                      </div>
                    {%- endif -%}
                  {%- endfor -%}
                </div>
              {%- when 'content' -%}
                {{ block.settings.content }}
            {%- endcase -%}
          </div>
        </details>
      </div>
    {%- endfor -%}
  </div>

</div>

<script>
  function switchTab(blockId) {
    // Hide all panels
    document.querySelectorAll('.milaura-tab-panel').forEach(panel => {
      panel.setAttribute('aria-hidden', 'true');
      panel.style.display = 'none';
    });
    
    // Deactivate all buttons
    document.querySelectorAll('.milaura-tab-btn').forEach(btn => {
      btn.setAttribute('aria-selected', 'false');
    });
    
    // Show selected panel
    const selectedPanel = document.getElementById('panel-' + blockId);
    if(selectedPanel) {
      selectedPanel.setAttribute('aria-hidden', 'false');
      selectedPanel.style.display = 'block';
    }
    
    // Activate button
    const selectedBtn = document.getElementById('tab-' + blockId);
    if(selectedBtn) {
      selectedBtn.setAttribute('aria-selected', 'true');
    }
  }
</script>

