    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
    </svg>
    <span class="milaura-dock-label">{{ section.settings.phone_label | default: 'Appeler' }}</span>
  </button>

  <!-- 2. Compte -->
  <a href="/account" class="milaura-dock-item" aria-label="{{ section.settings.account_label | default: 'Compte' }}">
    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
      <circle cx="12" cy="7" r="4"/>
    </svg>
    <span class="milaura-dock-label">{{ section.settings.account_label | default: 'Compte' }}</span>
  </a>

  <!-- 3. Contact -->
  <a href="{{ section.settings.contact_url | default: '/pages/contact-milaura' }}" class="milaura-dock-item" aria-label="{{ section.settings.contact_label | default: 'Contact' }}">
    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
      <polyline points="22,6 12,13 2,6"/>
    </svg>
    <span class="milaura-dock-label">{{ section.settings.contact_label | default: 'Contact' }}</span>
  </a>

  <!-- 4. Panier -->
  <a href="/cart" class="milaura-dock-item" aria-label="{{ section.settings.cart_label | default: 'Panier' }}">
    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"/>
      <line x1="3" y1="6" x2="21" y2="6"/>
      <path d="M16 10a4 4 0 0 1-8 0"/>
    </svg>
    <span class="milaura-dock-label">{{ section.settings.cart_label | default: 'Panier' }}</span>
    <span class="milaura-dock-badge" id="milaura-dock-badge" style="display:none;">0</span>
  </a>

</div>

<!-- ============ POPUP TELEPHONE ============ -->
<div class="milaura-dock-phone-overlay" id="milaura-dock-phone-overlay"></div>
<div class="milaura-dock-phone-card" id="milaura-dock-phone-card">
  <button class="milaura-dock-phone-close" id="milaura-dock-phone-close" aria-label="Fermer">&times;</button>
  <h3 class="milaura-dock-phone-title">Appelez-nous</h3>
  {%- assign dock_phone = section.settings.phone_number | default: '03 72 39 64 73' -%}
  <a href="tel:+33{{ dock_phone | remove: ' ' | remove: '0' | prepend: '' }}" class="milaura-dock-phone-number">{{ dock_phone }}</a>
  <p class="milaura-dock-phone-hours">{{ section.settings.phone_hours | default: 'Lun - Ven, 8h - 18h' }}</p>
  <a href="tel:+33{{ dock_phone | remove: ' ' | remove: '0' | prepend: '' }}" class="milaura-dock-phone-cta">Appeler maintenant</a>
</div>

<script>
(function() {
  'use strict';

  /* --- Phone popup --- */
  var phoneBtn = document.querySelector('[data-dock-phone]');
  var phoneOverlay = document.getElementById('milaura-dock-phone-overlay');
  var phoneCard = document.getElementById('milaura-dock-phone-card');
  var phoneClose = document.getElementById('milaura-dock-phone-close');

  function openPhonePopup() {
    phoneOverlay.classList.add('active');
    phoneCard.classList.add('active');
  }

  function closePhonePopup() {
    phoneOverlay.classList.remove('active');
    phoneCard.classList.remove('active');
  }

  if (phoneBtn) phoneBtn.addEventListener('click', openPhonePopup);
  if (phoneOverlay) phoneOverlay.addEventListener('click', closePhonePopup);
  if (phoneClose) phoneClose.addEventListener('click', closePhonePopup);

  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape' && phoneOverlay.classList.contains('active')) {
      closePhonePopup();
    }
  });

  /* --- Cart badge --- */
  var badge = document.getElementById('milaura-dock-badge');

  function updateDockBadge(count) {
    if (!badge) return;
    if (count > 0) {
      badge.textContent = count;
      badge.style.display = 'flex';
    } else {
      badge.style.display = 'none';
    }
  }

  /* 1. Init: fetch cart count */
  fetch('/cart.js')
    .then(function(r) { return r.json(); })
    .then(function(cart) { updateDockBadge(cart.item_count); })
    .catch(function() {});

  /* 2. Dawn pub/sub: subscribe to cartUpdate if available */
  if (typeof window.PUB_SUB_EVENTS !== 'undefined' && typeof subscribe === 'function') {
    subscribe(PUB_SUB_EVENTS.cartUpdate, function(event) {
      if (event && event.cart) {
        updateDockBadge(event.cart.item_count);
      }
    });
  }

  /* 3. Custom event fallback (Milaura + Dawn cart:updated) */
  document.addEventListener('cart:updated', function() {
    fetch('/cart.js')
      .then(function(r) { return r.json(); })
      .then(function(cart) {
        updateDockBadge(cart.item_count);
      })
      .catch(function() {});
  });
})();
</script>

