{% style %}
  /* --- LAYOUT --- */
  #MilauraColl-{{ section.id }} {
    padding: var(--milaura-spacing-md) var(--milaura-spacing-sm);
    background: transparent; /* Laisse voir le fond violet */
  }

  .section-header-{{ section.id }} {
    text-align: center;
    margin-bottom: var(--milaura-spacing-md); /* Remplace 50px */
  }

  .section-title-{{ section.id }} {
    font-family: var(--milaura-font-heading);
    font-size: 3.5rem;
    color: var(--milaura-gold);
    margin-bottom: 15px;
  }

  /* --- GRILLE --- */
  .milaura-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
    max-width: 1300px;
    margin: 0 auto;
  }

  /* --- LA CARTE --- */
  .cat-card {
    position: relative;
    border-radius: 20px;
    overflow: hidden;
    background: #fff; /* Fond blanc pour l'opacité sous l'image */
    /* Le liseré doré invisible par défaut */
    border: 2px solid transparent; 
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
    text-decoration: none;
    display: flex;
    flex-direction: column;
    height: 400px;
  }

  /* EFFET SURVOL : Zoom + Liseré Doré */
  .cat-card:hover {
    transform: translateY(-10px);
    border-color: var(--milaura-gold);
    box-shadow: 0 20px 50px rgba(192, 160, 98, 0.3);
  }

  /* ZONE MÉDIA (80% Hauteur) */
  .cat-image-wrapper {
    height: 80%;
    width: 100%;
    overflow: hidden;
    position: relative;
  }

  .cat-media {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.8s ease;
    display: block;
  }

  .cat-card:hover .cat-media {
    transform: scale(1.1); /* Zoom de l'image/vidéo */
  }

  /* LE PIED DORÉ (Le retour !) - 20% Hauteur */
  .cat-footer {
    height: 20%;
    width: 100%;
    background: linear-gradient(90deg, var(--milaura-gold), var(--milaura-gold-light), var(--milaura-gold));
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    position: relative;
    z-index: 2;
  }

  /* Brillance sur le pied */
  .cat-footer::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(120deg, transparent 30%, rgba(255,255,255,0.4) 50%, transparent 70%);
    opacity: 0;
    transition: opacity 0.3s;
  }
  
  .cat-card:hover .cat-footer::after {
    opacity: 1;
  }

  .cat-title {
    font-family: 'Playfair Display', serif;
    font-size: 1.3rem;
    color: #FFFFFF; /* Texte Blanc sur Or */
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    text-align: center;
    text-shadow: 0 1px 2px rgba(0,0,0,0.1);
  }

  /* MOBILE */
  @media screen and (max-width: 900px) {
    .milaura-grid { grid-template-columns: 1fr; gap: 20px; }
    .cat-card { height: 300px; }
  }

  /* Carrousel mobile */
  @media screen and (max-width: 768px) {
    .milaura-grid {
      display: flex !important;
      grid-template-columns: none !important;
    }
    
    .cat-card {
      width: 75% !important;
      min-width: 75% !important;
      flex-shrink: 0;
    }
  }
{% endstyle %}

<div id="MilauraColl-{{ section.id }}">
  <div class="section-header-{{ section.id }}">
    <h2 class="section-title-{{ section.id }}">{{ section.settings.title }}</h2>
  </div>

  <div class="milaura-grid milaura-mobile-carousel">
    {%- for block in section.blocks -%}
      <a href="{{ block.settings.link }}" class="cat-card">
        
        <div class="cat-image-wrapper">
          {% if block.settings.video != blank %}
            {{ block.settings.video | video_tag: autoplay: true, loop: true, muted: true, controls: false, class: 'cat-media', playsinline: true }}
          {% elsif block.settings.image != blank %}
            {{ block.settings.image | image_url: width: 800 | image_tag: class: 'cat-media', loading: 'lazy' }}
          {% else %}
            {{ 'collection-1' | placeholder_svg_tag: 'cat-media' }}
          {% endif %}
        </div>

        <div class="cat-footer">
          <div class="cat-title">{{ block.settings.title }}</div>
        </div>

      </a>
    {%- endfor -%}
  </div>
</div>

{% schema %}
{
  "name": "Milaura Collections V4",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Titre Section",
      "default": "Nos Univers"
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Collection",
      "settings": [
        {
          "type": "video",
          "id": "video",
          "label": "Vidéo (MP4)"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image (Si pas de vidéo)"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Titre",
          "default": "Bijoux"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Lien"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Milaura Collections V4"
    }
  ]
}
{% endschema %}