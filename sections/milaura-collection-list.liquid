{% style %}
  /* --- GRILLE & LAYOUT --- */
  #MilauraColl-{{ section.id }} {
    padding: 60px 20px;
    background-color: #FDFBF7; /* Fond Crème léger */
  }

  .section-header-{{ section.id }} {
    text-align: center;
    margin-bottom: 40px;
  }

  .section-title-{{ section.id }} {
    font-family: 'Dancing Script', cursive;
    font-size: 3rem;
    color: #C0A062; /* Ton Or Mat */
    margin-bottom: 10px;
  }

  .section-desc-{{ section.id }} {
    font-family: 'Lato', sans-serif;
    color: #555;
    font-size: 1rem;
    max-width: 600px;
    margin: 0 auto;
  }

  /* --- GRID SYSTEM --- */
  .milaura-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr); /* 3 colonnes PC */
    gap: 30px;
    max-width: 1200px;
    margin: 0 auto;
  }

  /* --- LA CARTE CATÉGORIE (PIED DORÉ) --- */
  .cat-card {
    position: relative;
    border-radius: 20px;
    overflow: hidden;
    background: #fff;
    box-shadow: 0 10px 30px rgba(0,0,0,0.05);
    transition: all 0.3s ease;
    text-decoration: none;
    display: flex;
    flex-direction: column;
    height: 350px; /* Hauteur fixe pour régularité */
  }

  .cat-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 20px 40px rgba(192, 160, 98, 0.2); /* Ombre dorée */
  }

  /* L'IMAGE (Partie Haute) */
  .cat-image-wrapper {
    height: 80%; /* 80% de la carte */
    width: 100%;
    overflow: hidden;
  }

  .cat-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .cat-card:hover .cat-image {
    transform: scale(1.1); /* Zoom doux au survol */
  }

  /* LE PIED DORÉ (Partie Basse) */
  .cat-footer {
    height: 20%; /* 20% de la carte */
    width: 100%;
    background: linear-gradient(90deg, #C0A062, #E6C88B, #C0A062); /* TON OR LUXE */
    display: flex;
    align-items: center;
    justify-content: center; /* Centré */
    padding: 0 15px;
    position: relative;
    z-index: 2;
  }

  /* Petit effet de brillance sur le doré */
  .cat-footer::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(120deg, transparent 30%, rgba(255,255,255,0.3) 50%, transparent 70%);
    opacity: 0;
    transition: opacity 0.3s;
  }
  
  .cat-card:hover .cat-footer::after {
    opacity: 1;
  }

  .cat-title {
    font-family: 'Playfair Display', serif;
    font-size: 1.2rem;
    color: #FFFFFF; /* Texte Blanc sur fond Or */
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    text-align: center;
  }

  .cat-count {
    display: block;
    font-size: 0.7rem;
    font-family: 'Lato', sans-serif;
    color: rgba(255,255,255,0.8);
    margin-top: 4px;
    text-transform: none;
  }

  /* MOBILE */
  @media screen and (max-width: 768px) {
    .milaura-grid {
      grid-template-columns: 1fr; /* 1 colonne sur mobile */
      gap: 20px;
    }
    .cat-card {
      height: 250px; /* Moins haut sur mobile */
    }
  }
{% endstyle %}

<div id="MilauraColl-{{ section.id }}">
  
  <div class="section-header-{{ section.id }}">
    <h2 class="section-title-{{ section.id }}">{{ section.settings.title }}</h2>
    <p class="section-desc-{{ section.id }}">{{ section.settings.subtitle }}</p>
  </div>

  <div class="milaura-grid">
    {%- for block in section.blocks -%}
      <a href="{{ block.settings.link }}" class="cat-card">
        
        <div class="cat-image-wrapper">
          {% if block.settings.image != blank %}
            {{ block.settings.image | image_url: width: 600 | image_tag: class: 'cat-image', loading: 'lazy' }}
          {% else %}
            {{ 'collection-1' | placeholder_svg_tag: 'cat-image' }}
          {% endif %}
        </div>

        <div class="cat-footer">
          <div>
            <div class="cat-title">{{ block.settings.title }}</div>
            {% if block.settings.show_count %}
               <span class="cat-count">{{ block.settings.subtext }}</span>
            {% endif %}
          </div>
        </div>

      </a>
    {%- endfor -%}
  </div>

</div>

{% schema %}
{
  "name": "Milaura Categories Or",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Titre Section",
      "default": "Nos Collections"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Sous-titre",
      "default": "Explorez nos univers et trouvez les créations qui résonnent avec votre âme."
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Catégorie",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Titre",
          "default": "Bijoux Énergétiques"
        },
        {
          "type": "text",
          "id": "subtext",
          "label": "Petit texte (ex: 5 articles)",
          "default": "Découvrir"
        },
        {
          "type": "checkbox",
          "id": "show_count",
          "label": "Afficher le sous-texte",
          "default": true
        },
        {
          "type": "url",
          "id": "link",
          "label": "Lien Collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Milaura Categories Or",
      "blocks": [
        {"type": "category"},
        {"type": "category"},
        {"type": "category"}
      ]
    }
  ]
}
{% endschema %}