{% style %}
  #MilauraTestimonials-{{ section.id }} {
    padding: 1px var(--milaura-spacing-sm) var(--milaura-spacing-lg);
    background: transparent;
  }

  #MilauraTestimonials-{{ section.id }} .testimonials-header {
    text-align: center;
    margin-bottom: var(--milaura-spacing-md);
  }

  /* Titre avec police personnalisable */
  #MilauraTestimonials-{{ section.id }} .testimonials-title {
    {% case section.settings.title_font %}
      {% when 'dancing' %}
        font-family: 'Dancing Script', cursive !important;
        text-transform: none;
        letter-spacing: 0;
        font-weight: 600;
      {% when 'playfair' %}
        font-family: 'Playfair Display', Georgia, serif !important;
        text-transform: none;
        letter-spacing: 0.5px;
        font-weight: 700;
      {% else %}
        font-family: 'Lato', -apple-system, BlinkMacSystemFont, sans-serif !important;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-weight: 700;
    {% endcase %}
    font-size: {{ section.settings.title_size }}rem;
    color: {{ section.settings.title_color }};
    margin-bottom: 15px;
    text-wrap: balance;
  }

  #MilauraTestimonials-{{ section.id }} .testimonials-subtitle {
    {% case section.settings.subtitle_font %}
      {% when 'dancing' %}
        font-family: 'Dancing Script', cursive !important;
      {% when 'playfair' %}
        font-family: 'Playfair Display', Georgia, serif !important;
      {% else %}
        font-family: 'Lato', -apple-system, BlinkMacSystemFont, sans-serif !important;
    {% endcase %}
    color: {{ section.settings.subtitle_color }};
    font-size: {{ section.settings.subtitle_size }}rem;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.5;
  }

  #MilauraTestimonials-{{ section.id }} .testimonials-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: {{ section.settings.cards_gap }}px;
    max-width: 1200px;
    margin: 0 auto;
  }

  /* Cartes avec cadre dor√© bijou */
  #MilauraTestimonials-{{ section.id }} .testimonial-card {
    border-radius: {{ section.settings.card_radius }}px;
    padding: var(--milaura-spacing-md);
    text-align: center;
    transition: all 0.3s ease;
    /* Cadre dor√© bijou */
    border: 2px solid transparent !important;
    background:
      linear-gradient(#ffffff, #ffffff) padding-box,
      linear-gradient(135deg,
        rgba(255, 240, 200, 0.92) 0%,
        rgba(214, 176, 96, 0.92) 18%,
        rgba(255, 232, 172, 0.92) 42%,
        rgba(176, 130, 48, 0.92) 70%,
        rgba(255, 240, 200, 0.92) 100%) border-box !important;
    box-shadow: 0 10px 28px rgba(0,0,0,0.06), 0 0 0 1px rgba(255,255,255,0.65) inset !important;
  }

  #MilauraTestimonials-{{ section.id }} .testimonial-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 35px rgba(192, 160, 98, 0.2), 0 0 0 1px rgba(255,255,255,0.65) inset !important;
  }

  #MilauraTestimonials-{{ section.id }} .testimonial-avatar {
    width: {{ section.settings.avatar_size }}px;
    height: {{ section.settings.avatar_size }}px;
    border-radius: 50%;
    margin: 0 auto 20px;
    object-fit: cover;
    border: 3px solid var(--milaura-gold);
  }

  #MilauraTestimonials-{{ section.id }} .testimonial-rating {
    color: {{ section.settings.stars_color }};
    font-size: {{ section.settings.stars_size }}rem;
    margin-bottom: 15px;
    letter-spacing: 2px;
  }

  #MilauraTestimonials-{{ section.id }} .testimonial-text {
    {% case section.settings.text_font %}
      {% when 'dancing' %}
        font-family: 'Dancing Script', cursive !important;
        font-style: normal;
      {% when 'playfair' %}
        font-family: 'Playfair Display', Georgia, serif !important;
        font-style: italic;
      {% else %}
        font-family: 'Lato', -apple-system, BlinkMacSystemFont, sans-serif !important;
        font-style: italic;
    {% endcase %}
    color: {{ section.settings.text_color }};
    font-size: {{ section.settings.text_size }}rem;
    line-height: 1.6;
    margin-bottom: 20px;
  }

  #MilauraTestimonials-{{ section.id }} .testimonial-author {
    {% case section.settings.author_font %}
      {% when 'dancing' %}
        font-family: 'Dancing Script', cursive !important;
      {% when 'playfair' %}
        font-family: 'Playfair Display', Georgia, serif !important;
      {% else %}
        font-family: 'Lato', -apple-system, BlinkMacSystemFont, sans-serif !important;
    {% endcase %}
    color: {{ section.settings.author_color }};
    font-weight: 600;
    font-size: {{ section.settings.author_size }}rem;
  }

  @media screen and (max-width: 1024px) {
    #MilauraTestimonials-{{ section.id }} .testimonials-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 20px;
    }
  }

  @media screen and (max-width: 768px) {
    #MilauraTestimonials-{{ section.id }} .testimonials-grid {
      display: flex !important;
      grid-template-columns: none !important;
      overflow-x: auto;
      scroll-snap-type: x mandatory;
      -webkit-overflow-scrolling: touch;
      padding-bottom: 10px;
    }

    #MilauraTestimonials-{{ section.id }} .testimonial-card {
      width: 80% !important;
      min-width: 80% !important;
      flex-shrink: 0;
      scroll-snap-align: center;
    }

    #MilauraTestimonials-{{ section.id }} .testimonials-title {
      font-size: {{ section.settings.title_size | times: 0.7 }}rem;
    }
  }
{% endstyle %}

<div id="MilauraTestimonials-{{ section.id }}">
  <div class="testimonials-header">
    {% if section.settings.title != blank %}
      <h2 class="testimonials-title">{{ section.settings.title }}</h2>
    {% endif %}
    {% if section.settings.subtitle != blank %}
      <p class="testimonials-subtitle">{{ section.settings.subtitle }}</p>
    {% endif %}
  </div>

  <div class="testimonials-grid milaura-mobile-carousel">
    {%- for block in section.blocks -%}
      <div class="testimonial-card" {{ block.shopify_attributes }}>
        {% if block.settings.avatar != blank %}
          {{ block.settings.avatar | image_url: width: 200 | image_tag: class: 'testimonial-avatar', loading: 'lazy' }}
        {% else %}
          <div class="testimonial-avatar" style="background: linear-gradient(135deg, var(--milaura-beige-mid) 0%, var(--milaura-gold-light) 100%);"></div>
        {% endif %}

        {% if block.settings.rating > 0 %}
          <div class="testimonial-rating">
            {% for i in (1..block.settings.rating) %}‚òÖ{% endfor %}
          </div>
        {% endif %}

        {% if block.settings.text != blank %}
          <p class="testimonial-text">"{{ block.settings.text }}"</p>
        {% endif %}

        {% if block.settings.author != blank %}
          <div class="testimonial-author">{{ block.settings.author }}</div>
        {% endif %}
      </div>
    {%- endfor -%}
  </div>
</div>

