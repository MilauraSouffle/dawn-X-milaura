{% style %}
  #MilauraTestimonials-{{ section.id }} {
    padding: 1px var(--milaura-spacing-sm) var(--milaura-spacing-md);
    background: transparent;
  }

  .testimonials-header {
    text-align: center;
    margin-bottom: var(--milaura-spacing-md); /* Remplace 50px */
  }

  .testimonials-title {
    font-family: 'Dancing Script', cursive;
    font-size: {{ section.settings.title_size }}rem;
    color: {{ section.settings.title_color }};
    margin-bottom: 15px;
    font-weight: 700;
  }

  .testimonials-subtitle {
    font-family: var(--milaura-font-body);
    color: {{ section.settings.subtitle_color }};
    font-size: {{ section.settings.subtitle_size }}rem;
  }

  .testimonials-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .testimonial-card {
    border-radius: 20px;
    padding: var(--milaura-spacing-md);
    text-align: center;
    transition: all 0.3s ease;
    /* Cadre dor√© bijou */
    border: 2px solid transparent;
    background:
      linear-gradient(rgba(255, 255, 255, 0.95), rgba(255, 255, 255, 0.95)) padding-box,
      linear-gradient(135deg,
        rgba(255, 240, 200, 0.92) 0%,
        rgba(214, 176, 96, 0.92) 18%,
        rgba(255, 232, 172, 0.92) 42%,
        rgba(176, 130, 48, 0.92) 70%,
        rgba(255, 240, 200, 0.92) 100%) border-box;
    box-shadow:
      0 10px 28px rgba(0,0,0,0.06),
      0 0 0 1px rgba(255,255,255,0.65) inset;
  }

  .testimonial-card:hover {
    transform: translateY(-4px);
    box-shadow:
      0 14px 40px rgba(0,0,0,0.10),
      0 0 0 1px rgba(255,255,255,0.75) inset,
      0 0 24px rgba(214, 176, 96, 0.28);
  }

  .testimonial-avatar {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    margin: 0 auto 20px;
    object-fit: cover;
    border: 3px solid var(--milaura-gold);
  }

  .testimonial-text {
    font-family: var(--milaura-font-body);
    color: {{ section.settings.text_color }};
    font-size: {{ section.settings.text_size }}rem;
    line-height: 1.6;
    margin-bottom: 20px;
    font-style: italic;
  }

  .testimonial-author {
    font-family: var(--milaura-font-heading);
    color: {{ section.settings.author_color }};
    font-weight: 600;
    font-size: 1.1rem;
  }

  .testimonial-rating {
    color: var(--milaura-gold);
    font-size: 1.2rem;
    margin-bottom: 15px;
  }

  @media screen and (max-width: 1024px) {
    .testimonials-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 20px;
    }
  }

  @media screen and (max-width: 768px) {
    .testimonials-grid {
      display: flex !important;
      grid-template-columns: none !important;
    }

    .testimonial-card {
      width: 55% !important;
      min-width: 55% !important;
      flex-shrink: 0;
      padding: 18px 14px;
      box-shadow:
        0 12px 35px rgba(0,0,0,0.08),
        0 0 0 1px rgba(255,255,255,0.65) inset !important;
    }

    .testimonial-card .testimonial-avatar {
      width: 60px;
      height: 60px;
      margin-bottom: 14px;
    }

    .testimonial-card .testimonial-text {
      font-size: 0.95rem;
      margin-bottom: 14px;
    }

    .testimonial-card .testimonial-author {
      font-size: 0.95rem;
    }

    .testimonial-card .testimonial-rating {
      font-size: 1rem;
      margin-bottom: 10px;
    }

    .testimonials-title {
      font-size: 2rem;
    }
  }
{% endstyle %}

<div id="MilauraTestimonials-{{ section.id }}">
  <div class="testimonials-header">
    <h2 class="testimonials-title">{{ section.settings.title }}</h2>
    {% if section.settings.subtitle != blank %}
      <p class="testimonials-subtitle">{{ section.settings.subtitle }}</p>
    {% endif %}
  </div>

  <div class="testimonials-grid milaura-mobile-carousel">
    {%- for block in section.blocks -%}
      <div class="testimonial-card" {{ block.shopify_attributes }}>
        {% if block.settings.avatar != blank %}
          {{ block.settings.avatar | image_url: width: 160 | image_tag: class: 'testimonial-avatar', loading: 'lazy' }}
        {% else %}
          <div class="testimonial-avatar" style="background: var(--milaura-beige-mid);"></div>
        {% endif %}

        {% if block.settings.rating > 0 %}
          <div class="testimonial-rating">
            {% for i in (1..block.settings.rating) %}
              ‚òÖ
            {% endfor %}
          </div>
        {% endif %}

        {% if block.settings.text != blank %}
          <p class="testimonial-text">"{{ block.settings.text }}"</p>
        {% endif %}

        {% if block.settings.author != blank %}
          <div class="testimonial-author">{{ block.settings.author }}</div>
        {% endif %}
      </div>
    {%- endfor -%}
  </div>
</div>

