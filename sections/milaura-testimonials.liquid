{% style %}
  #MilauraTestimonials-{{ section.id }} {
    padding: 1px var(--milaura-spacing-sm) var(--milaura-spacing-lg);
    background: transparent;
  }

  .testimonials-header {
    text-align: center;
    margin-bottom: var(--milaura-spacing-md); /* Remplace 50px */
  }

  .testimonials-title {
    font-family: var(--milaura-font-heading);
    font-size: {{ section.settings.title_size }}rem;
    color: {{ section.settings.title_color }};
    margin-bottom: 15px;
    font-weight: 700;
  }

  .testimonials-subtitle {
    font-family: var(--milaura-font-body);
    color: {{ section.settings.subtitle_color }};
    font-size: {{ section.settings.subtitle_size }}rem;
  }

  .testimonials-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .testimonial-card {
    background: #ffffff;
    border-radius: var(--milaura-border-radius);
    padding: var(--milaura-spacing-md); /* Remplace 30px */
    text-align: center;
    border: 2px solid transparent;
    box-shadow: var(--milaura-shadow-sm);
    transition: all 0.3s ease;
  }

  .testimonial-card:hover {
    border-color: var(--milaura-gold);
    transform: translateY(-5px);
    box-shadow: var(--milaura-shadow-md);
  }

  .testimonial-avatar {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    margin: 0 auto 20px;
    object-fit: cover;
    border: 3px solid var(--milaura-gold);
  }

  .testimonial-text {
    font-family: var(--milaura-font-body);
    color: {{ section.settings.text_color }};
    font-size: {{ section.settings.text_size }}rem;
    line-height: 1.6;
    margin-bottom: 20px;
    font-style: italic;
  }

  .testimonial-author {
    font-family: var(--milaura-font-heading);
    color: {{ section.settings.author_color }};
    font-weight: 600;
    font-size: 1.1rem;
  }

  .testimonial-rating {
    color: var(--milaura-gold);
    font-size: 1.2rem;
    margin-bottom: 15px;
  }

  @media screen and (max-width: 1024px) {
    .testimonials-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 20px;
    }
  }

  @media screen and (max-width: 768px) {
    .testimonials-grid {
      display: flex !important;
      grid-template-columns: none !important;
    }
    
    .testimonial-card {
      width: 75% !important;
      min-width: 75% !important;
      flex-shrink: 0;
    }
    
    .testimonials-title {
      font-size: 2rem;
    }
  }
{% endstyle %}

<div id="MilauraTestimonials-{{ section.id }}">
  <div class="testimonials-header">
    <h2 class="testimonials-title">{{ section.settings.title }}</h2>
    {% if section.settings.subtitle != blank %}
      <p class="testimonials-subtitle">{{ section.settings.subtitle }}</p>
    {% endif %}
  </div>

  <div class="testimonials-grid milaura-mobile-carousel">
    {%- for block in section.blocks -%}
      <div class="testimonial-card" {{ block.shopify_attributes }}>
        {% if block.settings.avatar != blank %}
          {{ block.settings.avatar | image_url: width: 160 | image_tag: class: 'testimonial-avatar', loading: 'lazy' }}
        {% else %}
          <div class="testimonial-avatar" style="background: var(--milaura-beige-mid);"></div>
        {% endif %}

        {% if block.settings.rating > 0 %}
          <div class="testimonial-rating">
            {% for i in (1..block.settings.rating) %}
              ‚òÖ
            {% endfor %}
          </div>
        {% endif %}

        {% if block.settings.text != blank %}
          <p class="testimonial-text">"{{ block.settings.text }}"</p>
        {% endif %}

        {% if block.settings.author != blank %}
          <div class="testimonial-author">{{ block.settings.author }}</div>
        {% endif %}
      </div>
    {%- endfor -%}
  </div>
</div>

