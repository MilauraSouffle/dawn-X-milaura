    when 'coffret', 'bundle'
      assign template_type = 'coffret'
    when 'pierre-roulee', 'cabochon', 'mineral', 'pierre'
      assign template_type = 'pierre'
    when 'bol-chantant', 'coussin', 'maillet', 'cymbales'
      assign template_type = 'rituel'
