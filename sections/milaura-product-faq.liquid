  "name": "Milaura Product FAQ",
  "class": "milaura-section",
  "settings": [
    {
      "type": "header",
      "content": "Titre"
    },
    {
      "type": "checkbox",
      "id": "show_title",
      "label": "Afficher le titre",
      "default": true
    },
    {
      "type": "text",
      "id": "title",
      "label": "Titre",
      "default": "Questions fréquentes"
    },
    {
      "type": "header",
      "content": "SEO"
    },
    {
      "type": "checkbox",
      "id": "enable_schema",
      "label": "Activer le schema.org FAQ",
      "default": true,
      "info": "Améliore le référencement Google (rich snippets)"
    }
  ],
  "blocks": [
    {
      "type": "question",
      "name": "Question",
      "limit": 8,
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question",
          "default": "La pierre est-elle vraiment naturelle ?"
        },
        {
          "type": "textarea",
          "id": "answer",
          "label": "Réponse",
          "default": "Oui, chaque pierre est naturelle et sélectionnée à la main."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Milaura Product FAQ"
    }
  ]
}
{% endschema %}
