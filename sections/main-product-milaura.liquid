{% comment %}
  MILAURA MASTERCLASS - FICHE PRODUIT VISION OS
  Design : Luxe, Glassmorphism, Gold, Conversion High-End.
{% endcomment %}

{%- style -%}
  /* --- LAYOUT GLOBAL --- */
  .milaura-product-section {
    padding-top: {{ section.settings.padding_top | default: 40 }}px;
    padding-bottom: {{ section.settings.padding_bottom | default: 40 }}px;
    background: linear-gradient(180deg, #fff 0%, #faf9f6 100%); /* Fond subtil */
  }

  .milaura-product-wrapper {
    max-width: 1300px;
    margin: 0 auto;
    padding: 0 20px;
    display: grid;
    grid-template-columns: 1fr 1fr; /* 50/50 Desktop */
    gap: 60px;
    align-items: start;
  }

  /* --- COLONNE GAUCHE (MEDIA) --- */
  .product-media-gallery {
    position: sticky;
    top: 120px; /* Sticky au scroll */
  }

  .main-image-wrapper {
    border-radius: 30px;
    overflow: hidden;
    box-shadow: 0 20px 60px rgba(0,0,0,0.08); /* Ombre douce luxe */
    border: 1px solid rgba(212, 175, 55, 0.2);
    position: relative;
    aspect-ratio: 4 / 5; /* Ratio Portrait √©l√©gant */
    background: #f4f4f4;
  }

  .main-product-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.8s ease;
  }

  .main-image-wrapper:hover .main-product-image {
    transform: scale(1.05);
  }

  /* --- COLONNE DROITE (INFOS) --- */
  .product-info-wrapper {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  /* 1. HEADER */
  .product-subtitle {
    text-transform: uppercase;
    letter-spacing: 2px;
    font-size: 0.8rem;
    color: #c0a062;
    font-weight: 700;
    margin-bottom: -10px;
  }

  .product-title {
    font-family: var(--milaura-font-heading, "Playfair Display", serif);
    font-size: 3rem;
    line-height: 1.1;
    color: #1a1a1a;
    margin: 0;
  }

  .product-price-row {
    display: flex;
    align-items: baseline;
    gap: 15px;
  }

  .product-price {
    font-size: 1.8rem;
    color: #c0a062; /* OR */
    font-weight: 700;
    font-family: var(--milaura-font-heading, serif);
  }

  .product-price-compare {
    text-decoration: line-through;
    color: #999;
    font-size: 1.2rem;
  }

  .price-tax-note {
    font-size: 0.8rem;
    color: #888;
    margin-top: -5px;
  }

  /* 2. PREUVE SOCIALE */
  .reviews-badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background: rgba(253, 246, 227, 0.6);
    padding: 8px 16px;
    border-radius: 50px;
    width: fit-content;
    border: 1px solid rgba(212, 175, 55, 0.15);
  }
  .stars-svg { width: 80px; height: auto; }
  .reviews-text { font-size: 0.9rem; color: #555; font-weight: 500; }

  /* 3. CARTE D'IDENTIT√â (Vision OS) */
  .identity-card {
    display: flex;
    justify-content: space-between;
    background: rgba(255, 255, 255, 0.7);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 1px solid rgba(212, 175, 55, 0.3);
    border-radius: 16px;
    padding: 15px 20px;
    margin-top: 10px;
    box-shadow: 0 4px 20px rgba(0,0,0,0.02);
  }

  .id-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 4px;
    flex: 1;
    border-right: 1px solid rgba(0,0,0,0.05);
  }
  .id-item:last-child { border-right: none; }

  .id-label { font-size: 0.7rem; text-transform: uppercase; color: #888; letter-spacing: 1px; }
  .id-value { font-weight: 600; color: #1a1a1a; font-size: 0.95rem; }

  /* 4. BENEFICES & VERTUS */
  .benefits-block { margin-top: 10px; }
  .benefits-title { font-weight: 700; font-size: 1.1rem; margin-bottom: 12px; font-family: var(--milaura-font-heading, serif); }
  .benefits-list { list-style: none; padding: 0; margin: 0; }
  .benefits-item {
    display: flex;
    gap: 10px;
    margin-bottom: 8px;
    font-size: 1rem;
    color: #444;
    line-height: 1.5;
  }
  .check-icon { color: #c0a062; font-size: 1.1rem; }

  /* 5. URGENCE */
  .urgency-box {
    background: #fff;
    border: 1px solid #f0e6d2;
    border-radius: 12px;
    padding: 15px;
    margin-top: 10px;
  }
  .urgency-text { font-weight: 700; color: #d32f2f; margin-bottom: 8px; display: block; font-size: 0.95rem; }
  .progress-bar-bg { width: 100%; height: 6px; background: #eee; border-radius: 10px; overflow: hidden; }
  .progress-bar-fill {
    height: 100%; width: 85%;
    background: linear-gradient(90deg, #c0a062, #eacda3);
    border-radius: 10px;
    animation: loadBar 2s ease-out;
  }
  @keyframes loadBar { from { width: 0; } to { width: 85%; } }

  /* 6. FORMULAIRE & CTA */
  .product-form { margin-top: 20px; }

  .variant-selector { display: flex; gap: 10px; margin-bottom: 20px; }
  .variant-btn {
    padding: 10px 20px;
    border: 1px solid #ddd;
    background: #fff;
    border-radius: 30px;
    cursor: pointer;
    transition: all 0.3s;
  }
  .variant-btn.selected {
    background: #1a1a1a;
    color: #fff;
    border-color: #1a1a1a;
  }

  .add-to-cart-btn {
    width: 100%;
    background: linear-gradient(135deg, #d4af37 0%, #c5a059 100%); /* LINGOT D'OR */
    color: #fff;
    font-size: 1.1rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    padding: 18px;
    border: none;
    border-radius: 100px; /* Pillule */
    cursor: pointer;
    box-shadow: 0 10px 30px rgba(197, 160, 89, 0.4);
    transition: all 0.3s;
    position: relative;
    overflow: hidden;
  }

  .add-to-cart-btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 15px 40px rgba(197, 160, 89, 0.5);
    background: linear-gradient(135deg, #e5c14e 0%, #d4af37 100%);
  }

  .reassurance-line {
    text-align: center;
    font-size: 0.85rem;
    color: #666;
    margin-top: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 6px;
  }

  /* 7. ACCORDEONS RITUALS */
  .accordion-group { margin-top: 30px; border-top: 1px solid #eaeaea; }
  .accordion-item { border-bottom: 1px solid #eaeaea; }

  .accordion-header {
    width: 100%;
    text-align: left;
    background: none;
    border: none;
    padding: 20px 0;
    font-family: var(--milaura-font-heading, serif);
    font-size: 1.1rem;
    color: #1a1a1a;
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .accordion-content {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.4s ease;
    opacity: 0;
  }

  .accordion-content.open {
    opacity: 1;
    padding-bottom: 20px;
    color: #555;
    line-height: 1.6;
  }

  .icon-plus { font-size: 1.2rem; transition: transform 0.3s; }
  .accordion-header.active .icon-plus { transform: rotate(45deg); }

  /* --- MOBILE RESPONSIVE --- */
  @media screen and (max-width: 990px) {
    .milaura-product-wrapper {
      grid-template-columns: 1fr; /* Stack */
      gap: 30px;
    }
    .main-image-wrapper { aspect-ratio: 1 / 1; }
    .product-title { font-size: 2.2rem; }
    .product-media-gallery { position: static; }
    .add-to-cart-btn {
        position: sticky;
        bottom: 20px;
        z-index: 100;
        width: calc(100% - 40px);
        left: 20px;
        margin: 0 auto;
        box-shadow: 0 10px 30px rgba(0,0,0,0.2);
    }
  }
{%- endstyle -%}

<section class="milaura-product-section" data-section-id="{{ section.id }}">
  <div class="milaura-product-wrapper">
    <div class="product-media-gallery">
      <div class="main-image-wrapper">
        {% if product.featured_media %}
          <img
            src="{{ product.featured_media | image_url: width: 1000 }}"
            alt="{{ product.title | escape }}"
            class="main-product-image"
            width="1000"
            height="1000"
            loading="eager"
          >
        {% else %}
          {{ 'product-1' | placeholder_svg_tag: 'main-product-image' }}
        {% endif %}
      </div>
    </div>

    <div class="product-info-wrapper">
      <div class="product-header">
        {% if product.metafields.custom.subtitle %}
          <div class="product-subtitle">{{ product.metafields.custom.subtitle }}</div>
        {% endif %}
        <h1 class="product-title">{{ product.title }}</h1>

        <div class="reviews-badge">
          <svg class="stars-svg" viewBox="0 0 100 20" fill="#c0a062">
            <path d="M10 1L13 7L19 8L15 12L16 18L10 15L4 18L5 12L1 8L7 7L10 1Z"/>
            <path d="M30 1L33 7L39 8L35 12L36 18L30 15L24 18L25 12L21 8L27 7L30 1Z"/>
            <path d="M50 1L53 7L59 8L55 12L56 18L50 15L44 18L45 12L41 8L47 7L50 1Z"/>
            <path d="M70 1L73 7L79 8L75 12L76 18L70 15L64 18L65 12L61 8L67 7L70 1Z"/>
            <path d="M90 1L93 7L99 8L95 12L96 18L90 15L84 18L85 12L81 8L87 7L90 1Z"/>
          </svg>
          <span class="reviews-text">4.9/5 (120+ avis)</span>
        </div>

        <div class="product-price-row">
          <span class="product-price">{{ product.price | money }}</span>
          {% if product.compare_at_price > product.price %}
            <span class="product-price-compare">{{ product.compare_at_price | money }}</span>
          {% endif %}
        </div>
        <div class="price-tax-note">Taxes incluses. Livraison calcul√©e √† la caisse.</div>
      </div>

      {% if product.metafields.custom.stone or product.metafields.custom.quality or product.metafields.custom.origin %}
        <div class="identity-card">
          {% if product.metafields.custom.stone %}
            <div class="id-item">
              <span class="id-label">Pierre</span>
              <span class="id-value">üíé {{ product.metafields.custom.stone }}</span>
            </div>
          {% endif %}
          {% if product.metafields.custom.quality %}
            <div class="id-item">
              <span class="id-label">Qualit√©</span>
              <span class="id-value">‚ú® {{ product.metafields.custom.quality }}</span>
            </div>
          {% endif %}
          {% if product.metafields.custom.origin %}
            <div class="id-item">
              <span class="id-label">Origine</span>
              <span class="id-value">üåç {{ product.metafields.custom.origin }}</span>
            </div>
          {% endif %}
        </div>
      {% endif %}

      {% if product.metafields.custom.benefits %}
        <div class="benefits-block">
          <div class="benefits-title">{{ section.settings.benefits_title }}</div>
          <ul class="benefits-list">
            {% assign benefits = product.metafields.custom.benefits | split: '‚Ä¢' %}
            {% for benefit in benefits %}
              <li class="benefits-item"><span class="check-icon">‚úî</span> {{ benefit | strip }}</li>
            {% else %}
              <li class="benefits-item"><span class="check-icon">‚úî</span> {{ product.metafields.custom.benefits }}</li>
            {% endfor %}
          </ul>
        </div>
      {% endif %}

      {% if section.settings.urgency_text != blank %}
        <div class="urgency-box">
          <span class="urgency-text">{{ section.settings.urgency_text }}</span>
          <div class="progress-bar-bg"><div class="progress-bar-fill"></div></div>
        </div>
      {% endif %}

      {% form 'product', product, class: 'product-form' %}
        <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">

        <button type="submit" name="add" class="add-to-cart-btn">
          Ajouter au panier ‚Ä¢ {{ product.price | money }}
        </button>

        {% if section.settings.reassurance_text != blank %}
          <div class="reassurance-line">
            {{ section.settings.reassurance_text }}
          </div>
        {% endif %}
      {% endform %}

      <div class="accordion-group">
        <div class="accordion-item">
          <button class="accordion-header active" onclick="toggleAccordion(this)">
            <span>Description & Histoire</span>
            <span class="icon-plus">+</span>
          </button>
          <div class="accordion-content open" style="max-height: 500px;">{{ product.description }}</div>
        </div>

        {% if section.settings.technical_details != blank %}
          <div class="accordion-item">
            <button class="accordion-header" onclick="toggleAccordion(this)">
              <span>D√©tails techniques</span>
              <span class="icon-plus">+</span>
            </button>
            <div class="accordion-content">
              {{ section.settings.technical_details }}
            </div>
          </div>
        {% endif %}

        {% if section.settings.shipping_returns != blank %}
          <div class="accordion-item">
            <button class="accordion-header" onclick="toggleAccordion(this)">
              <span>Livraison & Retours</span>
              <span class="icon-plus">+</span>
            </button>
            <div class="accordion-content">
              {{ section.settings.shipping_returns }}
            </div>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>

<script>
  function toggleAccordion(button) {
    button.classList.toggle('active');
    var content = button.nextElementSibling;
    if (content.style.maxHeight) {
      content.style.maxHeight = null;
      content.classList.remove('open');
    } else {
      content.style.maxHeight = content.scrollHeight + 'px';
      content.classList.add('open');
    }
  }
</script>

