{% style %}
  #MilauraCrosssell-{{ section.id }} {
    padding: 20px 0;
    background: transparent;
  }

  #MilauraCrosssell-{{ section.id }} .crosssell-header {
    text-align: center;
    margin-bottom: var(--milaura-spacing-md);
    padding: 0 var(--milaura-spacing-sm);
  }

  #MilauraCrosssell-{{ section.id }} .crosssell-title {
    font-family: var(--milaura-font-heading, 'Playfair Display', serif);
    font-size: {{ section.settings.title_size_mobile }}px;
    font-weight: 600;
    color: {{ section.settings.title_color }};
    margin: 0 0 8px 0;
    line-height: 1.2;
  }

  #MilauraCrosssell-{{ section.id }} .crosssell-subtitle {
    font-family: var(--milaura-font-body, 'Lato', sans-serif);
    font-size: {{ section.settings.subtitle_size_mobile }}px;
    color: {{ section.settings.subtitle_color }};
    opacity: 0.8;
    margin: 0;
    line-height: 1.5;
  }

  @media screen and (min-width: 1024px) {
    #MilauraCrosssell-{{ section.id }} .crosssell-title {
      font-size: {{ section.settings.title_size_desktop }}px;
    }

    #MilauraCrosssell-{{ section.id }} .crosssell-subtitle {
      font-size: {{ section.settings.subtitle_size_desktop }}px;
    }
  }
{% endstyle %}

<section
  id="MilauraCrosssell-{{ section.id }}"
  class="milaura-product-crosssell"
  data-section-id="{{ section.id }}"
  aria-label="{{ section.settings.title }}"
>
  {%- if section.settings.show_title -%}
    <header class="crosssell-header">
      <h2 class="crosssell-title">{{ section.settings.title }}</h2>
      {%- if section.settings.subtitle != blank -%}
        <p class="crosssell-subtitle">{{ section.settings.subtitle }}</p>
      {%- endif -%}
    </header>
  {%- endif -%}

  <div class="collection page-width">
    <ul
      class="grid product-grid contains-card contains-card--product{% if settings.card_style == 'standard' %} contains-card--standard{% endif %} grid--{{ section.settings.columns_desktop }}-col-desktop grid--2-col-tablet-down"
      role="list"
    >
      {%- assign shown_count = 0 -%}
      {%- assign shown_ids = '' -%}
      {%- assign skip_card_product_styles = false -%}

      {%- if use_metafield -%}
        {%- comment -%} TIER 1 : Metafield cure manuellement {%- endcomment -%}
        {%- for rec_product in metafield_products -%}
          {%- if rec_product.id == current_product_id -%}{%- continue -%}{%- endif -%}
          {%- if shown_count >= max_products -%}{%- break -%}{%- endif -%}
          {%- assign shown_count = shown_count | plus: 1 -%}
          {%- if shown_count <= 2 -%}{%- assign lazy = false -%}{%- else -%}{%- assign lazy = true -%}{%- endif -%}

          <li class="grid__item">
            {% render 'card-product',
              card_product: rec_product,
              media_aspect_ratio: 'adapt',
              image_shape: 'default',
              show_secondary_image: false,
              show_vendor: section.settings.show_vendor,
              show_rating: false,
              lazy_load: lazy,
              skip_styles: skip_card_product_styles,
              quick_add: 'standard',
              section_id: section.id
            %}
          </li>
          {%- assign skip_card_product_styles = true -%}
          {%- assign shown_ids = shown_ids | append: rec_product.id | append: ',' -%}
        {%- endfor -%}

      {%- else -%}
        {%- comment -%} TIER 2 : Meme pierre (stone_handle) {%- endcomment -%}
        {%- if current_stone != blank and shown_count < max_products -%}
          {%- for rec_product in the_collection.products limit: scan_limit -%}
            {%- if rec_product.id == current_product_id -%}{%- continue -%}{%- endif -%}
            {%- if shown_count >= max_products -%}{%- break -%}{%- endif -%}
            {%- assign rec_stone = rec_product.metafields.milaura.stone_handle -%}
            {%- if rec_stone == current_stone -%}
              {%- assign shown_count = shown_count | plus: 1 -%}
              {%- if shown_count <= 2 -%}{%- assign lazy = false -%}{%- else -%}{%- assign lazy = true -%}{%- endif -%}

              <li class="grid__item">
                {% render 'card-product',
                  card_product: rec_product,
                  media_aspect_ratio: 'adapt',
                  image_shape: 'default',
                  show_secondary_image: false,
                  show_vendor: section.settings.show_vendor,
                  show_rating: false,
                  lazy_load: lazy,
                  skip_styles: skip_card_product_styles,
                  quick_add: 'standard',
                  section_id: section.id
                %}
              </li>
              {%- assign skip_card_product_styles = true -%}
              {%- assign shown_ids = shown_ids | append: rec_product.id | append: ',' -%}
            {%- endif -%}
          {%- endfor -%}
        {%- endif -%}

        {%- comment -%} TIER 3 : Meme type de produit {%- endcomment -%}
        {%- if current_type != blank and shown_count < max_products -%}
          {%- for rec_product in the_collection.products limit: scan_limit -%}
            {%- if rec_product.id == current_product_id -%}{%- continue -%}{%- endif -%}
            {%- if shown_count >= max_products -%}{%- break -%}{%- endif -%}
            {%- assign rec_id_check = rec_product.id | append: ',' -%}
            {%- if shown_ids contains rec_id_check -%}{%- continue -%}{%- endif -%}
            {%- assign rec_type = rec_product.metafields.milaura.product_type_handle | default: rec_product.type | downcase | handleize -%}
            {%- if rec_type == current_type -%}
              {%- assign shown_count = shown_count | plus: 1 -%}
              {%- if shown_count <= 2 -%}{%- assign lazy = false -%}{%- else -%}{%- assign lazy = true -%}{%- endif -%}

              <li class="grid__item">
                {% render 'card-product',
                  card_product: rec_product,
                  media_aspect_ratio: 'adapt',
                  image_shape: 'default',
                  show_secondary_image: false,
                  show_vendor: section.settings.show_vendor,
                  show_rating: false,
                  lazy_load: lazy,
                  skip_styles: skip_card_product_styles,
                  quick_add: 'standard',
                  section_id: section.id
                %}
              </li>
              {%- assign skip_card_product_styles = true -%}
              {%- assign shown_ids = shown_ids | append: rec_product.id | append: ',' -%}
            {%- endif -%}
          {%- endfor -%}
        {%- endif -%}

        {%- comment -%} TIER 4 : Filet de securite {%- endcomment -%}
        {%- if shown_count < max_products -%}
          {%- for rec_product in the_collection.products limit: scan_limit -%}
            {%- if rec_product.id == current_product_id -%}{%- continue -%}{%- endif -%}
            {%- if shown_count >= max_products -%}{%- break -%}{%- endif -%}
            {%- assign rec_id_check = rec_product.id | append: ',' -%}
            {%- if shown_ids contains rec_id_check -%}{%- continue -%}{%- endif -%}
            {%- assign shown_count = shown_count | plus: 1 -%}
            {%- if shown_count <= 2 -%}{%- assign lazy = false -%}{%- else -%}{%- assign lazy = true -%}{%- endif -%}

            <li class="grid__item">
              {% render 'card-product',
                card_product: rec_product,
                media_aspect_ratio: 'adapt',
                image_shape: 'default',
                show_secondary_image: false,
                show_vendor: section.settings.show_vendor,
                show_rating: false,
                lazy_load: lazy,
                skip_styles: skip_card_product_styles,
                quick_add: 'standard',
                section_id: section.id
              %}
            </li>
            {%- assign skip_card_product_styles = true -%}
            {%- assign shown_ids = shown_ids | append: rec_product.id | append: ',' -%}
          {%- endfor -%}
        {%- endif -%}

      {%- endif -%}
    </ul>
  </div>

</section>
{%- endif -%}

