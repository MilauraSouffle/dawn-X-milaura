    color: var(--milaura-gold, #C0A062);
    margin: 0;
  }

  .milaura-product-crosssell__product-title {
    font-family: var(--milaura-font-heading);
    font-size: 16px;
    font-weight: 600;
    line-height: 1.3;
    margin: 0;
  }

  .milaura-product-crosssell__product-title a {
    color: var(--milaura-text, #000000);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .milaura-product-crosssell__product-title a:hover {
    color: var(--milaura-gold, #C0A062);
  }

  /* Price */
  .milaura-product-crosssell__price {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-top: auto;
    padding-top: 8px;
  }

  .milaura-product-crosssell__price-regular,
  .milaura-product-crosssell__price-sale {
    font-size: 16px;
    font-weight: 700;
    color: var(--milaura-text, #000000);
  }

  .milaura-product-crosssell__price-sale {
    color: var(--milaura-gold, #C0A062);
  }

  .milaura-product-crosssell__price-compare {
    font-size: 13px;
    font-weight: 400;
    text-decoration: line-through;
    opacity: 0.5;
  }

  /* CTA Button */
  .milaura-product-crosssell__form {
    width: 100%;
    margin-top: 12px;
  }

  .milaura-product-crosssell__cta {
    width: 100%;
    background: var(--milaura-gold, #C0A062);
    color: #FFFFFF;
    border: none;
    border-radius: 10px;
    padding: 12px 16px;
    font-family: var(--milaura-font-body);
    font-size: 14px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .milaura-product-crosssell__cta:hover:not(:disabled) {
    background: var(--milaura-gold-dark, #8F723A);
  }

  .milaura-product-crosssell__cta:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  /* ============================================
     TABLET (600px+)
     ============================================ */
  @media screen and (min-width: 600px) {
    .milaura-product-crosssell__grid {
      flex-direction: row;
      justify-content: center;
      gap: 20px;
    }

    .milaura-product-crosssell__card {
      max-width: 280px;
      flex: 0 1 280px;
    }

    .milaura-product-crosssell__title {
      font-size: {{ section.settings.title_size_desktop }}px;
    }

    .milaura-product-crosssell__subtitle {
      font-size: {{ section.settings.subtitle_size_desktop }}px;
      margin-bottom: 32px;
    }
  }

  /* ============================================
     DESKTOP (1024px+)
     ============================================ */
  @media screen and (min-width: 1024px) {
    .milaura-product-crosssell__grid {
      gap: 32px;
    }

    .milaura-product-crosssell__card {
      max-width: 320px;
      flex: 0 1 320px;
    }

    .milaura-product-crosssell__content {
      padding: 20px;
    }

    .milaura-product-crosssell__product-title {
      font-size: 18px;
    }

    .milaura-product-crosssell__price-regular,
    .milaura-product-crosssell__price-sale {
      font-size: 18px;
    }

    .milaura-product-crosssell__cta {
      padding: 14px 20px;
      font-size: 15px;
    }
  }

  /* ============================================
     SMALL MOBILE (< 380px)
     ============================================ */
  @media screen and (max-width: 379px) {
    .milaura-product-crosssell__card {
      max-width: 100%;
    }

    .milaura-product-crosssell__title {
      font-size: 22px;
    }

    .milaura-product-crosssell__subtitle {
      font-size: 14px;
    }

    .milaura-product-crosssell__content {
      padding: 14px;
    }

    .milaura-product-crosssell__product-title {
      font-size: 15px;
    }
  }

  /* ============================================
     REDUCED MOTION
     ============================================ */
  @media (prefers-reduced-motion: reduce) {
    .milaura-product-crosssell__card,
    .milaura-product-crosssell__image,
    .milaura-product-crosssell__cta {
      transition: none;
    }
  }
</style>

<script>
(function() {
  const sectionId = '{{ section.id }}';
  const section = document.getElementById('MilauraProductCrosssell-' + sectionId);
  if (!section) return;

  const forms = section.querySelectorAll('.milaura-product-crosssell__form');

  forms.forEach(function(form) {
    form.addEventListener('submit', function(e) {
      e.preventDefault();

      const formData = new FormData(form);
      const submitBtn = form.querySelector('.milaura-product-crosssell__cta');
      const originalText = submitBtn ? submitBtn.textContent : '';

      if (submitBtn) {
        submitBtn.textContent = 'Ajout...';
        submitBtn.disabled = true;
      }

      fetch('/cart/add.js', {
        method: 'POST',
        body: formData
      })
      .then(response => response.json())
      .then(data => {
        document.dispatchEvent(new CustomEvent('cart:updated'));

        if (submitBtn) {
          submitBtn.textContent = '‚úì Ajout√© !';
          submitBtn.style.background = '#4CAF50';

          setTimeout(function() {
            submitBtn.textContent = originalText;
            submitBtn.style.background = '';
            submitBtn.disabled = false;
          }, 2000);
        }
      })
      .catch(error => {
        console.error('Erreur ajout panier:', error);

        if (submitBtn) {
          submitBtn.textContent = 'Erreur';
          submitBtn.style.background = '#f44336';

          setTimeout(function() {
            submitBtn.textContent = originalText;
            submitBtn.style.background = '';
            submitBtn.disabled = false;
          }, 2000);
        }
      });
    });
  });
})();
</script>

