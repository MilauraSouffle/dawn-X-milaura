{% comment %}
  MILAURA PRODUCT CROSSSELL
  Version 2.0 - Refonte compl√®te

  Sources de produits (par priorit√©):
  1. Produits s√©lectionn√©s manuellement dans le customizer
  2. Metafield milaura.crosssell_products
  3. Fallback: produits de la m√™me collection

  Responsive: Mobile ‚Üí Tablette ‚Üí Desktop
{% endcomment %}

{%- liquid
  # 1. Produits s√©lectionn√©s manuellement dans le customizer
  assign manual_1 = section.settings.product_1
  assign manual_2 = section.settings.product_2
  assign manual_3 = section.settings.product_3
  assign manual_4 = section.settings.product_4

  assign has_manual = false
  if manual_1 != blank or manual_2 != blank or manual_3 != blank or manual_4 != blank
    assign has_manual = true
  endif

  # 2. Fallback: Metafield milaura.crosssell_products
  assign meta_products = blank
  if has_manual == false
    assign meta_raw = product.metafields.milaura.crosssell_products.value
    if meta_raw != blank and meta_raw.size > 0
      assign meta_products = meta_raw | where_exp: 'item', 'item.id != product.id' | where: 'available' | slice: 0, 4
    endif
  endif

  # 3. Fallback: Produits de la m√™me collection
  assign collection_products = blank
  if has_manual == false and meta_products == blank
    for col in product.collections
      if col.handle != 'all' and collection_products == blank
        assign collection_products = col.products | where_exp: 'item', 'item.id != product.id' | where: 'available' | slice: 0, 4
      endif
    endfor
  endif

  # D√©terminer quelle source utiliser
  assign show_section = false
  if has_manual
    assign show_section = true
  elsif meta_products != blank and meta_products.size > 0
    assign show_section = true
  elsif collection_products != blank and collection_products.size > 0
    assign show_section = true
  endif
-%}

{%- if show_section -%}
<section
  id="MilauraProductCrosssell-{{ section.id }}"
  class="milaura-product-crosssell"
  data-section-id="{{ section.id }}"
>
  <div class="milaura-product-crosssell__container milaura-section-card">

    {%- if section.settings.show_title -%}
      <h2 class="milaura-product-crosssell__title">
        {{ section.settings.title }}
      </h2>
    {%- endif -%}

    {%- if section.settings.show_subtitle and section.settings.subtitle != blank -%}
      <p class="milaura-product-crosssell__subtitle">
        {{ section.settings.subtitle }}
      </p>
    {%- endif -%}

    <div class="milaura-product-crosssell__grid">

      {%- if has_manual -%}
        {%- comment -%} Produits manuels depuis le customizer {%- endcomment -%}
        {%- if manual_1 != blank and manual_1.id != product.id and manual_1.available -%}
          {%- render 'milaura-crosssell-card',
              recommended_product: manual_1,
              button_text: section.settings.button_text,
              button_text_sold_out: section.settings.button_text_sold_out,
              show_vendor: section.settings.show_vendor
          -%}
        {%- endif -%}
        {%- if manual_2 != blank and manual_2.id != product.id and manual_2.available -%}
          {%- render 'milaura-crosssell-card',
              recommended_product: manual_2,
              button_text: section.settings.button_text,
              button_text_sold_out: section.settings.button_text_sold_out,
              show_vendor: section.settings.show_vendor
          -%}
        {%- endif -%}
        {%- if manual_3 != blank and manual_3.id != product.id and manual_3.available -%}
          {%- render 'milaura-crosssell-card',
              recommended_product: manual_3,
              button_text: section.settings.button_text,
              button_text_sold_out: section.settings.button_text_sold_out,
              show_vendor: section.settings.show_vendor
          -%}
        {%- endif -%}
        {%- if manual_4 != blank and manual_4.id != product.id and manual_4.available -%}
          {%- render 'milaura-crosssell-card',
              recommended_product: manual_4,
              button_text: section.settings.button_text,
              button_text_sold_out: section.settings.button_text_sold_out,
              show_vendor: section.settings.show_vendor
          -%}
        {%- endif -%}

      {%- elsif meta_products != blank and meta_products.size > 0 -%}
        {%- comment -%} Produits depuis metafield {%- endcomment -%}
        {%- for recommended_product in meta_products limit: 4 -%}
          {%- render 'milaura-crosssell-card',
              recommended_product: recommended_product,
              button_text: section.settings.button_text,
              button_text_sold_out: section.settings.button_text_sold_out,
              show_vendor: section.settings.show_vendor
          -%}
        {%- endfor -%}

      {%- elsif collection_products != blank and collection_products.size > 0 -%}
        {%- comment -%} Produits de la m√™me collection {%- endcomment -%}
        {%- for recommended_product in collection_products limit: 4 -%}
          {%- render 'milaura-crosssell-card',
              recommended_product: recommended_product,
              button_text: section.settings.button_text,
              button_text_sold_out: section.settings.button_text_sold_out,
              show_vendor: section.settings.show_vendor
          -%}
        {%- endfor -%}
      {%- endif -%}

    </div>

  </div>
</section>
{%- endif -%}

<style>
  /* ============================================
     BASE
     ============================================ */
  .milaura-product-crosssell {
    padding: 20px 0;
    background: transparent;
  }

  .milaura-product-crosssell__container {
    max-width: 900px;
  }

  .milaura-product-crosssell__title {
