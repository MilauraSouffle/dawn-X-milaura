  "name": "Milaura Crosssell",
  "class": "milaura-section",
  "settings": [
    {
      "type": "header",
      "content": "Source des recommandations"
    },
    {
      "type": "collection",
      "id": "fallback_collection",
      "label": "Collection de recherche",
      "info": "Collection ou chercher les produits similaires. Recommande: 'Tous les produits' ou collection principale."
    },
    {
      "type": "range",
      "id": "products_to_show",
      "label": "Nombre de produits",
      "min": 2,
      "max": 6,
      "step": 1,
      "default": 4
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "label": "Colonnes (desktop)",
      "min": 2,
      "max": 5,
      "step": 1,
      "default": 4
    },
    {
      "type": "range",
      "id": "min_products",
      "label": "Minimum pour afficher",
      "min": 1,
      "max": 4,
      "step": 1,
      "default": 1,
      "info": "Section cachee si moins de produits trouves"
