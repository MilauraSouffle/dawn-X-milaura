{% comment %}
  MILAURA PRODUCT CROSSSELL
  Max 2 produits recommandés
  Logique: pierre commune OU profil complémentaire
  Mobile: scroll horizontal
  Desktop: 2 cards côte à côte
  CTA "Ajouter" direct au panier
{% endcomment %}

{%- liquid
  assign crosssell_products = product.metafields.milaura.crosssell_products.value

  comment
    Fallback to related products by tag if no metafield
    Note: recommendations.products requires JavaScript/AJAX fetch, not directly available
    We use tag-based matching as a server-side alternative
  endcomment
  if crosssell_products == blank or crosssell_products.size == 0
    assign crosssell_products = null
    assign related_products = product.collections.first.products | where: 'available' | limit: 4
    if related_products.size > 0
      assign crosssell_products = related_products | where_exp: 'item', 'item.id != product.id' | slice: 0, 2
    endif
  endif
-%}

<section
  id="MilauraProductCrosssell-{{ section.id }}"
  class="milaura-product-crosssell"
  data-section-id="{{ section.id }}"
>
  <div class="milaura-product-crosssell__container">

    {%- if section.settings.show_title -%}
      <h2 class="milaura-product-crosssell__title">
        {{ section.settings.title }}
      </h2>
    {%- endif -%}

    {%- if section.settings.show_subtitle and section.settings.subtitle != blank -%}
      <p class="milaura-product-crosssell__subtitle">
        {{ section.settings.subtitle }}
      </p>
    {%- endif -%}

    {%- if crosssell_products and crosssell_products.size > 0 -%}
      <div class="milaura-product-crosssell__grid">

        {%- for recommended_product in crosssell_products limit: 2 -%}
          {%- assign recommended_variant = recommended_product.selected_or_first_available_variant -%}

          <div class="milaura-product-crosssell__card">

            <a
              href="{{ recommended_product.url }}"
              class="milaura-product-crosssell__image-link"
            >
              {%- if recommended_product.featured_image -%}
                {{
                  recommended_product.featured_image
                  | image_url: width: 600
                  | image_tag:
                    loading: 'lazy',
                    class: 'milaura-product-crosssell__image',
                    widths: '165, 360, 533, 720, 940',
                    sizes: '(min-width: 1024px) 400px, 280px',
                    alt: recommended_product.title | escape
                }}
              {%- else -%}
                {{ 'product-1' | placeholder_svg_tag: 'milaura-product-crosssell__placeholder' }}
              {%- endif -%}
            </a>

            <div class="milaura-product-crosssell__content">

              {%- if section.settings.show_vendor and recommended_product.vendor != blank -%}
                <p class="milaura-product-crosssell__vendor">
                  {{ recommended_product.vendor }}
                </p>
              {%- endif -%}

              <h3 class="milaura-product-crosssell__product-title">
                <a href="{{ recommended_product.url }}">
                  {{ recommended_product.title | escape }}
                </a>
              </h3>

              <div class="milaura-product-crosssell__price">
                {%- if recommended_variant.compare_at_price > recommended_variant.price -%}
                  <span class="milaura-product-crosssell__price-sale">
                    {{ recommended_variant.price | money }}
                  </span>
                  <span class="milaura-product-crosssell__price-compare">
                    {{ recommended_variant.compare_at_price | money }}
                  </span>
                {%- else -%}
                  <span class="milaura-product-crosssell__price-regular">
                    {{ recommended_variant.price | money }}
                  </span>
                {%- endif -%}
              </div>

              {%- form 'product', recommended_product, class: 'milaura-product-crosssell__form' -%}
                <input type="hidden" name="id" value="{{ recommended_variant.id }}">
                <input type="hidden" name="quantity" value="1">

                <button
                  type="submit"
                  name="add"
                  class="milaura-product-crosssell__cta"
                  {% if recommended_variant.available == false %}disabled{% endif %}
                  data-product-id="{{ recommended_product.id }}"
                  data-variant-id="{{ recommended_variant.id }}"
                >
                  {% if recommended_variant.available %}
                    {{ section.settings.button_text | default: 'Ajouter' }}
                  {% else %}
                    {{ section.settings.button_text_sold_out | default: 'Rupture' }}
                  {% endif %}
                </button>
              {%- endform -%}

            </div>

          </div>
        {%- endfor -%}

      </div>
    {%- else -%}
      <p class="milaura-product-crosssell__empty">
        {{ section.settings.empty_message | default: 'Aucune recommandation disponible' }}
      </p>
    {%- endif -%}

  </div>
</section>

<style>
  .milaura-product-crosssell {
    padding: var(--milaura-spacing-xl, 48px) 0;
    background: linear-gradient(
      to bottom,
      #F2E8D5 0%,
      var(--milaura-beige, #FDFBF7) 100%
    );
  }

  .milaura-product-crosssell__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--milaura-spacing-md, 24px);
  }

  .milaura-product-crosssell__title {
    font-family: 'Playfair Display', serif;
    font-size: 28px;
    font-weight: 600;
    text-align: center;
    color: var(--milaura-text, #000000);
    margin: 0 0 var(--milaura-spacing-sm, 12px) 0;
  }

  .milaura-product-crosssell__subtitle {
    font-size: 16px;
    line-height: 1.6;
    text-align: center;
    color: var(--milaura-text, #000000);
    opacity: 0.8;
    margin: 0 0 var(--milaura-spacing-lg, 36px) 0;
  }

  /* Mobile: scroll horizontal */
  .milaura-product-crosssell__grid {
    display: flex;
    gap: var(--milaura-spacing-md, 24px);
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    -webkit-overflow-scrolling: touch;
    padding-bottom: var(--milaura-spacing-sm, 12px);
  }

  .milaura-product-crosssell__grid::-webkit-scrollbar {
    height: 4px;
  }

  .milaura-product-crosssell__grid::-webkit-scrollbar-track {
    background: rgba(192, 160, 98, 0.1);
    border-radius: 2px;
  }

  .milaura-product-crosssell__grid::-webkit-scrollbar-thumb {
    background: var(--milaura-gold, #C0A062);
    border-radius: 2px;
  }

  .milaura-product-crosssell__card {
    flex: 0 0 280px;
    display: flex;
    flex-direction: column;
    background: #FFFFFF;
    border: 1px solid rgba(192, 160, 98, 0.2);
    border-radius: var(--milaura-border-radius, 20px);
    overflow: hidden;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.06);
    scroll-snap-align: start;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .milaura-product-crosssell__card:hover {
    transform: translateY(-4px);
    box-shadow: var(--milaura-shadow-md, 0 15px 40px rgba(192, 160, 98, 0.25));
  }

  .milaura-product-crosssell__image-link {
    display: block;
    aspect-ratio: 1 / 1;
    overflow: hidden;
  }

  .milaura-product-crosssell__image,
  .milaura-product-crosssell__placeholder {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    transition: transform 0.5s ease;
  }

  .milaura-product-crosssell__card:hover .milaura-product-crosssell__image {
    transform: scale(1.05);
  }

  .milaura-product-crosssell__content {
    padding: var(--milaura-spacing-md, 24px);
    display: flex;
    flex-direction: column;
    gap: var(--milaura-spacing-xs, 6px);
    flex-grow: 1;
  }

  .milaura-product-crosssell__vendor {
    font-size: 12px;
    font-weight: 500;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    color: var(--milaura-gold, #C0A062);
    margin: 0;
  }

  .milaura-product-crosssell__product-title {
    font-size: 18px;
    font-weight: 600;
    line-height: 1.3;
    margin: 0;
  }

  .milaura-product-crosssell__product-title a {
    color: var(--milaura-text, #000000);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .milaura-product-crosssell__product-title a:hover {
    color: var(--milaura-gold, #C0A062);
  }

  .milaura-product-crosssell__price {
    display: flex;
    align-items: center;
    gap: var(--milaura-spacing-xs, 6px);
    margin-top: auto;
    margin-bottom: var(--milaura-spacing-sm, 12px);
  }

  .milaura-product-crosssell__price-regular,
  .milaura-product-crosssell__price-sale {
    font-size: 18px;
    font-weight: 600;
    color: var(--milaura-text, #000000);
  }

  .milaura-product-crosssell__price-sale {
    color: var(--milaura-gold, #C0A062);
  }

  .milaura-product-crosssell__price-compare {
    font-size: 14px;
    font-weight: 400;
    text-decoration: line-through;
    opacity: 0.6;
  }

  .milaura-product-crosssell__form {
    width: 100%;
  }

  .milaura-product-crosssell__cta {
    width: 100%;
    background: var(--milaura-gold, #C0A062);
    color: #FFFFFF;
    border: none;
    border-radius: 12px;
    padding: 12px;
    font-size: 15px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .milaura-product-crosssell__cta:hover:not(:disabled) {
    background: var(--milaura-gold-dark, #8F723A);
  }

  .milaura-product-crosssell__cta:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .milaura-product-crosssell__empty {
    text-align: center;
    font-size: 16px;
    color: var(--milaura-text, #000000);
    opacity: 0.6;
    padding: var(--milaura-spacing-xl, 48px) 0;
  }

  /* Desktop: 2 cards côte à côte */
  @media screen and (min-width: 1024px) {
    .milaura-product-crosssell__title {
      font-size: 36px;
    }

    .milaura-product-crosssell__subtitle {
      font-size: 18px;
    }

    .milaura-product-crosssell__grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: var(--milaura-spacing-lg, 36px);
      overflow-x: visible;
    }

    .milaura-product-crosssell__card {
      flex: none;
    }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .milaura-product-crosssell__card,
    .milaura-product-crosssell__image,
    .milaura-product-crosssell__cta {
      transition: none;
    }
  }
</style>

<script>
(function() {
  const sectionId = '{{ section.id }}';
  const section = document.getElementById('MilauraProductCrosssell-' + sectionId);
  if (!section) return;

  const forms = section.querySelectorAll('.milaura-product-crosssell__form');

  forms.forEach(function(form) {
    form.addEventListener('submit', function(e) {
      e.preventDefault();

      const formData = new FormData(form);

      fetch('/cart/add.js', {
        method: 'POST',
        body: formData
      })
      .then(response => response.json())
      .then(data => {
        // Trigger cart update event
        document.dispatchEvent(new CustomEvent('cart:updated'));

        // Visual feedback
        const submitBtn = form.querySelector('.milaura-product-crosssell__cta');
        if (submitBtn) {
          const originalText = submitBtn.textContent;
          submitBtn.textContent = '✓ Ajouté !';
          submitBtn.style.background = '#4CAF50';

          setTimeout(function() {
            submitBtn.textContent = originalText;
            submitBtn.style.background = '';
          }, 2000);
        }
      })
      .catch(error => {
        console.error('Erreur ajout panier:', error);

        const submitBtn = form.querySelector('.milaura-product-crosssell__cta');
        if (submitBtn) {
          const originalText = submitBtn.textContent;
          submitBtn.textContent = 'Erreur';
          submitBtn.style.background = '#f44336';

          setTimeout(function() {
            submitBtn.textContent = originalText;
            submitBtn.style.background = '';
          }, 2000);
        }
      });
    });
  });
})();
</script>

{% schema %}
{
  "name": "Milaura Product Crosssell",
  "class": "milaura-section",
  "settings": [
    {
      "type": "header",
      "content": "Titre"
    },
    {
      "type": "checkbox",
      "id": "show_title",
      "label": "Afficher le titre",
      "default": true
    },
    {
      "type": "text",
      "id": "title",
      "label": "Titre",
      "default": "Tu pourrais aussi aimer"
    },
    {
      "type": "checkbox",
      "id": "show_subtitle",
      "label": "Afficher le sous-titre",
      "default": true
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Sous-titre",
      "default": "Des créations complémentaires pour enrichir ton rituel"
    },
    {
      "type": "header",
      "content": "Options"
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "label": "Afficher le vendeur",
      "default": false
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Texte du bouton",
      "default": "Ajouter"
    },
    {
      "type": "text",
      "id": "button_text_sold_out",
      "label": "Texte si rupture",
      "default": "Rupture"
    },
    {
      "type": "text",
      "id": "empty_message",
      "label": "Message si vide",
      "default": "Aucune recommandation disponible"
    }
  ],
  "presets": [
    {
      "name": "Milaura Product Crosssell"
    }
  ]
}
{% endschema %}
