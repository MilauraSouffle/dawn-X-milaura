      "type": "header",
      "content": "Style Titre"
    },
    {
      "type": "range",
      "id": "title_size_desktop",
      "label": "Taille titre (desktop)",
      "min": 24,
      "max": 44,
      "step": 1,
      "unit": "px",
      "default": 32
    },
    {
      "type": "range",
      "id": "title_size_mobile",
      "label": "Taille titre (mobile)",
      "min": 20,
      "max": 32,
      "step": 1,
      "unit": "px",
      "default": 24
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Couleur du titre",
      "default": "#000000"
    },
    {
      "type": "header",
      "content": "Style Sous-titre"
    },
    {
      "type": "range",
      "id": "subtitle_size_desktop",
      "label": "Taille sous-titre (desktop)",
      "min": 14,
      "max": 22,
      "step": 1,
      "unit": "px",
      "default": 17
    },
    {
      "type": "range",
      "id": "subtitle_size_mobile",
      "label": "Taille sous-titre (mobile)",
      "min": 13,
      "max": 18,
      "step": 1,
      "unit": "px",
      "default": 15
    },
    {
      "type": "color",
      "id": "subtitle_color",
