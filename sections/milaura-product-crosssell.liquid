    font-size: {{ section.settings.title_size_mobile }}px;
    font-weight: 600;
    text-align: center;
    color: {{ section.settings.title_color }};
    margin: 0 0 8px 0;
  }

  .milaura-product-crosssell__subtitle {
    font-family: var(--milaura-font-body);
    font-size: {{ section.settings.subtitle_size_mobile }}px;
    line-height: 1.6;
    text-align: center;
    color: {{ section.settings.subtitle_color }};
    opacity: 0.8;
    margin: 0 0 24px 0;
  }

  /* ============================================
     GRID - Mobile First
     ============================================ */
  .milaura-product-crosssell__grid {
    display: flex;
    flex-direction: column;
    gap: 16px;
    align-items: center;
  }

  /* ============================================
     CARD
     ============================================ */
  .milaura-product-crosssell__card {
    width: 100%;
    max-width: 320px;
    display: flex;
    flex-direction: column;
    background: #FFFFFF;
    border: 1px solid rgba(192, 160, 98, 0.2);
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.06);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .milaura-product-crosssell__card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 32px rgba(192, 160, 98, 0.2);
  }

  /* Image */
  .milaura-product-crosssell__image-link {
    display: block;
    aspect-ratio: 1 / 1;
    overflow: hidden;
    background: #f8f8f8;
  }

  .milaura-product-crosssell__image,
  .milaura-product-crosssell__placeholder {
    width: 100%;
    height: 100%;
