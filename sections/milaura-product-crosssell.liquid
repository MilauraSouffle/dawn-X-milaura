<section
  id="MilauraCrosssell-{{ section.id }}"
  class="milaura-product-crosssell"
  data-section-id="{{ section.id }}"
  aria-label="{{ section.settings.title }}"
>
  <div class="crosssell-container">

    {%- if section.settings.show_title -%}
      <header class="crosssell-header">
        <h2 class="crosssell-title">{{ section.settings.title }}</h2>
        {%- if section.settings.subtitle != blank -%}
          <p class="crosssell-subtitle">{{ section.settings.subtitle }}</p>
        {%- endif -%}
      </header>
    {%- endif -%}

  </div>

  <div class="crosssell-carousel-wrapper">
    <div class="crosssell-carousel">

      {%- assign shown_count = 0 -%}

      {%- comment -%} Source : Metafield OU Collection {%- endcomment -%}
      {%- if use_metafield -%}
        {%- assign product_source = metafield_products -%}
      {%- else -%}
        {%- assign product_source = the_collection.products -%}
      {%- endif -%}

      {%- for rec_product in product_source -%}
        {%- if rec_product.id == current_product_id -%}
          {%- continue -%}
        {%- endif -%}
        {%- if shown_count >= max_products -%}
          {%- break -%}
        {%- endif -%}
        {%- assign shown_count = shown_count | plus: 1 -%}
        {%- assign rec_variant = rec_product.selected_or_first_available_variant -%}
        {%- if shown_count <= 2 -%}
          {%- assign img_loading = 'eager' -%}
        {%- else -%}
          {%- assign img_loading = 'lazy' -%}
        {%- endif -%}

        <a href="{{ rec_product.url }}" class="crosssell-card">

          <div class="crosssell-img-container">
            {%- if rec_product.metafields.milaura.is_bestseller == true -%}
              <span class="crosssell-badge">{{ section.settings.badge_text }}</span>
            {%- endif -%}

            {%- if rec_product.featured_image -%}
              {{ rec_product.featured_image
                | image_url: width: 500
                | image_tag:
                  class: 'crosssell-img',
                  loading: img_loading,
                  widths: '160, 220, 260, 500',
                  sizes: '(min-width: 1024px) 260px, (min-width: 601px) 220px, 180px',
                  alt: rec_product.title | escape
              }}
            {%- else -%}
              {{ 'product-1' | placeholder_svg_tag: 'crosssell-img' }}
            {%- endif -%}
          </div>

          <div class="crosssell-info">
            {%- if section.settings.show_vendor and rec_product.vendor != blank -%}
              <span class="crosssell-vendor">{{ rec_product.vendor }}</span>
            {%- endif -%}

            <h3 class="crosssell-name">{{ rec_product.title }}</h3>

            <div class="crosssell-price">
              {{ rec_variant.price | money }}
              {%- if rec_variant.compare_at_price > rec_variant.price -%}
                <span class="crosssell-price-compare">{{ rec_variant.compare_at_price | money }}</span>
              {%- endif -%}
            </div>
          </div>

          <span class="crosssell-btn">{{ section.settings.button_text }}</span>

        </a>
      {%- endfor -%}

    </div>
  </div>

  {%- if use_metafield -%}
    {%- assign dot_count = metafield_products.size | at_most: max_products -%}
  {%- else -%}
    {%- assign dot_count = the_collection.products.size | at_most: max_products -%}
  {%- endif -%}
  {%- if dot_count > 1 -%}
    <div class="crosssell-dots" aria-label="Navigation produits">
      {%- for i in (1..dot_count) -%}
        <button
          type="button"
          class="crosssell-dot {% if forloop.first %}is-active{% endif %}"
          data-dot-index="{{ forloop.index0 }}"
          aria-label="Voir produit {{ forloop.index }}"
        ></button>
      {%- endfor -%}
    </div>
  {%- endif -%}

</section>

<script>
(function() {
  const sectionId = '{{ section.id }}';
  const root = document.getElementById('MilauraCrosssell-' + sectionId);
  if (!root) return;

  const carousel = root.querySelector('.crosssell-carousel');
  const dots = Array.from(root.querySelectorAll('.crosssell-dot[data-dot-index]'));
  const cards = Array.from(carousel.querySelectorAll('.crosssell-card'));

  if (!carousel || !cards.length) return;

  function updateDots() {
    if (!dots.length) return;
    const scrollLeft = carousel.scrollLeft;
    const cardWidth = cards[0].offsetWidth + 14; // width + gap
    const activeIndex = Math.round(scrollLeft / cardWidth);

    dots.forEach((dot, i) => {
      dot.classList.toggle('is-active', i === activeIndex);
    });
  }

  function scrollToCard(index) {
    const cardWidth = cards[0].offsetWidth + 14;
    carousel.scrollTo({
      left: index * cardWidth,
      behavior: 'smooth'
    });
  }

  // Scroll listener
  let scrollTimeout;
  carousel.addEventListener('scroll', function() {
    clearTimeout(scrollTimeout);
    scrollTimeout = setTimeout(updateDots, 50);
  }, { passive: true });

  // Click sur les dots
  dots.forEach((dot) => {
    dot.addEventListener('click', function(e) {
      e.preventDefault();
      const idx = parseInt(this.getAttribute('data-dot-index'), 10);
      if (!isNaN(idx)) scrollToCard(idx);
    });
  });

  updateDots();
})();
</script>
{%- endif -%}

