{% comment %}
  MILAURA DASHBOARD RECOMMENDATIONS SECTION
  Section wrapper pour afficher les recommandations personnalisées sur le dashboard client
  À inclure dans templates/customers/account.json
{% endcomment %}

{% render 'milaura-dashboard-recos' %}

{% schema %}
{
  "name": "Milaura Dashboard Recommendations",
  "tag": "section",
  "class": "milaura-dashboard-recommendations-section",
  "settings": [
    {
      "type": "header",
      "content": "Recommandations personnalisées"
    },
    {
      "type": "paragraph",
      "content": "Affiche automatiquement 2 produits recommandés basés sur le profil émotionnel du client (last_profile_handle)."
    }
  ],
  "presets": [
    {
      "name": "Milaura Dashboard Recommendations"
    }
  ]
}
{% endschema %}
