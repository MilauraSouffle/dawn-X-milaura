    }

    #MilauraVideoProcess-{{ section.id }} .collection-button.mobile-only .milaura-btn {
      font-size: 0.9rem;
      padding: 14px 24px;
    }
  }
{% endstyle %}

<div id="MilauraVideoProcess-{{ section.id }}">
  <div class="video-process-container">
    <!-- Colonne gauche : Vid√©o -->
    <div class="video-column">
      {% if section.settings.title != blank %}
        <h2 class="video-title milaura-heading">{{ section.settings.title }}</h2>
      {% endif %}

      {% if section.settings.subtitle != blank %}
        <p class="video-subtitle milaura-text">{{ section.settings.subtitle }}</p>
      {% endif %}

      <div class="video-wrapper">
        {% if section.settings.video_url != blank %}
          {% assign video_url = section.settings.video_url %}
          
          {% comment %} D√©tecter si c'est une URL YouTube {% endcomment %}
          {% if video_url contains 'youtube.com' or video_url contains 'youtu.be' %}
            {% assign video_id = '' %}
            {% if video_url contains 'youtube.com/watch?v=' %}
              {% assign video_id = video_url | split: 'v=' | last | split: '&' | first %}
            {% elsif video_url contains 'youtu.be/' %}
              {% assign video_id = video_url | split: 'youtu.be/' | last | split: '?' | first %}
            {% endif %}
            
            {% if video_id != blank %}
              <iframe 
                src="https://www.youtube.com/embed/{{ video_id }}?rel=0" 
                frameborder="0" 
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
                allowfullscreen
                loading="lazy">
              </iframe>
            {% else %}
              <div class="video-placeholder">URL YouTube invalide</div>
            {% endif %}
          {% elsif video_url contains '.mp4' or video_url contains '.webm' or video_url contains '.ogg' %}
            {% comment %} Vid√©o directe (MP4, WebM, OGG) {% endcomment %}
            <video controls preload="metadata" loading="lazy">
              <source src="{{ video_url }}" type="video/mp4">
              Votre navigateur ne supporte pas la lecture de vid√©os.
            </video>
          {% else %}
            {% comment %} Autre type d'URL, on essaie de l'afficher comme iframe {% endcomment %}
            <iframe 
              src="{{ video_url }}" 
              frameborder="0" 
              allowfullscreen
              loading="lazy">
            </iframe>
          {% endif %}
        {% else %}
          <div class="video-placeholder">
            <p>Aucune vid√©o configur√©e</p>
          </div>
        {% endif %}
      </div>

      <!-- CTA sous la vid√©o (desktop/tablette) -->
      {% assign selected_collection_for_btn = collections[section.settings.collection] %}
      {% if section.settings.button_label != blank and selected_collection_for_btn != blank %}
        <div class="collection-button desktop-only">
          <a href="{{ selected_collection_for_btn.url }}" class="milaura-btn milaura-btn-primary">
            {{ section.settings.button_label }}
          </a>
        </div>
      {% endif %}
    </div>

    <!-- Colonne droite : Produits -->
    <div class="products-column">
      {% assign selected_collection = collections[section.settings.collection] %}
      {% assign products_count = 0 %}

      {% if selected_collection != blank and selected_collection.products.size > 0 %}
        <div class="products-list" id="products-carousel-{{ section.id }}">
          {% for product in selected_collection.products limit: 4 %}
            {% assign products_count = products_count | plus: 1 %}
            <a href="{{ product.url }}" class="product-item {% if forloop.first %}is-active{% endif %}" data-index="{{ forloop.index0 }}">
              <div class="product-card milaura-card">
                {% if product.featured_image != blank %}
                  {{ product.featured_image | image_url: width: 400 | image_tag: class: 'product-image', loading: 'lazy', alt: product.title }}
                {% else %}
                  {{ 'product-1' | placeholder_svg_tag: 'product-image' }}
                {% endif %}

                <div class="product-info">
                  <h3 class="product-name">{{ product.title }}</h3>
                  <div class="product-price">{{ product.price | money }}</div>
                </div>
              </div>
            </a>
          {% endfor %}
        </div>

        <!-- Dots navigation (mobile) -->
        <div class="carousel-dots" id="carousel-dots-{{ section.id }}">
          {% for product in selected_collection.products limit: 4 %}
            <button
              type="button"
              class="carousel-dot {% if forloop.first %}is-active{% endif %}"
              data-index="{{ forloop.index0 }}"
              aria-label="Voir {{ product.title }}"
            ></button>
          {% endfor %}
        </div>

        <!-- CTA mobile uniquement (cach√© sur desktop/tablette) -->
        {% if section.settings.button_label != blank %}
          <div class="collection-button mobile-only">
            <a href="{{ selected_collection.url }}" class="milaura-btn milaura-btn-primary">
              {{ section.settings.button_label }}
            </a>
          </div>
        {% endif %}
      {% else %}
        <div class="products-list">
          {% comment %} Placeholders si aucune collection n'est s√©lectionn√©e {% endcomment %}
          {% for i in (1..3) %}
            <div class="product-card milaura-card">
              {{ 'product-' | append: i | placeholder_svg_tag: 'product-image' }}
              <div class="product-info">
                <h3 class="product-name">Produit Exemple {{ i }}</h3>
                <div class="product-price">29,90 ‚Ç¨</div>
              </div>
            </div>
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
</div>

<script>
(function() {
  'use strict';

  var sectionId = '{{ section.id }}';
  var carousel = document.getElementById('products-carousel-' + sectionId);
  var dotsContainer = document.getElementById('carousel-dots-' + sectionId);

  if (!carousel || !dotsContainer) return;

  var items = Array.prototype.slice.call(carousel.querySelectorAll('.product-item'));
  var dots = Array.prototype.slice.call(dotsContainer.querySelectorAll('.carousel-dot'));
  var currentIndex = 0;
  var autoPlayInterval = null;

  function isMobile() {
    return window.innerWidth <= 768;
  }

  function showSlide(index) {
    if (index < 0) index = items.length - 1;
    if (index >= items.length) index = 0;

    currentIndex = index;

    items.forEach(function(item, i) {
      item.classList.toggle('is-active', i === index);
    });

    dots.forEach(function(dot, i) {
      dot.classList.toggle('is-active', i === index);
    });
  }

  function startAutoPlay() {
    if (!isMobile()) return;
    stopAutoPlay();
    autoPlayInterval = setInterval(function() {
      showSlide(currentIndex + 1);
    }, 4000);
  }

  function stopAutoPlay() {
    if (autoPlayInterval) {
      clearInterval(autoPlayInterval);
      autoPlayInterval = null;
    }
  }

  // Click on dots
  dots.forEach(function(dot, i) {
    dot.addEventListener('click', function() {
      showSlide(i);
      stopAutoPlay();
      startAutoPlay();
    });
  });

  // Swipe support
  var touchStartX = 0;
  var touchEndX = 0;

  carousel.addEventListener('touchstart', function(e) {
    touchStartX = e.changedTouches[0].screenX;
    stopAutoPlay();
  }, { passive: true });

  carousel.addEventListener('touchend', function(e) {
    touchEndX = e.changedTouches[0].screenX;
    var diff = touchStartX - touchEndX;

    if (Math.abs(diff) > 50) {
      if (diff > 0) {
        showSlide(currentIndex + 1);
      } else {
        showSlide(currentIndex - 1);
      }
    }
    startAutoPlay();
  }, { passive: true });

  // Start autoplay on mobile
  if (isMobile()) {
    startAutoPlay();
  }

  // Handle resize
  window.addEventListener('resize', function() {
    if (isMobile()) {
      startAutoPlay();
    } else {
      stopAutoPlay();
      // Show all items on desktop
      items.forEach(function(item) {
        item.classList.remove('is-active');
      });
    }
  });
})();
</script>

