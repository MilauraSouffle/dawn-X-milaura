{% style %}
  #MilauraVideoProcess-{{ section.id }} {
    width: 100%;
    padding: var(--milaura-spacing-lg) var(--milaura-spacing-sm);
    background: transparent;
  }

  #MilauraVideoProcess-{{ section.id }} .video-process-container {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--milaura-spacing-md);
    align-items: start;
  }

  /* Colonne gauche : Vid√©o */
  #MilauraVideoProcess-{{ section.id }} .video-column {
    display: flex;
    flex-direction: column;
    gap: var(--milaura-spacing-sm);
  }

  #MilauraVideoProcess-{{ section.id }} .video-title {
    font-size: {{ section.settings.title_size }}rem;
    color: {{ section.settings.title_color }};
    margin: 0 0 10px 0;
    line-height: 1.2;
  }

  #MilauraVideoProcess-{{ section.id }} .video-subtitle {
    font-size: {{ section.settings.subtitle_size }}rem;
    color: {{ section.settings.subtitle_color }};
    line-height: 1.6;
    margin-bottom: var(--milaura-spacing-sm);
  }

  #MilauraVideoProcess-{{ section.id }} .video-wrapper {
    position: relative;
    width: 100%;
    aspect-ratio: 16 / 9;
    border-radius: var(--milaura-border-radius);
    overflow: hidden;
    background: #f9f9f9;
  }

  #MilauraVideoProcess-{{ section.id }} .video-wrapper video,
  #MilauraVideoProcess-{{ section.id }} .video-wrapper iframe {
    width: 100%;
    height: 100%;
    border: none;
    display: block;
  }

  #MilauraVideoProcess-{{ section.id }} .video-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--milaura-beige-mid);
    color: var(--milaura-text-light);
    font-family: var(--milaura-font-body);
  }

  /* Colonne droite : Produits */
  #MilauraVideoProcess-{{ section.id }} .products-column {
    display: flex;
    flex-direction: column;
    gap: var(--milaura-spacing-sm);
  }

  #MilauraVideoProcess-{{ section.id }} .products-list {
    display: flex;
    flex-direction: column;
    gap: var(--milaura-spacing-sm);
  }

  #MilauraVideoProcess-{{ section.id }} .product-item {
    text-decoration: none;
    color: inherit;
  }

  #MilauraVideoProcess-{{ section.id }} .product-item:hover {
    text-decoration: none;
  }

  #MilauraVideoProcess-{{ section.id }} .product-card {
    display: flex;
    gap: var(--milaura-spacing-sm);
    align-items: center;
    padding: 15px;
  }

  #MilauraVideoProcess-{{ section.id }} .product-image {
    width: 100px;
    height: 100px;
    object-fit: cover;
    border-radius: var(--milaura-border-radius-sm);
    flex-shrink: 0;
  }

  #MilauraVideoProcess-{{ section.id }} .product-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 5px;
  }

  #MilauraVideoProcess-{{ section.id }} .product-name {
    font-family: var(--milaura-font-heading);
    font-size: {{ section.settings.product_name_size }}rem;
    color: {{ section.settings.product_name_color }};
    font-weight: 600;
    margin: 0;
    line-height: 1.3;
  }

  #MilauraVideoProcess-{{ section.id }} .product-price {
    font-family: var(--milaura-font-body);
    font-size: {{ section.settings.price_size }}rem;
    color: {{ section.settings.price_color }};
    font-weight: 700;
  }

  #MilauraVideoProcess-{{ section.id }} .collection-button {
    margin-top: var(--milaura-spacing-sm);
    text-align: center;
  }

  /* Desktop/Tablette : CTA sous la vid√©o visible, CTA sous produits cach√© */
  #MilauraVideoProcess-{{ section.id }} .collection-button.desktop-only {
    display: block;
  }

  #MilauraVideoProcess-{{ section.id }} .collection-button.mobile-only {
    display: none;
  }

  /* Dots cach√©s sur desktop */
  #MilauraVideoProcess-{{ section.id }} .carousel-dots {
    display: none;
  }

  /* ============================================
     MOBILE / TABLETTE (‚â§ 768px) - CARROUSEL SINGLE
     ============================================ */
  @media screen and (max-width: 768px) {
    #MilauraVideoProcess-{{ section.id }} {
      padding: var(--milaura-spacing-md) var(--milaura-spacing-sm);
    }

    #MilauraVideoProcess-{{ section.id }} .video-process-container {
      display: flex;
      flex-direction: column;
      gap: var(--milaura-spacing-md);
      align-items: center;
    }

    #MilauraVideoProcess-{{ section.id }} .video-column {
      width: 100%;
      text-align: center;
    }

    #MilauraVideoProcess-{{ section.id }} .video-title {
      font-size: 2rem;
      margin-bottom: 10px;
      text-align: center;
    }

    #MilauraVideoProcess-{{ section.id }} .video-subtitle {
      font-size: 1rem;
      margin-bottom: 16px;
      text-align: center;
      max-width: 90%;
      margin-left: auto;
      margin-right: auto;
    }

    #MilauraVideoProcess-{{ section.id }} .video-wrapper {
      width: 100%;
      max-width: 100%;
      margin: 0 auto;
      border-radius: 16px;
      aspect-ratio: 16 / 9;
    }

    /* Produits en carrousel single card */
    #MilauraVideoProcess-{{ section.id }} .products-column {
      width: 100%;
      max-width: 320px;
      margin: 0 auto;
    }

    #MilauraVideoProcess-{{ section.id }} .products-list {
      position: relative;
      min-height: 320px;
    }

    #MilauraVideoProcess-{{ section.id }} .product-item {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      opacity: 0;
      visibility: hidden;
      transition: opacity 0.5s ease, visibility 0.5s ease;
    }

    #MilauraVideoProcess-{{ section.id }} .product-item.is-active {
      opacity: 1;
      visibility: visible;
      position: relative;
    }

    #MilauraVideoProcess-{{ section.id }} .product-card {
      flex-direction: column;
      text-align: center;
      padding: 24px;
      border-radius: 24px;
      background: rgba(255, 255, 255, 0.95);
      border: 2px solid rgba(192, 160, 98, 0.35);
      box-shadow: 0 12px 35px rgba(192, 160, 98, 0.18);
    }

    #MilauraVideoProcess-{{ section.id }} .product-image {
      width: 200px;
      height: 200px;
      border-radius: 20px;
      margin: 0 auto 18px auto;
      object-fit: cover;
    }

    #MilauraVideoProcess-{{ section.id }} .product-name {
      font-size: 1.35rem;
      line-height: 1.3;
      margin-bottom: 14px;
      font-weight: 600;
    }

    #MilauraVideoProcess-{{ section.id }} .product-price {
      font-size: 1.4rem;
      display: inline-block;
      background: linear-gradient(135deg, rgba(192, 160, 98, 0.18) 0%, rgba(192, 160, 98, 0.08) 100%);
      padding: 10px 24px;
      border-radius: 14px;
      border: 1.5px solid rgba(192, 160, 98, 0.35);
      font-weight: 700;
    }

    /* Dots navigation - Style pill */
    #MilauraVideoProcess-{{ section.id }} .carousel-dots {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 8px;
      margin-top: 20px;
    }

    #MilauraVideoProcess-{{ section.id }} .carousel-dot {
      width: 8px;
      height: 8px;
      border-radius: 10px;
      background: rgba(192, 160, 98, 0.3);
      border: none;
      cursor: pointer;
      transition: all 0.35s cubic-bezier(0.4, 0, 0.2, 1);
      padding: 0;
    }

    #MilauraVideoProcess-{{ section.id }} .carousel-dot:hover {
      background: rgba(192, 160, 98, 0.5);
    }

    #MilauraVideoProcess-{{ section.id }} .carousel-dot.is-active {
      width: 28px;
      background: var(--milaura-gold);
    }

    /* Mobile : CTA sous la vid√©o cach√©, CTA sous produits visible */
    #MilauraVideoProcess-{{ section.id }} .collection-button.desktop-only {
      display: none;
    }

    #MilauraVideoProcess-{{ section.id }} .collection-button.mobile-only {
      display: block;
      margin-top: 24px;
      text-align: center;
    }

    /* CTA lisible - Police sans-serif */
    #MilauraVideoProcess-{{ section.id }} .collection-button.mobile-only .milaura-btn {
      font-family: 'Lato', -apple-system, BlinkMacSystemFont, sans-serif !important;
      font-size: 1rem;
      font-weight: 700;
      letter-spacing: 0.5px;
      text-transform: uppercase;
      padding: 16px 32px;
    }
  }

  /* Tr√®s petit mobile */
  @media screen and (max-width: 380px) {
    #MilauraVideoProcess-{{ section.id }} .video-title {
      font-size: 1.7rem;
    }

    #MilauraVideoProcess-{{ section.id }} .products-column {
      max-width: 290px;
    }

    #MilauraVideoProcess-{{ section.id }} .products-list {
