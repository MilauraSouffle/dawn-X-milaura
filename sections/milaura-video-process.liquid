{% style %}
  #MilauraVideoProcess-{{ section.id }} {
    width: 100%;
    padding: var(--milaura-spacing-lg) var(--milaura-spacing-sm);
    background: transparent;
  }

  #MilauraVideoProcess-{{ section.id }} .video-process-container {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--milaura-spacing-md);
    align-items: start;
  }

  /* Colonne gauche : Vid√©o */
  #MilauraVideoProcess-{{ section.id }} .video-column {
    display: flex;
    flex-direction: column;
    gap: var(--milaura-spacing-sm);
  }

  #MilauraVideoProcess-{{ section.id }} .video-title {
    font-size: {{ section.settings.title_size }}rem;
    color: {{ section.settings.title_color }};
    margin: 0 0 10px 0;
    line-height: 1.2;
  }

  #MilauraVideoProcess-{{ section.id }} .video-subtitle {
    font-size: {{ section.settings.subtitle_size }}rem;
    color: {{ section.settings.subtitle_color }};
    line-height: 1.6;
    margin-bottom: var(--milaura-spacing-sm);
  }

  #MilauraVideoProcess-{{ section.id }} .video-wrapper {
    position: relative;
    width: 100%;
    aspect-ratio: 16 / 9;
    border-radius: var(--milaura-border-radius);
    overflow: hidden;
    background: #f9f9f9;
  }

  #MilauraVideoProcess-{{ section.id }} .video-wrapper video,
  #MilauraVideoProcess-{{ section.id }} .video-wrapper iframe {
    width: 100%;
    height: 100%;
    border: none;
    display: block;
  }

  #MilauraVideoProcess-{{ section.id }} .video-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--milaura-beige-mid);
    color: var(--milaura-text-light);
    font-family: var(--milaura-font-body);
  }

  /* Colonne droite : Produits */
  #MilauraVideoProcess-{{ section.id }} .products-column {
    display: flex;
    flex-direction: column;
    gap: var(--milaura-spacing-sm);
  }

  #MilauraVideoProcess-{{ section.id }} .products-list {
    display: flex;
    flex-direction: column;
    gap: var(--milaura-spacing-sm);
  }

  #MilauraVideoProcess-{{ section.id }} .product-item {
    text-decoration: none;
    color: inherit;
  }

  #MilauraVideoProcess-{{ section.id }} .product-item:hover {
    text-decoration: none;
  }

  #MilauraVideoProcess-{{ section.id }} .product-card {
    display: flex;
    gap: var(--milaura-spacing-sm);
    align-items: center;
    padding: 15px;
  }

  #MilauraVideoProcess-{{ section.id }} .product-image {
    width: 100px;
    height: 100px;
    object-fit: cover;
    border-radius: var(--milaura-border-radius-sm);
    flex-shrink: 0;
  }

  #MilauraVideoProcess-{{ section.id }} .product-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 5px;
  }

  #MilauraVideoProcess-{{ section.id }} .product-name {
    font-family: var(--milaura-font-heading);
    font-size: {{ section.settings.product_name_size }}rem;
    color: {{ section.settings.product_name_color }};
    font-weight: 600;
    margin: 0;
    line-height: 1.3;
  }

  #MilauraVideoProcess-{{ section.id }} .product-price {
    font-family: var(--milaura-font-body);
    font-size: {{ section.settings.price_size }}rem;
    color: {{ section.settings.price_color }};
    font-weight: 700;
  }

  #MilauraVideoProcess-{{ section.id }} .collection-button {
    margin-top: var(--milaura-spacing-sm);
    text-align: center;
  }

  /* Desktop/Tablette : CTA sous la vid√©o visible, CTA sous produits cach√© */
  #MilauraVideoProcess-{{ section.id }} .collection-button.desktop-only {
    display: block;
  }

  #MilauraVideoProcess-{{ section.id }} .collection-button.mobile-only {
    display: none;
  }

  /* ============================================
     MOBILE / TABLETTE (‚â§ 768px) - CARROUSEL
     ============================================ */
  @media screen and (max-width: 768px) {
    #MilauraVideoProcess-{{ section.id }} {
      padding: var(--milaura-spacing-sm) 0;
    }

    #MilauraVideoProcess-{{ section.id }} .video-process-container {
      grid-template-columns: 1fr;
      gap: var(--milaura-spacing-sm);
    }

    #MilauraVideoProcess-{{ section.id }} .video-column {
      padding: 0 var(--milaura-spacing-sm);
    }

    #MilauraVideoProcess-{{ section.id }} .video-title {
      font-size: 1.8rem;
      margin-bottom: 8px;
    }

    #MilauraVideoProcess-{{ section.id }} .video-subtitle {
      font-size: 0.95rem;
      margin-bottom: 12px;
    }

    #MilauraVideoProcess-{{ section.id }} .video-wrapper {
      border-radius: 16px;
    }

    /* Produits en carrousel horizontal */
    #MilauraVideoProcess-{{ section.id }} .products-column {
      padding: 0;
    }

    #MilauraVideoProcess-{{ section.id }} .products-list {
      display: flex;
      flex-direction: row;
      gap: 12px;
      overflow-x: auto;
      overflow-y: hidden;
      scroll-snap-type: x mandatory;
      -webkit-overflow-scrolling: touch;
      padding: 12px var(--milaura-spacing-sm);
      margin: 0;
      scrollbar-width: none;
      -ms-overflow-style: none;
    }

    #MilauraVideoProcess-{{ section.id }} .products-list::-webkit-scrollbar {
      display: none;
    }

    #MilauraVideoProcess-{{ section.id }} .product-item {
      flex: 0 0 auto;
      width: 140px;
      scroll-snap-align: start;
    }

    #MilauraVideoProcess-{{ section.id }} .product-card {
      flex-direction: column;
      text-align: center;
      padding: 12px;
      border-radius: 16px;
      background: rgba(255, 255, 255, 0.8);
      border: 1px solid rgba(192, 160, 98, 0.2);
      height: 100%;
    }

    #MilauraVideoProcess-{{ section.id }} .product-image {
      width: 100px;
      height: 100px;
      border-radius: 12px;
      margin-bottom: 8px;
    }

    #MilauraVideoProcess-{{ section.id }} .product-name {
      font-size: 0.9rem;
      line-height: 1.25;
      margin-bottom: 6px;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }

    #MilauraVideoProcess-{{ section.id }} .product-price {
      font-size: 1rem;
      display: inline-block;
      background: linear-gradient(135deg, rgba(192, 160, 98, 0.15) 0%, rgba(192, 160, 98, 0.08) 100%);
      padding: 4px 10px;
      border-radius: 8px;
      border: 1px solid rgba(192, 160, 98, 0.25);
    }

    /* Indicateur de scroll (fade droite) */
    #MilauraVideoProcess-{{ section.id }} .products-column::after {
      content: '';
      position: absolute;
      right: 0;
      top: 0;
      bottom: 0;
      width: 40px;
      background: linear-gradient(to left, rgba(253, 251, 247, 0.9) 0%, transparent 100%);
      pointer-events: none;
      z-index: 2;
    }

    #MilauraVideoProcess-{{ section.id }} .products-column {
      position: relative;
    }

    /* Mobile : CTA sous la vid√©o cach√©, CTA sous produits visible */
    #MilauraVideoProcess-{{ section.id }} .collection-button.desktop-only {
      display: none;
    }

    #MilauraVideoProcess-{{ section.id }} .collection-button.mobile-only {
      display: block;
      padding: 0 var(--milaura-spacing-sm);
      margin-top: 8px;
    }
  }

  /* Tr√®s petit mobile */
  @media screen and (max-width: 480px) {
    #MilauraVideoProcess-{{ section.id }} .video-title {
      font-size: 1.5rem;
    }

    #MilauraVideoProcess-{{ section.id }} .product-item {
      width: 130px;
    }

    #MilauraVideoProcess-{{ section.id }} .product-image {
      width: 85px;
      height: 85px;
    }

    #MilauraVideoProcess-{{ section.id }} .product-name {
      font-size: 0.85rem;
    }
  }
{% endstyle %}

<div id="MilauraVideoProcess-{{ section.id }}">
  <div class="video-process-container">
    <!-- Colonne gauche : Vid√©o -->
    <div class="video-column">
      {% if section.settings.title != blank %}
        <h2 class="video-title milaura-heading">{{ section.settings.title }}</h2>
      {% endif %}

      {% if section.settings.subtitle != blank %}
        <p class="video-subtitle milaura-text">{{ section.settings.subtitle }}</p>
      {% endif %}

      <div class="video-wrapper">
        {% if section.settings.video_url != blank %}
          {% assign video_url = section.settings.video_url %}
          
          {% comment %} D√©tecter si c'est une URL YouTube {% endcomment %}
          {% if video_url contains 'youtube.com' or video_url contains 'youtu.be' %}
            {% assign video_id = '' %}
            {% if video_url contains 'youtube.com/watch?v=' %}
              {% assign video_id = video_url | split: 'v=' | last | split: '&' | first %}
            {% elsif video_url contains 'youtu.be/' %}
              {% assign video_id = video_url | split: 'youtu.be/' | last | split: '?' | first %}
            {% endif %}
            
            {% if video_id != blank %}
              <iframe 
                src="https://www.youtube.com/embed/{{ video_id }}?rel=0" 
                frameborder="0" 
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
                allowfullscreen
                loading="lazy">
              </iframe>
            {% else %}
              <div class="video-placeholder">URL YouTube invalide</div>
            {% endif %}
          {% elsif video_url contains '.mp4' or video_url contains '.webm' or video_url contains '.ogg' %}
            {% comment %} Vid√©o directe (MP4, WebM, OGG) {% endcomment %}
            <video controls preload="metadata" loading="lazy">
              <source src="{{ video_url }}" type="video/mp4">
              Votre navigateur ne supporte pas la lecture de vid√©os.
            </video>
          {% else %}
            {% comment %} Autre type d'URL, on essaie de l'afficher comme iframe {% endcomment %}
            <iframe 
              src="{{ video_url }}" 
              frameborder="0" 
              allowfullscreen
              loading="lazy">
            </iframe>
          {% endif %}
        {% else %}
          <div class="video-placeholder">
            <p>Aucune vid√©o configur√©e</p>
          </div>
        {% endif %}
      </div>

      <!-- CTA sous la vid√©o (desktop/tablette) -->
      {% assign selected_collection_for_btn = collections[section.settings.collection] %}
      {% if section.settings.button_label != blank and selected_collection_for_btn != blank %}
        <div class="collection-button desktop-only">
          <a href="{{ selected_collection_for_btn.url }}" class="milaura-btn milaura-btn-primary">
            {{ section.settings.button_label }}
          </a>
        </div>
      {% endif %}
    </div>

    <!-- Colonne droite : Produits -->
    <div class="products-column">
      {% assign selected_collection = collections[section.settings.collection] %}
      
      {% if selected_collection != blank and selected_collection.products.size > 0 %}
        <div class="products-list">
          {% for product in selected_collection.products limit: 4 %}
            <a href="{{ product.url }}" class="product-item">
              <div class="product-card milaura-card">
                {% if product.featured_image != blank %}
                  {{ product.featured_image | image_url: width: 200 | image_tag: class: 'product-image', loading: 'lazy', alt: product.title }}
                {% else %}
                  {{ 'product-1' | placeholder_svg_tag: 'product-image' }}
                {% endif %}
                
                <div class="product-info">
                  <h3 class="product-name">{{ product.title }}</h3>
                  <div class="product-price">{{ product.price | money }}</div>
                </div>
              </div>
            </a>
          {% endfor %}
        </div>

        <!-- CTA mobile uniquement (cach√© sur desktop/tablette) -->
        {% if section.settings.button_label != blank %}
          <div class="collection-button mobile-only">
            <a href="{{ selected_collection.url }}" class="milaura-btn milaura-btn-primary">
              {{ section.settings.button_label }}
            </a>
          </div>
        {% endif %}
      {% else %}
        <div class="products-list">
          {% comment %} Placeholders si aucune collection n'est s√©lectionn√©e {% endcomment %}
          {% for i in (1..3) %}
            <div class="product-card milaura-card">
              {{ 'product-' | append: i | placeholder_svg_tag: 'product-image' }}
              <div class="product-info">
                <h3 class="product-name">Produit Exemple {{ i }}</h3>
                <div class="product-price">29,90 ‚Ç¨</div>
              </div>
            </div>
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
</div>

