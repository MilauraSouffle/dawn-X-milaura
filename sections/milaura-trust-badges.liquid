{% style %}
  #MilauraTrust-{{ section.id }} {
    padding: 1px var(--milaura-spacing-sm) var(--milaura-spacing-md);
    background: transparent;
  }

  #MilauraTrust-{{ section.id }} .trust-header {
    text-align: center;
    margin-bottom: var(--milaura-spacing-md);
  }

  /* Titre avec police personnalisable */
  #MilauraTrust-{{ section.id }} .trust-title {
    {% case section.settings.title_font %}
      {% when 'dancing' %}
        font-family: 'Dancing Script', cursive !important;
        text-transform: none;
        letter-spacing: 0;
        font-weight: 600;
      {% when 'playfair' %}
        font-family: 'Playfair Display', Georgia, serif !important;
        text-transform: none;
        letter-spacing: 0.5px;
        font-weight: 700;
      {% else %}
        font-family: 'Lato', -apple-system, BlinkMacSystemFont, sans-serif !important;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-weight: 700;
    {% endcase %}
    font-size: {{ section.settings.title_size }}rem;
    color: {{ section.settings.title_color }};
    margin-bottom: 15px;
    text-wrap: balance;
  }

  #MilauraTrust-{{ section.id }} .trust-subtitle {
    {% case section.settings.subtitle_font %}
      {% when 'dancing' %}
        font-family: 'Dancing Script', cursive !important;
      {% when 'playfair' %}
        font-family: 'Playfair Display', Georgia, serif !important;
      {% else %}
        font-family: 'Lato', -apple-system, BlinkMacSystemFont, sans-serif !important;
    {% endcase %}
    color: {{ section.settings.subtitle_color }};
    font-size: {{ section.settings.subtitle_size }}rem;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.5;
  }

  #MilauraTrust-{{ section.id }} .trust-badges-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax({{ section.settings.card_min_width }}px, 1fr));
    gap: {{ section.settings.cards_gap }}px;
    max-width: 1200px;
    margin: 0 auto;
  }

  /* Cartes avec cadre dor√© bijou */
  #MilauraTrust-{{ section.id }} .trust-badge {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: var(--milaura-spacing-md) var(--milaura-spacing-sm);
    border-radius: {{ section.settings.card_radius }}px;
    transition: all 0.3s ease;
    /* Cadre dor√© bijou */
    border: 2px solid transparent !important;
    background:
      linear-gradient(#ffffff, #ffffff) padding-box,
      linear-gradient(135deg,
        rgba(255, 240, 200, 0.92) 0%,
        rgba(214, 176, 96, 0.92) 18%,
        rgba(255, 232, 172, 0.92) 42%,
        rgba(176, 130, 48, 0.92) 70%,
        rgba(255, 240, 200, 0.92) 100%) border-box !important;
    box-shadow: 0 10px 28px rgba(0,0,0,0.06), 0 0 0 1px rgba(255,255,255,0.65) inset !important;
  }

  #MilauraTrust-{{ section.id }} .trust-badge:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 35px rgba(192, 160, 98, 0.2), 0 0 0 1px rgba(255,255,255,0.65) inset !important;
  }

  #MilauraTrust-{{ section.id }} .trust-icon {
    font-size: {{ section.settings.icon_size }}rem;
    margin-bottom: 15px;
    line-height: 1;
  }

  #MilauraTrust-{{ section.id }} .trust-badge-title {
    {% case section.settings.badge_title_font %}
      {% when 'dancing' %}
        font-family: 'Dancing Script', cursive !important;
      {% when 'playfair' %}
        font-family: 'Playfair Display', Georgia, serif !important;
      {% else %}
        font-family: 'Lato', -apple-system, BlinkMacSystemFont, sans-serif !important;
    {% endcase %}
    color: {{ section.settings.badge_title_color }};
    font-size: {{ section.settings.badge_title_size }}rem;
    font-weight: 600;
    margin-bottom: 10px;
  }

  #MilauraTrust-{{ section.id }} .trust-badge-text {
    {% case section.settings.badge_text_font %}
      {% when 'dancing' %}
        font-family: 'Dancing Script', cursive !important;
      {% when 'playfair' %}
        font-family: 'Playfair Display', Georgia, serif !important;
      {% else %}
        font-family: 'Lato', -apple-system, BlinkMacSystemFont, sans-serif !important;
    {% endcase %}
    color: {{ section.settings.badge_text_color }};
    font-size: {{ section.settings.badge_text_size }}rem;
    line-height: 1.5;
  }

  @media screen and (max-width: 768px) {
    #MilauraTrust-{{ section.id }} .trust-badges-grid {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    #MilauraTrust-{{ section.id }} .trust-title {
      font-size: {{ section.settings.title_size | times: 0.7 }}rem;
    }

    #MilauraTrust-{{ section.id }} .trust-icon {
      font-size: {{ section.settings.icon_size | times: 0.8 }}rem;
    }
  }
{% endstyle %}

<div id="MilauraTrust-{{ section.id }}">
  <div class="trust-header">
    {% if section.settings.title != blank %}
      <h2 class="trust-title">{{ section.settings.title }}</h2>
    {% endif %}
    {% if section.settings.subtitle != blank %}
      <p class="trust-subtitle">{{ section.settings.subtitle }}</p>
    {% endif %}
  </div>

  <div class="trust-badges-grid">
    {%- for block in section.blocks -%}
      <div class="trust-badge" {{ block.shopify_attributes }}>
        {% if block.settings.icon != blank %}
          <div class="trust-icon">{{ block.settings.icon }}</div>
        {% endif %}

        {% if block.settings.title != blank %}
          <h3 class="trust-badge-title">{{ block.settings.title }}</h3>
        {% endif %}

        {% if block.settings.text != blank %}
          <p class="trust-badge-text">{{ block.settings.text }}</p>
        {% endif %}
      </div>
    {%- endfor -%}
  </div>
</div>

