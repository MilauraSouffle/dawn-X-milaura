{% style %}
  #MilauraTrust-{{ section.id }} {
    padding: 1px var(--milaura-spacing-sm) var(--milaura-spacing-md);
    margin-top: 4px;
    background: transparent;
  }

  .trust-header {
    text-align: center;
    margin-bottom: var(--milaura-spacing-md); /* Remplace 40px */
  }

  .trust-title {
    font-family: var(--milaura-font-heading);
    font-size: {{ section.settings.title_size }}rem;
    color: {{ section.settings.title_color }};
    margin-top: 0;
    margin-bottom: 10px;
    font-weight: 700;
  }

  .trust-subtitle {
    font-family: var(--milaura-font-body);
    font-size: {{ section.settings.subtitle_size }}rem;
    color: {{ section.settings.subtitle_color }};
    margin-bottom: 15px;
    line-height: 1.5;
  }

  .trust-badges-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 30px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .trust-badge {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: var(--milaura-spacing-md) var(--milaura-spacing-sm);
    background: #ffffff;
    border-radius: var(--milaura-border-radius);
    border: 2px solid transparent;
    box-shadow: var(--milaura-shadow-sm);
    transition: all 0.3s ease;
  }

  .trust-badge:hover {
    border-color: var(--milaura-gold);
    transform: translateY(-5px);
    box-shadow: var(--milaura-shadow-md);
  }

  .trust-icon {
    font-size: {{ section.settings.badge_icon_size }}rem;
    margin-bottom: 15px;
    line-height: 1;
  }

  .trust-badge-title {
    font-family: var(--milaura-font-heading);
    color: {{ section.settings.badge_title_color }};
    font-size: {{ section.settings.badge_title_size }}rem;
    font-weight: 600;
    margin-bottom: 10px;
  }

  .trust-badge-text {
    font-family: var(--milaura-font-body);
    color: {{ section.settings.badge_text_color }};
    font-size: {{ section.settings.badge_text_size }}rem;
    line-height: 1.5;
  }

  @media screen and (max-width: 768px) {
    .trust-badges-grid {
      grid-template-columns: 1fr;
      gap: 20px;
    }
    .trust-title {
      font-size: 1.5rem;
    }
  }
{% endstyle %}

<div id="MilauraTrust-{{ section.id }}">
  {% if section.settings.title != blank or section.settings.subtitle != blank %}
    <div class="trust-header">
      {% if section.settings.title != blank %}
        <h2 class="trust-title">{{ section.settings.title }}</h2>
      {% endif %}
      {% if section.settings.subtitle != blank %}
        <p class="trust-subtitle">{{ section.settings.subtitle }}</p>
      {% endif %}
    </div>
  {% endif %}

  <div class="trust-badges-grid">
    {%- for block in section.blocks -%}
      <div class="trust-badge" {{ block.shopify_attributes }}>
        {% if block.settings.icon != blank %}
          <div class="trust-icon">{{ block.settings.icon }}</div>
        {% endif %}

        {% if block.settings.title != blank %}
          <h3 class="trust-badge-title">{{ block.settings.title }}</h3>
        {% endif %}

        {% if block.settings.text != blank %}
          <p class="trust-badge-text">{{ block.settings.text }}</p>
        {% endif %}
      </div>
    {%- endfor -%}
  </div>
</div>

