{%- comment -%}
  MILAURA CART UPSELL
  Suggestions produits complementaires avec tabs Bougie/Pierre/Rituel
  3 product pickers dans le customizer
  @version 2.0.0 - 2026-02-09
{%- endcomment -%}

{%- liquid
  assign bougie = section.settings.upsell_bougie
  assign pierre = section.settings.upsell_pierre
  assign rituel = section.settings.upsell_rituel
  assign has_any = false
  if bougie != blank or pierre != blank or rituel != blank
    assign has_any = true
  endif
-%}

{%- style -%}
  #MilauraCartUpsell-{{ section.id }} {
    padding: var(--milaura-spacing-lg) 0;
  }

  #MilauraCartUpsell-{{ section.id }} .milaura-upsell__header {
    text-align: center;
    margin-bottom: var(--milaura-spacing-md);
  }

  #MilauraCartUpsell-{{ section.id }} .milaura-upsell__title {
    font-family: var(--milaura-font-heading, 'Playfair Display', serif);
    font-size: {{ section.settings.title_size }}px;
    color: {{ section.settings.title_color }};
    font-weight: 600;
    margin: 0 0 var(--milaura-spacing-xs) 0;
  }

  #MilauraCartUpsell-{{ section.id }} .milaura-upsell__subtitle {
    font-size: {{ section.settings.subtitle_size }}px;
    color: {{ section.settings.subtitle_color }};
    margin: 0;
  }

  /* Tabs */
  #MilauraCartUpsell-{{ section.id }} .milaura-upsell__tabs {
    display: flex;
    justify-content: center;
    gap: 8px;
    margin-bottom: var(--milaura-spacing-md);
  }

  #MilauraCartUpsell-{{ section.id }} .milaura-upsell__tab {
    padding: 10px 24px;
    border: 1.5px solid rgba(192, 160, 98, 0.3);
    border-radius: 50px;
    background: transparent;
    font-family: var(--milaura-font-body, 'Lato', sans-serif);
    font-size: 14px;
    font-weight: 600;
    color: var(--milaura-text, #000000);
    cursor: pointer;
    transition: all 0.3s ease;
    white-space: nowrap;
  }

  #MilauraCartUpsell-{{ section.id }} .milaura-upsell__tab:hover {
    border-color: var(--milaura-gold, #C0A062);
    color: var(--milaura-gold, #C0A062);
  }

  #MilauraCartUpsell-{{ section.id }} .milaura-upsell__tab.is-active {
    background: var(--milaura-gold, #C0A062);
    border-color: var(--milaura-gold, #C0A062);
    color: #ffffff;
  }

  #MilauraCartUpsell-{{ section.id }} .milaura-upsell__tab:disabled {
    opacity: 0.35;
    cursor: not-allowed;
  }

  #MilauraCartUpsell-{{ section.id }} .milaura-upsell__tab:disabled:hover {
    border-color: rgba(192, 160, 98, 0.3);
    color: var(--milaura-text, #000000);
  }

  /* Card wrapper */
  #MilauraCartUpsell-{{ section.id }} .milaura-upsell__card-wrapper {
    max-width: 480px;
    margin: 0 auto;
  }

  #MilauraCartUpsell-{{ section.id }} .milaura-upsell__card {
    display: none;
    background: rgba(255, 255, 255, 0.6);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border: 1px solid rgba(192, 160, 98, 0.2);
    border-radius: var(--milaura-border-radius, 20px);
    overflow: hidden;
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
  }

  #MilauraCartUpsell-{{ section.id }} .milaura-upsell__card.is-active {
    display: block;
  }

  #MilauraCartUpsell-{{ section.id }} .milaura-upsell__card:hover {
    border-color: rgba(192, 160, 98, 0.4);
    box-shadow: 0 10px 30px rgba(192, 160, 98, 0.15);
  }

  #MilauraCartUpsell-{{ section.id }} .milaura-upsell__image-link {
    display: block;
    aspect-ratio: 4 / 3;
    overflow: hidden;
  }

  #MilauraCartUpsell-{{ section.id }} .milaura-upsell__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  #MilauraCartUpsell-{{ section.id }} .milaura-upsell__card:hover .milaura-upsell__image {
    transform: scale(1.05);
  }

  #MilauraCartUpsell-{{ section.id }} .milaura-upsell__content {
    padding: var(--milaura-spacing-md);
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--milaura-spacing-md);
  }

  #MilauraCartUpsell-{{ section.id }} .milaura-upsell__info {
    flex: 1;
    min-width: 0;
  }

  #MilauraCartUpsell-{{ section.id }} .milaura-upsell__product-title {
    font-family: 'Playfair Display', serif;
    font-size: 17px;
    font-weight: 600;
    color: var(--milaura-text, #000000);
    text-decoration: none;
    display: block;
    margin-bottom: 4px;
    line-height: 1.3;
    transition: color 0.3s ease;
  }

  #MilauraCartUpsell-{{ section.id }} .milaura-upsell__product-title:hover {
    color: var(--milaura-gold, #C0A062);
  }

  #MilauraCartUpsell-{{ section.id }} .milaura-upsell__price {
    font-size: 16px;
    font-weight: 600;
    color: var(--milaura-gold, #C0A062);
  }

  #MilauraCartUpsell-{{ section.id }} .milaura-upsell__price-compare {
    font-size: 13px;
    color: var(--milaura-text-light, #666666);
    text-decoration: line-through;
    margin-right: 6px;
    font-weight: 400;
  }

  #MilauraCartUpsell-{{ section.id }} .milaura-upsell__cta {
    flex-shrink: 0;
    padding: 12px 24px;
    background: var(--milaura-gold, #C0A062);
    color: #ffffff;
    border: none;
    border-radius: 50px;
    font-size: 14px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
    white-space: nowrap;
  }

  #MilauraCartUpsell-{{ section.id }} .milaura-upsell__cta:hover {
    background: var(--milaura-gold-dark, #8F723A);
  }

  #MilauraCartUpsell-{{ section.id }} .milaura-upsell__cta:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  #MilauraCartUpsell-{{ section.id }} .milaura-upsell__cta.is-loading {
    color: transparent;
  }

  #MilauraCartUpsell-{{ section.id }} .milaura-upsell__cta.is-loading::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 16px;
    height: 16px;
    margin: -8px 0 0 -8px;
    border: 2px solid rgba(255, 255, 255, 0.3);
    border-top-color: #ffffff;
    border-radius: 50%;
    animation: milauraUpsellSpin 0.6s linear infinite;
  }

  @keyframes milauraUpsellSpin {
    to { transform: rotate(360deg); }
  }

  #MilauraCartUpsell-{{ section.id }} .milaura-upsell__cta.is-success {
    background: #4CAF50;
  }

  /* Empty state */
  #MilauraCartUpsell-{{ section.id }} .milaura-upsell__empty {
    text-align: center;
    padding: var(--milaura-spacing-lg) var(--milaura-spacing-md);
    color: var(--milaura-text-light, #666666);
    font-size: 15px;
    font-style: italic;
  }

  /* Mobile */
  @media screen and (max-width: 768px) {
    #MilauraCartUpsell-{{ section.id }} .milaura-upsell__tabs {
      width: 100%;
      gap: 6px;
    }

    #MilauraCartUpsell-{{ section.id }} .milaura-upsell__tab {
      flex: 1;
      padding: 10px 12px;
      font-size: 13px;
      text-align: center;
    }

    #MilauraCartUpsell-{{ section.id }} .milaura-upsell__card-wrapper {
      max-width: 100%;
    }

    #MilauraCartUpsell-{{ section.id }} .milaura-upsell__content {
      flex-direction: column;
      align-items: stretch;
      gap: var(--milaura-spacing-sm);
    }

    #MilauraCartUpsell-{{ section.id }} .milaura-upsell__cta {
      width: 100%;
      text-align: center;
    }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    #MilauraCartUpsell-{{ section.id }} .milaura-upsell__card,
    #MilauraCartUpsell-{{ section.id }} .milaura-upsell__image,
    #MilauraCartUpsell-{{ section.id }} .milaura-upsell__cta,
    #MilauraCartUpsell-{{ section.id }} .milaura-upsell__tab {
      transition: none;
    }

    #MilauraCartUpsell-{{ section.id }} .milaura-upsell__cta.is-loading::after {
      animation: none;
    }
  }
{%- endstyle -%}

{%- if cart.item_count > 0 and has_any -%}
  <section
    id="MilauraCartUpsell-{{ section.id }}"
    class="milaura-cart-upsell"
    data-section-id="{{ section.id }}"
  >
    <div class="page-width">
      <div class="milaura-upsell__header">
        {%- if section.settings.title != blank -%}
          <h2 class="milaura-upsell__title">{{ section.settings.title }}</h2>
        {%- endif -%}
        {%- if section.settings.subtitle != blank -%}
          <p class="milaura-upsell__subtitle">{{ section.settings.subtitle }}</p>
        {%- endif -%}
      </div>

      {%- if has_any -%}
        {%- comment -%} Tabs {%- endcomment -%}
        <div class="milaura-upsell__tabs" role="tablist">
          <button
            class="milaura-upsell__tab is-active"
            role="tab"
            aria-selected="true"
            aria-controls="upsell-panel-bougie-{{ section.id }}"
            data-upsell-tab="bougie"
            {% if bougie == blank %}disabled{% endif %}
          >
            {{ section.settings.tab_bougie_label }}
          </button>
          <button
            class="milaura-upsell__tab"
            role="tab"
            aria-selected="false"
            aria-controls="upsell-panel-pierre-{{ section.id }}"
            data-upsell-tab="pierre"
            {% if pierre == blank %}disabled{% endif %}
          >
            {{ section.settings.tab_pierre_label }}
          </button>
          <button
            class="milaura-upsell__tab"
            role="tab"
            aria-selected="false"
            aria-controls="upsell-panel-rituel-{{ section.id }}"
            data-upsell-tab="rituel"
            {% if rituel == blank %}disabled{% endif %}
          >
            {{ section.settings.tab_rituel_label }}
          </button>
        </div>

        {%- comment -%} Product cards {%- endcomment -%}
        <div class="milaura-upsell__card-wrapper">

          {%- comment -%} Bougie card {%- endcomment -%}
          {%- if bougie != blank -%}
            {%- assign variant_b = bougie.selected_or_first_available_variant -%}
            <div class="milaura-upsell__card is-active" id="upsell-panel-bougie-{{ section.id }}" role="tabpanel" data-upsell-panel="bougie">
              <a href="{{ bougie.url }}" class="milaura-upsell__image-link">
                {%- if bougie.featured_image -%}
                  {{ bougie.featured_image | image_url: width: 600 | image_tag:
                    class: 'milaura-upsell__image',
                    loading: 'lazy',
                    widths: '300, 450, 600',
                    sizes: '(min-width: 768px) 480px, 100vw',
                    alt: bougie.title | escape
                  }}
                {%- else -%}
                  {{ 'product-1' | placeholder_svg_tag: 'milaura-upsell__image' }}
                {%- endif -%}
              </a>
              <div class="milaura-upsell__content">
                <div class="milaura-upsell__info">
                  <a href="{{ bougie.url }}" class="milaura-upsell__product-title">{{ bougie.title | escape }}</a>
                  <div class="milaura-upsell__price">
                    {%- if variant_b.compare_at_price > variant_b.price -%}
                      <span class="milaura-upsell__price-compare">{{ variant_b.compare_at_price | money }}</span>
                    {%- endif -%}
                    {{ variant_b.price | money }}
                  </div>
                </div>
                <button
                  type="button"
                  class="milaura-upsell__cta"
                  data-upsell-add
                  data-variant-id="{{ variant_b.id }}"
                  {% unless variant_b.available %}disabled{% endunless %}
                >
                  {{ section.settings.button_text }}
                </button>
              </div>
            </div>
          {%- endif -%}

          {%- comment -%} Pierre card {%- endcomment -%}
          {%- if pierre != blank -%}
            {%- assign variant_p = pierre.selected_or_first_available_variant -%}
            <div class="milaura-upsell__card" id="upsell-panel-pierre-{{ section.id }}" role="tabpanel" data-upsell-panel="pierre">
              <a href="{{ pierre.url }}" class="milaura-upsell__image-link">
                {%- if pierre.featured_image -%}
                  {{ pierre.featured_image | image_url: width: 600 | image_tag:
                    class: 'milaura-upsell__image',
                    loading: 'lazy',
                    widths: '300, 450, 600',
                    sizes: '(min-width: 768px) 480px, 100vw',
                    alt: pierre.title | escape
                  }}
                {%- else -%}
                  {{ 'product-1' | placeholder_svg_tag: 'milaura-upsell__image' }}
                {%- endif -%}
              </a>
              <div class="milaura-upsell__content">
                <div class="milaura-upsell__info">
                  <a href="{{ pierre.url }}" class="milaura-upsell__product-title">{{ pierre.title | escape }}</a>
                  <div class="milaura-upsell__price">
                    {%- if variant_p.compare_at_price > variant_p.price -%}
                      <span class="milaura-upsell__price-compare">{{ variant_p.compare_at_price | money }}</span>
                    {%- endif -%}
                    {{ variant_p.price | money }}
                  </div>
                </div>
                <button
                  type="button"
                  class="milaura-upsell__cta"
                  data-upsell-add
                  data-variant-id="{{ variant_p.id }}"
                  {% unless variant_p.available %}disabled{% endunless %}
                >
                  {{ section.settings.button_text }}
                </button>
              </div>
            </div>
          {%- endif -%}

          {%- comment -%} Rituel card {%- endcomment -%}
          {%- if rituel != blank -%}
            {%- assign variant_r = rituel.selected_or_first_available_variant -%}
            <div class="milaura-upsell__card" id="upsell-panel-rituel-{{ section.id }}" role="tabpanel" data-upsell-panel="rituel">
              <a href="{{ rituel.url }}" class="milaura-upsell__image-link">
                {%- if rituel.featured_image -%}
                  {{ rituel.featured_image | image_url: width: 600 | image_tag:
                    class: 'milaura-upsell__image',
                    loading: 'lazy',
                    widths: '300, 450, 600',
                    sizes: '(min-width: 768px) 480px, 100vw',
                    alt: rituel.title | escape
                  }}
                {%- else -%}
                  {{ 'product-1' | placeholder_svg_tag: 'milaura-upsell__image' }}
                {%- endif -%}
              </a>
              <div class="milaura-upsell__content">
                <div class="milaura-upsell__info">
                  <a href="{{ rituel.url }}" class="milaura-upsell__product-title">{{ rituel.title | escape }}</a>
                  <div class="milaura-upsell__price">
                    {%- if variant_r.compare_at_price > variant_r.price -%}
                      <span class="milaura-upsell__price-compare">{{ variant_r.compare_at_price | money }}</span>
                    {%- endif -%}
                    {{ variant_r.price | money }}
                  </div>
                </div>
                <button
                  type="button"
                  class="milaura-upsell__cta"
                  data-upsell-add
                  data-variant-id="{{ variant_r.id }}"
                  {% unless variant_r.available %}disabled{% endunless %}
                >
                  {{ section.settings.button_text }}
                </button>
              </div>
            </div>
          {%- endif -%}

        </div>
      {%- endif -%}
    </div>
  </section>
{%- endif -%}

<script>
(function() {
  var sectionId = '{{ section.id }}';
  var section = document.getElementById('MilauraCartUpsell-' + sectionId);
  if (!section) return;

  /* --- Tabs --- */
  var tabs = section.querySelectorAll('[data-upsell-tab]');
  var panels = section.querySelectorAll('[data-upsell-panel]');

  tabs.forEach(function(tab) {
    tab.addEventListener('click', function() {
      if (tab.disabled) return;
      var target = tab.getAttribute('data-upsell-tab');

      tabs.forEach(function(t) {
        t.classList.remove('is-active');
        t.setAttribute('aria-selected', 'false');
      });
      tab.classList.add('is-active');
      tab.setAttribute('aria-selected', 'true');

      panels.forEach(function(p) {
        p.classList.remove('is-active');
      });
      var activePanel = section.querySelector('[data-upsell-panel="' + target + '"]');
      if (activePanel) activePanel.classList.add('is-active');
    });
  });

  /* --- If first tab is disabled, activate the first enabled one --- */
  var firstTab = section.querySelector('[data-upsell-tab].is-active');
  if (firstTab && firstTab.disabled) {
    firstTab.classList.remove('is-active');
    firstTab.setAttribute('aria-selected', 'false');
    panels.forEach(function(p) { p.classList.remove('is-active'); });

    var enabledTab = section.querySelector('[data-upsell-tab]:not(:disabled)');
    if (enabledTab) {
      enabledTab.classList.add('is-active');
      enabledTab.setAttribute('aria-selected', 'true');
      var key = enabledTab.getAttribute('data-upsell-tab');
      var panel = section.querySelector('[data-upsell-panel="' + key + '"]');
      if (panel) panel.classList.add('is-active');
    }
  }

  /* --- Add to cart --- */
  var addBtns = section.querySelectorAll('[data-upsell-add]');

  addBtns.forEach(function(btn) {
    btn.addEventListener('click', function() {
      var variantId = btn.getAttribute('data-variant-id');
      if (!variantId) return;

      btn.classList.add('is-loading');
      btn.disabled = true;

      fetch('/cart/add.js', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ id: parseInt(variantId, 10), quantity: 1 })
      })
      .then(function(r) { return r.json(); })
      .then(function() {
        btn.classList.remove('is-loading');
        btn.classList.add('is-success');
        var originalText = btn.textContent;
        btn.textContent = 'Ajout√© !';
        if (window.milauraCartToast) window.milauraCartToast();

        document.dispatchEvent(new CustomEvent('cart:updated'));

        setTimeout(function() {
          window.location.reload();
        }, 800);
      })
      .catch(function(err) {
        console.error('Erreur ajout panier:', err);
        btn.classList.remove('is-loading');
        btn.textContent = 'Erreur';

        setTimeout(function() {
          btn.textContent = '{{ section.settings.button_text | default: "Ajouter" }}';
          btn.disabled = false;
        }, 2000);
      });
    });
  });
})();
</script>

