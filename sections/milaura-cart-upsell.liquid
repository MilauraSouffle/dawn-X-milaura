{%- comment -%}
  MILAURA CART UPSELL
  Suggestions produits complementaires
  Filtre les produits deja dans le panier
{%- endcomment -%}

{%- liquid
  assign upsell_products = blank
  assign cart_product_ids = ''

  # Build list of product IDs in cart
  for item in cart.items
    assign cart_product_ids = cart_product_ids | append: item.product.id | append: ','
  endfor

  # Get products from source collection
  assign source_collection = collections[section.settings.source_collection]

  if source_collection != blank and source_collection.products.size > 0
    assign filtered_products = ''
    assign count = 0

    for product in source_collection.products
      if count < 2
        assign product_id_str = product.id | append: ','
        unless cart_product_ids contains product_id_str
          if product.available
            assign count = count | plus: 1
            # We can't build array in Liquid easily, so we'll use a different approach
          endif
        endunless
      endif
    endfor
  endif
-%}

{%- style -%}
  #MilauraCartUpsell-{{ section.id }} {
    padding: var(--milaura-spacing-lg) 0;
    background: linear-gradient(
      to bottom,
      rgba(242, 232, 213, 0.3) 0%,
      transparent 100%
    );
  }

  #MilauraCartUpsell-{{ section.id }} .milaura-upsell__header {
    text-align: center;
    margin-bottom: var(--milaura-spacing-lg);
  }

  #MilauraCartUpsell-{{ section.id }} .milaura-upsell__title {
    font-family: var(--milaura-font-heading);
    font-size: {{ section.settings.title_size }}px;
    color: {{ section.settings.title_color }};
    font-weight: 600;
    margin: 0 0 var(--milaura-spacing-xs) 0;
  }

  #MilauraCartUpsell-{{ section.id }} .milaura-upsell__subtitle {
    font-size: {{ section.settings.subtitle_size }}px;
    color: {{ section.settings.subtitle_color }};
    margin: 0;
  }

  #MilauraCartUpsell-{{ section.id }} .milaura-upsell__grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--milaura-spacing-md);
    max-width: 800px;
    margin: 0 auto;
  }

  /* Upsell card */
  #MilauraCartUpsell-{{ section.id }} .milaura-upsell__card {
    background: #ffffff;
    border-radius: var(--milaura-border-radius, 20px);
    border: 1px solid rgba(192, 160, 98, 0.2);
    overflow: hidden;
    transition: all 0.3s ease;
  }

  #MilauraCartUpsell-{{ section.id }} .milaura-upsell__card:hover {
    border-color: rgba(192, 160, 98, 0.4);
    box-shadow: 0 10px 30px rgba(192, 160, 98, 0.15);
  }

  #MilauraCartUpsell-{{ section.id }} .milaura-upsell__image-link {
    display: block;
    aspect-ratio: 1 / 1;
    overflow: hidden;
  }

  #MilauraCartUpsell-{{ section.id }} .milaura-upsell__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  #MilauraCartUpsell-{{ section.id }} .milaura-upsell__card:hover .milaura-upsell__image {
    transform: scale(1.05);
  }

  #MilauraCartUpsell-{{ section.id }} .milaura-upsell__content {
    padding: var(--milaura-spacing-md);
  }

  #MilauraCartUpsell-{{ section.id }} .milaura-upsell__product-title {
    font-family: 'Playfair Display', serif;
    font-size: 16px;
    font-weight: 600;
    color: var(--milaura-text, #000000);
    text-decoration: none;
    display: block;
    margin-bottom: 6px;
    line-height: 1.3;
    transition: color 0.3s ease;
  }

  #MilauraCartUpsell-{{ section.id }} .milaura-upsell__product-title:hover {
    color: var(--milaura-gold, #C0A062);
  }

  #MilauraCartUpsell-{{ section.id }} .milaura-upsell__price {
    font-size: 15px;
    font-weight: 600;
    color: var(--milaura-gold, #C0A062);
    margin-bottom: var(--milaura-spacing-sm);
  }

  #MilauraCartUpsell-{{ section.id }} .milaura-upsell__price-compare {
    font-size: 13px;
    color: var(--milaura-text-light, #666666);
    text-decoration: line-through;
    margin-right: 6px;
    font-weight: 400;
  }

  #MilauraCartUpsell-{{ section.id }} .milaura-upsell__form {
    width: 100%;
  }

  #MilauraCartUpsell-{{ section.id }} .milaura-upsell__cta {
    width: 100%;
    padding: 10px;
    background: var(--milaura-gold, #C0A062);
    color: #ffffff;
    border: none;
    border-radius: 10px;
    font-size: 14px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
  }

  #MilauraCartUpsell-{{ section.id }} .milaura-upsell__cta:hover {
    background: var(--milaura-gold-dark, #8F723A);
  }

  #MilauraCartUpsell-{{ section.id }} .milaura-upsell__cta:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  #MilauraCartUpsell-{{ section.id }} .milaura-upsell__cta.is-loading {
    color: transparent;
  }

  #MilauraCartUpsell-{{ section.id }} .milaura-upsell__cta.is-loading::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 16px;
    height: 16px;
    margin: -8px 0 0 -8px;
    border: 2px solid rgba(255, 255, 255, 0.3);
    border-top-color: #ffffff;
    border-radius: 50%;
    animation: spin 0.6s linear infinite;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  #MilauraCartUpsell-{{ section.id }} .milaura-upsell__cta.is-success {
    background: #4CAF50;
  }

  #MilauraCartUpsell-{{ section.id }} .milaura-upsell__empty {
    text-align: center;
    padding: var(--milaura-spacing-lg);
    color: var(--milaura-text-light, #666666);
  }

  /* Mobile */
  @media screen and (max-width: 768px) {
    #MilauraCartUpsell-{{ section.id }} .milaura-upsell__grid {
      grid-template-columns: 1fr;
      max-width: 400px;
    }

    #MilauraCartUpsell-{{ section.id }} .milaura-upsell__card {
      display: grid;
      grid-template-columns: 100px 1fr;
    }

    #MilauraCartUpsell-{{ section.id }} .milaura-upsell__image-link {
      aspect-ratio: 1 / 1;
    }

    #MilauraCartUpsell-{{ section.id }} .milaura-upsell__content {
      padding: var(--milaura-spacing-sm);
      display: flex;
      flex-direction: column;
      justify-content: center;
    }

    #MilauraCartUpsell-{{ section.id }} .milaura-upsell__product-title {
      font-size: 14px;
    }

    #MilauraCartUpsell-{{ section.id }} .milaura-upsell__price {
      font-size: 14px;
    }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    #MilauraCartUpsell-{{ section.id }} .milaura-upsell__card,
    #MilauraCartUpsell-{{ section.id }} .milaura-upsell__image,
    #MilauraCartUpsell-{{ section.id }} .milaura-upsell__cta {
      transition: none;
    }

    #MilauraCartUpsell-{{ section.id }} .milaura-upsell__cta.is-loading::after {
      animation: none;
    }
  }
{%- endstyle -%}

{%- if cart.item_count > 0 -%}
  <section
    id="MilauraCartUpsell-{{ section.id }}"
    class="milaura-cart-upsell"
    data-section-id="{{ section.id }}"
  >
    <div class="page-width">
      <div class="milaura-upsell__header">
        {%- if section.settings.title != blank -%}
          <h2 class="milaura-upsell__title">{{ section.settings.title }}</h2>
        {%- endif -%}
        {%- if section.settings.subtitle != blank -%}
          <p class="milaura-upsell__subtitle">{{ section.settings.subtitle }}</p>
        {%- endif -%}
      </div>

      {%- assign source_collection = collections[section.settings.source_collection] -%}

      {%- if source_collection != blank and source_collection.products.size > 0 -%}
        <div class="milaura-upsell__grid">
          {%- assign displayed_count = 0 -%}
          {%- for product in source_collection.products -%}
            {%- if displayed_count < 2 -%}
              {%- assign product_id_str = product.id | append: ',' -%}
              {%- unless cart_product_ids contains product_id_str -%}
                {%- if product.available -%}
                  {%- assign displayed_count = displayed_count | plus: 1 -%}
                  {%- assign variant = product.selected_or_first_available_variant -%}

                  <div class="milaura-upsell__card">
                    <a href="{{ product.url }}" class="milaura-upsell__image-link">
                      {%- if product.featured_image -%}
                        {{
                          product.featured_image
                          | image_url: width: 400
                          | image_tag:
                            class: 'milaura-upsell__image',
                            loading: 'lazy',
                            widths: '165, 360, 400',
                            sizes: '(min-width: 768px) 300px, 100px',
                            alt: product.title | escape
                        }}
                      {%- else -%}
                        {{ 'product-1' | placeholder_svg_tag: 'milaura-upsell__image' }}
                      {%- endif -%}
                    </a>

                    <div class="milaura-upsell__content">
                      <a href="{{ product.url }}" class="milaura-upsell__product-title">
                        {{ product.title | escape }}
                      </a>

                      <div class="milaura-upsell__price">
                        {%- if variant.compare_at_price > variant.price -%}
                          <span class="milaura-upsell__price-compare">
                            {{ variant.compare_at_price | money }}
                          </span>
                        {%- endif -%}
                        {{ variant.price | money }}
                      </div>

                      {%- form 'product', product, class: 'milaura-upsell__form' -%}
                        <input type="hidden" name="id" value="{{ variant.id }}">
                        <input type="hidden" name="quantity" value="1">

                        <button
                          type="submit"
                          name="add"
                          class="milaura-upsell__cta"
                          data-upsell-add
                          data-variant-id="{{ variant.id }}"
                        >
                          {{ section.settings.button_text | default: 'Ajouter' }}
                        </button>
                      {%- endform -%}
                    </div>
                  </div>
                {%- endif -%}
              {%- endunless -%}
            {%- endif -%}
          {%- endfor -%}

          {%- if displayed_count == 0 -%}
            <p class="milaura-upsell__empty">
              {{ section.settings.empty_message | default: 'Aucune suggestion disponible' }}
            </p>
          {%- endif -%}
        </div>
      {%- else -%}
        <p class="milaura-upsell__empty">
          {{ section.settings.empty_message | default: 'Aucune suggestion disponible' }}
        </p>
      {%- endif -%}
    </div>
  </section>
{%- endif -%}

<script>
(function() {
  const sectionId = '{{ section.id }}';
  const section = document.getElementById('MilauraCartUpsell-' + sectionId);
  if (!section) return;

  const forms = section.querySelectorAll('.milaura-upsell__form');

  forms.forEach(function(form) {
    form.addEventListener('submit', function(e) {
      e.preventDefault();

      const btn = form.querySelector('.milaura-upsell__cta');
      const formData = new FormData(form);

      // Loading state
      btn.classList.add('is-loading');
      btn.disabled = true;

      fetch('/cart/add.js', {
        method: 'POST',
        body: formData
      })
      .then(response => response.json())
      .then(data => {
        btn.classList.remove('is-loading');
        btn.classList.add('is-success');
        const originalText = btn.textContent;
        btn.textContent = 'Ajoute !';

        // Trigger cart update
        document.dispatchEvent(new CustomEvent('cart:updated'));

        // Reload page after short delay to show updated cart
        setTimeout(function() {
          window.location.reload();
        }, 1000);
      })
      .catch(error => {
        console.error('Erreur ajout panier:', error);
        btn.classList.remove('is-loading');
        btn.textContent = 'Erreur';

        setTimeout(function() {
          btn.textContent = '{{ section.settings.button_text | default: "Ajouter" }}';
          btn.disabled = false;
        }, 2000);
      });
    });
  });
})();
</script>

