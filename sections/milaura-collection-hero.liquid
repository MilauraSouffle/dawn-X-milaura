{%- endcomment -%}

{%- style -%}
  #MilauraCollectionHero-{{ section.id }} {
    padding: var(--milaura-spacing-xs) var(--milaura-spacing-sm) 0;
  }

  /* Gold gradient variables */
  #MilauraCollectionHero-{{ section.id }} {
    --hero-gold-a: 0.92;
    --hero-gold-grad: linear-gradient(
      135deg,
      rgba(255, 240, 200, var(--hero-gold-a)) 0%,
      rgba(214, 176, 96, var(--hero-gold-a)) 18%,
      rgba(255, 232, 172, var(--hero-gold-a)) 42%,
      rgba(176, 130, 48, var(--hero-gold-a)) 70%,
      rgba(255, 240, 200, var(--hero-gold-a)) 100%
    );
    --hero-gold-sheen: linear-gradient(
      120deg,
      transparent 0%,
      rgba(255, 255, 255, 0.50) 35%,
      transparent 70%
    );
  }

  /* Breadcrumb compact */
  #MilauraCollectionHero-{{ section.id }} .milaura-hero__breadcrumb {
    display: flex;
    align-items: center;
    gap: 6px;
    margin-bottom: var(--milaura-spacing-xs);
    font-size: 13px;
    color: var(--milaura-text-light, #888888);
  }

  #MilauraCollectionHero-{{ section.id }} .milaura-hero__breadcrumb a {
    color: var(--milaura-text-light, #888888);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  #MilauraCollectionHero-{{ section.id }} .milaura-hero__breadcrumb a:hover {
    color: var(--milaura-gold, #C0A062);
  }

  #MilauraCollectionHero-{{ section.id }} .milaura-hero__breadcrumb svg {
    width: 10px;
    height: 10px;
    opacity: 0.5;
  }

  /* Bandeau dor√© bijou */
  #MilauraCollectionHero-{{ section.id }} .milaura-hero__banner {
    position: relative;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--milaura-spacing-md);
    padding: 18px 28px;
    border-radius: 24px;
    background: var(--hero-gold-grad);
    box-shadow:
      0 16px 40px rgba(130, 90, 30, 0.18),
      0 0 0 1px rgba(255, 255, 255, 0.32) inset,
      0 0 0 1px rgba(214, 176, 96, 0.22);
  }

  /* Voile lumineux subtil */
  #MilauraCollectionHero-{{ section.id }} .milaura-hero__banner::before {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(1000px 200px at 20% 0%, rgba(255,255,255,0.22), transparent 55%);
    opacity: 0.85;
    pointer-events: none;
    z-index: 1;
  }

  /* Sheen au hover */
  #MilauraCollectionHero-{{ section.id }} .milaura-hero__banner::after {
    content: '';
    position: absolute;
    inset: -40% -60%;
    background: var(--hero-gold-sheen);
    opacity: 0;
    transform: translateX(-18%);
    transition: opacity 350ms ease, transform 550ms cubic-bezier(0.22, 1, 0.36, 1);
    pointer-events: none;
    z-index: 1;
  }

  #MilauraCollectionHero-{{ section.id }} .milaura-hero__banner:hover::after {
    opacity: 0.35;
    transform: translateX(18%);
  }

  /* Contenu gauche */
  #MilauraCollectionHero-{{ section.id }} .milaura-hero__content {
    position: relative;
    z-index: 2;
    display: flex;
    align-items: center;
    gap: var(--milaura-spacing-md);
    flex: 1;
    min-width: 0;
  }

  #MilauraCollectionHero-{{ section.id }} .milaura-hero__icon {
    flex-shrink: 0;
    font-size: 28px;
    filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.2));
  }

  #MilauraCollectionHero-{{ section.id }} .milaura-hero__text {
    min-width: 0;
  }

  #MilauraCollectionHero-{{ section.id }} .milaura-hero__title {
    font-family: {{ section.settings.title_font }};
    font-size: {{ section.settings.title_size }}px;
    font-weight: 600;
    color: #ffffff;
    margin: 0;
    line-height: 1.2;
    text-shadow:
      0 1px 3px rgba(0,0,0,0.35),
      0 2px 8px rgba(0,0,0,0.25);
  }

  #MilauraCollectionHero-{{ section.id }} .milaura-hero__subtitle {
    font-size: 14px;
    color: rgba(255, 255, 255, 0.9);
    margin: 4px 0 0 0;
    line-height: 1.4;
    text-shadow: 0 1px 2px rgba(0,0,0,0.25);
    max-width: 450px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  /* Badge compteur */
  #MilauraCollectionHero-{{ section.id }} .milaura-hero__badge {
    position: relative;
    z-index: 2;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    gap: 6px;
    padding: 8px 16px;
    background: rgba(255, 255, 255, 0.25);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.4);
    border-radius: 50px;
    font-size: 13px;
    font-weight: 600;
    color: #ffffff;
    text-shadow: 0 1px 2px rgba(0,0,0,0.2);
  }

  /* Desktop */
  @media screen and (min-width: 1024px) {
    #MilauraCollectionHero-{{ section.id }} .milaura-hero__banner {
      padding: 22px 32px;
    }

    #MilauraCollectionHero-{{ section.id }} .milaura-hero__subtitle {
      white-space: normal;
    }
  }

  /* Tablet */
  @media screen and (min-width: 769px) and (max-width: 1024px) {
    #MilauraCollectionHero-{{ section.id }} .milaura-hero__title {
      font-size: {{ section.settings.title_size | times: 0.85 | round: 0 }}px;
    }
  }

  /* Mobile */
  @media screen and (max-width: 768px) {
    #MilauraCollectionHero-{{ section.id }} {
      padding: var(--milaura-spacing-xs) var(--milaura-spacing-sm) 0;
    }

    #MilauraCollectionHero-{{ section.id }} .milaura-hero__breadcrumb {
      font-size: 11px;
      margin-bottom: 8px;
    }

    #MilauraCollectionHero-{{ section.id }} .milaura-hero__banner {
      flex-direction: column;
      align-items: stretch;
      gap: var(--milaura-spacing-sm);
      padding: 16px 18px;
      border-radius: 18px;
    }

    #MilauraCollectionHero-{{ section.id }} .milaura-hero__content {
      flex-direction: column;
      align-items: flex-start;
      gap: 8px;
    }

    #MilauraCollectionHero-{{ section.id }} .milaura-hero__icon {
      font-size: 24px;
    }

    #MilauraCollectionHero-{{ section.id }} .milaura-hero__title {
      font-size: 24px;
    }

    #MilauraCollectionHero-{{ section.id }} .milaura-hero__subtitle {
      font-size: 13px;
      white-space: normal;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
    }

    #MilauraCollectionHero-{{ section.id }} .milaura-hero__badge {
      align-self: flex-start;
      padding: 6px 12px;
      font-size: 12px;
    }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    #MilauraCollectionHero-{{ section.id }} .milaura-hero__banner::after {
      transition: none;
    }
  }
{%- endstyle -%}

<section
  id="MilauraCollectionHero-{{ section.id }}"
  class="milaura-collection-hero"
  aria-label="{{ collection.title | escape }}"
>
  <div class="page-width">
    {%- comment -%} Breadcrumb minimal {%- endcomment -%}
    <nav class="milaura-hero__breadcrumb" aria-label="Fil d'Ariane">
      <a href="{{ routes.root_url }}">Accueil</a>
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
        <polyline points="9 18 15 12 9 6"></polyline>
      </svg>
      <a href="{{ routes.collections_url }}">Collections</a>
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
        <polyline points="9 18 15 12 9 6"></polyline>
      </svg>
      <span aria-current="page">{{ collection.title }}</span>
    </nav>

    {%- comment -%} Bandeau dor√© compact {%- endcomment -%}
    <div class="milaura-hero__banner">
      <div class="milaura-hero__content">
        {%- if section.settings.show_icon -%}
          <span class="milaura-hero__icon">{{ section.settings.icon | default: '‚ú®' }}</span>
        {%- endif -%}

        <div class="milaura-hero__text">
          <h1 class="milaura-hero__title">{{ collection.title }}</h1>
          {%- if section.settings.show_description and collection.description != blank -%}
            <p class="milaura-hero__subtitle">{{ collection.description | strip_html | truncate: 120 }}</p>
          {%- endif -%}
        </div>
      </div>

      {%- if section.settings.show_count -%}
        <div class="milaura-hero__badge">
          <span>{{ collection.products_count }}</span>
          <span>{{ collection.products_count | pluralize: 'cr√©ation', 'cr√©ations' }}</span>
        </div>
      {%- endif -%}
    </div>
  </div>
</section>

