{%- comment -%}
  MILAURA COLLECTION HERO - DYNAMIC ISLAND
  Animation style Apple Dynamic Island + BFM typewriter
  100% CSS - Works in Shopify editor
  @version 4.1.0
{%- endcomment -%}

{%- assign title_length = collection.title | size -%}
{%- assign typing_duration = title_length | times: 0.08 -%}
{%- if typing_duration < 0.8 %}{% assign typing_duration = 0.8 %}{% endif -%}

{%- style -%}
  #MilauraCollectionHero-{{ section.id }} {
    padding: 12px var(--milaura-spacing-sm) 4px;
  }

  /* =============================================
     BREADCRUMB - Ultra discret
     ============================================= */
  #MilauraCollectionHero-{{ section.id }} .hero__breadcrumb {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 6px;
    margin-bottom: 12px;
    font-size: 11px;
    color: var(--milaura-text-light, #999);
  }

  #MilauraCollectionHero-{{ section.id }} .hero__breadcrumb a {
    color: inherit;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  #MilauraCollectionHero-{{ section.id }} .hero__breadcrumb a:hover {
    color: var(--milaura-gold, #C0A062);
  }

  #MilauraCollectionHero-{{ section.id }} .hero__breadcrumb svg {
    width: 8px;
    height: 8px;
    opacity: 0.4;
  }

  #MilauraCollectionHero-{{ section.id }} .hero__breadcrumb span {
    color: var(--milaura-text, #333);
  }

  /* =============================================
     DYNAMIC ISLAND - Animation fluide
     ============================================= */
  #MilauraCollectionHero-{{ section.id }} .hero__island-wrapper {
    display: flex;
    justify-content: center;
    margin-bottom: 0;
  }

  #MilauraCollectionHero-{{ section.id }} .hero__island {
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 12px;
    height: 44px;
    padding: 0 24px;

    /* Style noir premium */
    background: linear-gradient(145deg, #1a1a1a 0%, #0d0d0d 100%);
    border-radius: 50px;

    /* Liser√© dor√© subtil */
    box-shadow:
      0 0 0 1px rgba(192, 160, 98, 0.3),
      0 8px 32px rgba(0, 0, 0, 0.2),
      0 2px 8px rgba(0, 0, 0, 0.1),
      inset 0 1px 0 rgba(255, 255, 255, 0.08);

    /* Animation d'apparition */
    animation: islandReveal 0.5s cubic-bezier(0.34, 1.56, 0.64, 1) forwards;
    transform-origin: center center;
  }

  @keyframes islandReveal {
    0% {
      opacity: 0;
      transform: scale(0.6);
    }
    100% {
      opacity: 1;
      transform: scale(1);
    }
  }

  /* Lueur dor√©e au hover */
  #MilauraCollectionHero-{{ section.id }} .hero__island::before {
    content: '';
    position: absolute;
    inset: -2px;
    border-radius: 52px;
    background: linear-gradient(135deg,
      rgba(192, 160, 98, 0.4) 0%,
      transparent 40%,
      transparent 60%,
      rgba(192, 160, 98, 0.4) 100%
    );
    opacity: 0;
    transition: opacity 0.4s ease;
    z-index: -1;
  }

  #MilauraCollectionHero-{{ section.id }} .hero__island:hover::before {
    opacity: 1;
  }

  /* Indicateur pulsant (point dor√©) */
  #MilauraCollectionHero-{{ section.id }} .hero__island-dot {
    width: 6px;
    height: 6px;
    background: var(--milaura-gold, #C0A062);
    border-radius: 50%;
    flex-shrink: 0;
    animation: dotPulse 2s ease-in-out infinite;
    box-shadow: 0 0 8px rgba(192, 160, 98, 0.6);
  }

  @keyframes dotPulse {
    0%, 100% {
      opacity: 1;
      transform: scale(1);
      box-shadow: 0 0 8px rgba(192, 160, 98, 0.6);
    }
    50% {
      opacity: 0.7;
      transform: scale(0.8);
      box-shadow: 0 0 4px rgba(192, 160, 98, 0.3);
    }
  }

  /* =============================================
     TYPEWRITER - 100% CSS
     ============================================= */
  #MilauraCollectionHero-{{ section.id }} .hero__island-title {
    font-family: {{ section.settings.title_font }};
    font-size: {{ section.settings.title_size }}px;
    font-weight: 600;
    color: #ffffff;
    margin: 0;
    white-space: nowrap;
    letter-spacing: 0.3px;
    line-height: 1;
    display: inline-flex;
    align-items: center;
  }

  #MilauraCollectionHero-{{ section.id }} .hero__typewriter-text {
    display: inline-block;
    overflow: hidden;
    white-space: nowrap;
    width: 0;
    animation: typewriter {{ typing_duration }}s steps({{ title_length }}, end) 0.4s forwards;
  }

  @keyframes typewriter {
    0% { width: 0; }
    100% { width: 100%; }
  }

  /* Curseur clignotant */
  #MilauraCollectionHero-{{ section.id }} .hero__cursor {
    display: inline-block;
    width: 2px;
    height: 1em;
    background: var(--milaura-gold, #C0A062);
    margin-left: 2px;
    vertical-align: middle;
    animation: cursorBlink 0.8s step-end infinite;
    animation-delay: 0.4s;
  }

  @keyframes cursorBlink {
    0%, 100% { opacity: 1; }
    50% { opacity: 0; }
  }

  /* Compteur produits */
  #MilauraCollectionHero-{{ section.id }} .hero__island-count {
    display: flex;
    align-items: center;
    gap: 4px;
    padding: 4px 10px;
    background: rgba(192, 160, 98, 0.2);
    border-radius: 20px;
    font-size: 11px;
    font-weight: 600;
    color: var(--milaura-gold-light, #E6C88B);
    flex-shrink: 0;
    opacity: 0;
    animation: fadeIn 0.4s ease {{ typing_duration | plus: 0.6 }}s forwards;
  }

  @keyframes fadeIn {
    to { opacity: 1; }
  }

  /* =============================================
     RESPONSIVE
     ============================================= */
  @media screen and (max-width: 768px) {
    #MilauraCollectionHero-{{ section.id }} {
      padding: var(--milaura-spacing-xs) var(--milaura-spacing-xs);
    }

    #MilauraCollectionHero-{{ section.id }} .hero__breadcrumb {
      font-size: 10px;
      margin-bottom: 8px;
    }

    #MilauraCollectionHero-{{ section.id }} .hero__island {
      height: 40px;
      padding: 0 18px;
      gap: 10px;
    }

    #MilauraCollectionHero-{{ section.id }} .hero__island-title {
      font-size: 16px;
    }

    #MilauraCollectionHero-{{ section.id }} .hero__island-count {
      padding: 3px 8px;
      font-size: 9px;
    }

    #MilauraCollectionHero-{{ section.id }} .hero__island-dot {
      width: 5px;
      height: 5px;
    }
  }

  /* Petit mobile */
  @media screen and (max-width: 380px) {
    #MilauraCollectionHero-{{ section.id }} .hero__island {
      height: 36px;
      padding: 0 14px;
      gap: 8px;
    }

    #MilauraCollectionHero-{{ section.id }} .hero__island-title {
      font-size: 14px;
    }

    #MilauraCollectionHero-{{ section.id }} .hero__island-count {
      display: none;
    }
  }

  /* =============================================
     REDUCED MOTION
     ============================================= */
  @media (prefers-reduced-motion: reduce) {
    #MilauraCollectionHero-{{ section.id }} .hero__island {
      animation: none;
      opacity: 1;
      transform: none;
    }

    #MilauraCollectionHero-{{ section.id }} .hero__typewriter-text {
      animation: none;
      width: auto;
    }

    #MilauraCollectionHero-{{ section.id }} .hero__cursor {
      display: none;
    }

    #MilauraCollectionHero-{{ section.id }} .hero__island-dot {
      animation: none;
    }

    #MilauraCollectionHero-{{ section.id }} .hero__island-count {
      animation: none;
      opacity: 1;
    }
  }
{%- endstyle -%}

<section
  id="MilauraCollectionHero-{{ section.id }}"
  class="milaura-collection-hero"
  aria-label="{{ collection.title | escape }}"
>
  <div class="page-width">
    {%- comment -%} Breadcrumb ultra-discret {%- endcomment -%}
    {%- if section.settings.show_breadcrumb -%}
      <nav class="hero__breadcrumb" aria-label="Fil d'Ariane">
        <a href="{{ routes.root_url }}">Accueil</a>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
          <polyline points="9 18 15 12 9 6"></polyline>
        </svg>
        <span aria-current="page">{{ collection.title }}</span>
      </nav>
    {%- endif -%}

    {%- comment -%} Dynamic Island {%- endcomment -%}
    <div class="hero__island-wrapper">
      <h1 class="hero__island">
        {%- comment -%} Point dor√© pulsant {%- endcomment -%}
        <span class="hero__island-dot" aria-hidden="true"></span>

        {%- comment -%} Titre avec typewriter CSS {%- endcomment -%}
        <span class="hero__island-title">
          <span class="hero__typewriter-text">{{ collection.title }}</span>
          {%- if section.settings.show_cursor -%}
            <span class="hero__cursor" aria-hidden="true"></span>
          {%- endif -%}
        </span>

        {%- comment -%} Compteur {%- endcomment -%}
        {%- if section.settings.show_count -%}
          <span class="hero__island-count">
            {{ collection.products_count }} {{ collection.products_count | pluralize: 'item', 'items' }}
          </span>
        {%- endif -%}
      </h1>
    </div>
  </div>
</section>

