<div id="MilauraHeroShowcase-{{ section.id }}">
  <div class="hero-card milaura-section-card">
    <div class="hero-header">
      <div class="hero-banner-wrap">
        {% if section.settings.showcase_logo != blank %}
          <div class="hero-banner-logo">
            {{ section.settings.showcase_logo | image_url: width: 360 | image_tag: alt: shop.name }}
          </div>
        {% elsif settings.logo != blank %}
          <div class="hero-banner-logo">
            {{ settings.logo | image_url: width: 360 | image_tag: alt: shop.name }}
          </div>
        {% endif %}

        <div class="hero-banner">
          <div class="hero-banner-text">
            {% if section.settings.kicker != blank %}
              <div class="hero-kicker hero-outline">{{ section.settings.kicker }}</div>
            {% endif %}

            {% if section.settings.title != blank %}
              <h1 class="hero-title-script hero-outline">{{ section.settings.title }}</h1>
            {% endif %}

            {% if section.settings.subtitle != blank %}
              <p class="hero-subtitle hero-outline">{{ section.settings.subtitle }}</p>
            {% endif %}
          </div>
        </div>
      </div>
    </div>

    <div class="hero-main-grid">
      <div class="hero-pillars" role="tablist" aria-label="S√©lectionner un univers">
        {% assign universe_blocks = section.blocks | where: 'type', 'universe' %}
        {% for block in universe_blocks %}
          <button
            type="button"
            class="hero-tab {% if forloop.first %}is-active{% endif %}"
            data-index="{{ forloop.index0 }}"
            data-cta-label="{{ block.settings.cta_label | escape }}"
            data-cta-link="{{ block.settings.cta_link }}"
            role="tab"
            aria-selected="{% if forloop.first %}true{% else %}false{% endif %}"
            aria-controls="hero-slide-{{ section.id }}-{{ forloop.index0 }}"
            id="hero-tab-{{ section.id }}-{{ forloop.index0 }}"
            {{ block.shopify_attributes }}
          >
            {% if block.settings.icon != blank %}
              <div class="hero-pillar-icon">{{ block.settings.icon }}</div>
            {% endif %}
            <div class="hero-pillar-content">
              {% if block.settings.tab_label != blank %}
                <div class="hero-pillar-title">{{ block.settings.tab_label }}</div>
              {% elsif block.settings.title != blank %}
                <div class="hero-pillar-title">{{ block.settings.title }}</div>
              {% endif %}
              {% if block.settings.text != blank %}
                <div class="hero-pillar-text milaura-text">{{ block.settings.text }}</div>
              {% endif %}
            </div>
          </button>
        {% endfor %}

        <div class="hero-cta-row">
          <a
            id="hero-main-cta-{{ section.id }}"
            class="button button--primary milaura-gold-sheen hero-main-cta"
            href="#"
            style="display:none;"
          >
            D√©couvrir
          </a>
        </div>
      </div>

      <div class="hero-carousel-wrapper">
        <div class="hero-carousel-frame">
          <div class="hero-carousel" id="hero-carousel-{{ section.id }}">
            {% if universe_blocks.size > 0 %}
              {% for block in universe_blocks %}
                {% if block.settings.image != blank %}
                  <div
                    class="hero-slide {% if forloop.first %}is-active{% endif %}"
                    id="hero-slide-{{ section.id }}-{{ forloop.index0 }}"
                    data-index="{{ forloop.index0 }}"
                    role="tabpanel"
                    aria-labelledby="hero-tab-{{ section.id }}-{{ forloop.index0 }}"
                    aria-hidden="{% if forloop.first %}false{% else %}true{% endif %}"
                    {{ block.shopify_attributes }}
                  >
                    {{
                      block.settings.image
                      | image_url: width: 1400
                      | image_tag: loading: 'eager', alt: block.settings.image.alt
                      | default: block.settings.title
                      | default: 'Milaura'
                    }}
                  </div>
                {% endif %}
              {% endfor %}
            {% else %}
              <div class="hero-slide is-active" role="tabpanel" aria-hidden="false">
                {{ 'image' | placeholder_svg_tag: 'hero-placeholder' }}
              </div>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  (function () {
    const sectionId = '{{ section.id }}';
    const sectionElement = document.getElementById('MilauraHeroShowcase-' + sectionId);
    if (!sectionElement) return;

    const tabs = sectionElement.querySelectorAll('.hero-tab[data-index]');
    const slides = sectionElement.querySelectorAll('.hero-slide[data-index]');
    const pillars = sectionElement.querySelector('.hero-pillars');
    const carousel = sectionElement.querySelector('.hero-carousel');
    const mainCta = document.getElementById('hero-main-cta-' + sectionId);

    if (tabs.length === 0 || slides.length === 0) return;

    let currentIndex = 0;
    let autoplayInterval = null;
    const autoplayDuration = 3000;

    function updateMainCta(index) {
      if (!mainCta) return;

      const tab = tabs[index];
      const label = (tab.getAttribute('data-cta-label') || '').trim();
      const link = (tab.getAttribute('data-cta-link') || '').trim();

      if (!label || !link || link === '#') {
        mainCta.style.display = 'none';
        mainCta.setAttribute('href', '#');
        mainCta.textContent = 'D√©couvrir';
        return;
      }

      mainCta.style.display = 'inline-flex';
      mainCta.setAttribute('href', link);
      mainCta.textContent = label;
    }

    function setActive(index) {
      slides.forEach((slide, i) => {
        const active = i === index;
        slide.classList.toggle('is-active', active);
        slide.setAttribute('aria-hidden', active ? 'false' : 'true');
      });

      tabs.forEach((tab, i) => {
        const active = i === index;
        tab.classList.toggle('is-active', active);
        tab.setAttribute('aria-selected', active ? 'true' : 'false');
      });

      currentIndex = index;
      updateMainCta(index);
    }

    function nextSlide() {
      setActive((currentIndex + 1) % slides.length);
    }

    function startAutoplay() {
      stopAutoplay();
      autoplayInterval = setInterval(nextSlide, autoplayDuration);
    }

    function stopAutoplay() {
      if (autoplayInterval) {
        clearInterval(autoplayInterval);
        autoplayInterval = null;
      }
    }

    tabs.forEach((tab) => {
      tab.addEventListener('click', function (e) {
        e.preventDefault();
        stopAutoplay();
        const indexToShow = parseInt(this.getAttribute('data-index'), 10);
        if (!isNaN(indexToShow)) setActive(indexToShow);
        startAutoplay();
      });

      tab.addEventListener('focus', function () {
        stopAutoplay();
      });
    });

    if (pillars) {
      pillars.addEventListener('mouseenter', stopAutoplay);
      pillars.addEventListener('mouseleave', startAutoplay);
    }

    if (carousel) {
      carousel.addEventListener('mouseenter', stopAutoplay);
      carousel.addEventListener('mouseleave', startAutoplay);
    }

    setActive(0);
    startAutoplay();
  })();
</script>

