{% style %}
  /* ============================================
     MILAURA HERO SHOWCASE - LUXE & CONVERSION
     ============================================ */

  #MilauraHeroShowcase-{{ section.id }} {
    width: 100%;
    padding-top: var(--header-height-offset, 120px);
    padding-bottom: var(--milaura-spacing-lg);
    background: transparent;
    margin-top: var(--milaura-spacing-md);
    margin-bottom: var(--milaura-spacing-lg);

    /* Fallbacks si le syst√®me global n'est pas pr√©sent */
    --milaura-gold-a: 0.55;
    --milaura-gold-1-local: rgba(209, 178, 120, var(--milaura-gold-a));
    --milaura-gold-2-local: rgba(186, 149, 90, var(--milaura-gold-a));
    --milaura-gold-border-local: rgba(192, 160, 98, var(--milaura-gold-a));
    --milaura-gold-grad-local: linear-gradient(135deg, var(--milaura-gold-1-local), rgba(240, 220, 170, 0.55), var(--milaura-gold-2-local));
    --milaura-sheen-local: linear-gradient(120deg, rgba(255,255,255,0) 0%, rgba(255,255,255,0.55) 35%, rgba(255,255,255,0) 70%);

    /* Utilise le global si dispo, sinon fallback local */
    --milaura-gold-grad-safe: var(--milaura-gold-grad, var(--milaura-gold-grad-local));
    --milaura-sheen-safe: var(--milaura-sheen, var(--milaura-sheen-local));
  }

  #MilauraHeroShowcase-{{ section.id }} .hero-card {
    position: relative;
  }

  /* --- HEADER FULL-WIDTH --- */
  #MilauraHeroShowcase-{{ section.id }} .hero-header {
    text-align: center;
    margin-bottom: var(--milaura-spacing-lg);
  }

  #MilauraHeroShowcase-{{ section.id }} .hero-banner-wrap {
    position: relative;
    max-width: 960px;
    margin: 0 auto var(--milaura-spacing-lg) auto;
  }

  /* --- BANNI√àRE DOR√âE --- */
  #MilauraHeroShowcase-{{ section.id }} .hero-banner {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--milaura-spacing-sm);
    padding: 20px 28px;
    border-radius: 32px;
    background: var(--milaura-gold-grad-safe);
    box-shadow:
      0 18px 45px rgba(150, 120, 70, 0.28),
      0 0 0 1px rgba(255, 255, 255, 0.30) inset;
    max-width: 960px;
    color: #fff;
    position: relative;
    z-index: 2;
    overflow: hidden;
  }

  /* Voile lumineux subtil sur le bandeau */
  #MilauraHeroShowcase-{{ section.id }} .hero-banner::before {
    content: '';
    position: absolute;
    inset: 0;
    background: var(--milaura-sheen-safe);
    opacity: 0.22;
    pointer-events: none;
    z-index: 1;
  }

  #MilauraHeroShowcase-{{ section.id }} .hero-banner-text {
    position: relative;
    z-index: 2;
  }

  /* --- LOGO "CHAPEAU" DEVANT + √Ä DROITE --- */
  #MilauraHeroShowcase-{{ section.id }} .hero-banner-logo {
    position: absolute;
    top: -26px;
    right: -22px; /* on le pousse √† fond √† droite */
    z-index: 4; /* devant le bandeau */
    pointer-events: none;
  }

  #MilauraHeroShowcase-{{ section.id }} .hero-banner-logo img {
    display: block;
    width: 148px;
    height: auto;
    filter: drop-shadow(0 10px 26px rgba(0, 0, 0, 0.30));
  }

  /* --- TEXTE LISIBILIT√â: BLANC + CONTOUR NOIR --- */
  #MilauraHeroShowcase-{{ section.id }} .hero-kicker,
  #MilauraHeroShowcase-{{ section.id }} .hero-title-script,
  #MilauraHeroShowcase-{{ section.id }} .hero-subtitle {
    text-shadow:
      0 1px 0 rgba(0,0,0,0.55),
      0 -1px 0 rgba(0,0,0,0.55),
      1px 0 0 rgba(0,0,0,0.55),
      -1px 0 0 rgba(0,0,0,0.55),
      0 6px 18px rgba(0,0,0,0.22);
  }

  @supports (-webkit-text-stroke: 1px rgba(0,0,0,0.4)) {
    #MilauraHeroShowcase-{{ section.id }} .hero-title-script {
      -webkit-text-stroke: 1px rgba(0,0,0,0.35);
      paint-order: stroke fill;
    }
    #MilauraHeroShowcase-{{ section.id }} .hero-subtitle,
    #MilauraHeroShowcase-{{ section.id }} .hero-kicker {
      -webkit-text-stroke: 0.6px rgba(0,0,0,0.28);
      paint-order: stroke fill;
    }
  }

  #MilauraHeroShowcase-{{ section.id }} .hero-kicker {
    font-family: var(--milaura-font-body);
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 2px;
    color: rgba(255, 255, 255, 0.95);
    font-weight: 700;
    margin-bottom: var(--milaura-spacing-sm);
  }

  #MilauraHeroShowcase-{{ section.id }} .hero-title-script {
    font-family: var(--milaura-font-script, 'Dancing Script', cursive);
    font-size: 4rem;
    font-weight: 700;
    color: #ffffff;
    line-height: 1.05;
    margin: 0;
  }

  #MilauraHeroShowcase-{{ section.id }} .hero-subtitle {
    font-family: var(--milaura-font-body);
    font-size: 1.05rem;
    color: rgba(255, 255, 255, 0.98);
    line-height: 1.55;
    max-width: 820px;
    margin: var(--milaura-spacing-sm) auto 0 auto;
    text-align: center;
  }

  /* --- GRILLE PRINCIPALE --- */
  #MilauraHeroShowcase-{{ section.id }} .hero-main-grid {
    max-width: 1200px;
    margin: var(--milaura-spacing-lg) auto 0 auto;
    display: grid;
    grid-template-columns: 40% 60%;
    gap: var(--milaura-spacing-lg);
    align-items: start;
  }

  /* --- COLONNE GAUCHE : ONGLETS --- */
  #MilauraHeroShowcase-{{ section.id }} .hero-pillars {
    display: flex;
    flex-direction: column;
    gap: var(--milaura-spacing-sm);
  }

  #MilauraHeroShowcase-{{ section.id }} .hero-tab {
    display: flex;
    align-items: center;
    gap: var(--milaura-spacing-md);
    padding: 12px var(--milaura-spacing-lg);
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(15px);
    -webkit-backdrop-filter: blur(15px);
    border: 2px solid rgba(192, 160, 98, calc(var(--milaura-gold-a) * 0.30));
    border-radius: var(--milaura-border-radius);
    box-shadow:
      0 8px 25px rgba(192, 160, 98, 0.15),
      0 0 0 1px rgba(255, 255, 255, 0.5) inset;
    transition: transform 0.25s ease, box-shadow 0.25s ease, background 0.25s ease, border-color 0.25s ease;
    text-decoration: none;
    cursor: pointer;
    position: relative;
    overflow: hidden;
    width: 100%;
    text-align: left;
    font-family: inherit;
  }

  #MilauraHeroShowcase-{{ section.id }} .hero-tab::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 4px;
    height: 0;
    background: var(--milaura-gold-grad-safe);
    border-radius: 0 2px 2px 0;
    transition: height 0.25s ease;
    z-index: 1;
  }

  #MilauraHeroShowcase-{{ section.id }} .hero-tab.is-active::before {
    height: 62%;
  }

  #MilauraHeroShowcase-{{ section.id }} .hero-tab:hover:not(.is-active) {
    transform: translateY(-2px);
    border-color: rgba(192, 160, 98, 0.62);
    box-shadow:
      0 12px 30px rgba(192, 160, 98, 0.22),
      0 0 0 1px rgba(255, 255, 255, 0.8) inset,
      0 0 18px rgba(192, 160, 98, 0.12);
    background: rgba(255, 255, 255, 1);
  }

  #MilauraHeroShowcase-{{ section.id }} .hero-tab.is-active {
    background: var(--milaura-gold-grad-safe);
    border-color: rgba(192, 160, 98, 0.82);
    box-shadow:
      0 12px 32px rgba(192, 160, 98, 0.26),
      0 0 0 1px rgba(255, 255, 255, 0.32) inset,
      0 0 22px rgba(192, 160, 98, 0.18);
    transform: translateY(-1px);
  }

  #MilauraHeroShowcase-{{ section.id }} .hero-pillar-icon {
    font-size: 2rem;
    line-height: 1;
    flex-shrink: 0;
    filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.10));
  }

  #MilauraHeroShowcase-{{ section.id }} .hero-pillar-content {
    flex: 1;
  }

  #MilauraHeroShowcase-{{ section.id }} .hero-pillar-title {
    font-family: var(--milaura-font-heading);
    font-size: 1.15rem;
    font-weight: 800;
    color: var(--milaura-text);
    margin-bottom: 4px;
    display: block;
    transition: color 0.25s ease;
  }

  #MilauraHeroShowcase-{{ section.id }} .hero-tab:hover:not(.is-active) .hero-pillar-title {
    color: var(--milaura-gold, #c6a15c);
  }

  #MilauraHeroShowcase-{{ section.id }} .hero-tab.is-active .hero-pillar-title {
    color: #1a1a1a;
  }

  #MilauraHeroShowcase-{{ section.id }} .hero-pillar-text {
    font-family: var(--milaura-font-body);
    font-size: 0.98rem;
    color: var(--milaura-text-light);
    line-height: 1.45;
    display: block;
  }

  #MilauraHeroShowcase-{{ section.id }} .hero-tab.is-active .hero-pillar-text {
    color: rgba(26, 26, 26, 0.82);
  }

  /* --- CTA UNIQUE SOUS LES PILIERS --- */
  #MilauraHeroShowcase-{{ section.id }} .hero-cta-row {
    margin-top: var(--milaura-spacing-md);
    display: flex;
    justify-content: flex-start;
  }

  #MilauraHeroShowcase-{{ section.id }} .hero-cta-row .button {
    border-radius: 999px;
    padding-left: 22px;
    padding-right: 22px;
    min-height: 44px;
  }

  /* --- COLONNE DROITE : CARROUSEL --- */
  #MilauraHeroShowcase-{{ section.id }} .hero-carousel-wrapper {
    position: relative;
    border-radius: var(--milaura-border-radius);
    overflow: visible;
    width: 100%;
  }

  #MilauraHeroShowcase-{{ section.id }} .hero-carousel-frame {
    position: relative;
    border: 3px solid var(--milaura-gold-1, var(--milaura-gold-1-local));
    border-radius: var(--milaura-border-radius);
    padding: 8px;
    background: rgba(255, 255, 255, 0.10);
    backdrop-filter: blur(10px);
    box-shadow: var(--milaura-shadow-md);
    transform: translate(0px, 8px);
    margin-right: 8px;
    margin-bottom: 8px;
    width: 100%;
  }

  #MilauraHeroShowcase-{{ section.id }} .hero-carousel {
    position: relative;
    width: 100%;
    aspect-ratio: 4 / 3;
    border-radius: calc(var(--milaura-border-radius) - 4px);
    overflow: hidden;
    background: var(--milaura-beige);
  }

  #MilauraHeroShowcase-{{ section.id }} .hero-slide {
    position: absolute;
    inset: 0;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.45s ease-in-out;
    border-radius: calc(var(--milaura-border-radius) - 4px);
    overflow: hidden;
  }

  #MilauraHeroShowcase-{{ section.id }} .hero-slide.is-active {
    opacity: 1;
    z-index: 1;
    pointer-events: auto;
  }

  #MilauraHeroShowcase-{{ section.id }} .hero-slide[aria-hidden="true"] {
    opacity: 0;
    visibility: hidden;
    pointer-events: none;
  }

  #MilauraHeroShowcase-{{ section.id }} .hero-slide[aria-hidden="false"] {
    opacity: 1;
    visibility: visible;
    pointer-events: auto;
  }

  #MilauraHeroShowcase-{{ section.id }} .hero-slide img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: calc(var(--milaura-border-radius) - 4px);
  }

  /* --- MOBILE --- */
  @media screen and (max-width: 768px) {
    #MilauraHeroShowcase-{{ section.id }} {
      padding-top: var(--header-height-offset, 56px);
      margin-top: 10px;
      margin-bottom: var(--milaura-spacing-md);
    }

    #MilauraHeroShowcase-{{ section.id }} .hero-header {
      margin-bottom: 12px;
      padding: 0 10px;
    }

    #MilauraHeroShowcase-{{ section.id }} .hero-banner-wrap {
      margin-bottom: 12px;
      max-width: 100%;
    }

    #MilauraHeroShowcase-{{ section.id }} .hero-banner {
      padding: 12px 14px;
      border-radius: 22px;
    }

    /* logo devant, plus petit, toujours √† droite */
    #MilauraHeroShowcase-{{ section.id }} .hero-banner-logo {
      top: -18px;
      right: -18px;
      z-index: 4;
    }

    #MilauraHeroShowcase-{{ section.id }} .hero-banner-logo img {
      width: 86px;
    }

    #MilauraHeroShowcase-{{ section.id }} .hero-kicker {
      font-size: 0.78rem;
      margin-bottom: 6px;
      letter-spacing: 1.6px;
    }

    #MilauraHeroShowcase-{{ section.id }} .hero-title-script {
      font-size: 2.2rem;
      line-height: 1.05;
    }

    /* Clamp pour √©viter que le bandeau mange tout l'√©cran */
    #MilauraHeroShowcase-{{ section.id }} .hero-subtitle {
      font-size: 0.92rem;
      line-height: 1.35;
      max-width: 100%;
      margin-top: 8px;
      display: -webkit-box;
      -webkit-line-clamp: 3;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }

    #MilauraHeroShowcase-{{ section.id }} .hero-main-grid {
      display: flex;
      flex-direction: column;
      gap: 12px;
      margin: 0;
      padding: 0 10px;
    }

    /* Photo d'abord, grande */
    #MilauraHeroShowcase-{{ section.id }} .hero-carousel-wrapper {
      order: 1;
      width: 100%;
    }

    #MilauraHeroShowcase-{{ section.id }} .hero-carousel-frame {
      transform: translate(6px, 6px);
      margin-right: 6px;
      margin-bottom: 6px;
      width: 100%;
    }

    #MilauraHeroShowcase-{{ section.id }} .hero-carousel {
      aspect-ratio: 4 / 5; /* plus haut, plus impact */
      width: 100%;
    }

    /* Piliers ensuite */
    #MilauraHeroShowcase-{{ section.id }} .hero-pillars {
      order: 2;
      width: 100%;
      gap: 10px;
    }

    #MilauraHeroShowcase-{{ section.id }} .hero-tab {
      padding: 12px 14px;
    }

    #MilauraHeroShowcase-{{ section.id }} .hero-pillar-title {
      font-size: 1.05rem;
    }

    #MilauraHeroShowcase-{{ section.id }} .hero-pillar-text {
      font-size: 0.92rem;
    }

    /* CTA sous les piliers, compact */
    #MilauraHeroShowcase-{{ section.id }} .hero-cta-row {
      order: 3;
      margin-top: 10px;
      justify-content: center;
    }
  }
{% endstyle %}

<div id="MilauraHeroShowcase-{{ section.id }}">
  <div class="hero-card milaura-section-card">
    <div class="hero-header">
      <div class="hero-banner-wrap">
        {% if section.settings.showcase_logo != blank %}
          <div class="hero-banner-logo">
            {{ section.settings.showcase_logo | image_url: width: 360 | image_tag: alt: shop.name }}
          </div>
        {% elsif settings.logo != blank %}
          <div class="hero-banner-logo">
            {{ settings.logo | image_url: width: 360 | image_tag: alt: shop.name }}
          </div>
        {% endif %}

        <div class="hero-banner">
          <div class="hero-banner-text">
            {% if section.settings.kicker != blank %}
              <div class="hero-kicker">{{ section.settings.kicker }}</div>
            {% endif %}

            {% if section.settings.title != blank %}
              <h1 class="hero-title-script">{{ section.settings.title }}</h1>
            {% endif %}

            {% if section.settings.subtitle != blank %}
              <p class="hero-subtitle milaura-text">{{ section.settings.subtitle }}</p>
            {% endif %}
          </div>
        </div>
      </div>
    </div>

    <div class="hero-main-grid">
      <div>
        <div class="hero-pillars" role="tablist" aria-label="S√©lectionner un univers">
          {% assign has_universe = false %}
          {% for block in section.blocks %}
            {% if block.type == 'universe' or block.type == 'slide' %}
              {% assign has_universe = true %}
              <button
                type="button"
                class="hero-tab {% if forloop.first %}is-active{% endif %}"
                data-index="{{ forloop.index0 }}"
                data-cta-label="{{ block.settings.cta_label | escape }}"
                data-cta-link="{{ block.settings.cta_link }}"
                role="tab"
                aria-selected="{% if forloop.first %}true{% else %}false{% endif %}"
                aria-controls="hero-slide-{{ section.id }}-{{ forloop.index0 }}"
                id="hero-tab-{{ section.id }}-{{ forloop.index0 }}"
                {{ block.shopify_attributes }}
              >
                {% if block.settings.icon != blank %}
                  <div class="hero-pillar-icon">{{ block.settings.icon }}</div>
                {% endif %}
                <div class="hero-pillar-content">
                  {% if block.settings.tab_label != blank %}
                    <div class="hero-pillar-title">{{ block.settings.tab_label }}</div>
                  {% elsif block.settings.title != blank %}
                    <div class="hero-pillar-title">{{ block.settings.title }}</div>
                  {% endif %}
                  {% if block.settings.text != blank %}
                    <div class="hero-pillar-text milaura-text">{{ block.settings.text }}</div>
                  {% endif %}
                </div>
              </button>
            {% endif %}
          {% endfor %}
        </div>

        <div class="hero-cta-row">
          <a
            href="#"
            class="button button--primary milaura-gold-sheen"
            id="hero-main-cta-{{ section.id }}"
          >
            D√©couvrir
          </a>
        </div>
      </div>

      <div class="hero-carousel-wrapper">
        <div class="hero-carousel-frame">
          <div class="hero-carousel" id="hero-carousel-{{ section.id }}">
            {% if has_universe %}
              {% for block in section.blocks %}
                {% if block.type == 'universe' or block.type == 'slide' %}
                  <div
                    class="hero-slide {% if forloop.first %}is-active{% endif %}"
                    id="hero-slide-{{ section.id }}-{{ forloop.index0 }}"
                    data-index="{{ forloop.index0 }}"
                    role="tabpanel"
                    aria-labelledby="hero-tab-{{ section.id }}-{{ forloop.index0 }}"
                    aria-hidden="{% if forloop.first %}false{% else %}true{% endif %}"
                    {{ block.shopify_attributes }}
                  >
                    {% if block.settings.image != blank %}
                      {{
                        block.settings.image
                        | image_url: width: 1400
                        | image_tag: loading: 'eager', alt: block.settings.image.alt
                      }}
                    {% else %}
                      {{ 'image' | placeholder_svg_tag: 'hero-placeholder' }}
                    {% endif %}
                  </div>
                {% endif %}
              {% endfor %}
            {% else %}
              <div class="hero-slide is-active" role="tabpanel" aria-hidden="false">
                {{ 'image' | placeholder_svg_tag: 'hero-placeholder' }}
              </div>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  (function () {
    const sectionId = '{{ section.id }}';
    const sectionElement = document.getElementById('MilauraHeroShowcase-' + sectionId);
    if (!sectionElement) return;

    const tabs = sectionElement.querySelectorAll('.hero-tab[data-index]');
    const slides = sectionElement.querySelectorAll('.hero-slide[data-index]');
    const pillars = sectionElement.querySelector('.hero-pillars');
    const carousel = sectionElement.querySelector('.hero-carousel');
    const mainCta = sectionElement.querySelector('#hero-main-cta-' + sectionId);

    if (tabs.length === 0 || slides.length === 0) return;

    let currentIndex = 0;
    let autoplayInterval = null;
    let resumeTimeout = null;
    const autoplayDuration = 3000;
    const resumeDelay = 8000;

    function applyCtaFromIndex(index) {
      if (!mainCta) return;

      const tab = tabs[index];
      if (!tab) return;

      const label = (tab.getAttribute('data-cta-label') || '').trim();
      const link = (tab.getAttribute('data-cta-link') || '').trim();

      if (!label || !link || link === '#') {
        mainCta.style.display = 'none';
        return;
      }

      mainCta.style.display = '';
      mainCta.textContent = label;
      mainCta.setAttribute('href', link);
    }

    function setActive(index) {
      slides.forEach((slide, i) => {
        if (i === index) {
          slide.classList.add('is-active');
          slide.setAttribute('aria-hidden', 'false');
        } else {
          slide.classList.remove('is-active');
          slide.setAttribute('aria-hidden', 'true');
        }
      });

      tabs.forEach((tab, i) => {
        if (i === index) {
          tab.classList.add('is-active');
          tab.setAttribute('aria-selected', 'true');
        } else {
          tab.classList.remove('is-active');
          tab.setAttribute('aria-selected', 'false');
        }
      });

      currentIndex = index;
      applyCtaFromIndex(index);
    }

    function nextSlide() {
      const nextIndex = (currentIndex + 1) % slides.length;
      setActive(nextIndex);
    }

    function startAutoplay() {
      stopAutoplay();
      autoplayInterval = setInterval(nextSlide, autoplayDuration);
    }

    function stopAutoplay() {
      if (autoplayInterval) {
        clearInterval(autoplayInterval);
        autoplayInterval = null;
      }
    }

    function scheduleResume() {
      if (resumeTimeout) clearTimeout(resumeTimeout);
      resumeTimeout = setTimeout(() => {
        startAutoplay();
      }, resumeDelay);
    }

    tabs.forEach((tab) => {
      tab.addEventListener('click', function (e) {
        e.preventDefault();
        stopAutoplay();
        const indexToShow = parseInt(this.getAttribute('data-index'), 10);
        if (!isNaN(indexToShow) && indexToShow >= 0 && indexToShow < slides.length) {
          setActive(indexToShow);
        }
        scheduleResume();
      });

      tab.addEventListener('keydown', function (e) {
        let newIndex = currentIndex;
        if (e.key === 'ArrowRight' || e.key === 'ArrowDown') {
          e.preventDefault();
          newIndex = (currentIndex + 1) % tabs.length;
        } else if (e.key === 'ArrowLeft' || e.key === 'ArrowUp') {
          e.preventDefault();
          newIndex = (currentIndex - 1 + tabs.length) % tabs.length;
        } else if (e.key === 'Home') {
          e.preventDefault();
          newIndex = 0;
        } else if (e.key === 'End') {
          e.preventDefault();
          newIndex = tabs.length - 1;
        }

        if (newIndex !== currentIndex) {
          stopAutoplay();
          setActive(newIndex);
          tabs[newIndex].focus();
          scheduleResume();
        }
      });

      tab.addEventListener('focus', function () {
        stopAutoplay();
        scheduleResume();
      });
    });

    if (pillars) {
      pillars.addEventListener('mouseenter', function () {
        stopAutoplay();
      });
      pillars.addEventListener('mouseleave', function () {
        startAutoplay();
      });
    }

    if (carousel) {
      carousel.addEventListener('mouseenter', function () {
        stopAutoplay();
      });
      carousel.addEventListener('mouseleave', function () {
        startAutoplay();
      });
    }

    sectionElement.addEventListener('focusin', function () {
      stopAutoplay();
      scheduleResume();
    });

    setActive(0);
    startAutoplay();
  })();
</script>

