{% comment %}
  MILAURA FOOTER 2.0
  Footer premium avec collections auto-generees, social proof, et trust badges
  Style Vision OS glassmorphism
{% endcomment %}

<footer id="MilauraFooter-{{ section.id }}" class="milaura-footer">
  <div class="milaura-footer-container page-width">
    {%- comment -%} Carte principale avec bords arrondis style Milaura {%- endcomment -%}
    <div class="milaura-footer-card milaura-section-card">

      {%- comment -%} TOP : Logo + Newsletter {%- endcomment -%}
      <div class="milaura-footer-top">
      <div class="milaura-footer-brand">
        {% if section.settings.logo != blank %}
          <img src="{{ section.settings.logo | image_url: width: 200 }}" alt="{{ shop.name }}" class="milaura-footer-logo" width="{{ section.settings.logo.width }}" height="{{ section.settings.logo.height }}">
        {% else %}
          <h2 class="milaura-footer-logo-text">{{ shop.name }}</h2>
        {% endif %}

        {% if section.settings.tagline != blank %}
          <p class="milaura-footer-tagline">{{ section.settings.tagline }}</p>
        {% endif %}
      </div>

      {%- if section.settings.show_newsletter -%}
        <div class="milaura-footer-newsletter">
          <h3 class="milaura-footer-newsletter-title">{{ section.settings.newsletter_title }}</h3>
          <p class="milaura-footer-newsletter-text">{{ section.settings.newsletter_text }}</p>

          <form method="post" action="/contact#contact_form" accept-charset="UTF-8" class="milaura-newsletter-form">
            <input type="hidden" name="form_type" value="customer">
            <input type="hidden" name="utf8" value="‚úì">
            <input type="hidden" name="contact[tags]" value="newsletter">

            <div class="milaura-newsletter-input-wrapper">
              <label for="milaura-newsletter-email-{{ section.id }}" class="visually-hidden">
                Adresse email pour la newsletter
              </label>
              <input
                type="email"
                id="milaura-newsletter-email-{{ section.id }}"
                name="contact[email]"
                placeholder="{{ section.settings.newsletter_placeholder }}"
                class="milaura-newsletter-input"
                autocomplete="email"
                required
              >
              <button type="submit" class="milaura-newsletter-btn">
                {{ section.settings.newsletter_button }}
              </button>
            </div>
          </form>
        </div>
      {%- endif -%}
    </div>

    {%- comment -%} MIDDLE : Colonnes principales {%- endcomment -%}
    <div class="milaura-footer-middle">

      {%- comment -%} Colonne 1 : Collections auto-generees (filtre les collections internes) {%- endcomment -%}
      {%- if section.settings.show_collections -%}
        <div class="milaura-footer-column">
          <h3 class="milaura-footer-column-title">{{ section.settings.collections_title }}</h3>
          <ul class="milaura-footer-links">
            {%- for collection in collections -%}
              {%- comment -%} Exclure collections internes/techniques {%- endcomment -%}
              {%- assign is_internal = false -%}
              {%- if collection.handle contains 'recos' or collection.handle contains 'pool' or collection.handle contains 'frontpage' or collection.handle contains 'all' -%}
                {%- assign is_internal = true -%}
              {%- endif -%}
              {%- if collection.all_products_count > 0 and is_internal == false -%}
                <li>
                  <a href="{{ collection.url }}" class="milaura-footer-link">
                    {{ collection.title }}
                  </a>
                </li>
              {%- endif -%}
            {%- endfor -%}
          </ul>
        </div>
      {%- endif -%}

      {%- comment -%} Colonnes dynamiques via blocks {%- endcomment -%}
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'link_list' -%}
            <div class="milaura-footer-column" {{ block.shopify_attributes }}>
              <h3 class="milaura-footer-column-title">{{ block.settings.heading }}</h3>

              {%- if block.settings.menu != blank -%}
                <ul class="milaura-footer-links">
                  {%- for link in linklists[block.settings.menu].links -%}
                    <li>
                      <a href="{{ link.url }}" class="milaura-footer-link">
                        {{ link.title }}
                      </a>
                    </li>
                  {%- endfor -%}
                </ul>
              {%- endif -%}
            </div>

          {%- when 'text' -%}
            <div class="milaura-footer-column" {{ block.shopify_attributes }}>
              <h3 class="milaura-footer-column-title">{{ block.settings.heading }}</h3>
              <div class="milaura-footer-text">
                {{ block.settings.text }}
              </div>
            </div>

          {%- when 'contact_info' -%}
            <div class="milaura-footer-column milaura-footer-contact-col" {{ block.shopify_attributes }}>
              <h3 class="milaura-footer-column-title">{{ block.settings.heading }}</h3>
              <ul class="milaura-footer-links milaura-footer-contact-list">
                {%- if block.settings.phone != blank -%}
                  <li>
                    <a href="tel:{{ block.settings.phone | replace: ' ', '' }}" class="milaura-footer-link milaura-footer-contact-link">
                      <svg class="milaura-footer-contact-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
                      {{ block.settings.phone }}
                    </a>
                  </li>
                {%- endif -%}
                {%- if block.settings.email != blank -%}
                  <li>
                    <a href="mailto:{{ block.settings.email }}" class="milaura-footer-link milaura-footer-contact-link">
                      <svg class="milaura-footer-contact-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/><polyline points="22,6 12,13 2,6"/></svg>
                      {{ block.settings.email }}
                    </a>
                  </li>
                {%- endif -%}
                {%- if block.settings.response_time != blank -%}
                  <li>
                    <span class="milaura-footer-contact-detail">{{ block.settings.response_time }}</span>
                  </li>
                {%- endif -%}
                {%- if block.settings.contact_page != blank -%}
                  <li>
                    <a href="{{ block.settings.contact_page }}" class="milaura-footer-link milaura-footer-contact-page-link">
                      {{ block.settings.contact_page_label | default: 'Page contact ‚Üí' }}
                    </a>
                  </li>
                {%- endif -%}
              </ul>
            </div>
        {%- endcase -%}
      {%- endfor -%}

      {%- comment -%} Colonne : Decouvrir (avec blog placeholder) {%- endcomment -%}
      {%- if section.settings.show_discover -%}
        <div class="milaura-footer-column">
          <h3 class="milaura-footer-column-title">{{ section.settings.discover_title }}</h3>
          <ul class="milaura-footer-links">
            {%- if section.settings.discover_quiz_link != blank -%}
              <li>
                <a href="{{ section.settings.discover_quiz_link }}" class="milaura-footer-link">
                  {{ section.settings.discover_quiz_label }}
                </a>
              </li>
            {%- endif -%}
            {%- if section.settings.discover_blog_link != blank -%}
              <li>
                <a href="{{ section.settings.discover_blog_link }}" class="milaura-footer-link">
                  {{ section.settings.discover_blog_label }}
                </a>
              </li>
            {%- endif -%}
            {%- if section.settings.discover_about_link != blank -%}
              <li>
                <a href="{{ section.settings.discover_about_link }}" class="milaura-footer-link">
                  {{ section.settings.discover_about_label }}
                </a>
              </li>
            {%- endif -%}
          </ul>
        </div>
      {%- endif -%}

      {%- comment -%} Colonne : Reseaux sociaux avec SVG {%- endcomment -%}
      {%- if section.settings.show_social -%}
        <div class="milaura-footer-column">
          <h3 class="milaura-footer-column-title">{{ section.settings.social_title }}</h3>
          <div class="milaura-footer-social">
            {%- if settings.social_instagram_link != blank -%}
              <a href="{{ settings.social_instagram_link }}" class="milaura-social-link" target="_blank" rel="noopener" aria-label="Suivez-nous sur Instagram">
                <svg class="milaura-social-svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                  <rect x="2" y="2" width="20" height="20" rx="5" ry="5"/>
                  <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/>
                  <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"/>
                </svg>
              </a>
            {%- endif -%}
            {%- if settings.social_facebook_link != blank -%}
              <a href="{{ settings.social_facebook_link }}" class="milaura-social-link" target="_blank" rel="noopener" aria-label="Suivez-nous sur Facebook">
                <svg class="milaura-social-svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/>
                </svg>
              </a>
            {%- endif -%}
            {%- if settings.social_tiktok_link != blank -%}
              <a href="{{ settings.social_tiktok_link }}" class="milaura-social-link" target="_blank" rel="noopener" aria-label="Suivez-nous sur TikTok">
                <svg class="milaura-social-svg" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M19.59 6.69a4.83 4.83 0 0 1-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 0 1-5.2 1.74 2.89 2.89 0 0 1 2.31-4.64 2.93 2.93 0 0 1 .88.13V9.4a6.84 6.84 0 0 0-1-.05A6.33 6.33 0 0 0 5 20.1a6.34 6.34 0 0 0 10.86-4.43v-7a8.16 8.16 0 0 0 4.77 1.52v-3.4a4.85 4.85 0 0 1-1-.1z"/>
                </svg>
              </a>
            {%- endif -%}
            {%- if settings.social_pinterest_link != blank -%}
              <a href="{{ settings.social_pinterest_link }}" class="milaura-social-link" target="_blank" rel="noopener" aria-label="Suivez-nous sur Pinterest">
                <svg class="milaura-social-svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                  <circle cx="12" cy="12" r="10"/>
                  <path d="M8 12c0-4 3-5 4.5-5 2 0 3.5 1.5 3.5 3.5 0 2.5-1.5 4.5-3 4.5s-2-1-2-1"/>
                  <path d="M9.5 14.5l-1 6"/>
                </svg>
              </a>
            {%- endif -%}
            {%- if settings.social_youtube_link != blank -%}
              <a href="{{ settings.social_youtube_link }}" class="milaura-social-link" target="_blank" rel="noopener" aria-label="Suivez-nous sur YouTube">
                <svg class="milaura-social-svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M22.54 6.42a2.78 2.78 0 0 0-1.94-2C18.88 4 12 4 12 4s-6.88 0-8.6.46a2.78 2.78 0 0 0-1.94 2A29 29 0 0 0 1 11.75a29 29 0 0 0 .46 5.33A2.78 2.78 0 0 0 3.4 19c1.72.46 8.6.46 8.6.46s6.88 0 8.6-.46a2.78 2.78 0 0 0 1.94-2 29 29 0 0 0 .46-5.25 29 29 0 0 0-.46-5.33z"/>
                  <polygon points="9.75 15.02 15.5 11.75 9.75 8.48 9.75 15.02"/>
                </svg>
              </a>
            {%- endif -%}
          </div>
        </div>
      {%- endif -%}
    </div>

    {%- comment -%} TRUST BADGES (style reassurance, plus petits) {%- endcomment -%}
    {%- if section.settings.show_trust_badges -%}
      <div class="milaura-footer-trust">
        <div class="milaura-footer-trust-grid">
          {%- if section.settings.trust_1_text != blank -%}
            <div class="milaura-footer-trust-item">
              <span class="milaura-footer-trust-emoji">{{ section.settings.trust_1_emoji }}</span>
              <span class="milaura-footer-trust-text">{{ section.settings.trust_1_text }}</span>
            </div>
          {%- endif -%}
          {%- if section.settings.trust_2_text != blank -%}
            <div class="milaura-footer-trust-item">
              <span class="milaura-footer-trust-emoji">{{ section.settings.trust_2_emoji }}</span>
              <span class="milaura-footer-trust-text">{{ section.settings.trust_2_text }}</span>
            </div>
          {%- endif -%}
          {%- if section.settings.trust_3_text != blank -%}
            <div class="milaura-footer-trust-item">
              <span class="milaura-footer-trust-emoji">{{ section.settings.trust_3_emoji }}</span>
              <span class="milaura-footer-trust-text">{{ section.settings.trust_3_text }}</span>
            </div>
          {%- endif -%}
          {%- if section.settings.trust_4_text != blank -%}
            <div class="milaura-footer-trust-item">
              <span class="milaura-footer-trust-emoji">{{ section.settings.trust_4_emoji }}</span>
              <span class="milaura-footer-trust-text">{{ section.settings.trust_4_text }}</span>
            </div>
          {%- endif -%}
        </div>
      </div>
    {%- endif -%}

    {%- comment -%} SOCIAL PROOF PLACEHOLDER {%- endcomment -%}
    {%- if section.settings.show_social_proof -%}
      <div class="milaura-footer-social-proof">
        <div class="milaura-footer-social-proof-content">
          {%- if section.settings.social_proof_stars -%}
            <div class="milaura-footer-stars">
              {%- for i in (1..5) -%}
                <svg class="milaura-star-icon" viewBox="0 0 24 24" fill="currentColor">
                  <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
                </svg>
              {%- endfor -%}
            </div>
          {%- endif -%}
          <p class="milaura-footer-social-proof-text">{{ section.settings.social_proof_text }}</p>
        </div>
      </div>
    {%- endif -%}

    {%- comment -%} BOTTOM : Legal + Paiements {%- endcomment -%}
    <div class="milaura-footer-bottom">
      <div class="milaura-footer-legal">
        <span class="milaura-footer-copyright">
          ¬© {{ 'now' | date: '%Y' }} {{ shop.name }} ¬∑ {{ section.settings.copyright_text }}
        </span>

        {%- if section.settings.show_policy_links -%}
          <span class="milaura-footer-legal-separator">¬∑</span>
          <ul class="milaura-footer-policies">
            {%- if shop.privacy_policy -%}
              <li><a href="{{ shop.privacy_policy.url }}">{{ shop.privacy_policy.title }}</a></li>
            {%- endif -%}
            {%- if shop.terms_of_service -%}
              <li><a href="{{ shop.terms_of_service.url }}">{{ shop.terms_of_service.title }}</a></li>
            {%- endif -%}
            {%- if shop.refund_policy -%}
              <li><a href="{{ shop.refund_policy.url }}">{{ shop.refund_policy.title }}</a></li>
            {%- endif -%}
          </ul>
        {%- endif -%}
      </div>

      {%- if section.settings.show_payment_icons -%}
        <div class="milaura-footer-payment">
          <span class="milaura-footer-payment-text">{{ section.settings.payment_text }}</span>
          {%- unless shop.enabled_payment_types == empty -%}
            <ul class="milaura-payment-icons">
              {%- for type in shop.enabled_payment_types -%}
                <li class="milaura-payment-icon">{{ type | payment_type_svg_tag }}</li>
              {%- endfor -%}
            </ul>
          {%- endunless -%}
        </div>
      {%- endif -%}
    </div>

    </div>{%- comment -%} Fin milaura-footer-card {%- endcomment -%}
  </div>
</footer>

<style>
  /* --- FOOTER MILAURA 2.0 VISION OS --- */
  .milaura-footer {
    /* Fond transparent - la carte flotte sur le gradient */
    background: transparent;
    padding: 8px;
    margin-top: 0;
  }

  .milaura-footer-container {
    width: 100%;
    max-width: 100%;
    margin: 0;
    padding: 0;
  }

  /* Carte principale - largeur maximale avec petite marge pour effet flottant */
  #MilauraFooter-{{ section.id }} .milaura-footer-card.milaura-section-card {
    max-width: 100%;
    width: 100%;
    margin: 0 auto;
    /* Coins arrondis glassmorphism */
    border-radius: 24px;
    /* Bordure doree complete */
    border: 1px solid rgba(192, 160, 98, 0.4);
    /* Padding interne genereux */
    padding: var(--milaura-spacing-lg, 36px) var(--milaura-spacing-md, 24px);
    /* Ombre doree pour effet flottant */
    box-shadow: 0 15px 40px rgba(192, 160, 98, 0.12);
  }

  /* Mobile - marge reduite */
  @media screen and (max-width: 768px) {
    .milaura-footer {
      padding: 6px;
    }

    #MilauraFooter-{{ section.id }} .milaura-footer-card.milaura-section-card {
      border-radius: 18px;
      padding: var(--milaura-spacing-md, 24px) var(--milaura-spacing-sm, 12px);
    }
  }

  /* --- TOP : Logo + Newsletter --- */
  .milaura-footer-top {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid rgba(192, 160, 98, 0.12);
    margin-bottom: 2rem;
  }

  @media screen and (min-width: 768px) {
    .milaura-footer-top {
      grid-template-columns: 1fr 1fr;
      align-items: start;
    }
  }

  .milaura-footer-brand {
    text-align: left;
  }

  .milaura-footer-logo {
    max-width: 140px;
    height: auto;
    margin-bottom: 0.75rem;
  }

  .milaura-footer-logo-text {
    font-family: var(--font-heading-family, 'Playfair Display'), serif;
    font-size: 1.75rem;
    color: var(--milaura-gold, #C0A062);
    margin: 0 0 0.75rem 0;
  }

  .milaura-footer-tagline {
    font-size: {{ section.settings.tagline_size }}px;
    color: {{ section.settings.text_color }};
    margin: 0;
    line-height: 1.6;
    max-width: 360px;
  }

  /* Newsletter */
  .milaura-footer-newsletter {
    background: rgba(255, 255, 255, 0.45);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border-radius: 16px;
    padding: 1.5rem;
    border: 1px solid rgba(192, 160, 98, 0.15);
  }

  .milaura-footer-newsletter-title {
    font-family: var(--font-heading-family, 'Playfair Display'), serif;
    font-size: {{ section.settings.newsletter_title_size }}px;
    margin: 0 0 0.35rem 0;
    color: {{ section.settings.title_color }};
  }

  .milaura-footer-newsletter-text {
    font-size: {{ section.settings.newsletter_text_size }}px;
    margin: 0 0 1rem 0;
    color: {{ section.settings.text_color }};
  }

  .milaura-newsletter-input-wrapper {
    display: flex;
    gap: 0.5rem;
  }

  .milaura-newsletter-input {
    flex: 1;
    padding: 0.75rem 1rem;
    border: 1px solid rgba(192, 160, 98, 0.25);
    border-radius: 50px;
    background: rgba(255, 255, 255, 0.7);
    font-size: 0.875rem;
    transition: all 0.3s ease;
  }

  .milaura-newsletter-input:focus {
    outline: none;
    border-color: var(--milaura-gold, #C0A062);
    box-shadow: 0 0 0 3px rgba(192, 160, 98, 0.1);
  }

  .milaura-newsletter-btn {
    padding: 0.75rem 1.5rem;
    background: var(--milaura-gold, #C0A062);
    color: white;
    border: none;
    border-radius: 50px;
    font-weight: 600;
    font-size: 0.875rem;
    cursor: pointer;
    transition: all 0.3s ease;
    white-space: nowrap;
  }

  .milaura-newsletter-btn:hover {
    background: var(--milaura-gold-dark, #8F723A);
    transform: translateY(-1px);
    box-shadow: 0 6px 16px rgba(192, 160, 98, 0.25);
  }

  /* --- MIDDLE : Colonnes de liens --- */
  .milaura-footer-middle {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid rgba(192, 160, 98, 0.12);
    margin-bottom: 1.5rem;
  }

  @media screen and (min-width: 768px) {
    .milaura-footer-middle {
      grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
      gap: 2rem;
    }
  }

  .milaura-footer-column-title {
    font-family: var(--milaura-font-heading, 'Playfair Display'), serif;
    font-size: {{ section.settings.column_title_size }}px;
    font-weight: 600;
    margin: 0 0 0.75rem 0;
    color: {{ section.settings.title_color }};
  }

  .milaura-footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .milaura-footer-links li {
    margin-bottom: 0.5rem;
  }

  .milaura-footer-link {
    color: {{ section.settings.text_color }};
    text-decoration: none;
    font-size: {{ section.settings.link_size }}px;
    transition: color 0.3s ease;
  }

  .milaura-footer-link:hover {
    color: {{ section.settings.link_hover_color }};
  }

  .milaura-footer-text {
    font-size: {{ section.settings.link_size }}px;
    line-height: 1.6;
    color: {{ section.settings.text_color }};
  }

  /* Reseaux sociaux avec SVG */
  .milaura-footer-social {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .milaura-social-link {
    width: 38px;
    height: 38px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.5);
    border-radius: 50%;
    border: 1px solid rgba(192, 160, 98, 0.2);
    text-decoration: none;
    color: {{ section.settings.text_color }};
    transition: all 0.3s ease;
  }

  .milaura-social-link:hover {
    background: var(--milaura-gold, #C0A062);
    border-color: var(--milaura-gold, #C0A062);
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 6px 16px rgba(192, 160, 98, 0.25);
  }

  .milaura-social-svg {
    width: 18px;
    height: 18px;
  }

  /* --- TRUST BADGES (mini version) --- */
  .milaura-footer-trust {
    padding: 1.25rem 0;
    border-bottom: 1px solid rgba(192, 160, 98, 0.12);
    margin-bottom: 1.5rem;
  }

  .milaura-footer-trust-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1.5rem;
  }

  @media screen and (min-width: 768px) {
    .milaura-footer-trust-grid {
      justify-content: space-around;
    }
  }

  .milaura-footer-trust-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .milaura-footer-trust-emoji {
