{% style %}
  #MilauraHeroConversion-{{ section.id }} {
    width: 100%;
    padding-top: var(--milaura-spacing-md, 18px);
    padding-bottom: var(--milaura-spacing-md, 18px);
    padding-left: var(--milaura-spacing-sm, 10px);
    padding-right: var(--milaura-spacing-sm, 10px);
    background: transparent;
  }

  #MilauraHeroConversion-{{ section.id }} .conversion-container {
    max-width: 900px;
    margin: 0 auto;
    text-align: center;
  }

  #MilauraHeroConversion-{{ section.id }} .conversion-text {
    font-family: var(--milaura-font-body);
    font-size: 1.3rem;
    line-height: 1.6;
    color: var(--milaura-text, #1b1b1b);
    margin: 0 0 var(--milaura-spacing-md, 18px) 0;
    font-weight: 500;
  }

  #MilauraHeroConversion-{{ section.id }} .conversion-reassurance {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 20px;
    flex-wrap: wrap;
    margin: 0 0 var(--milaura-spacing-md, 18px) 0;
  }

  #MilauraHeroConversion-{{ section.id }} .reassurance-item {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    font-family: var(--milaura-font-body);
    font-size: 0.9rem;
    color: var(--milaura-text-light, rgba(27, 27, 27, 0.72));
    white-space: nowrap;
  }

  #MilauraHeroConversion-{{ section.id }} .reassurance-icon {
    font-size: 1.1rem;
    line-height: 1;
    flex-shrink: 0;
  }

  /* Force le texte noir sur le CTA */
  #MilauraHeroConversion-{{ section.id }} a.milaura-cta.conversion-cta {
    color: #000 !important;
  }

  /* Responsive Mobile */
  @media screen and (max-width: 768px) {
    #MilauraHeroConversion-{{ section.id }} {
      padding-top: var(--milaura-spacing-sm, 10px);
      padding-bottom: var(--milaura-spacing-sm, 10px);
    }

    #MilauraHeroConversion-{{ section.id }} .conversion-text {
      font-size: 1.1rem;
      line-height: 1.5;
      margin-bottom: var(--milaura-spacing-sm, 10px);
    }

    #MilauraHeroConversion-{{ section.id }} .conversion-reassurance {
      gap: 12px;
      margin-bottom: var(--milaura-spacing-sm, 10px);
    }

    #MilauraHeroConversion-{{ section.id }} .reassurance-item {
      font-size: 0.8rem;
      gap: 4px;
    }

    #MilauraHeroConversion-{{ section.id }} .reassurance-icon {
      font-size: 1rem;
    }
  }
{% endstyle %}

<div id="MilauraHeroConversion-{{ section.id }}">
  <div class="conversion-container">
    {% if section.settings.subtitle != blank %}
      <p class="conversion-text milaura-text">{{ section.settings.subtitle }}</p>
    {% endif %}

    {% if section.blocks.size > 0 %}
      <div class="conversion-reassurance">
        {%- for block in section.blocks -%}
          {% if block.type == 'reassurance' %}
            <div class="reassurance-item" {{ block.shopify_attributes }}>
              {% if block.settings.icon != blank %}
                <span class="reassurance-icon">{{ block.settings.icon }}</span>
              {% endif %}
              {% if block.settings.text != blank %}
                <span>{{ block.settings.text }}</span>
              {% endif %}
            </div>
          {% endif %}
        {%- endfor -%}
      </div>
    {% endif %}

    {% if section.settings.primary_button_label != blank %}
      <a href="{{ section.settings.primary_button_link | default: '#' }}" class="milaura-cta conversion-cta">
        {{ section.settings.primary_button_label }}
      </a>
    {% endif %}
  </div>
</div>

