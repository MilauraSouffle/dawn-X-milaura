{% style %}
  #MilauraHeroConversion-{{ section.id }} {
    width: 100%;
    padding-top: var(--milaura-spacing-md, 18px);
    padding-bottom: var(--milaura-spacing-md, 18px);
    padding-left: var(--milaura-spacing-sm, 10px);
    padding-right: var(--milaura-spacing-sm, 10px);
    background: transparent;
  }

  #MilauraHeroConversion-{{ section.id }} .conversion-container {
    max-width: 900px;
    margin: 0 auto;
    text-align: center;
  }

  #MilauraHeroConversion-{{ section.id }} .conversion-text {
    font-family: var(--milaura-font-body);
    font-size: 1.3rem;
    line-height: 1.6;
    color: var(--milaura-text, #1b1b1b);
    margin: 0 0 var(--milaura-spacing-md, 18px) 0;
    font-weight: 500;
  }

  #MilauraHeroConversion-{{ section.id }} .conversion-reassurance {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 20px;
    flex-wrap: wrap;
    margin: 0 0 var(--milaura-spacing-md, 18px) 0;
  }

  #MilauraHeroConversion-{{ section.id }} .reassurance-item {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    font-family: var(--milaura-font-body);
    font-size: 0.9rem;
    color: var(--milaura-text-light, rgba(27, 27, 27, 0.72));
    white-space: nowrap;
  }

  #MilauraHeroConversion-{{ section.id }} .reassurance-icon {
    font-size: 1.1rem;
    line-height: 1;
    flex-shrink: 0;
  }

  #MilauraHeroConversion-{{ section.id }} .conversion-cta {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 14px 32px;
    border-radius: 999px;
    border: 1px solid rgba(214, 176, 96, 0.55);
    background: linear-gradient(
      135deg,
      rgba(255, 240, 200, 0.92) 0%,
      rgba(214, 176, 96, 0.92) 18%,
      rgba(255, 232, 172, 0.92) 42%,
      rgba(176, 130, 48, 0.92) 70%,
      rgba(255, 240, 200, 0.92) 100%
    );
    color: #fff;
    text-decoration: none;
    font-weight: 700;
    letter-spacing: 0.3px;
    font-size: 1rem;
    box-shadow:
      0 12px 32px rgba(130, 90, 30, 0.15),
      0 0 0 1px rgba(255, 255, 255, 0.25) inset;
    transition: transform 180ms ease, box-shadow 220ms ease;
    position: relative;
    overflow: hidden;
  }

  #MilauraHeroConversion-{{ section.id }} .conversion-cta::after {
    content: '';
    position: absolute;
    inset: -40% -60%;
    background: linear-gradient(
      120deg,
      transparent 0%,
      rgba(255, 255, 255, 0.50) 35%,
      transparent 70%
    );
    opacity: 0;
    transform: translateX(-18%);
    transition: opacity 260ms ease, transform 520ms cubic-bezier(0.22, 1, 0.36, 1);
    pointer-events: none;
  }

  #MilauraHeroConversion-{{ section.id }} .conversion-cta:hover {
    transform: translateY(-1px);
    box-shadow:
      0 16px 40px rgba(130, 90, 30, 0.20),
      0 0 0 1px rgba(255, 255, 255, 0.30) inset,
      0 0 24px rgba(214, 176, 96, 0.28);
  }

  #MilauraHeroConversion-{{ section.id }} .conversion-cta:hover::after {
    opacity: 0.35;
    transform: translateX(18%);
  }

  /* Responsive Mobile */
  @media screen and (max-width: 768px) {
    #MilauraHeroConversion-{{ section.id }} {
      padding-top: var(--milaura-spacing-sm, 10px);
      padding-bottom: var(--milaura-spacing-sm, 10px);
    }

    #MilauraHeroConversion-{{ section.id }} .conversion-text {
      font-size: 1.1rem;
      line-height: 1.5;
      margin-bottom: var(--milaura-spacing-sm, 10px);
    }

    #MilauraHeroConversion-{{ section.id }} .conversion-reassurance {
      gap: 12px;
      margin-bottom: var(--milaura-spacing-sm, 10px);
    }

    #MilauraHeroConversion-{{ section.id }} .reassurance-item {
      font-size: 0.8rem;
      gap: 4px;
    }

    #MilauraHeroConversion-{{ section.id }} .reassurance-icon {
      font-size: 1rem;
    }

    #MilauraHeroConversion-{{ section.id }} .conversion-cta {
      width: 100%;
      max-width: 320px;
      padding: 12px 24px;
      font-size: 0.95rem;
    }
  }
{% endstyle %}

<div id="MilauraHeroConversion-{{ section.id }}">
  <div class="conversion-container">
    {% if section.settings.subtitle != blank %}
      <p class="conversion-text milaura-text">{{ section.settings.subtitle }}</p>
    {% endif %}

    {% if section.blocks.size > 0 %}
      <div class="conversion-reassurance">
        {%- for block in section.blocks -%}
          {% if block.type == 'reassurance' %}
            <div class="reassurance-item" {{ block.shopify_attributes }}>
              {% if block.settings.icon != blank %}
                <span class="reassurance-icon">{{ block.settings.icon }}</span>
              {% endif %}
              {% if block.settings.text != blank %}
                <span>{{ block.settings.text }}</span>
              {% endif %}
            </div>
          {% endif %}
        {%- endfor -%}
      </div>
    {% endif %}

    {% if section.settings.primary_button_label != blank %}
      <a href="{{ section.settings.primary_button_link | default: '#' }}" class="conversion-cta">
        {{ section.settings.primary_button_label }}
      </a>
    {% endif %}
  </div>
</div>

