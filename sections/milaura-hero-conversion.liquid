{% style %}
  #MilauraHeroConversion-{{ section.id }} {
    width: 100%;
    /* AJUSTEMENT CTO : On ajoute 120px en haut pour que le titre ne soit pas cach√© par le menu flottant */
    padding-top: calc(var(--milaura-spacing-lg) + 120px);
    padding-bottom: var(--milaura-spacing-lg);
    padding-left: var(--milaura-spacing-sm);
    padding-right: var(--milaura-spacing-sm);
    background: transparent;
  }

  #MilauraHeroConversion-{{ section.id }} .hero-container {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--milaura-spacing-md);
    align-items: center;
  }

  /* Colonne gauche */
  #MilauraHeroConversion-{{ section.id }} .hero-content {
    display: flex;
    flex-direction: column;
    gap: var(--milaura-spacing-sm);
  }

  #MilauraHeroConversion-{{ section.id }} .hero-kicker {
    font-family: var(--milaura-font-body);
    font-size: 0.9rem;
    color: var(--milaura-text-light);
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 10px;
  }

  #MilauraHeroConversion-{{ section.id }} .hero-title {
    margin: 0;
    line-height: 1.2;
  }

  #MilauraHeroConversion-{{ section.id }} .hero-title .title-line-1 {
    display: block;
    font-size: 3.5rem;
    margin-bottom: 5px;
  }

  #MilauraHeroConversion-{{ section.id }} .hero-title .title-line-2 {
    display: block;
    font-size: 2.5rem;
  }

  #MilauraHeroConversion-{{ section.id }} .hero-subtitle {
    font-size: 1.1rem;
    line-height: 1.6;
    margin: var(--milaura-spacing-sm) 0;
  }

  #MilauraHeroConversion-{{ section.id }} .hero-buttons {
    display: flex;
    gap: var(--milaura-spacing-sm);
    flex-wrap: wrap;
    margin: var(--milaura-spacing-sm) 0;
  }

  #MilauraHeroConversion-{{ section.id }} .hero-reassurance {
    display: flex;
    gap: var(--milaura-spacing-md);
    margin-top: var(--milaura-spacing-sm);
    flex-wrap: wrap;
  }

  #MilauraHeroConversion-{{ section.id }} .reassurance-item {
    display: flex;
    align-items: center;
    gap: 8px;
    font-family: var(--milaura-font-body);
    font-size: 0.85rem;
    color: var(--milaura-text-light);
  }

  #MilauraHeroConversion-{{ section.id }} .reassurance-icon {
    font-size: 1.2rem;
    line-height: 1;
  }

  /* Colonne droite */
  #MilauraHeroConversion-{{ section.id }} .hero-image-wrapper {
    position: relative;
  }

  #MilauraHeroConversion-{{ section.id }} .hero-image-wrapper img {
    width: 100%;
    height: auto;
    border-radius: var(--milaura-border-radius);
    display: block;
  }

  /* Responsive Mobile */
  @media screen and (max-width: 768px) {
    #MilauraHeroConversion-{{ section.id }} {
      /* Ajustement Mobile : Menu plus petit, donc moins de padding */
      padding-top: calc(var(--milaura-spacing-md) + 80px);
      padding-bottom: var(--milaura-spacing-md);
      padding-left: var(--milaura-spacing-sm);
      padding-right: var(--milaura-spacing-sm);
    }

    #MilauraHeroConversion-{{ section.id }} .hero-container {
      grid-template-columns: 1fr;
      gap: var(--milaura-spacing-md);
    }

    #MilauraHeroConversion-{{ section.id }} .hero-title .title-line-1 {
      font-size: 2.5rem;
    }

    #MilauraHeroConversion-{{ section.id }} .hero-title .title-line-2 {
      font-size: 1.8rem;
    }

    #MilauraHeroConversion-{{ section.id }} .hero-buttons {
      flex-direction: column;
    }

    #MilauraHeroConversion-{{ section.id }} .hero-buttons a {
      width: 100%;
      text-align: center;
    }

    #MilauraHeroConversion-{{ section.id }} .hero-reassurance {
      flex-direction: column;
      gap: var(--milaura-spacing-xs);
    }
  }
{% endstyle %}

<div id="MilauraHeroConversion-{{ section.id }}">
  <div class="hero-container">
    <!-- Colonne gauche : Contenu -->
    <div class="hero-content">
      {% if section.settings.kicker != blank %}
        <span class="hero-kicker">{{ section.settings.kicker }}</span>
      {% endif %}

      <h1 class="hero-title">
        {% if section.settings.title_line_1 != blank %}
          <span class="title-line-1 milaura-heading-script">{{ section.settings.title_line_1 }}</span>
        {% endif %}
        {% if section.settings.title_line_2 != blank %}
          <span class="title-line-2 milaura-heading">{{ section.settings.title_line_2 }}</span>
        {% endif %}
      </h1>

      {% if section.settings.subtitle != blank %}
        <p class="hero-subtitle milaura-text">{{ section.settings.subtitle }}</p>
      {% endif %}

      <div class="hero-buttons">
        {% if section.settings.primary_button_label != blank %}
          <a href="{{ section.settings.primary_button_link | default: '#' }}" class="milaura-btn milaura-btn-primary">
            {{ section.settings.primary_button_label }}
          </a>
        {% endif %}

        {% if section.settings.secondary_button_label != blank %}
          <a href="{{ section.settings.secondary_button_link | default: '#' }}" class="milaura-btn">
            {{ section.settings.secondary_button_label }}
          </a>
        {% endif %}
      </div>

      {% if section.blocks.size > 0 %}
        <div class="hero-reassurance">
          {%- for block in section.blocks -%}
            {% if block.type == 'reassurance' %}
              <div class="reassurance-item" {{ block.shopify_attributes }}>
                {% if block.settings.icon != blank %}
                  <span class="reassurance-icon">{{ block.settings.icon }}</span>
                {% endif %}
                {% if block.settings.text != blank %}
                  <span>{{ block.settings.text }}</span>
                {% endif %}
              </div>
            {% endif %}
          {%- endfor -%}
        </div>
      {% endif %}
    </div>

    <!-- Colonne droite : Image -->
    <div class="hero-image-wrapper">
      {% if section.settings.hero_image != blank %}
        <div class="milaura-card">
          {{
            section.settings.hero_image
            | image_url: width: 800
            | image_tag: loading: 'lazy', alt: section.settings.hero_image.alt
            | default: 'Hero image'
          }}
        </div>
      {% else %}
        <div class="milaura-card">
          {{ 'lifestyle-1' | placeholder_svg_tag: 'hero-placeholder' }}
        </div>
      {% endif %}
    </div>
  </div>
</div>

