{%- comment -%}
  MILAURA PRODUCT REASSURANCE
  Version compacte optimis√©e pour mobile
  Max 180-200px de hauteur sur mobile
{%- endcomment -%}

{%- style -%}
  /* ===========================================
     TRUST BADGES COMPACT - Mobile First
     =========================================== */
  .trust-badges-compact {
    width: 100%;
    padding: 16px 0;
    margin: 0;
  }

  .trust-badges-container {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .trust-badge-item {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px 14px;
    background: {{ section.settings.background_color | default: '#f9f7f4' }};
    border-radius: 10px;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .trust-badge-item:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(192, 160, 98, 0.15);
  }

  .trust-badge-icon {
    font-size: 22px;
    flex-shrink: 0;
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.8);
    border-radius: 8px;
  }

  .trust-badge-text {
    display: flex;
    flex-direction: column;
    gap: 2px;
    flex: 1;
    min-width: 0;
  }

  .trust-badge-title {
    font-size: 14px;
    font-weight: 600;
    line-height: 1.2;
    color: var(--milaura-text, #1a1a1a);
  }

  .trust-badge-subtitle {
    font-size: 12px;
    line-height: 1.3;
    color: var(--milaura-text-light, #666);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  /* ===========================================
     DESKTOP LAYOUT (‚â• 750px)
     3 colonnes centr√©es
     =========================================== */
  @media screen and (min-width: 750px) {
    .trust-badges-compact {
      padding: 24px 0;
      margin: 16px 0;
    }

    .trust-badges-container {
      display: grid;
      grid-template-columns: repeat({{ section.blocks.size | default: 3 }}, 1fr);
      gap: 20px;
    }

    .trust-badge-item {
      flex-direction: column;
      text-align: center;
      padding: 24px 16px;
      gap: 10px;
      background: rgba(255, 255, 255, 0.6);
      border: 1px solid rgba(192, 160, 98, 0.15);
    }

    .trust-badge-item:hover {
      border-color: rgba(192, 160, 98, 0.3);
    }

    .trust-badge-icon {
      font-size: 28px;
      width: 48px;
      height: 48px;
      background: linear-gradient(135deg, rgba(192, 160, 98, 0.1) 0%, rgba(192, 160, 98, 0.05) 100%);
      border-radius: 12px;
    }

    .trust-badge-text {
      align-items: center;
      gap: 4px;
    }

    .trust-badge-title {
      font-size: 15px;
    }

    .trust-badge-subtitle {
      font-size: 13px;
      white-space: normal;
      text-align: center;
    }
  }

  /* ===========================================
     VARIANTE ULTRA-COMPACT (optionnelle)
     Pour utilisation inline
     =========================================== */
  .trust-badges-compact.is-inline {
    padding: 12px 0;
  }

  .trust-badges-compact.is-inline .trust-badges-container {
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: center;
    gap: 8px 12px;
  }

  .trust-badges-compact.is-inline .trust-badge-item {
    padding: 8px 12px;
    background: transparent;
    gap: 8px;
  }

  .trust-badges-compact.is-inline .trust-badge-icon {
    width: 24px;
    height: 24px;
    font-size: 18px;
    background: none;
  }

  .trust-badges-compact.is-inline .trust-badge-text {
    flex-direction: row;
    gap: 4px;
    align-items: baseline;
  }

  .trust-badges-compact.is-inline .trust-badge-title {
    font-size: 13px;
  }

  .trust-badges-compact.is-inline .trust-badge-subtitle {
    display: none;
  }

  /* R√©duire le padding de section si sp√©cifi√© */
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.5 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.5 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section
  id="TrustBadges-{{ section.id }}"
  class="trust-badges-compact section-{{ section.id }}-padding {% if section.settings.inline_mode %}is-inline{% endif %}"
  aria-label="Nos engagements"
>
  <div class="page-width">
    <div class="trust-badges-container">
      {%- for block in section.blocks -%}
        <div class="trust-badge-item" {{ block.shopify_attributes }}>
          <span class="trust-badge-icon" aria-hidden="true">
            {%- if block.settings.icon_type == 'emoji' -%}
              {{ block.settings.icon_emoji }}
            {%- else -%}
              {% render 'icon-accordion', icon: block.settings.icon_name %}
            {%- endif -%}
          </span>
          <div class="trust-badge-text">
            <span class="trust-badge-title">{{ block.settings.title }}</span>
            {%- if block.settings.description != blank -%}
              <span class="trust-badge-subtitle">{{ block.settings.description }}</span>
            {%- endif -%}
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

