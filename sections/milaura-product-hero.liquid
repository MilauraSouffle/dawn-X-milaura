<div class="page-width section-{{ section.id }}-padding">
  <div class="milaura-hero-wrapper">
    
    <!-- LEFT: Gallery -->
    <div class="milaura-hero-gallery-column">
      {% render 'product-media-gallery', 
        product: product, 
        variant_images: section.settings.variant_images, 
        is_duplicate: false,
        gallery_layout: section.settings.gallery_layout 
      %}
    </div>

    <!-- RIGHT: Info & Buy -->
    <div class="milaura-hero-info-column">
      <product-info id="ProductInfo-{{ section.id }}" data-section="{{ section.id }}" data-url="{{ product.url }}">
        
        <!-- Vendor / Breadcrumb -->
        {%- if section.settings.show_vendor -%}
          <div class="product__vendor caption-with-letter-spacing">{{ product.vendor }}</div>
        {%- endif -%}

        <!-- Title -->
        <h1 class="milaura-product__title">{{ product.title | escape }}</h1>

        <!-- Reviews Badge -->
        <a href="#Reviews" class="rating-badge" style="display:inline-flex; align-items:center; gap:5px; margin-bottom:1rem; text-decoration:none; color:inherit;">
          <span style="color:var(--milaura-gold)">‚òÖ‚òÖ‚òÖ‚òÖ‚òÖ</span>
          <span style="font-size:1.4rem; opacity:0.7;">(4.9/5)</span>
        </a>

        <!-- Price -->
        <div class="no-js-hidden" id="price-{{ section.id }}" role="status" {{ block.shopify_attributes }}>
          {%- render 'price', product: product, use_variant: true, show_badges: true, price_class: 'milaura-product__price' -%}
        </div>

        <!-- Variant Picker (Dawn Standard for logic, Nutrimuscle style for CSS) -->
        {%- unless product.has_only_default_variant -%}
          <variant-radios class="no-js-hidden" data-section="{{ section.id }}" data-url="{{ product.url }}" data-update-url="false">
            {%- for option in product.options_with_values -%}
              <fieldset class="js product-form__input">
                <legend class="form__label" style="font-weight:bold; margin-bottom:0.5rem;">{{ option.name }}</legend>
                <div style="display:flex; flex-wrap:wrap; gap:10px;">
                  {% render 'product-variant-options', product: product, option: option, block: block, picker_type: 'button' %}
                </div>
              </fieldset>
            {%- endfor -%}
            <script type="application/json">
              {{ product.variants | json }}
            </script>
          </variant-radios>
        {%- endunless -%}

        <!-- Buy Buttons -->
        <div class="milaura-buy-row">
          <!-- Quantity (Optional) -->
          {%- if section.settings.show_quantity -%}
            <div class="product-form__input product-form__quantity" style="width:100px;">
              <quantity-input class="quantity">
                <button class="quantity__button no-js-hidden" name="minus" type="button"><span class="visually-hidden">-</span>-</button>
                <input class="quantity__input" type="number" name="quantity" id="Quantity-{{ section.id }}" min="1" value="1" form="{{ 'product-form-' | append: section.id }}">
                <button class="quantity__button no-js-hidden" name="plus" type="button"><span class="visually-hidden">+</span>+</button>
              </quantity-input>
            </div>
          {%- endif -%}

          <!-- Add Button -->
          <product-form class="product-form" style="flex:1;">
            {%- form 'product', product, id: product_form_id, class: 'form', novalidate: 'novalidate', data-type: 'add-to-cart-form' -%}
              <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}" disabled>
              <button
                type="submit"
                name="add"
                class="milaura-add-btn"
                {% if product.selected_or_first_available_variant.available == false %}disabled{% endif %}
              >
                <span>
                  {%- if product.selected_or_first_available_variant.available -%}
                    Ajouter au panier
                  {%- else -%}
                    Rupture de stock
                  {%- endif -%}
                </span>
              </button>
            {%- endform -%}
          </product-form>
        </div>

        <!-- Trust Badges (Reassurance) -->
        <div class="milaura-trust-badges">
          {%- for block in section.blocks -%}
            {%- if block.type == 'trust_badge' -%}
              <div class="milaura-trust-item">
                <span class="milaura-trust-icon">{{ block.settings.icon }}</span>
                <span>{{ block.settings.text }}</span>
              </div>
            {%- endif -%}
          {%- endfor -%}
        </div>

        <!-- Description Extract (Optional) -->
        {%- if section.settings.show_description -%}
          <div class="product__description rte quick-add-hidden" style="margin-top:2rem;">
            {{ product.description | strip_html | truncatewords: 30 }}
            <a href="#ProductTabs" style="text-decoration:underline; color:var(--milaura-gold);">Lire la suite</a>
          </div>
        {%- endif -%}

      </product-info>
    </div>
  </div>
</div>

<!-- Sticky Bottom Bar (Hidden by default) -->
<div id="MilauraStickyBar" class="milaura-sticky-bar">
  <div class="sticky-info">
    <h4>{{ product.title }}</h4>
    <span id="StickyPrice">
      {{ product.selected_or_first_available_variant.price | money }}
    </span>
  </div>
  <button class="sticky-btn" onclick="document.querySelector('.milaura-add-btn').click()">
    Ajouter
  </button>
</div>

<!-- Sticky Logic -->
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const stickyBar = document.getElementById('MilauraStickyBar');
    const mainButton = document.querySelector('.milaura-add-btn');
    const stickyPrice = document.getElementById('StickyPrice');
    
    // Show sticky bar when main button scrolls out of view
    if(stickyBar && mainButton) {
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (!entry.isIntersecting) {
            stickyBar.classList.add('is-visible');
          } else {
            stickyBar.classList.remove('is-visible');
          }
        });
      }, { threshold: 0 });
      
      observer.observe(mainButton);
    }
    
    // Update sticky price when main price changes (Variant change)
    // We listen to the price update event from Dawn or simple mutation observer
    const priceNode = document.querySelector('.milaura-product__price');
    if(priceNode && stickyPrice) {
      const observer = new MutationObserver(() => {
        stickyPrice.innerHTML = priceNode.innerHTML;
      });
      observer.observe(priceNode, { childList: true, subtree: true, characterData: true });
    }
  });
</script>

