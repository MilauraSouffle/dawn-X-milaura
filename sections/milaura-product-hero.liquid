{% style %}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* Layout Grid */
  .milaura-hero-wrapper {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--milaura-spacing-md);
  }

  @media screen and (min-width: 990px) {
    .milaura-hero-wrapper {
      grid-template-columns: 1.5fr 1fr;
      gap: var(--milaura-spacing-xl);
      align-items: start;
    }

    .milaura-hero-info-column {
      position: sticky;
      top: calc(var(--header-height-offset, 96px) + 24px);
      background: rgba(255,255,255,0.5); /* Subtle glass for contrast if needed */
      border-radius: var(--milaura-border-radius);
      padding: var(--milaura-spacing-md);
    }
  }

  /* Info Column Styling */
  .milaura-product__title {
    font-family: var(--milaura-font-heading);
    font-size: 3.2rem;
    line-height: 1.1;
    margin-bottom: 0.5rem;
  }

  .milaura-product__price {
    font-size: 2.2rem;
    font-weight: 600;
    color: var(--milaura-gold);
    margin-bottom: 1.5rem;
  }

  /* Variant Tiles (Nutrimuscle Style) */
  .product-form__input input[type='radio'] + label {
    border-radius: 8px !important;
    padding: 1rem 1.5rem !important;
    font-weight: 600 !important;
    border: 1px solid rgba(0,0,0,0.1) !important;
    transition: all 0.2s ease;
    background: #fff;
    min-width: 60px;
    text-align: center;
  }

  .product-form__input input[type='radio']:checked + label {
    background-color: var(--milaura-gold) !important;
    color: #fff !important;
    border-color: var(--milaura-gold) !important;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(192, 160, 98, 0.2);
  }

  /* Quantity & Add Button Row */
  .milaura-buy-row {
    display: flex;
    gap: 1rem;
    margin-top: 2rem;
    align-items: center;
  }

  .milaura-add-btn {
    flex: 1;
    background: var(--milaura-gold);
    color: white;
    font-weight: 700;
    padding: 1.5rem;
    border-radius: 12px;
    border: none;
    cursor: pointer;
    font-size: 1.6rem;
    transition: all 0.3s;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .milaura-add-btn:hover {
    background: var(--milaura-gold-dark);
    transform: scale(1.02);
  }

  .milaura-add-btn:disabled {
    background: #ccc;
    cursor: not-allowed;
  }

  /* Trust Badges Inline */
  .milaura-trust-badges {
    margin-top: 2rem;
    display: flex;
    flex-direction: column;
    gap: 0.8rem;
    font-size: 1.4rem;
    opacity: 0.9;
  }
  .milaura-trust-item {
    display: flex;
    align-items: center;
    gap: 1rem;
  }
  .milaura-trust-icon {
    color: var(--milaura-gold);
    font-size: 1.6rem;
  }

  /* Sticky Bar Mobile */
  .milaura-sticky-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    background: white;
    padding: 1.5rem;
    box-shadow: 0 -5px 20px rgba(0,0,0,0.1);
    z-index: 100;
    display: flex;
    align-items: center;
    justify-content: space-between;
    transform: translateY(100%);
    transition: transform 0.3s ease-out;
    border-top: 1px solid var(--milaura-gold-light);
  }

  .milaura-sticky-bar.is-visible {
    transform: translateY(0);
  }
  
  .sticky-info h4 { margin: 0; font-size: 1.4rem; }
  .sticky-info span { color: var(--milaura-gold); font-weight: bold; }

  .sticky-btn {
    background: var(--milaura-gold);
    color: white;
    border: none;
    padding: 1rem 2rem;
    border-radius: 8px;
    font-weight: bold;
    cursor: pointer;
  }
{% endstyle %}

<script src="{{ 'product-info.js' | asset_url }}" defer="defer"></script>
