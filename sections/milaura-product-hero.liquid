{% style %}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* ===========================================
     LAYOUT GENERAL
     =========================================== */
  .milaura-hero-wrapper {
    display: flex;
    flex-direction: column;
    gap: 16px;
    width: 100%;
    max-width: 100%;
    overflow-x: hidden;
    padding: 0 16px;
    box-sizing: border-box;
  }

  /* --- GROUPE 1: Header --- */
  .milaura-hero-header-group {
    order: 1;
    text-align: center;
    width: 100%;
  }

  /* --- GROUPE 2: Media Gallery (MODERNE) --- */
  .milaura-hero-gallery-column {
    order: 2;
    width: 100%;
    margin-bottom: 16px;
    position: relative; /* Pour l'overlay des variantes */
  }

  /* Slider Mobile */
  .product__media-list {
    display: flex;
    gap: 10px;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    padding-bottom: 0; /* R√©duit pour laisser place √† l'overlay */
    margin: 0;
    list-style: none;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none; /* Firefox */
  }
  
  .product__media-list::-webkit-scrollbar {
    display: none; /* Chrome/Safari */
  }

  .product__media-item {
    flex: 0 0 100%; /* 1 par vue sur mobile */
    scroll-snap-align: center;
    width: 100%;
    max-width: 100%;
    border-radius: 12px;
    overflow: hidden;
    position: relative;
  }

  .product-media-container {
    position: relative;
    width: 100%;
    padding-top: 100%; /* Carr√© par d√©faut */
  }

  .product-media-container img,
  .product-media-container video,
  .product-media-container iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Pagination Mobile (Dots) */
  .slider-buttons {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 8px;
    margin-top: 10px;
    margin-bottom: 10px;
  }

  .slider-counter__link--dots .dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: #e0e0e0;
    transition: all 0.3s;
    display: block;
  }

  .slider-counter__link--active .dot {
    background: var(--milaura-gold);
    transform: scale(1.2);
  }

  /* --- OVERLAY VARIANTES (Badges sur photo) --- */
  .hero-variant-overlay {
    position: absolute;
    bottom: 20px; /* Mord sur la photo */
    left: 50%;
    transform: translateX(-50%);
    width: 90%;
    z-index: 10;
    display: flex;
    justify-content: center;
    pointer-events: none; /* Laisse passer le clic autour */
  }

  .hero-variant-overlay variant-radios {
    pointer-events: auto;
    display: flex;
    flex-wrap: nowrap !important; /* FORCE LIGNE UNIQUE */
    justify-content: center;
    gap: 8px;
    overflow-x: auto; /* Scroll si √ßa d√©passe */
    -webkit-overflow-scrolling: touch;
    max-width: 100%;
    padding: 4px; /* Espace pour l'ombre */
    
    /* Masquer scrollbar */
    scrollbar-width: none; 
    -ms-overflow-style: none;
  }
  
  .hero-variant-overlay variant-radios::-webkit-scrollbar {
    display: none;
  }

  .hero-variant-overlay .product-form__input {
    border: none;
    padding: 0;
    margin: 0;
    flex-shrink: 0; /* Emp√™che l'√©crasement des bulles */
  }

  .hero-variant-overlay .form__label {
    display: none; /* On cache les titres "Taille", "Parfum" pour √©pur√© */
  }

  /* Reset radical du style radio */
  .hero-variant-overlay input[type='radio'] {
    clip: rect(0, 0, 0, 0);
    overflow: hidden;
    position: absolute;
    height: 1px;
    width: 1px;
  }

  /* La Bulle Glassmorphism */
  .hero-variant-overlay input[type='radio'] + label {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.65) !important; /* Plus opaque pour lisibilit√© sur photo */
    backdrop-filter: blur(8px) !important;
    border: 1px solid rgba(255, 255, 255, 0.8) !important;
    border-radius: 30px !important;
    padding: 6px 12px !important;
    font-size: 12px !important;
    font-weight: 600 !important;
    color: var(--milaura-text) !important;
    margin: 0 !important;
    min-width: auto !important;
    cursor: pointer;
    transition: all 0.2s ease;
    box-shadow: 0 4px 10px rgba(0,0,0,0.1);
  }

  /* √âtat s√©lectionn√© */
  .hero-variant-overlay input[type='radio']:checked + label {
    background: #fff !important;
    border-color: var(--milaura-gold) !important;
    color: var(--milaura-gold) !important;
    box-shadow: 0 4px 15px rgba(192, 160, 98, 0.3);
    transform: translateY(-2px);
  }

  /* --- GROUPE 3: Actions --- */
  .milaura-hero-actions-group {
    order: 3;
    width: 100%;
  }

  /* DESKTOP MEDIA GRID (‚â• 990px) */
  @media screen and (min-width: 990px) {
    .milaura-hero-wrapper {
      display: grid;
      grid-template-columns: 1.2fr 1fr;
      grid-template-areas:
        "gallery header"
        "gallery actions";
      gap: var(--milaura-spacing-lg);
      padding: 0;
      overflow: visible;
    }

    .milaura-hero-header-group {
      grid-area: header;
      text-align: left;
      position: static !important;
      background: transparent !important;
      border: none !important;
      padding: 0 0 20px 0 !important;
      margin-bottom: 0;
    }

    .milaura-hero-actions-group {
      grid-area: actions;
      position: sticky;
      top: calc(var(--header-height-offset, 90px) + 20px);
      background: rgba(255, 255, 255, 0.6);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(192, 160, 98, 0.1);
      border-radius: 20px;
      padding: 24px;
    }

    /* Grille Media Desktop */
    .milaura-hero-gallery-column {
      grid-area: gallery;
      margin: 0;
    }

    .product__media-list {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 16px;
      overflow: visible;
      scroll-snap-type: none;
      padding: 0;
    }

    .product__media-item:first-child {
      grid-column: span 2;
    }

    .product-media-container {
      padding-top: 100%;
      border-radius: 16px;
      border: 1px solid rgba(0,0,0,0.05);
    }
    
    .slider-buttons {
      display: none;
    }

    /* Sur Desktop, l'overlay variantes se place en bas de l'image principale */
    .hero-variant-overlay {
      position: absolute;
      top: auto;
      bottom: 24px; /* Un peu plus haut que mobile */
      left: 24px; /* Align√© gauche sur desktop ? ou centr√© ? Centr√© c'est bien */
      left: 50%;
      transform: translateX(-50%);
      width: auto;
      max-width: 90%;
    }
  }

  /* AVIS */
  .rating-badge {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    margin-bottom: 12px;
    text-decoration: none !important;
    color: var(--milaura-text) !important;
  }

  .rating-badge .stars {
    color: var(--milaura-gold) !important;
    font-size: 16px;
    letter-spacing: -1px;
  }

  .rating-badge .rating-text {
    opacity: 0.7;
    font-size: 13px;
    color: inherit;
  }

  /* TYPOGRAPHIE */
  .milaura-product__title {
    font-family: var(--milaura-font-heading);
    font-size: 28px;
    margin-bottom: 8px;
    font-weight: 600;
    color: var(--milaura-text);
  }
  @media screen and (min-width: 990px) {
    .milaura-product__title { font-size: 3rem; }
  }

  .milaura-product__price {
    font-size: 24px;
    font-weight: 700;
    color: var(--milaura-gold);
  }

  /* Volume Cards */
  .milaura-volume-grid { display: grid; gap: 10px; margin: 20px 0; }
  .volume-card {
    display: flex; justify-content: space-between; align-items: center;
    border: 2px solid rgba(192, 160, 98, 0.25);
    border-radius: 12px; padding: 12px; cursor: pointer;
    background: #fff; position: relative; transition: all 0.2s;
  }
  .volume-card.is-selected {
    border-color: var(--milaura-gold);
    background: linear-gradient(135deg, rgba(255, 248, 230, 0.95), rgba(255, 252, 245, 0.95));
  }
  .volume-check {
    width: 20px; height: 20px; border-radius: 50%;
    border: 2px solid rgba(192, 160, 98, 0.4); margin-right: 12px;
  }
  .volume-card.is-selected .volume-check {
    border-color: var(--milaura-gold); background: var(--milaura-gold);
  }

  /* --- FIX BUY ROW (Quantit√© + Bouton) --- */
  .milaura-buy-row {
    display: flex;
    gap: 8px;
    margin-top: 20px;
    align-items: center;
    flex-wrap: nowrap !important; /* FORCE 1 LIGNE */
  }

  /* S√©lecteur quantit√© COMPACT */
  .product-form__quantity {
    width: 70px !important; /* Tr√®s petit */
    min-width: 70px !important;
    flex-shrink: 0;
    margin: 0 !important;
  }
  
  .product-form__quantity .quantity {
    width: 100%;
    min-height: 48px;
    padding: 0;
  }
  
  .product-form__quantity .quantity__input {
    font-size: 14px;
    font-weight: 600;
    padding: 0;
  }
  
  .product-form__quantity .quantity__button {
    width: 24px;
    padding: 0;
  }

  /* Bouton PRIORITAIRE */
  .milaura-add-btn {
    flex: 1; /* Prend tout le reste */
    border: none;
    cursor: pointer;
    white-space: nowrap !important; /* PAS DE RETOUR LIGNE */
    overflow: hidden;
    text-overflow: ellipsis;
    /* Style g√©r√© par .milaura-btn-gold global */
  }
  .milaura-add-btn:disabled { background: #ccc !important; cursor: not-allowed; box-shadow: none !important; }

