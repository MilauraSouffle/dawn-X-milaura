{%- comment %}
  Metafield badges removed - keeping only variant bubbles
  Original metafields (scent_notes, stone_benefits) can still be used
  for recommendations/classification elsewhere
{% endcomment -%}

{% style %}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* ===========================================
     LAYOUT GENERAL
     =========================================== */
  .milaura-hero-wrapper {
    display: flex;
    flex-direction: column;
    gap: 16px;
    width: 100%;
    max-width: 100%;
    overflow-x: hidden;
    padding: 0 16px;
    box-sizing: border-box;
  }

  /* --- GROUPE 1: Header --- */
  .milaura-hero-header-group {
    order: 1;
    text-align: center;
    width: 100%;
  }

  /* --- GROUPE 2: Media Gallery (MODERNE) --- */
  .milaura-hero-gallery-column {
    order: 2;
    width: 100%;
    margin-bottom: 16px;
  }

  /* Container pour positionner l'overlay sur l'image principale */
  .milaura-hero-gallery-column slider-component {
    position: relative;
  }

  /* Slider Mobile */
  .product__media-list {
    display: flex;
    gap: 10px;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    padding-bottom: 0; /* R√©duit pour laisser place √† l'overlay */
    margin: 0;
    list-style: none;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none; /* Firefox */
  }
  
  .product__media-list::-webkit-scrollbar {
    display: none; /* Chrome/Safari */
  }

  .product__media-item {
    flex: 0 0 100%; /* 1 par vue sur mobile */
    scroll-snap-align: center;
    width: 100%;
    max-width: 100%;
    border-radius: 12px;
    overflow: hidden;
    position: relative;
  }

  .product-media-container {
    position: relative;
    width: 100%;
    padding-top: 100%; /* Carr√© par d√©faut */
    background: var(--milaura-beige, #FDFBF7);
  }

  .product-media-container img,
  .product-media-container video,
  .product-media-container iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center center;
  }

  /* Mobile & Tablette: image enti√®re visible et centr√©e */
  @media screen and (max-width: 989px) {
    .product-media-container img {
      object-fit: contain;
      object-position: center center;
    }
  }

  /* Pagination Mobile (Dots) */
  .slider-buttons {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 8px;
    margin-top: 10px;
    margin-bottom: 10px;
  }

  .slider-counter__link--dots .dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: #e0e0e0;
    transition: all 0.3s;
    display: block;
  }

  .slider-counter__link--active .dot {
    background: var(--milaura-gold);
    transform: scale(1.2);
  }

  /* --- OVERLAY VARIANTES (Badges sur photo) --- */
  .hero-variant-overlay {
    position: absolute;
    bottom: 20px; /* Mord sur la photo */
    left: 50%;
    transform: translateX(-50%);
    width: 90%;
    z-index: 10;
    display: flex;
    justify-content: center;
    pointer-events: none; /* Laisse passer le clic autour */
  }

  .hero-variant-overlay variant-radios {
    pointer-events: auto;
    display: flex;
    flex-wrap: nowrap !important; /* FORCE LIGNE UNIQUE */
    justify-content: center;
    gap: 8px;
    overflow-x: auto; /* Scroll si √ßa d√©passe */
    -webkit-overflow-scrolling: touch;
    max-width: 100%;
    padding: 4px; /* Espace pour l'ombre */
    
    /* Masquer scrollbar */
    scrollbar-width: none; 
    -ms-overflow-style: none;
  }
  
  .hero-variant-overlay variant-radios::-webkit-scrollbar {
    display: none;
  }

  .hero-variant-overlay .product-form__input {
    border: none;
    padding: 0;
    margin: 0;
    flex-shrink: 0; /* Emp√™che l'√©crasement des bulles */
  }

  .hero-variant-overlay .form__label {
    display: none; /* On cache les titres "Taille", "Parfum" pour √©pur√© */
  }

  /* S'assurer que tous les groupes d'options sont visibles */
  .hero-variant-overlay fieldset {
    display: flex !important;
    flex-wrap: wrap;
    gap: 6px;
    border: none;
    padding: 0;
    margin: 0;
  }

  .hero-variant-overlay .variant-options-row {
    display: flex !important;
    flex-wrap: wrap;
    gap: 6px;
  }

  /* Reset radical du style radio */
  .hero-variant-overlay input[type='radio'] {
    clip: rect(0, 0, 0, 0);
    overflow: hidden;
    position: absolute;
    height: 1px;
    width: 1px;
  }

  /* La Bulle Glassmorphism */
  .hero-variant-overlay input[type='radio'] + label {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.65) !important; /* Plus opaque pour lisibilit√© sur photo */
    backdrop-filter: blur(8px) !important;
    border: 1px solid rgba(255, 255, 255, 0.8) !important;
    border-radius: 30px !important;
    padding: 6px 12px !important;
    font-size: 12px !important;
    font-weight: 600 !important;
    color: var(--milaura-text) !important;
    margin: 0 !important;
    min-width: auto !important;
    cursor: pointer;
    transition: all 0.2s ease;
    box-shadow: 0 4px 10px rgba(0,0,0,0.1);
  }

  /* √âtat s√©lectionn√© */
  .hero-variant-overlay input[type='radio']:checked + label {
    background: #fff !important;
    border-color: var(--milaura-gold) !important;
    color: var(--milaura-gold) !important;
    box-shadow: 0 4px 15px rgba(192, 160, 98, 0.3);
    transform: translateY(-2px);
  }

  /* --- GROUPE 3: Actions --- */
  .milaura-hero-actions-group {
    order: 3;
    width: 100%;
  }

  /* DESKTOP MEDIA GRID (‚â• 990px) */
  @media screen and (min-width: 990px) {
    .milaura-hero-wrapper {
      display: grid;
      grid-template-columns: 1.2fr 1fr;
      grid-template-areas:
        "gallery header"
        "gallery actions";
      gap: var(--milaura-spacing-lg);
      padding: 0;
      overflow: visible;
    }

    .milaura-hero-header-group {
      grid-area: header;
      text-align: left;
      position: static !important;
      background: transparent !important;
      border: none !important;
      padding: 0 0 20px 0 !important;
      margin-bottom: 0;
    }

    .milaura-hero-actions-group {
      grid-area: actions;
      position: sticky;
      top: calc(var(--header-height-offset, 90px) + 20px);
      background: rgba(255, 255, 255, 0.6);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(192, 160, 98, 0.1);
      border-radius: 20px;
      padding: 24px;
    }

    /* Grille Media Desktop */
    .milaura-hero-gallery-column {
      grid-area: gallery;
      margin: 0;
    }

    .product__media-list {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 16px;
      overflow: visible;
      scroll-snap-type: none;
      padding: 0;
    }

    .product__media-item:first-child {
      grid-column: span 2;
    }

    .product-media-container {
      padding-top: 100%;
      border-radius: 16px;
      border: 1px solid rgba(0,0,0,0.05);
    }
    
    .slider-buttons {
      display: none;
    }

    /* Sur Desktop, l'overlay variantes se place en bas de l'image principale */
    .hero-variant-overlay {
      position: absolute;
      top: auto;
      bottom: 30px;
      left: 50%;
      transform: translateX(-50%);
      width: auto;
      max-width: 80%;
    }

    /* Toutes les options de variantes en ligne */
    .hero-variant-overlay variant-radios {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 10px;
    }

    .hero-variant-overlay .product-form__input {
      display: flex;
      flex-wrap: wrap;
      gap: 8px;
    }

    .hero-variant-overlay .variant-options-row {
      display: flex;
      flex-wrap: wrap;
      gap: 8px;
    }
  }

  /* AVIS */
  .rating-badge {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    margin-bottom: 12px;
    text-decoration: none !important;
    color: var(--milaura-text) !important;
  }

  .rating-badge .stars {
    color: #D4A843 !important; /* Dor√© plus fonc√© pour meilleur contraste */
    font-size: 16px;
    letter-spacing: -1px;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.15); /* Ombre l√©g√®re pour lisibilit√© */
  }

  .rating-badge .rating-text {
    opacity: 0.7;
    font-size: 13px;
    color: inherit;
  }

  /* TYPOGRAPHIE */
  .milaura-product__title {
    font-family: var(--milaura-font-heading);
    font-size: {{ section.settings.title_size_mobile }}px;
    margin-bottom: 8px;
    font-weight: 600;
    color: {{ section.settings.title_color }};
  }
  @media screen and (min-width: 990px) {
    .milaura-product__title { font-size: {{ section.settings.title_size_desktop }}rem; }
  }

  .milaura-product__price {
    font-size: {{ section.settings.price_size }}px;
    font-weight: 700;
    color: {{ section.settings.price_color }};
  }

  /* ===========================================
     VOLUME BUNDLE - Design Premium 2026
     Pills compacts avec badges flottants
     =========================================== */

  .volume-section-title {
    font-family: var(--milaura-font-heading);
    font-size: 15px;
    font-weight: 600;
    color: var(--milaura-text);
    margin: 0 0 14px 0;
    text-align: center;
  }

  .milaura-volume-grid {
    display: flex;
    gap: 8px;
    margin: 0 0 16px 0;
  }

  .volume-card {
    flex: 1;
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 14px 8px 12px;
    border: 1.5px solid #E8E4DE;
    border-radius: 12px;
    background: #FFFFFF;
    cursor: pointer;
    transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .volume-card:hover {
    border-color: rgba(192, 160, 98, 0.5);
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(192, 160, 98, 0.12);
  }

  .volume-card.is-selected {
    border-color: var(--milaura-gold);
    background: linear-gradient(165deg, #FFFDF8 0%, #FFF9EE 100%);
    box-shadow: 0 4px 16px rgba(192, 160, 98, 0.18);
  }

  /* Badge flottant premium */
  .volume-card-badge {
    position: absolute;
    top: -9px;
    left: 50%;
    transform: translateX(-50%);
    background: linear-gradient(135deg, #C0A062 0%, #D4B678 100%);
    color: #FFFFFF;
    font-size: 9px;
    font-weight: 700;
    letter-spacing: 0.06em;
    text-transform: uppercase;
    padding: 3px 10px;
    border-radius: 20px;
    white-space: nowrap;
    box-shadow: 0 2px 8px rgba(192, 160, 98, 0.35);
  }

  /* Structure interne simplifi√©e */
  .volume-left {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2px;
    width: 100%;
  }

  .volume-check {
    display: none; /* On cache le radio circle, le style de carte suffit */
  }

  .volume-text {
    text-align: center;
  }

  .volume-text h5 {
    font-size: 13px;
    font-weight: 600;
    color: var(--milaura-text);
    margin: 0;
    line-height: 1.2;
  }

  .volume-text p {
    font-size: 11px;
    color: #888;
    margin: 2px 0 0 0;
    font-weight: 500;
  }

  .volume-card.is-selected .volume-text p {
    color: var(--milaura-gold-dark, #8F723A);
  }

  .volume-price {
    font-size: 15px;
    font-weight: 700;
    color: var(--milaura-text);
    margin-top: 6px;
  }

  .volume-card.is-selected .volume-price {
    color: var(--milaura-gold-dark, #8F723A);
  }

  /* Mobile: l√©g√®rement plus compact */
  @media screen and (max-width: 480px) {
    .milaura-volume-grid {
      gap: 6px;
    }

    .volume-card {
      padding: 12px 6px 10px;
      border-radius: 10px;
    }

    .volume-card-badge {
      font-size: 8px;
      padding: 2px 8px;
      top: -8px;
    }

    .volume-text h5 {
      font-size: 12px;
    }

    .volume-text p {
      font-size: 10px;
    }

    .volume-price {
      font-size: 14px;
    }
  }

  /* Animation s√©lection */
  .volume-card.is-selected::after {
    content: '';
    position: absolute;
    inset: -1px;
    border-radius: 12px;
    background: linear-gradient(135deg, rgba(192, 160, 98, 0.15), transparent);
    pointer-events: none;
    opacity: 0;
    animation: selectPulse 0.4s ease-out forwards;
  }

  @keyframes selectPulse {
    0% { opacity: 1; transform: scale(1); }
    100% { opacity: 0; transform: scale(1.05); }
  }

  /* --- FIX BUY ROW (Quantit√© + Bouton) --- */
  .milaura-buy-row {
    display: flex;
    gap: 12px;
    margin-top: 20px;
    align-items: center;
    flex-wrap: wrap;
  }

  /* Mobile: stack vertically to prevent button cutoff */
  @media screen and (max-width: 480px) {
    .milaura-buy-row {
      flex-direction: column;
      gap: 10px;
    }
    .milaura-buy-row .milaura-quantity-capsule {
      width: 100%;
      max-width: 140px;
    }
    .milaura-buy-row .product-form {
      width: 100%;
    }
    .milaura-buy-row .milaura-add-btn {
      width: 100%;
    }
  }

  /* S√©lecteur quantit√© BUBBLE (Petit & Discret) */
  .product-form__quantity {
    width: 85px !important; /* Taille compacte */
    min-width: 85px !important;
    height: 42px !important; /* Un peu moins haut que le bouton */
    background: rgba(255, 255, 255, 0.5) !important;
    backdrop-filter: blur(8px);
    border-radius: 30px !important;
    border: 1px solid rgba(192, 160, 98, 0.3) !important;
    padding: 0 5px !important;
    flex-shrink: 0;
    margin: 0 !important;
    display: flex !important;
    align-items: center;
    justify-content: center;
    box-shadow: 0 2px 8px rgba(0,0,0,0.05);
  }
  
  .product-form__quantity .quantity {
    width: 100% !important;
    height: 100% !important;
    background: transparent !important;
    border: none !important;
    min-height: auto !important;
    box-shadow: none !important;
  }
  
  .product-form__quantity .quantity__button {
    width: 24px !important;
    height: 24px !important;
    color: var(--milaura-gold) !important;
    font-size: 14px !important;
    padding: 0 !important;
    background: transparent !important;
    display: flex !important;
    align-items: center;
    justify-content: center;
  }
  
  .product-form__quantity .quantity__input {
    width: 25px !important;
    font-size: 14px !important;
    font-weight: 700 !important;
    color: var(--milaura-text) !important;
    background: transparent !important;
    padding: 0 !important;
    text-align: center;
    border: none !important;
  }

  /* Bouton PRIORITAIRE */
  .milaura-add-btn {
    flex: 1;
    min-height: 48px; /* Hauteur standard CTA */
    border: none;
    cursor: pointer;
    white-space: nowrap !important;
    /* Style g√©r√© par .milaura-btn-gold global */
  }
  .milaura-add-btn:disabled { background: #ccc !important; cursor: not-allowed; box-shadow: none !important; }

  /* --- LUXE QUANTITY CAPSULE (Milaura Custom) --- */
  /* Reset complet des styles Dawn pour le s√©lecteur quantit√© */
  .milaura-quantity-capsule,
  .milaura-quantity-capsule.quantity-input {
    flex: 0 0 100px !important;
    width: 100px !important;
    min-width: 100px !important;
    max-width: 100px !important;
    height: 44px !important;
    min-height: 44px !important;
    background: #FFFFFF !important;
    border: 1px solid #E5E5E5 !important;
    border-radius: 50px !important;
    display: flex !important;
    align-items: center !important;
    justify-content: space-between !important;
    padding: 0 6px !important;
    transition: all 0.3s ease;
    box-sizing: border-box !important;
  }

  .milaura-quantity-capsule:hover {
    border-color: #C0A062 !important;
    box-shadow: 0 4px 12px rgba(192, 160, 98, 0.1);
  }

  /* Reset before/after pseudo-elements de Dawn */
  .milaura-quantity-capsule::before,
  .milaura-quantity-capsule::after,
  .milaura-quantity-capsule .quantity::before,
  .milaura-quantity-capsule .quantity::after {
    display: none !important;
    content: none !important;
  }

  .milaura-quantity-btn,
  .milaura-quantity-capsule button {
    width: 28px !important;
    height: 28px !important;
    min-width: 28px !important;
    max-width: 28px !important;
    border: none !important;
    background: transparent !important;
    cursor: pointer;
    display: flex !important;
    align-items: center !important;
    justify-content: center !important;
    color: #1a1a1a !important;
    transition: color 0.2s;
    padding: 0 !important;
    margin: 0 !important;
    font-size: 14px !important;
    flex-shrink: 0 !important;
  }

  .milaura-quantity-btn:hover,
  .milaura-quantity-capsule button:hover {
    color: #C0A062 !important;
    background: transparent !important;
  }

  .milaura-quantity-input,
  .milaura-quantity-capsule input {
    width: 32px !important;
    min-width: 32px !important;
    max-width: 32px !important;
    height: 100% !important;
    border: none !important;
    background: transparent !important;
    text-align: center !important;
    font-size: 14px !important;
    font-weight: 600 !important;
    color: #1a1a1a !important;
    padding: 0 !important;
    margin: 0 !important;
    -moz-appearance: textfield !important;
    box-shadow: none !important;
  }

  .milaura-quantity-input::-webkit-outer-spin-button,
  .milaura-quantity-input::-webkit-inner-spin-button,
  .milaura-quantity-capsule input::-webkit-outer-spin-button,
  .milaura-quantity-capsule input::-webkit-inner-spin-button {
    -webkit-appearance: none !important;
    margin: 0 !important;
  }

  .milaura-quantity-input:focus,
  .milaura-quantity-capsule input:focus {
    outline: none !important;
    box-shadow: none !important;
    background: transparent !important;
  }

  /* Mobile: encore plus compact */
  @media screen and (max-width: 480px) {
    .milaura-quantity-capsule,
    .milaura-quantity-capsule.quantity-input {
      flex: 0 0 90px !important;
      width: 90px !important;
      min-width: 90px !important;
      max-width: 90px !important;
      height: 40px !important;
      min-height: 40px !important;
    }

    .milaura-quantity-btn,
    .milaura-quantity-capsule button {
      width: 24px !important;
      height: 24px !important;
      min-width: 24px !important;
    }

    .milaura-quantity-input,
    .milaura-quantity-capsule input {
      width: 28px !important;
      min-width: 28px !important;
      font-size: 13px !important;
    }
  }

  /* ===========================================
     TRUST BADGES - Design Premium 2026
     =========================================== */
  .milaura-trust-badges {
    margin-top: 28px;
    padding-top: 20px;
    border-top: 1px solid rgba(192, 160, 98, 0.15);
  }

  .milaura-trust-item {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 8px 0;
    font-size: 13px;
    color: #555;
    letter-spacing: 0.01em;
  }

  .milaura-trust-item:not(:last-child) {
    border-bottom: 1px solid rgba(0, 0, 0, 0.04);
  }

  .milaura-trust-icon {
    font-size: 15px;
    opacity: 0.85;
    flex-shrink: 0;
    width: 20px;
    text-align: center;
  }

  .milaura-trust-item span:last-child {
    font-weight: 500;
  }

  /* Desktop: horizontal layout */
  @media screen and (min-width: 990px) {
    .milaura-trust-badges {
      display: flex;
      justify-content: center;
      gap: 24px;
      margin-top: 24px;
      padding-top: 18px;
    }

    .milaura-trust-item {
      padding: 0;
      gap: 8px;
    }

    .milaura-trust-item:not(:last-child) {
      border-bottom: none;
      padding-right: 24px;
      border-right: 1px solid rgba(192, 160, 98, 0.2);
    }

    .milaura-trust-icon {
      font-size: 14px;
    }
  }

  /* Mobile: plus compact */
  @media screen and (max-width: 480px) {
    .milaura-trust-badges {
      margin-top: 20px;
      padding-top: 16px;
    }

    .milaura-trust-item {
      font-size: 12px;
      padding: 6px 0;
    }
  }

{% endstyle %}

<script src="{{ 'product-info.js' | asset_url }}" defer="defer"></script>
<script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>

<div class="page-width section-{{ section.id }}-padding">
  <product-info id="ProductInfo-{{ section.id }}" data-section="{{ section.id }}" data-url="{{ product.url }}">
  <div class="milaura-hero-wrapper">

    <!-- ============================================
         GROUPE 1: HEADER
         ============================================ -->
    <div class="milaura-hero-header-group">
      {%- if section.settings.show_vendor -%}
        <div class="product__vendor caption-with-letter-spacing">{{ product.vendor }}</div>
      {%- endif -%}

      <h1 class="milaura-product__title">{{ product.title | escape }}</h1>

      <a href="#Reviews" class="rating-badge">
        <span class="stars">‚òÖ‚òÖ‚òÖ‚òÖ‚òÖ</span>
        <span class="rating-text">(4.9/5 ¬∑ 127 avis)</span>
      </a>

      <div class="no-js-hidden" id="price-{{ section.id }}" role="status">
        {%- render 'price', product: product, use_variant: true, show_badges: true, price_class: 'milaura-product__price' -%}
      </div>
    </div>

    <!-- ============================================
         GROUPE 2: GALERIE MEDIA (MODERNE)
         ============================================ -->
    <div class="milaura-hero-gallery-column">
      <slider-component class="slider-mobile-gutter">
        <ul class="product__media-list list-unstyled slider slider--mobile" role="list">
          {%- if product.media.size == 0 -%}
             <li class="product__media-item slider__slide">
               <div class="product-media-container">
                 {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
               </div>
             </li>
          {%- endif -%}

          {%- for media in product.media -%}
            <li class="product__media-item slider__slide{% if media.media_type != 'image' %} product__media-item--video{% endif %}" data-media-id="{{ section.id }}-{{ media.id }}">
              <div class="product-media-container">
                {% case media.media_type %}
                  {% when 'image' %}
                    {{ media | image_url: width: 1200 | image_tag: loading: 'eager', class: 'image-magnify-hover', sizes: '(min-width: 1200px) 600px, 100vw' }}
                  
                  {% when 'external_video' %}
                    {% assign video_class = 'js-youtube' %}
                    {% if media.host == 'vimeo' %}{% assign video_class = 'js-vimeo' %}{% endif %}
                    {{ media | external_video_url: autoplay: true, loop: true, playlist: media.external_id | external_video_tag: class: video_class, loading: "lazy" }}
                  
                  {% when 'video' %}
                    {{ media | video_tag: image_size: "1200x", autoplay: true, loop: true, controls: true, preload: "none" }}
                  
                  {% when 'model' %}
                    {{ media | model_viewer_tag }}
                {% endcase %}
              </div>
            </li>
          {%- endfor -%}
        </ul>

        <!-- Pagination Mobile -->
        <div class="slider-buttons no-js-hidden{% if product.media.size < 2 %} hidden{% endif %}">
          {%- for media in product.media -%}
            <button class="slider-counter__link slider-counter__link--dots link" aria-label="Slide {{ forloop.index }}" aria-controls="Slide-{{ section.id }}-{{ forloop.index }}">
              <span class="dot"></span>
            </button>
          {%- endfor -%}
        </div>

        <!-- OVERLAY VARIANTES (Dans le slider pour positionnement correct) -->
        {%- unless product.has_only_default_variant -%}
          <div class="hero-variant-overlay">
            <variant-radios class="no-js-hidden milaura-variant-picker" data-section="{{ section.id }}" data-url="{{ product.url }}" data-update-url="false">
              {%- for option in product.options_with_values -%}
                <fieldset class="js product-form__input">
                  <legend class="form__label">{{ option.name }}</legend>
                  <div class="variant-options-row">
                    {% render 'product-variant-options', product: product, option: option, block: block, picker_type: 'button' %}
                  </div>
                </fieldset>
              {%- endfor -%}
              <script type="application/json">
                {{ product.variants | json }}
              </script>
            </variant-radios>
          </div>
        {%- endunless -%}
      </slider-component>

    </div>

    <!-- ============================================
         GROUPE 3: ACTIONS
         ============================================ -->
    <div class="milaura-hero-actions-group">

      <!-- Note: Variant Picker was here, moved to gallery above -->

      <!-- Volume Offer Block -->
        {%- for block in section.blocks -%}
          {%- if block.type == 'volume_offer' -%}
            {% if block.settings.title != blank %}
              <h3 class="volume-section-title">{{ block.settings.title }}</h3>
            {% endif %}
            <div class="milaura-volume-grid" role="radiogroup" aria-label="Choisir une offre volume" {{ block.shopify_attributes }}>

              <!-- Option 1: Standard -->
              <div class="volume-card is-selected"
                   role="radio"
                   aria-checked="true"
                   tabindex="0"
                   onclick="selectVolume(1, this)"
                   onkeydown="if(event.key==='Enter'||event.key===' '){event.preventDefault();selectVolume(1, this);}">
                {% if block.settings.opt1_badge != blank %}
                  <span class="volume-card-badge">{{ block.settings.opt1_badge }}</span>
                {% endif %}
                <div class="volume-left">
                  <div class="volume-text">
                    <h5>{{ block.settings.opt1_label | default: '1√ó' }}</h5>
                    <p>{{ block.settings.opt1_sub | default: 'Standard' }}</p>
                  </div>
                </div>
                <div class="volume-price">{{ product.price | money }}</div>
              </div>

              <!-- Option 2: Populaire -->
              <div class="volume-card"
                   role="radio"
                   aria-checked="false"
                   tabindex="0"
                   onclick="selectVolume(2, this)"
                   onkeydown="if(event.key==='Enter'||event.key===' '){event.preventDefault();selectVolume(2, this);}">
                {% if block.settings.opt2_badge != blank %}
                  <span class="volume-card-badge">{{ block.settings.opt2_badge }}</span>
                {% endif %}
                <div class="volume-left">
                  <div class="volume-text">
                    <h5>{{ block.settings.opt2_label | default: '2√ó' }}</h5>
                    <p>{{ block.settings.opt2_sub | default: '-10%' }}</p>
                  </div>
                </div>
                <div class="volume-price">
                  {%- assign price2 = product.price | times: 2 | times: 0.9 -%}
                  {{ price2 | money }}
                </div>
              </div>

              <!-- Option 3: Meilleure offre -->
              <div class="volume-card"
                   role="radio"
                   aria-checked="false"
                   tabindex="0"
                   onclick="selectVolume(3, this)"
                   onkeydown="if(event.key==='Enter'||event.key===' '){event.preventDefault();selectVolume(3, this);}">
                {% if block.settings.opt3_badge != blank %}
                  <span class="volume-card-badge">{{ block.settings.opt3_badge }}</span>
                {% endif %}
                <div class="volume-left">
                  <div class="volume-text">
                    <h5>{{ block.settings.opt3_label | default: '3√ó' }}</h5>
                    <p>{{ block.settings.opt3_sub | default: '-20%' }}</p>
                  </div>
                </div>
                <div class="volume-price">
                  {%- assign price3 = product.price | times: 3 | times: 0.8 -%}
                  {{ price3 | money }}
                </div>
              </div>

            </div>
            
            <script>
              function selectVolume(qty, card) {
                // 1. Visual + ARIA Update
                document.querySelectorAll('.volume-card').forEach(c => {
                  c.classList.remove('is-selected');
                  c.setAttribute('aria-checked', 'false');
                });
                card.classList.add('is-selected');
                card.setAttribute('aria-checked', 'true');

                // 2. Update Hidden Quantity Input
                const qtyInput = document.getElementById('Quantity-{{ section.id }}');
                if(qtyInput) {
                  qtyInput.value = qty;
                  // Trigger change event if needed by other scripts
                  qtyInput.dispatchEvent(new Event('change', { bubbles: true }));
                }
              }
            </script>
          {%- endif -%}
        {%- endfor -%}

        <!-- Buy Buttons (NEW LUXE LAYOUT) -->
        <div class="milaura-buy-row">
          
          {%- if section.settings.show_quantity -%}
            <quantity-input class="milaura-quantity-capsule">
              <button class="milaura-quantity-btn" name="minus" type="button">
                <svg width="12" height="2" viewBox="0 0 12 2" fill="none"><path d="M0 1H12" stroke="currentColor" stroke-width="1.5"/></svg>
              </button>
              <input class="milaura-quantity-input" 
                     type="number" 
                     name="quantity" 
                     id="Quantity-{{ section.id }}" 
                     min="1" 
                     value="1" 
                     form="{{ 'product-form-' | append: section.id }}">
              <button class="milaura-quantity-btn" name="plus" type="button">
                <svg width="12" height="12" viewBox="0 0 12 12" fill="none"><path d="M6 0V12M0 6H12" stroke="currentColor" stroke-width="1.5"/></svg>
              </button>
            </quantity-input>
          {%- endif -%}

          <!-- Add Button -->
          <product-form class="product-form" style="flex:1;">
            {%- form 'product', product, id: product_form_id, class: 'form', novalidate: 'novalidate', data-type: 'add-to-cart-form' -%}
              <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
              <button
                type="submit"
                name="add"
                class="milaura-add-btn milaura-btn-gold"
                {% if product.selected_or_first_available_variant.available == false %}disabled{% endif %}
              >
                <span>
                  {%- if product.selected_or_first_available_variant.available -%}
                    Ajouter au panier
                  {%- else -%}
                    Rupture de stock
                  {%- endif -%}
                </span>
              </button>
            {%- endform -%}
          </product-form>
        </div>

        <!-- Trust Badges (Reassurance) -->
        <div class="milaura-trust-badges">
          {%- for block in section.blocks -%}
            {%- if block.type == 'trust_badge' -%}
              <div class="milaura-trust-item">
                <span class="milaura-trust-icon">{{ block.settings.icon }}</span>
                <span>{{ block.settings.text }}</span>
              </div>
            {%- endif -%}
          {%- endfor -%}
        </div>

        <!-- Description Extract (Optional) -->
      {%- if section.settings.show_description -%}
        <div class="product__description rte quick-add-hidden">
          {{ product.description | strip_html | truncatewords: 30 }}
          <a href="#ProductTabs" class="read-more-link">Lire la suite</a>
        </div>
      {%- endif -%}

    </div>
    <!-- Fin GROUPE 3: Actions -->

  </div>
  <!-- Fin milaura-hero-wrapper -->
  </product-info>
</div>

