{% style %}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* ===========================================
     MOBILE-FIRST LAYOUT (< 750px)
     Ordre: Titre/Prix ‚Üí Photo ‚Üí Actions
     =========================================== */
  .milaura-hero-wrapper {
    display: flex;
    flex-direction: column;
    gap: 16px;
    width: 100%;
    max-width: 100%;
    overflow-x: hidden; /* Prevent horizontal scroll */
    padding: 0 16px; /* Global mobile padding for content */
    box-sizing: border-box;
  }

  /* --- GROUPE 1: Header (Titre + Avis + Prix) --- */
  .milaura-hero-header-group {
    order: 1;
    text-align: center;
    width: 100%;
    box-sizing: border-box;
  }

  /* --- GROUPE 2: Galerie Photo --- */
  .milaura-hero-gallery-column {
    order: 2;
    width: 100%; /* Use full width of parent (which has padding) */
    max-width: 400px;
    margin: 8px auto 16px;
  }

  .milaura-hero-gallery-column .product__media-item {
    width: 100% !important;
    aspect-ratio: 1 / 1;
    border-radius: 12px;
    overflow: hidden;
  }

  .milaura-hero-gallery-column .product__media-item img,
  .milaura-hero-gallery-column .product__media-item .media img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Masquer les thumbnails sur mobile */
  .milaura-hero-gallery-column .thumbnail-list {
    display: none;
  }

  /* --- GROUPE 3: Actions (Variants + Volume + Bouton) --- */
  .milaura-hero-actions-group {
    order: 3;
    width: 100%;
    box-sizing: border-box;
  }

  /* ===========================================
     TITRE MOBILE - Sp√©cifications exactes
     =========================================== */
  .milaura-product__title {
    font-family: var(--milaura-font-heading);
    font-size: 28px;
    line-height: 1.2;
    margin-bottom: 8px;
    font-weight: 600;
    color: var(--milaura-text);
  }

  /* Rating Badge */
  .rating-badge {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    margin-bottom: 12px;
    text-decoration: none;
    color: inherit;
    font-size: 14px;
  }

  .rating-badge .stars {
    color: var(--milaura-gold);
    font-size: 16px;
    letter-spacing: -1px;
  }

  .rating-badge .rating-text {
    opacity: 0.7;
    font-size: 13px;
  }

  /* Prix */
  .milaura-product__price {
    font-size: 24px;
    font-weight: 700;
    color: var(--milaura-gold);
    margin-bottom: 0;
  }

  /* ===========================================
     VARIANTS MOBILE - Compact et clair
     =========================================== */
  .milaura-hero-actions-group .product-form__input {
    margin-bottom: 16px;
    border: none;
    padding: 0;
    width: 100%;
    box-sizing: border-box;
  }

  .milaura-hero-actions-group .form__label {
    font-weight: 700;
    font-size: 14px;
    margin-bottom: 8px;
    display: block;
    color: var(--milaura-text);
  }

  .variant-options-row {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    width: 100%;
  }

  /* Description link */
  .read-more-link {
    text-decoration: underline;
    color: var(--milaura-gold);
    font-weight: 500;
  }

  /* ===========================================
     DESKTOP LAYOUT (‚â• 990px)
     Grille 2 colonnes: Galerie | Infos
     =========================================== */
  @media screen and (min-width: 990px) {
    .milaura-hero-wrapper {
      display: grid;
      grid-template-columns: 1.2fr 1fr;
      grid-template-areas:
        "gallery header"
        "gallery actions";
      gap: var(--milaura-spacing-lg);
      align-items: start;
      padding: 0; /* Reset mobile padding */
      overflow: visible;
    }

    .milaura-hero-header-group {
      grid-area: header;
      text-align: left;
      /* Glassmorphism card - top part */
      background: rgba(255, 255, 255, 0.78);
      backdrop-filter: blur(14px);
      -webkit-backdrop-filter: blur(14px);
      border: 1px solid rgba(192, 160, 98, 0.18);
      border-radius: var(--milaura-border-radius) var(--milaura-border-radius) 0 0;
      padding: var(--milaura-spacing-md) var(--milaura-spacing-md) var(--milaura-spacing-sm);
      box-shadow: 0 10px 30px rgba(0,0,0,0.04);
    }

    .milaura-hero-gallery-column {
      grid-area: gallery;
      width: 100%;
      max-width: none;
      margin: 0;
    }

    .milaura-hero-gallery-column .thumbnail-list {
      display: flex;
    }

    .milaura-hero-gallery-column .product__media-item {
      aspect-ratio: auto;
      border-radius: var(--milaura-border-radius);
    }

    .milaura-hero-actions-group {
      grid-area: actions;
      /* Glassmorphism card - bottom part */
      background: rgba(255, 255, 255, 0.78);
      backdrop-filter: blur(14px);
      -webkit-backdrop-filter: blur(14px);
      border: 1px solid rgba(192, 160, 98, 0.18);
      border-top: none;
      border-radius: 0 0 var(--milaura-border-radius) var(--milaura-border-radius);
      padding: var(--milaura-spacing-sm) var(--milaura-spacing-md) var(--milaura-spacing-md);
      box-shadow:
        0 20px 50px rgba(0,0,0,0.06),
        0 0 0 1px rgba(255,255,255,0.5) inset;
    }

    /* Desktop title size */
    .milaura-product__title {
      font-size: 3rem;
      line-height: 1.1;
      margin-bottom: 12px;
    }

    .milaura-product__price {
      font-size: 2rem;
    }
  }

  /* Sticky info column on desktop */
  @media screen and (min-width: 990px) {
    .milaura-hero-header-group,
    .milaura-hero-actions-group {
      position: sticky;
      top: calc(var(--header-height-offset, 96px) + 24px);
    }
  }

  /* Variant Tiles (Nutrimuscle Style) */
  .product-form__input input[type='radio'] + label {
    border-radius: 8px !important;
    padding: 1rem 1.5rem !important;
    font-weight: 600 !important;
    border: 1px solid rgba(0,0,0,0.1) !important;
    transition: all 0.2s ease;
    background: #fff;
    min-width: 60px;
    text-align: center;
  }

  .product-form__input input[type='radio']:checked + label {
    background-color: var(--milaura-gold) !important;
    color: #fff !important;
    border-color: var(--milaura-gold) !important;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(192, 160, 98, 0.2);
  }

  /* Quantity & Add Button Row - FIX OVERFLOW */
  .milaura-buy-row {
    display: flex;
    gap: 1rem;
    margin-top: 2rem;
    align-items: center;
    width: 100%;
    max-width: 100%;
    box-sizing: border-box;
  }

  .milaura-add-btn {
    flex: 1;
    background: var(--milaura-gold);
    color: white;
    font-weight: 700;
    padding: 1.5rem;
    border-radius: 12px;
    border: none;
    cursor: pointer;
    font-size: 1.6rem;
    transition: all 0.3s;
    text-transform: uppercase;
    letter-spacing: 1px;
    width: 100%;
    max-width: 100%;
    box-sizing: border-box; /* CRITIQUE pour √©viter l'overflow */
  }

  .milaura-add-btn:hover {
    background: var(--milaura-gold-dark);
    transform: scale(1.02);
  }

  .milaura-add-btn:disabled {
    background: #ccc;
    cursor: not-allowed;
  }

  /* Trust Badges Inline */
  .milaura-trust-badges {
    margin-top: 2rem;
    display: flex;
    flex-direction: column;
    gap: 0.8rem;
    font-size: 1.4rem;
    opacity: 0.9;
  }
  .milaura-trust-item {
    display: flex;
    align-items: center;
    gap: 1rem;
  }
  .milaura-trust-icon {
    color: var(--milaura-gold);
    font-size: 1.6rem;
  }

  /* Sticky Bar Mobile */
  .milaura-sticky-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    background: white;
    padding: 1.5rem;
    box-shadow: 0 -5px 20px rgba(0,0,0,0.1);
    z-index: 100;
    display: flex;
    align-items: center;
    justify-content: space-between;
    transform: translateY(100%);
    transition: transform 0.3s ease-out;
    border-top: 1px solid var(--milaura-gold-light);
  }

  .milaura-sticky-bar.is-visible {
    transform: translateY(0);
  }
  
  .sticky-info h4 { margin: 0; font-size: 1.4rem; }
  .sticky-info span { color: var(--milaura-gold); font-weight: bold; }

  .sticky-btn {
    background: var(--milaura-gold);
    color: white;
    border: none;
    padding: 1rem 2rem;
    border-radius: 8px;
    font-weight: bold;
    cursor: pointer;
  }

  /* Volume Offer Cards - Milaura Gold Luxury Style */
  .milaura-volume-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
    margin: 2rem 0;
  }
  .volume-card {
    display: flex;
    justify-content: space-between;
    align-items: center;
    border: 2px solid rgba(192, 160, 98, 0.25);
    border-radius: 16px;
    padding: 1.5rem;
    cursor: pointer;
    position: relative;
    background: #fff;
    transition: all 0.3s ease;
  }
  .volume-card:hover {
    border-color: var(--milaura-gold);
    box-shadow: 0 8px 24px rgba(192, 160, 98, 0.15);
  }
  .volume-card.is-selected {
    border: 2px solid var(--milaura-gold);
    background: linear-gradient(135deg, rgba(255, 248, 230, 0.95) 0%, rgba(255, 252, 245, 0.95) 100%);
    transform: scale(1.02);
    box-shadow: 0 12px 32px rgba(192, 160, 98, 0.25);
  }
  .volume-card-badge {
    position: absolute;
    top: -12px;
    right: 20px;
    background: linear-gradient(135deg, #C0A062 0%, #E6C88B 50%, #C0A062 100%);
    color: #fff;
    font-size: 1.1rem;
    padding: 4px 12px;
    border-radius: 20px;
    font-weight: bold;
    text-transform: uppercase;
    box-shadow: 0 4px 12px rgba(192, 160, 98, 0.4);
    text-shadow: 0 1px 2px rgba(0,0,0,0.2);
  }
  .volume-left { display: flex; align-items: center; }
  .volume-check {
    width: 22px;
    height: 22px;
    border-radius: 50%;
    border: 2px solid rgba(192, 160, 98, 0.4);
    margin-right: 1.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    transition: all 0.2s ease;
  }
  .volume-card.is-selected .volume-check {
    border-color: var(--milaura-gold);
    background: linear-gradient(135deg, #C0A062 0%, #E6C88B 100%);
    box-shadow: 0 2px 8px rgba(192, 160, 98, 0.3);
  }
  .volume-check::after {
    content: '';
    width: 8px;
    height: 8px;
    background: #fff;
    border-radius: 50%;
    display: none;
  }
  .volume-card.is-selected .volume-check::after { display: block; }
  .volume-text h5 { margin: 0; font-size: 1.6rem; font-weight: 700; color: #1a1a1a; }
  .volume-text p { margin: 0; font-size: 1.3rem; color: #666; }
  .volume-price { font-weight: 700; font-size: 1.6rem; text-align: right; color: var(--milaura-gold); }

  /* Volume Section Title */
  .volume-section-title {
    font-family: var(--milaura-font-heading);
    font-size: 1.8rem;
    color: var(--milaura-gold);
    margin-bottom: 1rem;
    text-align: center;
  }

  /* Selection Pulse Animation */
  .volume-card.is-selected {
    animation: selectPulse 0.35s cubic-bezier(0.34, 1.56, 0.64, 1);
  }

  @keyframes selectPulse {
    0% { transform: scale(1); }
    50% { transform: scale(1.035); }
    100% { transform: scale(1.02); }
  }

  /* Focus visible for accessibility */
  .volume-card:focus-visible {
    outline: 2px solid var(--milaura-gold);
    outline-offset: 3px;
  }

  /* ===========================================
     MOBILE RESPONSIVE (< 750px)
     Optimisations conversion mobile
     =========================================== */
  @media screen and (max-width: 749px) {
    /* Titre mobile - specs exactes */
    .milaura-product__title {
      font-size: 28px !important;
      line-height: 1.2 !important;
      margin-bottom: 8px !important;
    }

    /* Volume cards compactes */
    .milaura-volume-grid {
      gap: 10px;
      margin: 16px 0;
    }

    .volume-card {
      padding: 12px 14px;
      border-radius: 12px;
    }

    .volume-card.is-selected {
      transform: none; /* Pas de scale sur mobile */
    }

    .volume-text h5 {
      font-size: 14px;
      font-weight: 600;
    }
    .volume-text p {
      font-size: 12px;
    }
    .volume-price {
      font-size: 15px;
    }
    .volume-check {
      width: 18px;
      height: 18px;
      margin-right: 10px;
    }
    .volume-check::after {
      width: 6px;
      height: 6px;
    }
    .volume-card-badge {
      font-size: 9px;
      padding: 3px 8px;
      top: -10px;
      right: 12px;
    }
    .volume-section-title {
      font-size: 16px;
      margin-bottom: 12px;
    }

    /* Bouton CTA mobile - full width, bien visible */
    .milaura-buy-row {
      margin-top: 16px;
      gap: 10px;
    }

    .milaura-add-btn {
      font-size: 16px;
      padding: 16px 20px;
      border-radius: 10px;
      width: 100%;
      max-width: 100%;
      box-sizing: border-box;
    }

    /* Quantit√© plus compacte */
    .product-form__quantity {
      width: 80px !important;
    }

    /* Trust badges en ligne */
    .milaura-trust-badges {
      margin-top: 16px;
      flex-direction: row;
      flex-wrap: wrap;
      justify-content: center;
      gap: 12px 16px;
      font-size: 12px;
    }

    .milaura-trust-item {
      gap: 6px;
    }

    .milaura-trust-icon {
      font-size: 14px;
    }

    /* Sticky bar plus compact */
    .milaura-sticky-bar {
      padding: 12px 16px;
    }

    .sticky-info h4 {
      font-size: 13px;
    }

    .sticky-btn {
      padding: 10px 16px;
      font-size: 14px;
    }
  }
{% endstyle %}

<script src="{{ 'product-info.js' | asset_url }}" defer="defer"></script>
<script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>

<div class="page-width section-{{ section.id }}-padding">
  <product-info id="ProductInfo-{{ section.id }}" data-section="{{ section.id }}" data-url="{{ product.url }}">
  <div class="milaura-hero-wrapper">

    <!-- ============================================
         GROUPE 1: HEADER (Titre + Avis + Prix)
         Mobile: order 1 (en haut)
         ============================================ -->
    <div class="milaura-hero-header-group">
      {%- if section.settings.show_vendor -%}
        <div class="product__vendor caption-with-letter-spacing">{{ product.vendor }}</div>
      {%- endif -%}

      <h1 class="milaura-product__title">{{ product.title | escape }}</h1>

      <a href="#Reviews" class="rating-badge">
        <span class="stars">‚òÖ‚òÖ‚òÖ‚òÖ‚òÖ</span>
        <span class="rating-text">(4.9/5 ¬∑ 127 avis)</span>
      </a>

      <div class="no-js-hidden" id="price-{{ section.id }}" role="status">
        {%- render 'price', product: product, use_variant: true, show_badges: true, price_class: 'milaura-product__price' -%}
      </div>
    </div>

    <!-- ============================================
         GROUPE 2: GALERIE PHOTO
         Mobile: order 2 (au milieu, GRANDE)
         ============================================ -->
    <div class="milaura-hero-gallery-column">
      {% render 'product-media-gallery',
        product: product,
        variant_images: section.settings.variant_images,
        is_duplicate: false,
        gallery_layout: section.settings.gallery_layout
      %}
    </div>

    <!-- ============================================
         GROUPE 3: ACTIONS (Variants + Volume + CTA)
         Mobile: order 3 (en bas)
         ============================================ -->
    <div class="milaura-hero-actions-group">

      <!-- Variant Picker -->
      {%- unless product.has_only_default_variant -%}
        <variant-radios class="no-js-hidden milaura-variant-picker" data-section="{{ section.id }}" data-url="{{ product.url }}" data-update-url="false">
          {%- for option in product.options_with_values -%}
            <fieldset class="js product-form__input">
              <legend class="form__label">{{ option.name }}</legend>
              <div class="variant-options-row">
                {% render 'product-variant-options', product: product, option: option, block: block, picker_type: 'button' %}
              </div>
            </fieldset>
          {%- endfor -%}
          <script type="application/json">
            {{ product.variants | json }}
          </script>
        </variant-radios>
      {%- endunless -%}

      <!-- Volume Offer Block -->
        {%- for block in section.blocks -%}
          {%- if block.type == 'volume_offer' -%}
            {% if block.settings.title != blank %}
              <h3 class="volume-section-title">{{ block.settings.title }}</h3>
            {% endif %}
            <div class="milaura-volume-grid" role="radiogroup" aria-label="Choisir une offre volume" {{ block.shopify_attributes }}>
              <!-- Option 1 -->
              <div class="volume-card is-selected"
                   role="radio"
                   aria-checked="true"
                   tabindex="0"
                   onclick="selectVolume(1, this)"
                   onkeydown="if(event.key==='Enter'||event.key===' '){event.preventDefault();selectVolume(1, this);}">
                <div class="volume-left">
                  <div class="volume-check"></div>
                  <div class="volume-text">
                    <h5>{{ block.settings.opt1_label }}</h5>
                    <p>{{ block.settings.opt1_sub }}</p>
                  </div>
                </div>
                <div class="volume-price">
                  {{ product.price | money }}
                </div>
              </div>

              <!-- Option 2 -->
              <div class="volume-card"
                   role="radio"
                   aria-checked="false"
                   tabindex="0"
                   onclick="selectVolume(2, this)"
                   onkeydown="if(event.key==='Enter'||event.key===' '){event.preventDefault();selectVolume(2, this);}">
                {% if block.settings.opt2_badge != blank %}
                  <div class="volume-card-badge">{{ block.settings.opt2_badge }}</div>
                {% endif %}
                <div class="volume-left">
                  <div class="volume-check"></div>
                  <div class="volume-text">
                    <h5>{{ block.settings.opt2_label }}</h5>
                    <p>{{ block.settings.opt2_sub }}</p>
                  </div>
                </div>
                <div class="volume-price">
                  {% assign price2 = product.price | times: 2 | times: 0.9 %}
                  {{ price2 | money }}
                </div>
              </div>

              <!-- Option 3 -->
              <div class="volume-card"
                   role="radio"
                   aria-checked="false"
                   tabindex="0"
                   onclick="selectVolume(3, this)"
                   onkeydown="if(event.key==='Enter'||event.key===' '){event.preventDefault();selectVolume(3, this);}">
                {% if block.settings.opt3_badge != blank %}
                  <div class="volume-card-badge">{{ block.settings.opt3_badge }}</div>
                {% endif %}
                <div class="volume-left">
                  <div class="volume-check"></div>
                  <div class="volume-text">
                    <h5>{{ block.settings.opt3_label }}</h5>
                    <p>{{ block.settings.opt3_sub }}</p>
                  </div>
                </div>
                <div class="volume-price">
                  {% assign price3 = product.price | times: 3 | times: 0.8 %}
                  {{ price3 | money }}
                </div>
              </div>
            </div>
            
            <script>
              function selectVolume(qty, card) {
                // 1. Visual + ARIA Update
                document.querySelectorAll('.volume-card').forEach(c => {
                  c.classList.remove('is-selected');
                  c.setAttribute('aria-checked', 'false');
                });
                card.classList.add('is-selected');
                card.setAttribute('aria-checked', 'true');

                // 2. Update Hidden Quantity Input
                const qtyInput = document.getElementById('Quantity-{{ section.id }}');
                if(qtyInput) {
                  qtyInput.value = qty;
                  // Trigger change event if needed by other scripts
                  qtyInput.dispatchEvent(new Event('change', { bubbles: true }));
                }
              }
            </script>
          {%- endif -%}
        {%- endfor -%}

        <!-- Buy Buttons -->
        <div class="milaura-buy-row">
          <!-- Quantity (Optional) -->
          {%- if section.settings.show_quantity -%}
            <div class="product-form__input product-form__quantity" style="width:100px;">
              <quantity-input class="quantity">
                <button class="quantity__button no-js-hidden" name="minus" type="button"><span class="visually-hidden">-</span>-</button>
                <input class="quantity__input" type="number" name="quantity" id="Quantity-{{ section.id }}" min="1" value="1" form="{{ 'product-form-' | append: section.id }}">
                <button class="quantity__button no-js-hidden" name="plus" type="button"><span class="visually-hidden">+</span>+</button>
              </quantity-input>
            </div>
          {%- endif -%}

          <!-- Add Button -->
          <product-form class="product-form" style="flex:1;">
            {%- form 'product', product, id: product_form_id, class: 'form', novalidate: 'novalidate', data-type: 'add-to-cart-form' -%}
              <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
              <button
                type="submit"
                name="add"
                class="milaura-add-btn"
                {% if product.selected_or_first_available_variant.available == false %}disabled{% endif %}
              >
                <span>
                  {%- if product.selected_or_first_available_variant.available -%}
                    Ajouter au panier
                  {%- else -%}
                    Rupture de stock
                  {%- endif -%}
                </span>
              </button>
            {%- endform -%}
          </product-form>
        </div>

        <!-- Trust Badges (Reassurance) -->
        <div class="milaura-trust-badges">
          {%- for block in section.blocks -%}
            {%- if block.type == 'trust_badge' -%}
              <div class="milaura-trust-item">
                <span class="milaura-trust-icon">{{ block.settings.icon }}</span>
                <span>{{ block.settings.text }}</span>
              </div>
            {%- endif -%}
          {%- endfor -%}
        </div>

        <!-- Description Extract (Optional) -->
      {%- if section.settings.show_description -%}
        <div class="product__description rte quick-add-hidden">
          {{ product.description | strip_html | truncatewords: 30 }}
          <a href="#ProductTabs" class="read-more-link">Lire la suite</a>
        </div>
      {%- endif -%}

    </div>
    <!-- Fin GROUPE 3: Actions -->

  </div>
  <!-- Fin milaura-hero-wrapper -->
  </product-info>
