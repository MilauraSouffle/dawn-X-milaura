            {%- if badge_vertus != blank -%}
              <span class="milaura-meta-badge">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/>
                </svg>
                {{ badge_vertus }}
              </span>
            {%- endif -%}
            {%- if badge_quality != blank -%}
              <span class="milaura-meta-badge milaura-meta-badge--gold">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                </svg>
                {{ badge_quality }}
              </span>
            {%- endif -%}
          </div>
        {%- endif -%}
      </div>

      <!--
        ============================================
        GROUPE 3: ACTIONS
        ============================================
      -->
      <div class="milaura-hero-actions-group">
        <!-- Note: Variant Picker was here, moved to gallery above -->

        <!-- Volume Offer Block -->
        {%- for block in section.blocks -%}
          {%- if block.type == 'volume_offer' -%}
            {% if block.settings.title != blank %}
              <h3 class="volume-section-title">{{ block.settings.title }}</h3>
