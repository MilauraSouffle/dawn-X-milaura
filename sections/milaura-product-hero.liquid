{%- comment %}
  Metafield badges removed - keeping only variant bubbles
  Original metafields (scent_notes, stone_benefits) can still be used
  for recommendations/classification elsewhere
{%- endcomment %}

{% style %}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* TABLETTE + DESKTOP : padding interne seulement, espacement gere par milaura.css */
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: 0;
      padding-bottom: 0;
    }
  }

  /* ===========================================
     LAYOUT GENERAL
     =========================================== */
  .milaura-hero-wrapper {
    display: flex;
    flex-direction: column;
    gap: 16px;
    width: 100%;
    max-width: 100%;
    overflow-x: visible; /* FIX: permettre au cadre doré d'être visible */
    padding: 0 16px;
    box-sizing: border-box;
  }

  /* TABLETTE : Resserrer les espacements + fix cadre */
  @media screen and (min-width: 750px) and (max-width: 989px) {
    .milaura-hero-wrapper {
      gap: 6px; /* Écart minimal entre les groupes */
      padding: 0 20px; /* FIX: padding augmenté pour que le cadre respire */
      overflow: visible; /* FIX: cadre visible */
    }

    .milaura-hero-header-group {
      margin-bottom: 0;
      padding-top: 0;
      padding-bottom: 4px;
    }

    /* Volume Bundle - en-têtes intégrés */
    .volume-section-title {
      margin: 0 0 10px 0;
    }

    .milaura-volume-grid {
      margin-top: 8px; /* Plus besoin d'espace pour badges flottants */
    }

    .volume-card {
      padding: 0; /* Géré par les sous-éléments */
    }

    .volume-card-badge {
      font-size: 9px;
      min-height: 32px; /* Même hauteur fixe */
      padding: 4px 8px;
    }

    .volume-left {
      padding: 12px 8px 3px;
    }

    .volume-price {
      padding: 3px 8px 12px;
    }
  }

  /* --- GROUPE 1: Header --- */
  .milaura-hero-header-group {
    order: 1;
    text-align: center;
    width: 100%;
  }

  /* --- GROUPE 2: Media Gallery (MODERNE) --- */
  .milaura-hero-gallery-column {
    order: 2;
    width: 100%;
    max-width: 100%;
    margin-bottom: 16px;
    overflow: hidden;
    border-radius: 12px;
    box-sizing: border-box;
  }

  /* Container pour positionner l'overlay sur l'image principale */
  .milaura-hero-gallery-column slider-component {
    position: relative;
    display: block;
    width: 100%;
    overflow: hidden;
  }

  /* Slider Mobile — Override Dawn's component-slider defaults */
  .product__media-list {
    display: flex;
    gap: 0;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    scroll-padding-left: 0;
    padding: 0;
    margin: 0;
    list-style: none;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none; /* Firefox */
    width: 100%;
  }

  .product__media-list::after {
    content: none; /* Remove Dawn's 1.5rem spacer */
  }

  .product__media-list::-webkit-scrollbar {
    display: none; /* Chrome/Safari */
  }

  .product__media-item {
    flex: 0 0 100%;
    min-width: 100%;
    max-width: 100%;
    scroll-snap-align: center;
    overflow: hidden;
    position: relative;
    box-sizing: border-box;
  }

  .product-media-container {
    position: relative;
    width: 100%;
    padding-top: 100%; /* Carré par défaut */
    background: var(--milaura-beige, #FDFBF7);
    overflow: hidden; /* FIX: clip image to border-radius on all corners */
    border-radius: 12px;
  }

  .product-media-container img,
  .product-media-container video,
  .product-media-container iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center center;
  }

  /* Mobile & Tablette: image entière visible et centrée */
  @media screen and (max-width: 989px) {
    .product-media-container img {
      object-fit: contain;
      object-position: center center;
    }
  }

  /* Fleches Navigation (Mobile/Tablette) */
  .slider-button {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    z-index: 10;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    border: none;
    background: rgba(255, 255, 255, 0.85);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1);
    color: var(--milaura-gold-dark, #8F723A);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.25s ease;
    padding: 0;
  }
  .slider-button:hover {
    background: rgba(255, 255, 255, 0.95);
    box-shadow: 0 4px 16px rgba(192, 160, 98, 0.3);
    transform: translateY(-50%) scale(1.05);
  }
  .slider-button:active {
    transform: translateY(-50%) scale(0.95);
  }
  .slider-button[disabled] {
    opacity: 0.3;
    cursor: default;
    pointer-events: none;
  }
  .slider-button--prev {
    left: 10px;
  }
  .slider-button--next {
    right: 10px;
  }

  /* Pagination Mobile (Dots) */
  .slider-buttons {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 8px;
    margin-top: 10px;
    margin-bottom: 10px;
  }

  .slider-counter__link--dots {
    background: none;
    border: none;
    padding: 4px;
    cursor: pointer;
    -webkit-tap-highlight-color: transparent;
  }

  .slider-counter__link--dots .dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: #e0e0e0;
    transition: all 0.3s;
    display: block;
  }

  .slider-counter__link--active .dot {
    background: var(--milaura-gold);
    transform: scale(1.3);
  }

  /* --- BADGES METAFIELDS PRODUIT --- */
  .milaura-meta-badges {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    padding: 12px 0 0;
  }

  .milaura-meta-badge {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    border: 1px solid rgba(192, 160, 98, 0.2);
    border-radius: 30px;
    padding: 6px 14px;
    font-family: 'Lato', sans-serif;
    font-size: 0.8rem;
    font-weight: 600;
    color: var(--milaura-text);
    letter-spacing: 0.3px;
    text-transform: capitalize;
    white-space: nowrap;
  }

  .milaura-meta-badge svg {
    flex-shrink: 0;
    color: var(--milaura-gold);
  }

  .milaura-meta-badge--gold {
    background: linear-gradient(135deg, rgba(192, 160, 98, 0.15), rgba(230, 200, 139, 0.15));
    border-color: rgba(192, 160, 98, 0.35);
    color: var(--milaura-gold-dark);
  }

  .milaura-meta-badge--gold svg {
    color: var(--milaura-gold);
  }

  @media screen and (max-width: 480px) {
    .milaura-meta-badges {
      gap: 6px;
    }
    .milaura-meta-badge {
      padding: 5px 10px;
      font-size: 0.72rem;
    }
    .milaura-meta-badge svg {
      width: 12px;
      height: 12px;
    }
  }

  /* --- GROUPE 3: Actions --- */
  .milaura-hero-actions-group {
    order: 3;
    width: 100%;
  }

  /* DESKTOP MEDIA GRID (≥ 990px) */
  @media screen and (min-width: 990px) {
    .milaura-hero-wrapper {
      display: grid;
      grid-template-columns: 1fr 0.8fr; /* Image plus grande, colonne droite plus étroite */
      grid-template-areas:
        "gallery header"
        "gallery actions";
      gap: 16px; /* Gap compact */
      padding: 0 16px;
      overflow: visible;
      align-items: start; /* Aligner en haut */
    }

    .milaura-hero-header-group {
      grid-area: header;
      text-align: left;
      position: static !important;
      background: transparent !important;
      border: none !important;
      padding: 0 !important;
      margin-bottom: 0;
    }

    .milaura-hero-actions-group {
      grid-area: actions;
      position: sticky;
      top: calc(var(--header-height, 80px) + 20px);
      background: rgba(255, 255, 255, 0.6);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(192, 160, 98, 0.1);
      border-radius: 16px;
      padding: 18px 20px; /* Équilibré */
    }

    /* Grille Media Desktop */
    .milaura-hero-gallery-column {
      grid-area: gallery;
      margin: 0;
      overflow: visible;
      border-radius: 0;
    }

    .product__media-list {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 16px;
      overflow: visible;
      scroll-snap-type: none;
      padding: 0;
    }

    .product__media-item:first-child {
      grid-column: span 2;
    }

    .product-media-container {
      padding-top: 100%;
      border-radius: 16px;
      border: 1px solid rgba(0,0,0,0.05);
    }

    .slider-buttons {
      display: none;
    }

    .slider-button {
      display: none;
    }

    /* Desktop Zoom on hover */
    .product__media-item:first-child .product-media-container {
      cursor: zoom-in;
    }

    .product__media-item:first-child .product-media-container.is-zoomed {
      cursor: zoom-out;
    }

    .product__media-item:first-child .product-media-container.is-zoomed img {
      transform: scale(2.2);
      transform-origin: var(--zoom-x, 50%) var(--zoom-y, 50%);
      transition: transform-origin 0.05s ease-out;
    }

    /* Desktop Clickable Thumbnails */
    .product__media-item:not(:first-child) .product-media-container {
      cursor: pointer;
      transition: box-shadow 0.3s ease, border-color 0.3s ease;
    }

    .product__media-item:not(:first-child) .product-media-container:hover {
      border-color: var(--milaura-gold);
      box-shadow: 0 4px 16px rgba(192, 160, 98, 0.25);
    }

    /* Desktop Floating Badges - over main image */
    .milaura-meta-badges {
      position: absolute;
      bottom: 16px;
      left: 16px;
      right: auto;
      padding: 0;
      z-index: 5;
      pointer-events: none;
    }

    .milaura-meta-badge {
      pointer-events: auto;
      background: rgba(255, 255, 255, 0.75);
      backdrop-filter: blur(16px);
      -webkit-backdrop-filter: blur(16px);
      border: 1px solid rgba(192, 160, 98, 0.25);
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08), 0 1px 3px rgba(192, 160, 98, 0.15);
      padding: 7px 16px;
      font-size: 0.82rem;
    }

    .milaura-meta-badge--gold {
      background: linear-gradient(135deg, rgba(255, 255, 255, 0.8), rgba(192, 160, 98, 0.12));
      border-color: rgba(192, 160, 98, 0.4);
    }

  }

  /* AVIS */
  .rating-badge {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    margin-bottom: 12px;
    text-decoration: none !important;
    color: var(--milaura-text) !important;
  }

  .rating-badge .stars {
    color: #D4A843 !important; /* Doré plus foncé pour meilleur contraste */
    font-size: 16px;
    letter-spacing: -1px;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.15); /* Ombre légère pour lisibilité */
  }

  .rating-badge .rating-text {
    opacity: 0.7;
    font-size: 13px;
    color: inherit;
  }

  /* TYPOGRAPHIE */
  .milaura-product__title {
    font-family: var(--milaura-font-heading);
    font-size: {{ section.settings.title_size_mobile }}px;
    margin-bottom: 8px;
    font-weight: 600;
    color: {{ section.settings.title_color }};
  }
  @media screen and (min-width: 990px) {
    .milaura-product__title { font-size: {{ section.settings.title_size_desktop }}rem; }
  }

  .milaura-product__price {
    font-size: {{ section.settings.price_size }}px;
    font-weight: 700;
    color: {{ section.settings.price_color }};
  }

  /* ===========================================
     VOLUME BUNDLE - Design Premium 2026
     Cartes avec en-têtes colorés intégrés
     =========================================== */

  .volume-section-title {
    font-family: var(--milaura-font-heading);
    font-size: 15px;
    font-weight: 600;
    color: var(--milaura-text);
    margin: 0 0 12px 0;
    text-align: center;
  }

  .milaura-volume-grid {
    display: flex;
    gap: 8px;
    margin: 0 0 12px 0;
  }

  .volume-card {
    flex: 1;
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 0; /* En-tête intégré - padding géré par sous-éléments */
    border: 1.5px solid #E8E4DE;
    border-radius: 12px;
    background: #FFFFFF;
    cursor: pointer;
    transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
    overflow: hidden; /* Important pour l'en-tête intégré */
  }

  .volume-card:hover {
    border-color: rgba(192, 160, 98, 0.5);
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(192, 160, 98, 0.12);
  }

  .volume-card.is-selected {
    border-color: var(--milaura-gold);
    background: linear-gradient(165deg, #FFFDF8 0%, #FFF9EE 100%);
    box-shadow: 0 4px 16px rgba(192, 160, 98, 0.18);
  }

  /* EN-TÊTE INTÉGRÉ - Design 2026 */
  /* Le badge est maintenant un header intégré en haut de la carte */
  /* Hauteur fixe pour uniformité (basée sur 2 lignes de texte) */
  .volume-card-badge {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    min-height: 38px; /* Hauteur fixe pour 2 lignes */
    background: linear-gradient(135deg, #8B5CF6 0%, #A78BFA 100%);
    color: #FFFFFF;
    font-size: 11px;
    font-weight: 700;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    text-align: center;
    padding: 4px 8px;
    margin: 0;
    border-radius: 0; /* Intégré dans la carte */
    line-height: 1.3;
  }

  /* Contenu de la carte */
  .volume-left {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2px;
    width: 100%;
    padding: 12px 8px 4px;
  }

  /* Carte SANS badge : ajouter du padding-top */
  .volume-card:not(:has(.volume-card-badge)) .volume-left {
    padding-top: 16px;
  }

  /* Prix en bas de carte */
  .volume-price {
    padding: 4px 8px 12px;
    font-size: 15px;
    font-weight: 700;
    color: var(--milaura-text);
  }

  .volume-card.is-selected .volume-price {
    color: var(--milaura-gold-dark, #8F723A);
  }

  .volume-check {
    display: none; /* On cache le radio circle, le style de carte suffit */
  }

  .volume-text {
    text-align: center;
  }

  .volume-text h5 {
    font-size: 14px;
    font-weight: 600;
    color: var(--milaura-text);
    margin: 0;
    line-height: 1.2;
  }

  .volume-text p {
    font-size: 13px;
    color: #888;
    margin: 2px 0 0 0;
    font-weight: 500;
  }

  .volume-card.is-selected .volume-text p {
    color: var(--milaura-gold-dark, #8F723A);
  }

  /* Mobile: légèrement plus compact */
  @media screen and (max-width: 480px) {
    .milaura-volume-grid {
      gap: 6px;
    }

    .volume-card {
      padding: 0; /* Géré par les sous-éléments - en-tête intégré */
      border-radius: 10px;
    }

    .volume-card-badge {
      font-size: 10px;
      min-height: 34px; /* Hauteur fixe mobile */
      padding: 3px 6px;
    }

    .volume-left {
      padding: 10px 6px 2px;
    }

    .volume-price {
      padding: 2px 6px 10px;
      font-size: 14px;
    }

    .volume-text h5 {
      font-size: 13px;
    }

    .volume-text p {
      font-size: 12px;
    }
  }

  /* Animation sélection */
  .volume-card.is-selected::after {
    content: '';
    position: absolute;
    inset: -1px;
    border-radius: 12px;
    background: linear-gradient(135deg, rgba(192, 160, 98, 0.15), transparent);
    pointer-events: none;
    opacity: 0;
    animation: selectPulse 0.4s ease-out forwards;
  }

  @keyframes selectPulse {
    0% { opacity: 1; transform: scale(1); }
    100% { opacity: 0; transform: scale(1.05); }
  }

  /* --- FIX BUY ROW (Quantité + Bouton) --- */
  .milaura-buy-row {
    display: flex;
    gap: 10px;
    margin-top: 14px; /* FIX: réduit de 20px à 14px */
    align-items: center;
    flex-wrap: wrap; /* FIX: permettre le wrap sur mobile si nécessaire */
  }

  /* DESKTOP: Espacements ÉQUILIBRÉS - tout visible sans scroll */
  @media screen and (min-width: 990px) {
    /* === ESPACEMENT ENTRE LES GROUPES === */
    .milaura-buy-row {
      margin-top: 14px;
      margin-bottom: 0;
    }

    /* Volume Bundle - en-têtes intégrés Desktop */
    .volume-section-title {
      margin: 0 0 10px 0;
      font-size: 14px;
      font-weight: 500;
    }

    .milaura-volume-grid {
      gap: 10px;
      margin-top: 8px; /* Plus besoin d'espace pour badges flottants */
      margin-bottom: 0;
    }

    .volume-card {
      padding: 0; /* Géré par les sous-éléments */
      border-radius: 12px;
    }

    .volume-card-badge {
      font-size: 10px;
      min-height: 36px; /* Hauteur fixe desktop */
      padding: 4px 12px;
    }

    .volume-left {
      padding: 14px 10px 4px;
    }

    .volume-text h5 {
      font-size: 14px;
      font-weight: 600;
    }

    .volume-text p {
      font-size: 12px;
      margin-top: 3px;
      color: #666;
    }

    .volume-price {
      font-size: 16px;
      padding: 4px 10px 14px;
      font-weight: 700;
    }

    /* CTA button - légèrement plus compact pour compenser */
    .milaura-add-btn {
      min-height: 46px;
      padding: 12px 24px;
      font-size: 13px;
    }

    /* Quantity selector */
    .milaura-quantity-capsule {
      height: 44px !important;
      min-height: 44px !important;
    }

    /* Réassurance - plus compact pour compenser */
    .milaura-trust-badges {
      margin-top: 12px;
    }
  }

  /* PLEIN ÉCRAN (≥1400px): Encore plus compact pour tout voir */
  @media screen and (min-width: 1400px) {
    .milaura-hero-wrapper {
      grid-template-columns: 1fr 0.7fr; /* Colonne droite encore plus étroite */
      max-width: 1400px;
      margin: 0 auto;
    }
  }

  /* MOBILE: ATC sur toute la largeur si wrap */
  @media screen and (max-width: 480px) {
    .milaura-buy-row {
      gap: 12px;
    }
    .milaura-buy-row .milaura-quantity-capsule {
      flex: 0 0 auto !important;
    }
    .milaura-buy-row .product-form {
      flex: 1 1 100% !important; /* FIX: bouton prend toute la largeur */
      min-width: 0;
    }
    .milaura-buy-row .milaura-add-btn {
      width: 100% !important;
    }
  }

  /* Sélecteur quantité BUBBLE (Petit & Discret) */
  .product-form__quantity {
    width: 85px !important; /* Taille compacte */
    min-width: 85px !important;
    height: 42px !important; /* Un peu moins haut que le bouton */
    background: rgba(255, 255, 255, 0.5) !important;
    backdrop-filter: blur(8px);
    border-radius: 30px !important;
    border: 1px solid rgba(192, 160, 98, 0.3) !important;
    padding: 0 5px !important;
    flex-shrink: 0;
    margin: 0 !important;
    display: flex !important;
    align-items: center;
    justify-content: center;
    box-shadow: 0 2px 8px rgba(0,0,0,0.05);
  }

  .product-form__quantity .quantity {
    width: 100% !important;
    height: 100% !important;
    background: transparent !important;
    border: none !important;
    min-height: auto !important;
    box-shadow: none !important;
  }

  .product-form__quantity .quantity__button {
    width: 24px !important;
    height: 24px !important;
    color: var(--milaura-gold) !important;
    font-size: 14px !important;
    padding: 0 !important;
    background: transparent !important;
    display: flex !important;
    align-items: center;
    justify-content: center;
  }

  .product-form__quantity .quantity__input {
    width: 25px !important;
    font-size: 14px !important;
    font-weight: 700 !important;
    color: var(--milaura-text) !important;
    background: transparent !important;
    padding: 0 !important;
    text-align: center;
    border: none !important;
  }

  /* Bouton PRIORITAIRE */
  .milaura-add-btn {
    flex: 1;
    min-height: 48px; /* Hauteur standard CTA */
    border: none;
    cursor: pointer;
    white-space: nowrap !important;
    /* Style géré par .milaura-btn-gold global */
  }
  .milaura-add-btn:disabled { background: #ccc !important; cursor: not-allowed; box-shadow: none !important; }

  /* --- LUXE QUANTITY CAPSULE (Milaura Custom) --- */
  /* Reset complet des styles Dawn pour le sélecteur quantité */
  .milaura-quantity-capsule,
  .milaura-quantity-capsule.quantity-input {
    flex: 0 0 100px !important;
    width: 100px !important;
    min-width: 100px !important;
    max-width: 100px !important;
    height: 44px !important;
    min-height: 44px !important;
    background: #FFFFFF !important;
    border: 1px solid #E5E5E5 !important;
    border-radius: 50px !important;
    display: flex !important;
    align-items: center !important;
    justify-content: space-between !important;
    padding: 0 6px !important;
    transition: all 0.3s ease;
    box-sizing: border-box !important;
  }

  .milaura-quantity-capsule:hover {
    border-color: #C0A062 !important;
    box-shadow: 0 4px 12px rgba(192, 160, 98, 0.1);
  }

  /* Reset before/after pseudo-elements de Dawn */
