{{ 'milaura-quiz-config.js' | asset_url | script_tag }}
{{ 'milaura-quiz.js' | asset_url | script_tag }}
{{ 'milaura-quiz.css' | asset_url | stylesheet_tag }}

<div id="MilauraQuizApp" class="milaura-quiz-app">

  {%- comment -%} Écran intro (visible par défaut) {%- endcomment -%}
  <div id="QuizIntro" class="milaura-quiz-screen milaura-quiz-intro" data-screen="intro">
    <div class="milaura-quiz-container">

      <div class="milaura-quiz-intro-content">
        <h1 class="milaura-quiz-title">
          Trouvez votre bougie<br>émotionnelle
        </h1>

        <p class="milaura-quiz-subtitle">
          6 questions pour découvrir<br>
          la bougie créée pour vous
        </p>

        <div class="milaura-quiz-duration">
          <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
            <circle cx="8" cy="8" r="7" stroke="currentColor" stroke-width="1.5"/>
            <path d="M8 4V8L11 11" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
          </svg>
          <span>60 secondes</span>
        </div>

        <p class="milaura-quiz-description">
          Chaque bougie associe une senteur unique<br>
          et une pierre naturelle
        </p>

        <button type="button" class="milaura-quiz-cta" id="QuizStartBtn">
          Commencer
        </button>

        <div class="milaura-quiz-reassurance">
          <span>✓ Recommandation personnalisée</span>
          <span>✓ Pas de compte nécessaire</span>
        </div>
      </div>

    </div>
  </div>

  {%- comment -%} Écrans questions (générés par JS) {%- endcomment -%}
  <div id="QuizQuestions" class="milaura-quiz-screen milaura-quiz-questions" data-screen="questions" style="display: none;">
    <div class="milaura-quiz-container">

      {%- comment -%} Progress bar {%- endcomment -%}
      <div class="milaura-quiz-progress">
        <div class="milaura-quiz-progress-bar">
          <div class="milaura-quiz-progress-fill" id="QuizProgressFill" style="width: 0%;"></div>
        </div>
        <div class="milaura-quiz-progress-text">
          <span id="QuizProgressCurrent">1</span> / <span id="QuizProgressTotal">6</span>
        </div>
      </div>

      {%- comment -%} Question container (rempli par JS) {%- endcomment -%}
      <div id="QuizQuestionContainer" class="milaura-quiz-question-container">
        {%- comment -%} Injecté par milaura-quiz.js {%- endcomment -%}
      </div>

      {%- comment -%} Navigation {%- endcomment -%}
      <div class="milaura-quiz-navigation">
        <button type="button" class="milaura-quiz-nav-btn milaura-quiz-nav-back" id="QuizBackBtn" style="visibility: hidden;">
          ← Retour
        </button>
      </div>

    </div>
  </div>

  {%- comment -%} Écran résultat (géré par autre ticket E1-4) {%- endcomment -%}
  <div id="QuizResult" class="milaura-quiz-screen milaura-quiz-result" data-screen="result" style="display: none;">
    <div class="milaura-quiz-container">
      <p style="text-align: center; padding: 3rem;">Chargement de votre résultat...</p>
    </div>
  </div>

</div>
